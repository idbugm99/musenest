{{#if galleryConfig.css_overrides}}
<style>
{{{galleryConfig.css_overrides}}}
</style>
{{/if}}

<!-- Theme-specific JavaScript -->
{{#if galleryConfig.javascript_overrides}}
<script>
{{{galleryConfig.javascript_overrides}}}
</script>
{{/if}}