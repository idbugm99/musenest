<!-- Universal Services Section - Theme-Agnostic Component -->
{{#if content.services_section_visible}}
<section class="universal-services-section" data-aos="fade-up">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <!-- Services Section Header -->
        <div class="universal-section-header text-center mb-12" data-aos="fade-up">
            <h2 class="universal-section-title">
                {{#if content.services_title}}{{content.services_title}}{{else}}Services{{/if}}
            </h2>
            {{#if content.services_subtitle}}
            <p class="universal-section-subtitle">{{content.services_subtitle}}</p>
            {{/if}}
        </div>
        
        <!-- Services Grid -->
        <div class="universal-services-grid">
            <!-- Service 1 -->
            {{#if content.service_1_title}}
            <div class="universal-service-card" data-aos="fade-up" data-aos-delay="100">
                <div class="universal-service-icon">
                    <i class="{{#if content.service_1_icon}}{{content.service_1_icon}}{{else}}fas fa-star{{/if}}"></i>
                </div>
                <div class="universal-service-content">
                    <h3 class="universal-service-title">{{content.service_1_title}}</h3>
                    {{#if content.service_1_description}}
                    <p class="universal-service-description">{{content.service_1_description}}</p>
                    {{/if}}
                    {{#if content.service_1_price}}
                    <div class="universal-service-price">{{content.service_1_price}}</div>
                    {{/if}}
                </div>
                {{#if content.service_1_button_text}}
                <div class="universal-service-cta">
                    <a href="{{#if content.service_1_button_url}}{{content.service_1_button_url}}{{else}}/{{model.slug}}/rates{{/if}}" 
                       class="universal-btn universal-btn-outline">
                        {{content.service_1_button_text}}
                    </a>
                </div>
                {{/if}}
            </div>
            {{/if}}
            
            <!-- Service 2 -->
            {{#if content.service_2_title}}
            <div class="universal-service-card" data-aos="fade-up" data-aos-delay="200">
                <div class="universal-service-icon">
                    <i class="{{#if content.service_2_icon}}{{content.service_2_icon}}{{else}}fas fa-heart{{/if}}"></i>
                </div>
                <div class="universal-service-content">
                    <h3 class="universal-service-title">{{content.service_2_title}}</h3>
                    {{#if content.service_2_description}}
                    <p class="universal-service-description">{{content.service_2_description}}</p>
                    {{/if}}
                    {{#if content.service_2_price}}
                    <div class="universal-service-price">{{content.service_2_price}}</div>
                    {{/if}}
                </div>
                {{#if content.service_2_button_text}}
                <div class="universal-service-cta">
                    <a href="{{#if content.service_2_button_url}}{{content.service_2_button_url}}{{else}}/{{model.slug}}/rates{{/if}}" 
                       class="universal-btn universal-btn-outline">
                        {{content.service_2_button_text}}
                    </a>
                </div>
                {{/if}}
            </div>
            {{/if}}
            
            <!-- Service 3 -->
            {{#if content.service_3_title}}
            <div class="universal-service-card" data-aos="fade-up" data-aos-delay="300">
                <div class="universal-service-icon">
                    <i class="{{#if content.service_3_icon}}{{content.service_3_icon}}{{else}}fas fa-gem{{/if}}"></i>
                </div>
                <div class="universal-service-content">
                    <h3 class="universal-service-title">{{content.service_3_title}}</h3>
                    {{#if content.service_3_description}}
                    <p class="universal-service-description">{{content.service_3_description}}</p>
                    {{/if}}
                    {{#if content.service_3_price}}
                    <div class="universal-service-price">{{content.service_3_price}}</div>
                    {{/if}}
                </div>
                {{#if content.service_3_button_text}}
                <div class="universal-service-cta">
                    <a href="{{#if content.service_3_button_url}}{{content.service_3_button_url}}{{else}}/{{model.slug}}/rates{{/if}}" 
                       class="universal-btn universal-btn-outline">
                        {{content.service_3_button_text}}
                    </a>
                </div>
                {{/if}}
            </div>
            {{/if}}
            
            <!-- Service 4 -->
            {{#if content.service_4_title}}
            <div class="universal-service-card" data-aos="fade-up" data-aos-delay="400">
                <div class="universal-service-icon">
                    <i class="{{#if content.service_4_icon}}{{content.service_4_icon}}{{else}}fas fa-crown{{/if}}"></i>
                </div>
                <div class="universal-service-content">
                    <h3 class="universal-service-title">{{content.service_4_title}}</h3>
                    {{#if content.service_4_description}}
                    <p class="universal-service-description">{{content.service_4_description}}</p>
                    {{/if}}
                    {{#if content.service_4_price}}
                    <div class="universal-service-price">{{content.service_4_price}}</div>
                    {{/if}}
                </div>
                {{#if content.service_4_button_text}}
                <div class="universal-service-cta">
                    <a href="{{#if content.service_4_button_url}}{{content.service_4_button_url}}{{else}}/{{model.slug}}/rates{{/if}}" 
                       class="universal-btn universal-btn-outline">
                        {{content.service_4_button_text}}
                    </a>
                </div>
                {{/if}}
            </div>
            {{/if}}
        </div>
        
        <!-- Services Bottom CTA -->
        {{#if content.services_cta_visible}}
        <div class="universal-services-cta text-center mt-12" data-aos="fade-up" data-aos-delay="500">
            <h3 class="universal-cta-title">
                {{#if content.services_cta_title}}{{content.services_cta_title}}{{else}}Ready to get started?{{/if}}
            </h3>
            {{#if content.services_cta_description}}
            <p class="universal-cta-description">{{content.services_cta_description}}</p>
            {{/if}}
            <div class="universal-cta-buttons">
                <a href="{{#if content.services_cta_primary_url}}{{content.services_cta_primary_url}}{{else}}/{{model.slug}}/contact{{/if}}" 
                   class="universal-btn universal-btn-primary">
                    {{#if content.services_cta_primary_text}}{{content.services_cta_primary_text}}{{else}}Contact Me{{/if}}
                </a>
                {{#if content.services_cta_secondary_text}}
                <a href="{{#if content.services_cta_secondary_url}}{{content.services_cta_secondary_url}}{{else}}/{{model.slug}}/rates{{/if}}" 
                   class="universal-btn universal-btn-secondary ml-4">
                    {{content.services_cta_secondary_text}}
                </a>
                {{/if}}
            </div>
        </div>
        {{/if}}
    </div>
</section>
{{/if}}