<!-- Universal About Section - Theme-Agnostic Component -->
{{#if content.about_section_visible}}
<section class="universal-about-section" data-aos="fade-up">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <!-- About Section Header -->
        {{#if content.about_title}}
        <div class="universal-section-header text-center mb-12" data-aos="fade-up">
            <h2 class="universal-section-title">{{content.about_title}}</h2>
            {{#if content.about_subtitle}}
            <p class="universal-section-subtitle">{{content.about_subtitle}}</p>
            {{/if}}
        </div>
        {{/if}}
        
        <!-- About Content Grid -->
        <div class="universal-about-grid">
            <!-- About Text Content -->
            <div class="universal-about-content" data-aos="fade-right">
                {{#if content.about_description}}
                <div class="universal-about-description">
                    {{{content.about_description}}}
                </div>
                {{/if}}
                
                <!-- About Features/Highlights -->
                {{#if content.about_features_visible}}
                <div class="universal-about-features">
                    {{#if content.about_feature_1}}
                    <div class="universal-feature-item">
                        <div class="universal-feature-icon">
                            <i class="{{#if content.about_feature_1_icon}}{{content.about_feature_1_icon}}{{else}}fas fa-star{{/if}}"></i>
                        </div>
                        <div class="universal-feature-content">
                            <h4 class="universal-feature-title">{{content.about_feature_1_title}}</h4>
                            <p class="universal-feature-description">{{content.about_feature_1}}</p>
                        </div>
                    </div>
                    {{/if}}
                    
                    {{#if content.about_feature_2}}
                    <div class="universal-feature-item">
                        <div class="universal-feature-icon">
                            <i class="{{#if content.about_feature_2_icon}}{{content.about_feature_2_icon}}{{else}}fas fa-heart{{/if}}"></i>
                        </div>
                        <div class="universal-feature-content">
                            <h4 class="universal-feature-title">{{content.about_feature_2_title}}</h4>
                            <p class="universal-feature-description">{{content.about_feature_2}}</p>
                        </div>
                    </div>
                    {{/if}}
                    
                    {{#if content.about_feature_3}}
                    <div class="universal-feature-item">
                        <div class="universal-feature-icon">
                            <i class="{{#if content.about_feature_3_icon}}{{content.about_feature_3_icon}}{{else}}fas fa-gem{{/if}}"></i>
                        </div>
                        <div class="universal-feature-content">
                            <h4 class="universal-feature-title">{{content.about_feature_3_title}}</h4>
                            <p class="universal-feature-description">{{content.about_feature_3}}</p>
                        </div>
                    </div>
                    {{/if}}
                </div>
                {{/if}}
                
                <!-- About CTA -->
                {{#if content.about_cta_visible}}
                <div class="universal-about-cta">
                    <a href="{{#if content.about_cta_url}}{{content.about_cta_url}}{{else}}/{{model.slug}}/about{{/if}}" 
                       class="universal-btn universal-btn-primary">
                        {{#if content.about_cta_text}}{{content.about_cta_text}}{{else}}Learn More{{/if}}
                    </a>
                </div>
                {{/if}}
            </div>
            
            <!-- About Image/Visual -->
            {{#if content.about_image_visible}}
            <div class="universal-about-visual" data-aos="fade-left">
                {{#if content.about_image_url}}
                <div class="universal-about-image">
                    <img src="{{content.about_image_url}}" alt="{{#if content.about_image_alt}}{{content.about_image_alt}}{{else}}{{model.name}}{{/if}}" class="universal-image">
                </div>
                {{/if}}
                
                <!-- About Stats/Achievements -->
                {{#if content.about_stats_visible}}
                <div class="universal-about-stats">
                    {{#if content.about_stat_1_value}}
                    <div class="universal-stat-card">
                        <div class="universal-stat-number">{{content.about_stat_1_value}}</div>
                        <div class="universal-stat-text">{{content.about_stat_1_label}}</div>
                    </div>
                    {{/if}}
                    
                    {{#if content.about_stat_2_value}}
                    <div class="universal-stat-card">
                        <div class="universal-stat-number">{{content.about_stat_2_value}}</div>
                        <div class="universal-stat-text">{{content.about_stat_2_label}}</div>
                    </div>
                    {{/if}}
                    
                    {{#if content.about_stat_3_value}}
                    <div class="universal-stat-card">
                        <div class="universal-stat-number">{{content.about_stat_3_value}}</div>
                        <div class="universal-stat-text">{{content.about_stat_3_label}}</div>
                    </div>
                    {{/if}}
                </div>
                {{/if}}
            </div>
            {{/if}}
        </div>
    </div>
</section>
{{/if}}