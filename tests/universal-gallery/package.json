{
  "name": "universal-gallery-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for Universal Gallery System",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "jest unit/ --coverage --verbose",
    "test:integration": "jest integration/ --verbose --runInBand",
    "test:e2e": "jest e2e/ --verbose --runInBand --detectOpenHandles",
    "test:performance": "jest performance/ --verbose --runInBand",
    "test:performance:full": "node performance/run-performance-tests.js",
    "test:performance:benchmarks": "jest performance/performance-benchmarks.test.js --verbose",
    "test:performance:load": "jest performance/load-testing.test.js --verbose",
    "test:performance:a11y": "jest performance/accessibility-performance.test.js --verbose",
    "test:performance:visual": "jest performance/visual-regression-performance.test.js --verbose",
    "test:accessibility": "jest accessibility/ --verbose",
    "test:visual": "jest visual-regression/ --verbose",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --no-cache",
    "test:ci": "jest --ci --coverage --watchAll=false --maxWorkers=2",
    "test:ci:performance": "npm run test:performance:full",
    "setup": "node setup/setup-tests.js",
    "cleanup": "node setup/cleanup-tests.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "coverage": "jest --coverage",
    "coverage:open": "open coverage/lcov-report/index.html",
    "install-browsers": "npx playwright install",
    "screenshots:update": "npm run test:visual -- --updateSnapshot",
    "report": "open reports/consolidated-performance-report.html",
    "report:performance": "open reports/performance/performance-report.html",
    "report:load": "open reports/load-testing/load-test-report.html",
    "report:a11y": "open reports/accessibility-performance/accessibility-performance-report.html",
    "report:visual": "open reports/visual-performance/visual-performance-report.html"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./setup/jest-setup.js"
    ],
    "testTimeout": 30000,
    "collectCoverageFrom": [
      "../../../src/**/*.js",
      "../../../admin/**/*.js",
      "!../../../src/**/*.test.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "./reports/coverage",
    "coverageReporters": [
      "text",
      "html",
      "lcov",
      "json"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    },
    "testMatch": [
      "**/*.test.js"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "verbose": true,
    "collectCoverage": false,
    "forceExit": true,
    "detectOpenHandles": true,
    "maxWorkers": 4
  },
  "dependencies": {
    "playwright": "^1.40.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "jsdom": "^22.1.0",
    "mysql2": "^3.6.0",
    "express": "^4.18.2",
    "axe-core": "^4.8.2",
    "jest-axe": "^8.0.0",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-jest": "^27.6.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "gallery",
    "testing",
    "e2e",
    "integration",
    "performance",
    "accessibility",
    "visual-regression"
  ],
  "author": "Universal Gallery Team",
  "license": "MIT"
}