<div class="row justify-content-center align-items-center min-vh-100">
    <div class="col-md-6 col-lg-4">
        <div class="text-center mb-4">
            <div class="mb-3">
                <i class="fas fa-user-circle" style="font-size: 4rem; color: var(--crm-primary);"></i>
            </div>
            <h3 class="mb-1">{{model.name}}</h3>
            <p class="text-muted mb-0">Client Relationship Management</p>
        </div>
        
        <div class="crm-card p-4">
            <h4 class="text-center mb-4">CRM Login</h4>
            
            {{#if error}}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                {{#if (eq error 'invalid_credentials')}}
                    Invalid password. Please try again.
                {{else if (eq error 'server_error')}}
                    Server error. Please try again later.
                {{else}}
                    {{error}}
                {{/if}}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            {{/if}}
            
            <form method="POST" action="/{{model.slug}}/crm/login" id="crmLoginForm">
                <div class="mb-3">
                    <label for="password" class="form-label">Admin Password</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-lock"></i>
                        </span>
                        <input 
                            type="password" 
                            class="form-control" 
                            id="password" 
                            name="password" 
                            placeholder="Enter your admin password"
                            required
                            autocomplete="current-password"
                        >
                    </div>
                    <small class="form-text text-muted">
                        Use the same password as your admin panel
                    </small>
                </div>
                
                <div class="d-grid">
                    <button type="submit" class="btn btn-crm-primary btn-lg">
                        <i class="fas fa-sign-in-alt me-2"></i>
                        Access CRM
                    </button>
                </div>
            </form>
            
            <hr class="my-4">
            
            <div class="text-center">
                <small class="text-muted">
                    <i class="fas fa-info-circle me-1"></i>
                    This is a separate system from your admin panel
                </small>
            </div>
            
            <div class="mt-3 text-center">
                <a href="/{{model.slug}}/admin" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-external-link-alt me-1"></i>
                    Go to Admin Panel
                </a>
            </div>
        </div>
        
        <div class="text-center mt-4">
            <small class="text-muted">
                <i class="fas fa-shield-alt me-1"></i>
                Your data is secure and encrypted
            </small>
        </div>
    </div>
</div>

<style>
    .min-vh-100 {
        min-height: 100vh;
    }
    
    .crm-card {
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        border: none;
    }
    
    .form-control:focus {
        border-color: var(--crm-primary);
        box-shadow: 0 0 0 0.2rem rgba(99, 102, 241, 0.25);
    }
    
    .btn-crm-primary:focus {
        box-shadow: 0 0 0 0.2rem rgba(99, 102, 241, 0.25);
    }
    
    .input-group-text {
        background: var(--crm-light);
        border-color: var(--crm-border);
        color: var(--crm-dark);
    }
</style>

<script>
    $(document).ready(function() {
        // Focus on password field
        $('#password').focus();
        
        // Form validation
        $('#crmLoginForm').on('submit', function(e) {
            const password = $('#password').val().trim();
            
            if (!password) {
                e.preventDefault();
                $('#password').focus();
                return false;
            }
            
            // Show loading state
            const submitBtn = $(this).find('button[type="submit"]');
            const originalText = submitBtn.html();
            
            submitBtn.prop('disabled', true);
            submitBtn.html('<i class="fas fa-spinner fa-spin me-2"></i>Accessing...');
            
            // Re-enable after 3 seconds if form submission fails
            setTimeout(function() {
                submitBtn.prop('disabled', false);
                submitBtn.html(originalText);
            }, 3000);
        });
        
        // Enter key to submit
        $('#password').on('keypress', function(e) {
            if (e.which === 13) {
                $('#crmLoginForm').submit();
            }
        });
        
        // Auto-hide error alerts
        if ($('.alert-danger').length > 0) {
            setTimeout(function() {
                $('.alert-danger').fadeOut();
            }, 8000);
        }
    });
</script>
