<div class="crm-card mb-3">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start">
            <div class="flex-grow-1">
                <h6 class="mb-1">{{client_identifier}}</h6>
                <small class="text-muted">
                    <i class="fas fa-calendar me-1"></i>
                    Added {{formatDate created_at 'MMM DD, YYYY'}}
                </small>
            </div>
            <div class="d-flex gap-1">
                <span class="status-badge status-{{screening_status}}">
                    {{screening_status}}
                </span>
            </div>
        </div>
        
        <div class="row mt-3">
            <div class="col-md-3">
                <small class="text-muted">Screening</small>
                <div class="fw-bold">{{screening_method}}</div>
            </div>
            <div class="col-md-3">
                <small class="text-muted">Visits</small>
                <div class="fw-bold">{{total_visits}}</div>
            </div>
            <div class="col-md-3">
                <small class="text-muted">Revenue</small>
                <div class="fw-bold text-success">${{formatCurrency total_revenue}}</div>
            </div>
            <div class="col-md-3">
                <small class="text-muted">Last Visit</small>
                <div class="fw-bold">
                    {{#if last_visit_date}}
                        {{formatDate last_visit_date 'MMM DD'}}
                    {{else}}
                        <span class="text-muted">Never</span>
                    {{/if}}
                </div>
            </div>
        </div>
        
        <div class="mt-3 d-flex gap-2">
            <button class="btn btn-sm btn-outline-primary" onclick="viewClient({{id}})">
                <i class="fas fa-eye me-1"></i>View
            </button>
            <button class="btn btn-sm btn-outline-secondary" onclick="editClient({{id}})">
                <i class="fas fa-edit me-1"></i>Edit
            </button>
            <button class="btn btn-sm btn-outline-success" onclick="addVisit({{id}})">
                <i class="fas fa-plus me-1"></i>Visit
            </button>
        </div>
    </div>
</div>
