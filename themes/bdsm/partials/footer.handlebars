<!-- BDSM Theme Footer - Dark & Edgy -->
<footer class="relative bg-gradient-to-br from-black via-red-950 to-black text-white overflow-hidden">
    <!-- Decorative Elements -->
    <div class="absolute inset-0 opacity-20">
        <div class="absolute top-0 left-0 w-64 h-64 bg-gradient-to-br from-red-600/30 to-transparent rounded-full filter blur-3xl"></div>
        <div class="absolute bottom-0 right-0 w-96 h-96 bg-gradient-to-tl from-red-800/20 to-transparent rounded-full filter blur-3xl"></div>
        <div class="absolute top-1/2 left-1/3 w-32 h-32 bg-gradient-to-br from-red-500/40 to-transparent rounded-full filter blur-2xl"></div>
    </div>
    
    <!-- Ornamental Border -->
    <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-red-600 to-transparent"></div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            <!-- Brand Section -->
            <div class="md:col-span-2">
                <h3 class="text-3xl mb-4 bg-gradient-to-r from-red-400 via-red-500 to-red-600 bg-clip-text text-transparent font-bold tracking-wide">
                    {{siteName}}
                </h3>
                <p class="text-gray-300 mb-6 text-lg leading-relaxed border-l-2 border-red-600/50 pl-4">
                    {{#if tagline}}
                    {{tagline}}
                    {{else}}
                    Embrace your desires with exclusive, professional experiences crafted for the discerning.
                    {{/if}}
                </p>
                {{#if socialLinks}}
                <div class="flex space-x-4">
                    {{#each socialLinks}}
                    <a href="{{this.url}}" 
                       class="w-12 h-12 bg-gradient-to-br from-red-600 to-red-800 rounded-lg flex items-center justify-center text-white hover:shadow-red-500/50 hover:shadow-xl transition-all duration-500 transform hover:scale-110 hover:rotate-3 border border-red-500/30">
                        <i class="fab fa-{{this.icon}}"></i>
                    </a>
                    {{/each}}
                </div>
                {{/if}}
            </div>
            
            <!-- Quick Links -->
            <div class="relative">
                <!-- Gothic ornament -->
                <div class="absolute -top-2 -left-2 w-6 h-6 border-l-2 border-t-2 border-red-600/50"></div>
                <h4 class="text-xl mb-6 text-red-400 font-semibold tracking-wider uppercase">Navigation</h4>
                <ul class="space-y-3">
                    {{#each navigation}}
                    <li>
                        <a href="{{this.url}}" 
                           class="text-gray-300 hover:text-red-400 transition-all duration-300 flex items-center group">
                            <i class="fas fa-caret-right mr-2 text-red-600 group-hover:text-red-400 transform group-hover:scale-125 transition-all duration-300"></i>
                            <span class="group-hover:translate-x-1 transition-transform duration-300">{{this.name}}</span>
                        </a>
                    </li>
                    {{/each}}
                </ul>
            </div>
            
            <!-- Contact Info -->
            <div class="relative">
                <!-- Gothic ornament -->
                <div class="absolute -top-2 -left-2 w-6 h-6 border-l-2 border-t-2 border-red-600/50"></div>
                <h4 class="text-xl mb-6 text-red-400 font-semibold tracking-wider uppercase">Connect</h4>
                <ul class="space-y-4">
                    {{#if contactEmail}}
                    <li class="flex items-start group">
                        <i class="fas fa-envelope text-red-600 mt-1 mr-3 group-hover:text-red-400 transition-colors duration-300"></i>
                        <a href="mailto:{{contactEmail}}" 
                           class="text-gray-300 hover:text-red-400 transition-colors duration-300 break-all">
                            {{contactEmail}}
                        </a>
                    </li>
                    {{/if}}
                    {{#if contactPhone}}
                    <li class="flex items-start group">
                        <i class="fas fa-phone text-red-600 mt-1 mr-3 group-hover:text-red-400 transition-colors duration-300"></i>
                        <a href="tel:{{contactPhone}}" 
                           class="text-gray-300 hover:text-red-400 transition-colors duration-300">
                            {{contactPhone}}
                        </a>
                    </li>
                    {{/if}}
                    {{#if location}}
                    <li class="flex items-start">
                        <i class="fas fa-map-marker-alt text-red-600 mt-1 mr-3"></i>
                        <span class="text-gray-300">{{location}}</span>
                    </li>
                    {{/if}}
                </ul>
            </div>
        </div>
        
        <!-- Decorative Divider -->
        <div class="mt-12 mb-8 flex items-center justify-center">
            <div class="flex-grow h-px bg-gradient-to-r from-transparent via-red-600/50 to-transparent"></div>
            <div class="mx-4 w-4 h-4 bg-red-600 transform rotate-45 border border-red-400"></div>
            <div class="flex-grow h-px bg-gradient-to-r from-transparent via-red-600/50 to-transparent"></div>
        </div>
        
        <!-- Bottom Bar -->
        <div class="flex flex-col md:flex-row justify-between items-center text-center md:text-left">
            <p class="text-gray-400 text-sm font-medium tracking-wide">
                Â© {{currentYear}} {{siteName}}. All rights reserved. | <span class="text-red-400">Privacy & Discretion Guaranteed</span>
            </p>
            <div class="flex items-center space-x-3 mt-4 md:mt-0">
                <span class="text-gray-400 text-sm font-medium">Powered by</span>
                <span class="text-red-400 font-semibold text-base tracking-wider">phoenix4ge</span>
            </div>
        </div>
    </div>
    
    <!-- Bottom accent line -->
    <div class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-red-600 to-transparent opacity-70"></div>
</footer>