                </div>
                <div class="p-6">
                    {{#each rates.outcall}}
                    <div class="flex justify-between items-center py-3 border-b border-gray-200 last:border-b-0">
                        <div>
                            <div class="font-semibold text-gray-900">
                                {{#if this.service_name}}{{this.service_name}}{{else}}{{this.duration}}{{/if}}
                            </div>
                            {{#if this.service_name}}
                            <div class="text-sm text-gray-600">{{this.duration}}</div>
                            {{/if}}
                        </div>
                        <div class="text-xl font-bold text-amber-700">${{this.price}}</div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</section>

