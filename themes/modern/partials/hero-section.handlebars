<!-- Modern Contemporary Hero Section Partial -->
<!-- Standardized hero component following Modern Theme Consistency Plan -->
<section class="modern-hero-section" 
         data-aos="fade-in" 
         style="min-height: 70vh; 
                display: flex; 
                align-items: center; 
                justify-content: center; 
                position: relative; 
                overflow: hidden;
                background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
                color: white;
                text-align: center;
                padding: 4rem 2rem;">
    
    <!-- Modern Geometric Elements -->
    <div class="modern-geometric-elements" 
         style="position: absolute; 
                top: 0; 
                left: 0; 
                width: 100%; 
                height: 100%; 
                pointer-events: none; 
                z-index: 1;">
        <!-- Top left geometric shape -->
        <div style="position: absolute; 
                    top: 15%; 
                    left: 8%; 
                    width: 120px; 
                    height: 120px; 
                    border: 2px solid rgba(37, 99, 235, 0.3); 
                    border-radius: 12px; 
                    transform: rotate(15deg);
                    animation: modern-float 8s ease-in-out infinite;"></div>
        
        <!-- Top right circle -->
        <div style="position: absolute; 
                    top: 20%; 
                    right: 10%; 
                    width: 80px; 
                    height: 80px; 
                    border: 1px solid rgba(6, 182, 212, 0.4); 
                    border-radius: 50%;
                    animation: modern-float 6s ease-in-out infinite reverse;"></div>
        
        <!-- Bottom right line -->
        <div style="position: absolute; 
                    bottom: 25%; 
                    right: 12%; 
                    width: 100px; 
                    height: 2px; 
                    background: linear-gradient(90deg, rgba(37, 99, 235, 0.6), transparent);
                    animation: modern-slide 10s ease-in-out infinite;"></div>
        
        <!-- Bottom left dot -->
        <div style="position: absolute; 
                    bottom: 30%; 
                    left: 15%; 
                    width: 12px; 
                    height: 12px; 
                    background: rgba(6, 182, 212, 0.6); 
                    border-radius: 50%;
                    animation: modern-pulse 4s ease-in-out infinite;"></div>
    </div>
    
    <!-- Hero Content Container -->
    <div style="position: relative; 
                z-index: 2; 
                max-width: 800px; 
                margin: 0 auto;">
        
        <!-- Page Title -->
        <h1 style="font-size: clamp(2.5rem, 6vw, 4rem); 
                   font-weight: 700; 
                   margin-bottom: 1.5rem; 
                   color: white;
                   text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
                   line-height: 1.2;">
            {{heroTitle}}
        </h1>
        
        <!-- Optional Subtitle -->
        {{#if heroSubtitle}}
        <p style="font-size: clamp(1.125rem, 2.5vw, 1.5rem); 
                  color: rgba(255, 255, 255, 0.9); 
                  margin-bottom: 2rem; 
                  font-weight: 300;
                  line-height: 1.6;
                  max-width: 600px;
                  margin-left: auto;
                  margin-right: auto;">
            {{heroSubtitle}}
        </p>
        {{/if}}
        
        <!-- Optional CTA Buttons -->
        {{#if heroButtons}}
        <div style="display: flex; 
                    flex-wrap: wrap; 
                    gap: 1rem; 
                    justify-content: center; 
                    margin-top: 2rem;">
            {{#each heroButtons}}
            <a href="{{this.url}}" 
               class="modern-hero-btn {{#if this.primary}}modern-btn-primary{{else}}modern-btn-outline{{/if}}"
               style="display: inline-flex;
                      align-items: center;
                      gap: 0.5rem;
                      padding: 0.75rem 2rem;
                      border-radius: 8px;
                      font-weight: 600;
                      text-decoration: none;
                      transition: all 0.3s ease;
                      {{#if this.primary}}
                      background: #2563eb;
                      color: white;
                      box-shadow: 0 4px 15px rgba(37, 99, 235, 0.3);
                      {{else}}
                      background: transparent;
                      color: white;
                      border: 2px solid rgba(255, 255, 255, 0.4);
                      backdrop-filter: blur(10px);
                      {{/if}}"
               onmouseover="this.style.transform='translateY(-2px)'; 
                           {{#if this.primary}}
                           this.style.boxShadow='0 8px 25px rgba(37, 99, 235, 0.4)';
                           {{else}}
                           this.style.background='rgba(255, 255, 255, 0.1)';
                           {{/if}}"
               onmouseout="this.style.transform='translateY(0)';
                          {{#if this.primary}}
                          this.style.boxShadow='0 4px 15px rgba(37, 99, 235, 0.3)';
                          {{else}}
                          this.style.background='transparent';
                          {{/if}}">
                {{#if this.icon}}<i class="{{this.icon}}" style="margin-right: 0.5rem;"></i>{{/if}}
                {{this.text}}
            </a>
            {{/each}}
        </div>
        {{/if}}
    </div>
    
    <!-- Scroll Indicator (optional) -->
    {{#if showScrollIndicator}}
    <div style="position: absolute; 
                bottom: 2rem; 
                left: 50%; 
                transform: translateX(-50%); 
                z-index: 2;"
         data-aos="bounce" 
         data-aos-delay="1000">
        <div style="width: 2px; 
                    height: 30px; 
                    background: linear-gradient(to bottom, rgba(255, 255, 255, 0.8), transparent); 
                    margin: 0 auto; 
                    position: relative;
                    animation: modern-bounce 2s infinite;">
        </div>
        <div style="position: absolute; 
                    bottom: 0; 
                    left: 50%; 
                    transform: translateX(-50%); 
                    width: 8px; 
                    height: 8px; 
                    border-right: 2px solid rgba(255, 255, 255, 0.8); 
                    border-bottom: 2px solid rgba(255, 255, 255, 0.8); 
                    transform: translateX(-50%) rotate(45deg);">
        </div>
    </div>
    {{/if}}
</section>

<!-- Modern Hero Animation Styles -->
<style>
@keyframes modern-float {
    0%, 100% { transform: translateY(0px) rotate(15deg); }
    50% { transform: translateY(-15px) rotate(15deg); }
}

@keyframes modern-slide {
    0%, 100% { transform: translateX(0px); }
    50% { transform: translateX(20px); }
}

@keyframes modern-pulse {
    0%, 100% { opacity: 0.4; transform: scale(1); }
    50% { opacity: 1; transform: scale(1.2); }
}

@keyframes modern-bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
    40% { transform: translateY(-8px); }
    60% { transform: translateY(-4px); }
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .modern-geometric-elements > div {
        display: none !important;
    }
    
    .modern-hero-section {
        min-height: 60vh !important;
        padding: 3rem 1rem !important;
    }
}
</style>