<!-- Modern Rates Hero Section -->
{{#if rates_content.rates_header_visible}}
<section class="modern-rates-hero min-h-96 flex items-center justify-center text-white pt-20 relative overflow-hidden" data-aos="fade-in">
    <!-- Modern Background Elements -->
    <div class="modern-rates-gradient-layer-1"></div>
    <div class="modern-rates-gradient-layer-2"></div>
    
    <!-- Modern Floating Elements -->
    <div class="modern-rates-floating-elements">
        <div class="modern-floating-rate-1"></div>
        <div class="modern-floating-rate-2"></div>
        <div class="modern-floating-badge-1"></div>
        <div class="modern-floating-badge-2"></div>
    </div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
        <div class="modern-rates-hero-content" data-aos="zoom-in" data-aos-delay="200">
            <div class="modern-rates-badge mb-6">
                {{#if rates_content.hero_badge_text}}{{rates_content.hero_badge_text}}{{else}}Services{{/if}}
            </div>
            <h1 class="text-5xl md:text-7xl font-bold mb-8 modern-gradient-text modern-text-glow">
                {{#if rates_content.page_title}}{{rates_content.page_title}}{{else}}Services & Rates{{/if}}
            </h1>
            {{#if rates_content.page_subtitle}}
            <p class="text-xl md:text-2xl opacity-90 max-w-3xl mx-auto modern-subtitle">
                {{rates_content.page_subtitle}}
            </p>
            {{else}}
            <p class="text-xl md:text-2xl opacity-90 max-w-3xl mx-auto modern-subtitle">
                Professional services with transparent pricing and exceptional quality.
            </p>
            {{/if}}
        </div>
    </div>
</section>
{{/if}}

<!-- Modern Rates Tables Section -->
{{#if rates_content.rates_table_visible}}
<section class="py-20 modern-rates-main-section">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        {{#if rates_content.table_title}}
        <div class="text-center mb-16" data-aos="fade-up">
            <h2 class="text-3xl font-bold mb-8 modern-gradient-text">
                {{rates_content.table_title}}
            </h2>
            {{#if rates_content.table_description}}
            <p class="text-lg leading-relaxed max-w-3xl mx-auto text-gray-700">
                {{rates_content.table_description}}
            </p>
            {{/if}}
        </div>
        {{/if}}
        
        <!-- Modern Rate Cards -->
        <div class="grid lg:grid-cols-2 gap-8">
            <!-- Incall Rates -->
            {{#if rates_content.rates_incall_visible}}
            <div class="modern-rates-card" data-aos="fade-up" data-aos-delay="100">
                <div class="modern-rates-card-header">
                    <div class="modern-rates-icon">
                        <i class="fas fa-home text-2xl"></i>
                    </div>
                    <h3 class="modern-rates-card-title">Incall</h3>
                </div>
                
                <div class="modern-rates-list">
                    {{#each rates.incall}}
                    <div class="modern-rate-item">
                        <div class="modern-rate-service">
                            <span class="modern-rate-duration">
                                {{#if this.serviceName}}{{this.serviceName}}{{else}}{{this.duration}}{{/if}}
                            </span>
                            {{#if ../rates_content.rates_highlight_badge_visible}}
                            {{#if this.highlightBadge}}
                            <span class="modern-highlight-badge">Most Popular</span>
                            {{/if}}
                            {{/if}}
                        </div>
                        <div class="modern-rate-price">{{this.price}}</div>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/if}}
            
            <!-- Outcall Rates -->
            {{#if rates_content.rates_outcall_visible}}
            <div class="modern-rates-card" data-aos="fade-up" data-aos-delay="200">
                <div class="modern-rates-card-header">
                    <div class="modern-rates-icon">
                        <i class="fas fa-map-marker-alt text-2xl"></i>
                    </div>
                    <h3 class="modern-rates-card-title">Outcall</h3>
                </div>
                
                <div class="modern-rates-list">
                    {{#each rates.outcall}}
                    <div class="modern-rate-item">
                        <div class="modern-rate-service">
                            <span class="modern-rate-duration">
                                {{#if this.serviceName}}{{this.serviceName}}{{else}}{{this.duration}}{{/if}}
                            </span>
                            {{#if ../rates_content.rates_highlight_badge_visible}}
                            {{#if this.highlightBadge}}
                            <span class="modern-highlight-badge">Most Popular</span>
                            {{/if}}
                            {{/if}}
                        </div>
                        <div class="modern-rate-price">{{this.price}}</div>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</section>
{{/if}}

<!-- Modern Extended Engagements -->
{{#if rates_content.rates_extended_visible}}
{{#if rates.extended.length}}
<section class="py-20 modern-extended-section">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16" data-aos="fade-up">
            <h2 class="text-3xl font-bold mb-8 modern-gradient-text">
                {{#if rates_content.extended_title}}{{rates_content.extended_title}}{{else}}Extended Engagements{{/if}}
            </h2>
            {{#if rates_content.extended_description}}
            <p class="text-lg leading-relaxed max-w-3xl mx-auto text-gray-700">
                {{rates_content.extended_description}}
            </p>
            {{/if}}
        </div>
        
        <!-- Extended Service Cards -->
        <div class="grid md:grid-cols-3 gap-8">
            {{#each rates.extended}}
            <div class="modern-extended-card text-center" data-aos="fade-up" data-aos-delay="{{multiply @index 100}}">
                {{#if ../rates_content.extended_icon_visible}}
                <div class="modern-extended-icon">
                    <i class="{{#if this.rateIcon}}{{this.rateIcon}}{{else}}fas fa-clock{{/if}} text-2xl"></i>
                </div>
                {{/if}}
                
                {{#if ../rates_content.extended_show_service_name}}
                <h3 class="modern-extended-title">{{this.serviceName}}</h3>
                {{/if}}
                
                {{#if ../rates_content.extended_show_price}}
                {{#if (eq this.serviceName "Custom")}}
                <div class="modern-extended-custom">Contact for pricing</div>
                {{else}}
                <div class="modern-extended-price">${{this.price}}</div>
                {{/if}}
                {{/if}}
                
                {{#if ../rates_content.extended_show_duration}}
                <div class="modern-extended-duration">{{this.duration}}</div>
                {{/if}}
                
                {{#if ../rates_content.extended_description_visible}}
                {{#if this.rateDescription}}
                <p class="modern-extended-description">{{this.rateDescription}}</p>
                {{/if}}
                {{/if}}
            </div>
            {{/each}}
        </div>
    </div>
</section>
{{/if}}
{{/if}}

