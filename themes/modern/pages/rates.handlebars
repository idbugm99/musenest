<!-- Modern Contemporary Rates Page -->

<!-- Standardized Modern Hero Section -->
{{#if rates_content.rates_header_visible}}
<section class="hero-section" style="min-height: 40vh; background: {{theme.colors.hero-bg}}; display: flex; align-items: center; position: relative;">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h1 style="font-size: 3.75rem; font-weight: 800; margin-bottom: 1.5rem; color: {{theme.colors.hero-text}};">
      {{#if rates_content.page_title}}{{rates_content.page_title}}{{else}}Services & Rates{{/if}}
    </h1>
    {{#if rates_content.page_subtitle}}
    <p style="font-size: 1.25rem; color: {{theme.colors.hero-subtext}}; max-width: 42rem; margin: 0 auto;">
      {{rates_content.page_subtitle}}
    </p>
    {{else}}
    <p style="font-size: 1.25rem; color: {{theme.colors.hero-subtext}}; max-width: 42rem; margin: 0 auto;">
      Professional companionship with transparent pricing and exceptional quality.
    </p>
    {{/if}}
  </div>
</section>
{{/if}}

<!-- Main Rates Section -->
{{#if rates_content.rates_table_visible}}
<section class="modern-rates-section" style="padding: 5rem 0; background: {{theme.colors.surface}};">
    <div class="container" style="max-width: 1200px; margin: 0 auto; padding: 0 2rem;">
        
        {{#if rates_content.table_title}}
        <div style="text-align: center; margin-bottom: 4rem;">
            <h2 style="color: {{theme.colors.text}}; font-size: 2.5rem; font-weight: 700; margin-bottom: 1rem;">
                {{rates_content.table_title}}
            </h2>
            {{#if rates_content.table_description}}
            <p style="color: {{theme.colors.text-light}}; font-size: 1.1rem; max-width: 600px; margin: 0 auto; line-height: 1.6;">
                {{rates_content.table_description}}
            </p>
            {{/if}}
        </div>
        {{/if}}

        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(400px, 1fr)); gap: 3rem;">
            
            <!-- Incall Services -->
            {{#if rates_content.rates_incall_visible}}
            <div class="modern-rates-card" style="background: {{theme.colors.card-bg}}; border-radius: 20px; overflow: hidden; box-shadow: 0 10px 40px rgba(0,0,0,0.1); border: 1px solid {{theme.colors.border}};">
                <div class="modern-rates-header" style="background: linear-gradient(135deg, {{theme.colors.primary}}, {{theme.colors.secondary}}); color: {{theme.colors.text}}; padding: 2rem; text-align: center;">
                    <div style="width: 60px; height: 60px; background: rgba(255,255,255,0.2); border-radius: 50%; margin: 0 auto 1rem; display: flex; align-items: center; justify-content: center;">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/>
                        </svg>
                    </div>
                    <h3 style="font-size: 1.5rem; font-weight: 700; margin: 0;">Incall Services</h3>
                </div>
                <div style="padding: 2rem;">
                    {{#if rates.incall.length}}
                        {{#each rates.incall}}
                        <div class="modern-rate-item" style="display: flex; justify-content: space-between; align-items: center; padding: 1.25rem 0; border-bottom: 1px solid {{theme.colors.border}}; position: relative;">
                            <div>
                                <div style="font-weight: 600; color: {{theme.colors.text}}; font-size: 1.1rem; margin-bottom: 0.25rem;">
                                    {{#if this.serviceName}}{{this.serviceName}}{{else}}{{this.duration}}{{/if}}
                                    {{#if this.highlightBadge}}
                                    <span style="background: {{theme.colors.accent}}; color: white; padding: 0.25rem 0.75rem; border-radius: 15px; font-size: 0.75rem; margin-left: 0.75rem; font-weight: 600;">
                                        {{#if this.highlightBadgeText}}{{this.highlightBadgeText}}{{else}}POPULAR{{/if}}
                                    </span>
                                    {{/if}}
                                </div>
                                {{#if this.serviceName}}
                                <div style="color: {{theme.colors.text-light}}; font-size: 0.9rem;">{{this.duration}}</div>
                                {{/if}}
                            </div>
                            <div style="font-size: 1.5rem; font-weight: 700; color: {{theme.colors.accent}};">${{this.price}}</div>
                        </div>
                        {{/each}}
                    {{else}}
                        <div style="text-align: center; padding: 3rem; color: {{theme.colors.text-light}};">
                            <div style="width: 60px; height: 60px; background: {{theme.colors.accent}}; opacity: 0.1; border-radius: 50%; margin: 0 auto 1rem;"></div>
                            <p>Contact for personalized rates</p>
                        </div>
                    {{/if}}
                </div>
            </div>
            {{/if}}

            <!-- Outcall Services -->
            {{#if rates_content.rates_outcall_visible}}
            <div class="modern-rates-card" style="background: {{theme.colors.card-bg}}; border-radius: 20px; overflow: hidden; box-shadow: 0 10px 40px rgba(0,0,0,0.1); border: 1px solid {{theme.colors.border}};">
                <div class="modern-rates-header" style="background: linear-gradient(135deg, {{theme.colors.secondary}}, {{theme.colors.primary}}); color: {{theme.colors.text}}; padding: 2rem; text-align: center;">
                    <div style="width: 60px; height: 60px; background: rgba(255,255,255,0.2); border-radius: 50%; margin: 0 auto 1rem; display: flex; align-items: center; justify-content: center;">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
                        </svg>
                    </div>
                    <h3 style="font-size: 1.5rem; font-weight: 700; margin: 0;">Outcall Services</h3>
                </div>
                <div style="padding: 2rem;">
                    {{#if rates.outcall.length}}
                        {{#each rates.outcall}}
                        <div class="modern-rate-item" style="display: flex; justify-content: space-between; align-items: center; padding: 1.25rem 0; border-bottom: 1px solid {{theme.colors.border}};">
                            <div>
                                <div style="font-weight: 600; color: {{theme.colors.text}}; font-size: 1.1rem; margin-bottom: 0.25rem;">
                                    {{#if this.serviceName}}{{this.serviceName}}{{else}}{{this.duration}}{{/if}}
                                    {{#if this.highlightBadge}}
                                    <span style="background: {{theme.colors.accent}}; color: white; padding: 0.25rem 0.75rem; border-radius: 15px; font-size: 0.75rem; margin-left: 0.75rem; font-weight: 600;">
                                        {{#if this.highlightBadgeText}}{{this.highlightBadgeText}}{{else}}POPULAR{{/if}}
                                    </span>
                                    {{/if}}
                                </div>
                                {{#if this.serviceName}}
                                <div style="color: {{theme.colors.text-light}}; font-size: 0.9rem;">{{this.duration}}</div>
                                {{/if}}
                            </div>
                            <div style="font-size: 1.5rem; font-weight: 700; color: {{theme.colors.secondary}};">${{this.price}}</div>
                        </div>
                        {{/each}}
                    {{else}}
                        <div style="text-align: center; padding: 3rem; color: {{theme.colors.text-light}};">
                            <div style="width: 60px; height: 60px; background: {{theme.colors.accent}}; opacity: 0.1; border-radius: 50%; margin: 0 auto 1rem;"></div>
                            <p>Contact for personalized rates</p>
                        </div>
                    {{/if}}
                </div>
            </div>
            {{/if}}

        </div>
    </div>
</section>
{{/if}}

<!-- Extended Experiences -->
{{#if rates_content.rates_extended_visible}}
{{#if rates.extended.length}}
<section class="modern-extended-section" style="padding: 5rem 0; background: {{theme.colors.card-bg}};">
    <div class="container" style="max-width: 1200px; margin: 0 auto; padding: 0 2rem;">
        
        <div style="text-align: center; margin-bottom: 4rem;">
            <h2 style="color: {{theme.colors.text}}; font-size: 2.5rem; font-weight: 700; margin-bottom: 1rem;">
                {{#if rates_content.extended_title}}{{rates_content.extended_title}}{{else}}Extended Experiences{{/if}}
            </h2>
            {{#if rates_content.extended_description}}
            <p style="color: {{theme.colors.text-light}}; font-size: 1.1rem; max-width: 600px; margin: 0 auto; line-height: 1.6;">
                {{rates_content.extended_description}}
            </p>
            {{/if}}
        </div>

        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(320px, 1fr)); gap: 2rem;">
            {{#each rates.extended}}
            <div class="modern-extended-card" style="background: {{theme.colors.surface}}; border: 1px solid {{theme.colors.border}}; border-radius: 16px; padding: 2rem; text-align: center; position: relative; overflow: hidden; transition: transform 0.3s ease, box-shadow 0.3s ease;" onmouseover="this.style.transform='translateY(-5px)'; this.style.boxShadow='0 20px 60px rgba(0,0,0,0.15)';" onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 5px 30px rgba(0,0,0,0.08)';">
                
                <!-- Background decoration -->
                <div style="position: absolute; top: -20px; right: -20px; width: 100px; height: 100px; background: {{theme.colors.accent}}; opacity: 0.05; border-radius: 50%; transform: scale(1.5);"></div>
                
                <div style="position: relative; z-index: 2;">
                    <!-- Icon -->
                    {{#if this.rateIcon}}
                    <div style="width: 60px; height: 60px; background: {{theme.colors.accent}}; border-radius: 50%; margin: 0 auto 1.5rem; display: flex; align-items: center; justify-content: center; color: white;">
                        <i class="{{this.rateIcon}}" style="font-size: 1.5rem;"></i>
                    </div>
                    {{else}}
                    <div style="width: 60px; height: 60px; background: {{theme.colors.accent}}; border-radius: 50%; margin: 0 auto 1.5rem; display: flex; align-items: center; justify-content: center; color: white;">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                            <circle cx="12" cy="12" r="3"/>
                            <path d="M13 4.069V2h-2v2.069A8.01 8.01 0 0 0 4.069 11H2v2h2.069A8.01 8.01 0 0 0 11 19.931V22h2v-2.069A8.01 8.01 0 0 0 19.931 13H22v-2h-2.069A8.01 8.01 0 0 0 13 4.069z"/>
                        </svg>
                    </div>
                    {{/if}}
                    
                    <!-- Title -->
                    <h3 style="color: {{theme.colors.text}}; font-size: 1.5rem; font-weight: 700; margin-bottom: 1rem;">
                        {{this.serviceName}}
                    </h3>
                    
                    <!-- Price -->
                    {{#if (eq this.serviceName "Travel")}}
                    <div style="color: {{theme.colors.accent}}; font-size: 2rem; font-weight: 700; margin-bottom: 1rem;">Contact for Quote</div>
                    {{else if this.price}}
                    <div style="color: {{theme.colors.accent}}; font-size: 2rem; font-weight: 700; margin-bottom: 1rem;">${{this.price}}</div>
                    {{else}}
                    <div style="color: {{theme.colors.accent}}; font-size: 2rem; font-weight: 700; margin-bottom: 1rem;">Custom</div>
                    {{/if}}
                    
                    <!-- Duration -->
                    <div style="color: {{theme.colors.text-light}}; font-size: 1rem; margin-bottom: 1.5rem;">
                        {{this.duration}}
                    </div>
                    
                    <!-- Description -->
                    {{#if this.rateDescription}}
                    <p style="color: {{theme.colors.text-light}}; font-size: 0.9rem; line-height: 1.6; margin: 0;">
                        {{this.rateDescription}}
                    </p>
                    {{/if}}
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
{{/if}}
{{/if}}

<!-- Services & Policies -->
<section class="modern-services-section" style="padding: 5rem 0; background: {{theme.colors.surface}};">
    <div class="container" style="max-width: 1200px; margin: 0 auto; padding: 0 2rem;">
        
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(400px, 1fr)); gap: 3rem;">
            
            <!-- Booking Information -->
            <div class="modern-info-card" style="background: {{theme.colors.card-bg}}; border-radius: 20px; padding: 2.5rem; border: 1px solid {{theme.colors.border}};">
                <div style="text-align: center; margin-bottom: 2rem;">
                    <div style="width: 80px; height: 80px; background: {{theme.colors.accent}}; opacity: 0.1; border-radius: 50%; margin: 0 auto 1rem; display: flex; align-items: center; justify-content: center;">
                        <svg width="32" height="32" viewBox="0 0 24 24" style="color: {{theme.colors.accent}};" fill="currentColor">
                            <path d="M17,12H19A2,2 0 0,1 21,14V18A2,2 0 0,1 19,20H5A2,2 0 0,1 3,18V14A2,2 0 0,1 5,12H7V11A5,5 0 0,1 12,6A5,5 0 0,1 17,11V12M12,8A3,3 0 0,0 9,11V12H15V11A3,3 0 0,0 12,8Z"/>
                        </svg>
                    </div>
                    <h3 style="color: {{theme.colors.text}}; font-size: 1.5rem; font-weight: 700;">Booking Process</h3>
                </div>
                
                <div style="space-y: 1.5rem;">
                    <div style="display: flex; align-items: start; gap: 1rem; margin-bottom: 1.5rem;">
                        <div style="width: 8px; height: 8px; background: {{theme.colors.accent}}; border-radius: 50%; margin-top: 0.5rem; flex-shrink: 0;"></div>
                        <span style="color: {{theme.colors.text-light}}; line-height: 1.6;">Advance booking recommended for optimal scheduling</span>
                    </div>
                    <div style="display: flex; align-items: start; gap: 1rem; margin-bottom: 1.5rem;">
                        <div style="width: 8px; height: 8px; background: {{theme.colors.accent}}; border-radius: 50%; margin-top: 0.5rem; flex-shrink: 0;"></div>
                        <span style="color: {{theme.colors.text-light}}; line-height: 1.6;">Same-day bookings may incur additional fees</span>
                    </div>
                    <div style="display: flex; align-items: start; gap: 1rem; margin-bottom: 1.5rem;">
                        <div style="width: 8px; height: 8px; background: {{theme.colors.accent}}; border-radius: 50%; margin-top: 0.5rem; flex-shrink: 0;"></div>
                        <span style="color: {{theme.colors.text-light}}; line-height: 1.6;">Screening required for all new clients</span>
                    </div>
                    <div style="display: flex; align-items: start; gap: 1rem;">
                        <div style="width: 8px; height: 8px; background: {{theme.colors.accent}}; border-radius: 50%; margin-top: 0.5rem; flex-shrink: 0;"></div>
                        <span style="color: {{theme.colors.text-light}}; line-height: 1.6;">Professional and discrete service</span>
                    </div>
                </div>
            </div>

            <!-- Payment Information -->
            {{#if rates_content.rates_payment_visible}}
            <div class="modern-info-card" style="background: {{theme.colors.card-bg}}; border-radius: 20px; padding: 2.5rem; border: 1px solid {{theme.colors.border}};">
                <div style="text-align: center; margin-bottom: 2rem;">
                    <div style="width: 80px; height: 80px; background: {{theme.colors.accent}}; opacity: 0.1; border-radius: 50%; margin: 0 auto 1rem; display: flex; align-items: center; justify-content: center;">
                        <svg width="32" height="32" viewBox="0 0 24 24" style="color: {{theme.colors.accent}};" fill="currentColor">
                            <path d="M20,8H4V6H20M20,18H4V12H20M20,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V6C22,4.89 21.1,4 20,4Z"/>
                        </svg>
                    </div>
                    <h3 style="color: {{theme.colors.text}}; font-size: 1.5rem; font-weight: 700;">Payment Methods</h3>
                </div>
                
                <div style="space-y: 1.5rem;">
                    {{#if rates.payment.length}}
                        {{#each rates.payment}}
                        <div style="display: flex; align-items: start; gap: 1rem; margin-bottom: 1.5rem;">
                            <div style="width: 8px; height: 8px; background: {{theme.colors.accent}}; border-radius: 50%; margin-top: 0.5rem; flex-shrink: 0;"></div>
                            <span style="color: {{theme.colors.text-light}}; line-height: 1.6;">{{this.termText}}</span>
                        </div>
                        {{/each}}
                    {{else}}
                        <div style="display: flex; align-items: start; gap: 1rem; margin-bottom: 1.5rem;">
                            <div style="width: 8px; height: 8px; background: {{theme.colors.accent}}; border-radius: 50%; margin-top: 0.5rem; flex-shrink: 0;"></div>
                            <span style="color: {{theme.colors.text-light}}; line-height: 1.6;">Cash and secure digital payments accepted</span>
                        </div>
                        <div style="display: flex; align-items: start; gap: 1rem; margin-bottom: 1.5rem;">
                            <div style="width: 8px; height: 8px; background: {{theme.colors.accent}}; border-radius: 50%; margin-top: 0.5rem; flex-shrink: 0;"></div>
                            <span style="color: {{theme.colors.text-light}}; line-height: 1.6;">Payment required at beginning of appointment</span>
                        </div>
                        <div style="display: flex; align-items: start; gap: 1rem;">
                            <div style="width: 8px; height: 8px; background: {{theme.colors.accent}}; border-radius: 50%; margin-top: 0.5rem; flex-shrink: 0;"></div>
                            <span style="color: {{theme.colors.text-light}}; line-height: 1.6;">All transactions are confidential</span>
                        </div>
                    {{/if}}
                </div>
            </div>
            {{/if}}

        </div>
    </div>
</section>

<!-- Contact CTA -->
{{#if rates_content.cta_visible}}
<section class="modern-cta-section" style="padding: 5rem 0; background: linear-gradient(135deg, {{theme.colors.primary}} 0%, {{theme.colors.secondary}} 100%); position: relative; overflow: hidden;">
    <!-- Background decoration -->
    <div style="position: absolute; top: -50px; right: -50px; width: 300px; height: 300px; border: 2px solid rgba(255,255,255,0.1); border-radius: 50%; transform: scale(1.5);"></div>
    <div style="position: absolute; bottom: -50px; left: -50px; width: 200px; height: 200px; background: rgba(255,255,255,0.05); border-radius: 20px; transform: rotate(15deg);"></div>
    
    <div class="container" style="max-width: 800px; margin: 0 auto; padding: 0 2rem; text-align: center; position: relative; z-index: 2;">
        <h2 style="color: {{theme.colors.primary-text}}; font-size: 2.5rem; font-weight: 700; margin-bottom: 1.5rem;">
            {{#if rates_content.cta_title}}{{rates_content.cta_title}}{{else}}Ready to Begin?{{/if}}
        </h2>
        
        <p style="color: {{theme.colors.primary-text}}; font-size: 1.2rem; margin-bottom: 3rem; opacity: 0.9; line-height: 1.6;">
            {{#if rates_content.cta_description}}{{rates_content.cta_description}}{{else}}Contact me to discuss your preferences and schedule an unforgettable experience.{{/if}}
        </p>
        
        <div style="display: flex; gap: 2rem; justify-content: center; flex-wrap: wrap;">
            <a href="/{{modelSlug}}/{{#if rates_content.cta_button_1_link}}{{rates_content.cta_button_1_link}}{{else}}contact{{/if}}" 
               style="background: {{theme.colors.btn-bg}}; color: {{theme.colors.primary}}; padding: 1rem 2.5rem; border-radius: 50px; font-weight: 600; text-decoration: none; transition: all 0.3s ease; border: 2px solid transparent;"
               onmouseover="this.style.transform='translateY(-3px)'; this.style.boxShadow='0 10px 30px rgba(0,0,0,0.2)';"
               onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='none';">
                {{#if rates_content.cta_button_1_text}}{{rates_content.cta_button_1_text}}{{else}}Get In Touch{{/if}}
            </a>
            
            <a href="/{{modelSlug}}/{{#if rates_content.cta_button_2_link}}{{rates_content.cta_button_2_link}}{{else}}calendar{{/if}}"
               style="background: transparent; color: {{theme.colors.primary-text}}; padding: 1rem 2.5rem; border-radius: 50px; font-weight: 600; text-decoration: none; transition: all 0.3s ease; border: 2px solid {{theme.colors.btn-border}};"
               onmouseover="this.style.background='{{theme.colors.btn-bg-hover}}'; this.style.borderColor='{{theme.colors.border}}';"
               onmouseout="this.style.background='transparent'; this.style.borderColor='{{theme.colors.btn-border}}';">
                {{#if rates_content.cta_button_2_text}}{{rates_content.cta_button_2_text}}{{else}}View Calendar{{/if}}
            </a>
        </div>
    </div>
</section>
{{/if}}

<style>
/* Modern Contemporary Rates Styles */
.modern-hero {
    position: relative;
}

.modern-bg-element {
    animation: modern-float 8s ease-in-out infinite;
}

@keyframes modern-float {
    0%, 100% { transform: translateY(0px) rotate(0deg); opacity: 0.1; }
    25% { transform: translateY(-20px) rotate(5deg); opacity: 0.15; }
    50% { transform: translateY(-30px) rotate(0deg); opacity: 0.2; }
    75% { transform: translateY(-20px) rotate(-5deg); opacity: 0.15; }
}

.modern-rates-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.modern-rates-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 60px rgba(0,0,0,0.15);
}

.modern-rate-item:last-child {
    border-bottom: none;
}

.modern-extended-card {
    box-shadow: 0 5px 30px rgba(0,0,0,0.08);
}

.modern-info-card {
    box-shadow: 0 10px 40px rgba(0,0,0,0.1);
}

.modern-cta-section {
    position: relative;
}

/* Responsive Design */
@media (max-width: 768px) {
    .container {
        padding-left: 1rem !important;
        padding-right: 1rem !important;
    }
    
    .modern-hero h1 {
        font-size: 2.5rem !important;
    }
    
    .modern-rates-section .container > div,
    .modern-extended-section .container > div,
    .modern-services-section .container > div {
        grid-template-columns: 1fr !important;
        gap: 2rem !important;
    }
    
    .modern-cta-section .container > div {
        flex-direction: column !important;
        gap: 1rem !important;
    }
    
    .modern-cta-section a {
        width: 100%;
        max-width: 280px;
    }
}

@media (max-width: 480px) {
    .modern-hero {
        padding: 2rem 0 !important;
        min-height: 50vh !important;
    }
    
    .modern-hero h1 {
        font-size: 2rem !important;
    }
    
    .modern-rates-card,
    .modern-info-card {
        border-radius: 12px !important;
    }
    
    .modern-rates-header,
    .modern-extended-card {
        padding: 1.5rem !important;
    }
    
    section[class*="modern-"] {
        padding: 3rem 0 !important;
    }
}
</style>