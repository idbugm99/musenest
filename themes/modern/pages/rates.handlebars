<!-- Modern Donations Section -->
{{#if rates_content.donations_visible}}
<section class="py-16 modern-donations-section">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center" data-aos="fade-up">
        <div class="modern-donations-card">
            <div class="modern-donations-icon">
                <i class="fas fa-heart text-2xl"></i>
            </div>
            <p class="modern-donations-text">
                {{#if rates_content.donation_description}}{{rates_content.donation_description}}{{else}}Donations are appreciated and help support my work.{{/if}}
            </p>
        </div>
    </div>
</section>
{{/if}}

<!-- Modern Package Deals -->
{{#if packages}}
<section class="py-20 modern-packages-section">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16" data-aos="fade-up">
            <div class="modern-packages-badge mb-6">Packages</div>
            <h2 class="text-3xl font-bold mb-8 modern-gradient-text">
                {{#if rates_content.packages_title}}{{rates_content.packages_title}}{{else}}Service Packages{{/if}}
            </h2>
            <p class="text-lg leading-relaxed max-w-3xl mx-auto text-gray-700">
                {{#if rates_content.packages_subtitle}}{{rates_content.packages_subtitle}}{{else}}Comprehensive packages for better value{{/if}}
            </p>
        </div>
        
        <div class="grid lg:grid-cols-2 gap-8">
            {{#each packages}}
            <div class="modern-package-card relative" data-aos="fade-up" data-aos-delay="{{multiply @index 100}}">
                {{#if this.popular}}
                <div class="modern-popular-badge">Most Popular</div>
                {{/if}}
                
                <div class="modern-package-content">
                    <h3 class="modern-package-title">{{this.name}}</h3>
                    <div class="modern-package-price">
                        {{formatCurrency this.price}}
                    </div>
                    {{#if this.originalPrice}}
                    <div class="modern-package-original">
                        Was {{formatCurrency this.originalPrice}}
                    </div>
                    {{/if}}
                    <p class="modern-package-description">{{this.description}}</p>
                    
                    <ul class="modern-package-includes">
                        {{#each this.includes}}
                        <li class="modern-package-item">
                            <div class="modern-package-check">
                                <i class="fas fa-check"></i>
                            </div>
                            <span>{{this}}</span>
                        </li>
                        {{/each}}
                    </ul>
                    
                    <a href="/{{../modelSlug}}/contact?package={{this.slug}}" 
