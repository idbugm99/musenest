        </div>
        
        <div class="grid md:grid-cols-3 gap-8">
            {{#if content.travel_location_1}}
            <div class="universal-card text-center p-8" data-aos="fade-up" data-aos-delay="100">
                <div class="mb-4">
                    <i class="fas fa-map-marker-alt text-3xl theme-accent mb-4"></i>
                </div>
                <h3 class="text-xl font-semibold mb-2">{{content.travel_location_1}}</h3>
                <p class="universal-section-subtitle mb-2">{{content.travel_date_1}}</p>
                <p class="text-sm theme-text-muted">{{content.travel_note_1}}</p>
            </div>
            {{/if}}
            
            {{#if content.travel_location_2}}
            <div class="universal-card text-center p-8" data-aos="fade-up" data-aos-delay="200">
                <div class="mb-4">
                    <i class="fas fa-map-marker-alt text-3xl theme-accent mb-4"></i>
                </div>
                <h3 class="text-xl font-semibold mb-2">{{content.travel_location_2}}</h3>
                <p class="universal-section-subtitle mb-2">{{content.travel_date_2}}</p>
                <p class="text-sm theme-text-muted">{{content.travel_note_2}}</p>
            </div>
            {{/if}}
            
            {{#if content.travel_location_3}}
            <div class="universal-card text-center p-8" data-aos="fade-up" data-aos-delay="300">
                <div class="mb-4">
                    <i class="fas fa-map-marker-alt text-3xl theme-accent mb-4"></i>
                </div>
                <h3 class="text-xl font-semibold mb-2">{{content.travel_location_3}}</h3>
                <p class="universal-section-subtitle mb-2">{{content.travel_date_3}}</p>
                <p class="text-sm theme-text-muted">{{content.travel_note_3}}</p>
            </div>
            {{/if}}
        </div>
        
        <div class="text-center mt-12" data-aos="fade-up" data-aos-delay="400">
            <a href="/{{modelSlug}}/calendar{{previewParam}}" class="universal-btn universal-btn-primary">
                <i class="fas fa-calendar-alt mr-3"></i>
                {{#if content.travel_button_text}}{{content.travel_button_text}}{{else}}View Full Calendar{{/if}}
            </a>
        </div>
    </div>
</section>
{{/if}}

<!-- Modern Testimonials -->
{{#if content.testimonials_section_visible}}
<section class="universal-section theme-section-alt">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16" data-aos="fade-up">
            <h2 class="universal-section-title text-4xl mb-4">
                {{#if content.testimonials_section_title}}{{content.testimonials_section_title}}{{else}}Testimonials{{/if}}
            </h2>
            <p class="universal-section-subtitle text-xl">
                {{#if content.testimonials_section_subtitle}}{{content.testimonials_section_subtitle}}{{else}}What clients say about their experiences{{/if}}
            </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {{#each (limit testimonials content.testimonials_display_count)}}
            <div class="universal-testimonial-card p-8" data-aos="fade-up" data-aos-delay="{{multiply @index 100}}">
                <div class="mb-6">
                    <div class="universal-star-rating">
                        {{#times this.rating}}
                        <i class="fas fa-star"></i>
                        {{/times}}
                        {{#if (lt this.rating 5)}}
                        {{#times (subtract 5 this.rating)}}
                        <i class="far fa-star"></i>
                        {{/times}}
                        {{/if}}
                    </div>
                </div>
                <p class="universal-testimonial-text">{{this.content}}</p>
                <div class="universal-testimonial-author">â€” {{this.author}}</div>
            </div>
            {{else}}
            {{#times 3}}
            <div class="universal-testimonial-card p-8" data-aos="fade-up" data-aos-delay="{{multiply @index 100}}">
                <div class="mb-6">
                    <div class="universal-star-rating">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                    </div>
                </div>
                <p class="universal-testimonial-text">"Professional, elegant, and absolutely delightful. An experience that exceeded all expectations with attention to every detail."</p>
                <div class="universal-testimonial-author">â€” Satisfied Client</div>
            </div>
            {{/times}}
            {{/each}}
        </div>
    </div>
</section>
{{/if}}

<!-- Modern Contact CTA -->
{{#if content.cta_section_visible}}
<section class="universal-section theme-section">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div data-aos="fade-up">
            <h2 class="universal-section-title text-4xl mb-6">
                {{#if content.cta_title}}{{content.cta_title}}{{else}}Ready to Connect?{{/if}}
            </h2>
            <p class="universal-section-subtitle text-xl mb-8">
                {{#if content.cta_subtitle}}{{content.cta_subtitle}}{{else}}Get in touch to discuss your interests and schedule a consultation{{/if}}
            </p>
            
            <div class="flex flex-col sm:flex-row justify-center gap-6">
                <a href="/{{modelSlug}}/contact{{previewParam}}" class="universal-btn universal-btn-primary">
                    <i class="fas fa-envelope mr-3"></i>
                    {{#if content.cta_primary_button}}{{content.cta_primary_button}}{{else}}Contact Me{{/if}}
                </a>
                <a href="/{{modelSlug}}/calendar{{previewParam}}" class="universal-btn universal-btn-secondary">
                    <i class="fas fa-calendar-alt mr-3"></i>
                    {{#if content.cta_secondary_button}}{{content.cta_secondary_button}}{{else}}View Calendar{{/if}}
                </a>
            </div>
        </div>
    </div>
</section>
{{/if}}