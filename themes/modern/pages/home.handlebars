<!-- Modern Theme Home Page - Refactored for Universal System -->

<!-- Universal Hero Section -->
{{#if content.hero_section_visible}}
{{{renderUniversalHero content=content model=model modelSlug=modelSlug previewParam=previewParam}}}
{{/if}}

<!-- Universal About Section -->  
{{#if content.about_section_visible}}
{{{renderUniversalAbout content=content model=model modelSlug=modelSlug previewParam=previewParam}}}
{{/if}}

<!-- Modern Services Section -->
{{#if content.services_section_visible}}
<section class="universal-section theme-section">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16" data-aos="fade-up">
            <h2 class="universal-section-title text-4xl mb-4">
                {{#if content.services_title}}{{content.services_title}}{{else}}Services{{/if}}
            </h2>
            <p class="universal-section-subtitle text-xl">
                {{#if content.services_subtitle}}{{content.services_subtitle}}{{else}}Professional services tailored to your needs{{/if}}
            </p>
        </div>
        
        <div class="grid md:grid-cols-3 gap-8">
            {{#if content.service_1_title}}
            <div class="universal-service-card" data-aos="fade-up" data-aos-delay="100">
                <div class="text-center mb-4">
                    <i class="{{#if content.service_1_icon}}{{content.service_1_icon}}{{else}}fas fa-star{{/if}} text-3xl theme-accent mb-4"></i>
                </div>
                <h3 class="text-xl font-semibold mb-4 text-center">{{content.service_1_title}}</h3>
                <p class="universal-section-subtitle text-center">{{content.service_1_description}}</p>
            </div>
            {{/if}}
            
            {{#if content.service_2_title}}
            <div class="universal-service-card" data-aos="fade-up" data-aos-delay="200">
                <div class="text-center mb-4">
                    <i class="{{#if content.service_2_icon}}{{content.service_2_icon}}{{else}}fas fa-heart{{/if}} text-3xl theme-accent mb-4"></i>
                </div>
                <h3 class="text-xl font-semibold mb-4 text-center">{{content.service_2_title}}</h3>
                <p class="universal-section-subtitle text-center">{{content.service_2_description}}</p>
            </div>
            {{/if}}
            
            {{#if content.service_3_title}}
            <div class="universal-service-card" data-aos="fade-up" data-aos-delay="300">
                <div class="text-center mb-4">
                    <i class="{{#if content.service_3_icon}}{{content.service_3_icon}}{{else}}fas fa-gem{{/if}} text-3xl theme-accent mb-4"></i>
                </div>
                <h3 class="text-xl font-semibold mb-4 text-center">{{content.service_3_title}}</h3>
                <p class="universal-section-subtitle text-center">{{content.service_3_description}}</p>
            </div>
            {{/if}}
        </div>
    </div>
</section>
{{/if}}

<!-- Universal Gallery Preview -->
{{#if content.gallery_section_visible}}
<section class="universal-section theme-section-alt">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16" data-aos="fade-up">
            <h2 class="universal-section-title text-4xl mb-4">
                {{#if content.gallery_section_title}}{{content.gallery_section_title}}{{else}}Gallery{{/if}}
            </h2>
            <p class="universal-section-subtitle text-xl">
                {{#if content.gallery_section_subtitle}}{{content.gallery_section_subtitle}}{{else}}A curated collection of professional photography{{/if}}
            </p>
        </div>
        
        <div class="universal-gallery-grid grid gap-6" data-aos="fade-up" data-aos-delay="200">
            {{#each galleryImages}}
            <div class="universal-gallery-item">
                <img src="/uploads/{{../modelSlug}}/public/gallery/{{this.filename}}" 
                     alt="{{#if this.caption}}{{this.caption}}{{else}}Gallery image{{/if}}" 
                     class="w-full h-full object-cover">
            </div>
            {{else}}
            {{#times 6}}
            <div class="universal-gallery-item theme-bg-tertiary flex items-center justify-center">
                <div class="text-center">
                    <i class="fas fa-image text-2xl theme-text-muted mb-2"></i>
                    <p class="theme-text-muted text-sm">Photo</p>
                </div>
            </div>
            {{/times}}
            {{/each}}
        </div>
        
        <div class="text-center mt-12" data-aos="fade-up" data-aos-delay="400">
            <a href="/{{modelSlug}}/gallery{{previewParam}}" class="universal-btn universal-btn-primary">
                <i class="fas fa-images mr-3"></i>
                {{#if content.gallery_button_text}}{{content.gallery_button_text}}{{else}}Explore Full Gallery{{/if}}
            </a>
        </div>
    </div>
</section>
{{/if}}

<!-- Modern Travel Schedule -->
{{#if content.travel_section_visible}}
<section class="universal-section theme-section">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16" data-aos="fade-up">
            <h2 class="universal-section-title text-4xl mb-4">
                {{#if content.travel_section_title}}{{content.travel_section_title}}{{else}}Travel Schedule{{/if}}
            </h2>
            <p class="universal-section-subtitle text-xl">
                {{#if content.travel_section_subtitle}}{{content.travel_section_subtitle}}{{else}}Upcoming locations and availability{{/if}}
