<!-- Modern Contemporary Etiquette Page -->

<!-- Standardized Modern Hero Section -->
{{#if etiquette_content.etiquette_header_visible}}
<section class="hero-section" style="min-height: 40vh; background: {{theme.colors.hero-bg}}; display: flex; align-items: center; position: relative;">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h1 style="font-size: 3.75rem; font-weight: 800; margin-bottom: 1.5rem; color: {{theme.colors.hero-text}};">
      {{#if etiquette_content.page_title}}{{etiquette_content.page_title}}{{else}}Etiquette & Guidelines{{/if}}
    </h1>
    {{#if etiquette_content.page_subtitle}}
    <p style="font-size: 1.25rem; color: {{theme.colors.hero-subtext}}; max-width: 42rem; margin: 0 auto;">
      {{etiquette_content.page_subtitle}}
    </p>
    {{else}}
    <p style="font-size: 1.25rem; color: {{theme.colors.hero-subtext}}; max-width: 42rem; margin: 0 auto;">
      Clear, friendly policies so our time together runs smoothly.
    </p>
    {{/if}}
  </div>
</section>
{{/if}}

<!-- Main Content -->
<main class="etiquette-page" style="padding:56px 0">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Policy Grid -->
    <div class="policy-grid">
      
      <!-- Booking & Screening -->
      {{#if etiquette_content.etiquette_booking_visible}}
      <section class="policy-card">
        <span class="policy-chip">Planning</span>
        <h2>{{#if etiquette_content.booking_title}}{{etiquette_content.booking_title}}{{else}}Booking & Screening{{/if}}</h2>
        <ul class="policy-list">
          <li>
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 12l2 2 4-4"/>
            </svg>
            Please include your desired date, time, and duration when reaching out.
          </li>
          <li>
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 12l2 2 4-4"/>
            </svg>
            A brief screening process is required for new clients (basic verification & references).
          </li>
          <li>
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 12l2 2 4-4"/>
            </svg>
            Advance booking preferred; same-day may incur an additional fee.
          </li>
          <li>
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 12l2 2 4-4"/>
            </svg>
            All appointments require confirmation. Please respond promptly.
          </li>
        </ul>
      </section>
      {{/if}}
      
      <!-- Respect & Boundaries -->
      {{#if etiquette_content.etiquette_respect_visible}}
      <section class="policy-card">
        <span class="policy-chip">Communication</span>
        <h2>{{#if etiquette_content.respect_title}}{{etiquette_content.respect_title}}{{else}}Respect & Boundaries{{/if}}</h2>
        <ul class="policy-list">
          <li>
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 12l2 2 4-4"/>
            </svg>
            Please maintain respectful and professional language in all communications.
          </li>
          <li>
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 12l2 2 4-4"/>
            </svg>
            Respect boundaries and preferences at all times.
          </li>
          <li>
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 12l2 2 4-4"/>
            </svg>
            Inappropriate or aggressive behavior will not be tolerated.
          </li>
          <li>
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 12l2 2 4-4"/>
            </svg>
            A positive, friendly attitude contributes to a great experience.
          </li>
        </ul>
      </section>
      {{/if}}
      
      <!-- Hygiene & Presentation -->
      {{#if etiquette_content.etiquette_hygiene_visible}}
      <section class="policy-card">
        <span class="policy-chip">Preparation</span>
        <h2>{{#if etiquette_content.hygiene_title}}{{etiquette_content.hygiene_title}}{{else}}Hygiene & Presentation{{/if}}</h2>
        <ul class="policy-list">
          <li>
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 12l2 2 4-4"/>
            </svg>
            Please arrive freshly showered and well-groomed.
          </li>
          <li>
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 12l2 2 4-4"/>
            </svg>
            Fresh breath and good oral hygiene are essential.
          </li>
          <li>
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 12l2 2 4-4"/>
            </svg>
            Clean, well-fitted clothing is always appreciated.
          </li>
          <li>
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 12l2 2 4-4"/>
            </svg>
            Well-trimmed nails and neat appearance are important.
          </li>
        </ul>
      </section>
      {{/if}}
      
      <!-- Cancellation Policy -->
      {{#if etiquette_content.etiquette_cancellation_visible}}
      <section class="policy-card">
        <span class="policy-chip">Changes</span>
        <h2>{{#if etiquette_content.cancellation_title}}{{etiquette_content.cancellation_title}}{{else}}Cancellation Policy{{/if}}</h2>
        <ul class="policy-list">
          <li>
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 12l2 2 4-4"/>
            </svg>
            Please provide at least 24 hours notice for cancellations.
          </li>
          <li>
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 12l2 2 4-4"/>
            </svg>
            Contact me directly for cancellations (not through third parties).
          </li>
          <li>
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 12l2 2 4-4"/>
            </svg>
            Rescheduling is preferred over cancellation when possible.
          </li>
          <li>
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 12l2 2 4-4"/>
            </svg>
            Short-notice cancellations may incur a fee.
          </li>
        </ul>
      </section>
      {{/if}}
      
    </div>
    
    <!-- Safety & Discretion (Dark Band) -->
    {{#if etiquette_content.etiquette_safety_visible}}
    <section class="safety-band" style="margin:32px 0">
      <span class="policy-chip" style="background:#172033;color:#9CA3FF">Security</span>
      <h2>{{#if etiquette_content.safety_title}}{{etiquette_content.safety_title}}{{else}}Safety & Discretion{{/if}}</h2>
      <ul class="policy-list">
        <li>
          <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M9 12l2 2 4-4"/>
          </svg>
          All interactions remain strictly confidential.
        </li>
        <li>
          <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M9 12l2 2 4-4"/>
          </svg>
          I maintain a clean, safe, welcoming environment.
        </li>
        <li>
          <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M9 12l2 2 4-4"/>
          </svg>
          Communication handled professionally and discreetly.
        </li>
        <li>
          <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M9 12l2 2 4-4"/>
          </svg>
          Photography and recording are strictly prohibited.
        </li>
      </ul>
    </section>
    {{/if}}
    
    <!-- Questions Card -->
    {{#if etiquette_content.etiquette_questions_visible}}
    <section class="policy-card questions-card">
      <span class="policy-chip">Need Help</span>
      <h2>{{#if etiquette_content.questions_title}}{{etiquette_content.questions_title}}{{else}}Questions?{{/if}}</h2>
      <p>{{#if etiquette_content.questions_content}}{{{etiquette_content.questions_content}}}{{else}}If anything is unclear, reach out and I'll be happy to clarify. Clear communication ensures we both have a wonderful experience.{{/if}}</p>
      <a href="/{{modelSlug}}/contact{{previewParam}}" class="cta">Contact Me</a>
    </section>
    {{/if}}
    
  </div>
</main>

<!-- Modern Contemporary CSS -->
<style>
/* ---- Page shell ---- */
.etiquette-page { 
  background: #F6F8FB; /* page bg */ 
}

/* ---- Reusable tokens (use API-loaded colors) ---- */
:root{
  --mc-primary: {{theme.colors.primary}}; 
  --mc-primary-700: {{theme.colors.btn-bg-hover}}; 
  --mc-primary-50: {{theme.colors.bg-light}};
  --mc-text: {{theme.colors.text}}; 
  --mc-muted: {{theme.colors.text-light}}; 
  --mc-on-dark: #F8FAFC;
  --mc-surface: {{theme.colors.surface}}; 
  --mc-border: {{theme.colors.border}};
  --mc-shadow: 0 10px 30px {{theme.colors.card-shadow}};
}

/* ---- Hero ---- */
.etiquette-hero{
  background: linear-gradient(160deg, #0f1b2c 0%, #1b2741 100%);
  color: var(--mc-on-dark); 
  padding: 72px 0 56px;
}
.etiquette-hero h1{ 
  font-size: 48px; 
  line-height: 56px; 
  font-weight: 800; 
  margin: 24px 0 0;
}
.etiquette-hero .sub{ 
  font-size: 18px; 
  line-height: 28px; 
  opacity: .85; 
  margin-top: 16px;
}

/* ---- Cards ---- */
.policy-card{
  background: var(--mc-surface);
  border: 1px solid var(--mc-border);
  border-radius: 16px; 
  box-shadow: var(--mc-shadow);
  padding: 24px; 
  color: var(--mc-text);
}
.policy-card h2{
  font-size: 22px; 
  line-height: 28px; 
  font-weight: 700; 
  margin: 12px 0 12px;
  color: var(--mc-text);
}
.policy-chip{
  display: inline-block; 
  padding: 6px 10px; 
  border-radius: 9999px;
  background: var(--mc-primary-50); 
  color: var(--mc-primary);
  font-size: 11px; 
  letter-spacing: .06em; 
  text-transform: uppercase;
  font-weight: 600;
}

/* ---- Lists ---- */
.policy-list{ 
  list-style: none; 
  margin: 16px 0 0; 
  padding: 0; 
}
.policy-list li{
  display: flex; 
  align-items: flex-start; 
  gap: 10px;
  font-size: 16px; 
  line-height: 26px; 
  color: var(--mc-text); 
  margin: 8px 0;
}
.policy-list li .icon{
  width: 18px; 
  height: 18px; 
  margin-top: 4px; 
  flex: 0 0 18px; 
  color: var(--mc-primary);
}

/* ---- Safety band (dark feature) ---- */
.safety-band{
  background: #0f172a; 
  color: var(--mc-on-dark);
  border-radius: 16px; 
  box-shadow: var(--mc-shadow);
  padding: 28px 24px;
}
.safety-band h2{ 
  color: #fff; 
  font-size: 22px; 
  line-height: 28px; 
  font-weight: 700; 
  margin: 12px 0 12px;
}
.safety-band .policy-list li{ 
  color: #F8FAFC; /* White text on dark background */
}
.safety-band .policy-list li .icon{ 
  color: #9CA3FF; 
}

/* ---- Questions card ---- */
.questions-card .cta{ 
  height: 44px; 
  padding: 0 18px; 
  border-radius: 9999px; 
  background: var(--mc-primary); 
  color: #fff; 
  font-weight: 600; 
  border: none;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  margin-top: 16px;
  transition: all 0.2s ease;
}
.questions-card .cta:hover{ 
  background: var(--mc-primary-700); 
}
.questions-card p {
  font-size: 16px;
  line-height: 26px;
  color: var(--mc-text);
  margin: 16px 0;
}

/* ---- Grid ---- */
.policy-grid{
  display: grid; 
  grid-template-columns: 1fr 1fr; 
  gap: 24px;
  margin-bottom: 32px;
}
@media (max-width: 900px){ 
  .policy-grid{ 
    grid-template-columns: 1fr; 
  } 
}

/* ---- Focus States for Accessibility ---- */
.cta:focus {
  outline: none;
  box-shadow: 0 0 0 3px rgba(109, 93, 246, 0.25);
}

a:focus {
  outline: none;
  box-shadow: 0 0 0 2px rgba(109, 93, 246, 0.25);
  border-radius: 4px;
}

/* ---- Hard resets: strip frosted/ghost elements ---- */
.policy-card [class*="ghost"], 
.policy-card [class*="frost"], 
.policy-card [style*="backdrop-filter"]{
  all: unset; 
  display: none !important;
}

/* ---- Responsive ---- */
@media (max-width: 768px) {
  .etiquette-hero h1 {
    font-size: 36px;
    line-height: 42px;
  }
  
  .etiquette-hero .sub {
    font-size: 16px;
    line-height: 24px;
  }
  
  .policy-card {
    padding: 20px;
  }
  
  .safety-band {
    padding: 24px 20px;
  }
  
  .policy-grid {
    gap: 16px;
  }
}

@media (max-width: 480px) {
  .etiquette-hero {
    padding: 48px 0 40px;
  }
  
  .etiquette-hero h1 {
    font-size: 28px;
    line-height: 34px;
  }
  
  .policy-card {
    padding: 16px;
  }
  
  .policy-card h2 {
    font-size: 20px;
    line-height: 26px;
  }
  
  .policy-list li {
    font-size: 14px;
    line-height: 22px;
  }
  
  .safety-band {
    padding: 20px 16px;
  }
}
</style>