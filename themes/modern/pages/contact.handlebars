<!-- Phase 2.3c: Modern Template Contact Page - Contemporary Communication Center -->

<!-- Standardized Modern Hero Section -->
{{#if contact_content.contact_header_visible}}
<section class="hero-section" style="min-height: 40vh; background: {{theme.colors.hero-bg}}; display: flex; align-items: center; position: relative;">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h1 style="font-size: 3.75rem; font-weight: 800; margin-bottom: 1.5rem; color: {{theme.colors.hero-text}};">
      {{#if contact_content.page_title}}{{contact_content.page_title}}{{else}}Connect With Me{{/if}}
    </h1>
    {{#if contact_content.page_subtitle}}
    <p style="font-size: 1.25rem; color: {{theme.colors.hero-subtext}}; max-width: 42rem; margin: 0 auto;">
      {{contact_content.page_subtitle}}
    </p>
    {{else if contact_content.page_description}}
    <p style="font-size: 1.25rem; color: {{theme.colors.hero-subtext}}; max-width: 42rem; margin: 0 auto;">
      {{contact_content.page_description}}
    </p>
    {{else}}
    <p style="font-size: 1.25rem; color: {{theme.colors.hero-subtext}}; max-width: 42rem; margin: 0 auto;">
      Reach out to begin our conversation and create something memorable together.
    </p>
    {{/if}}
  </div>
</section>
{{/if}}

<!-- Modern Contact Main Section -->
<section style="padding: 5rem 0; background: {{theme.colors.surface}};" class="modern-contact-main-section">
    <div style="max-width: 80rem; margin: 0 auto; padding: 0 2rem;">
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(500px, 1fr)); gap: 4rem;">
            <!-- Left Column: Contact Form -->
            {{#if contact_content.contact_form_visible}}
            <div class="modern-contact-form-section" data-aos="fade-right">
                <div class="modern-form-card">
                    <div class="modern-form-gradient-overlay"></div>
                    <div class="modern-form-content">
                        <div class="modern-form-header">
                            <div class="modern-form-badge">Get In Touch</div>
                            <h2 style="font-size: 1.875rem; font-weight: 700; margin-bottom: 0.5rem; color: {{theme.colors.text}};">
                                {{#if contact_content.form_title}}{{contact_content.form_title}}{{else}}Send a Message{{/if}}
                            </h2>
                            {{#if contact_content.form_description}}
                            <p style="color: {{theme.colors.text-light}}; margin-bottom: 2rem;">{{contact_content.form_description}}</p>
                            {{else}}
                            <p style="color: {{theme.colors.text-light}}; margin-bottom: 2rem;">I would love to hear from you. Please don't hesitate to reach out with any questions or to discuss how we can create an exceptional experience together.</p>
                            {{/if}}
                        </div>
                        
                        <form class="modern-contact-form" style="display: flex; flex-direction: column; gap: 1.5rem;">
                            <div class="modern-form-group">
                                <label for="name" class="modern-form-label">{{#if contact_content.form_name_label}}{{contact_content.form_name_label}}{{else}}Your Name{{/if}}</label>
                                <input type="text" id="name" name="name" required
                                       class="modern-form-input"
                                       placeholder="Enter your name">
                            </div>
                            
                            <div class="modern-form-group">
                                <label for="email" class="modern-form-label">{{#if contact_content.form_email_label}}{{contact_content.form_email_label}}{{else}}Email Address{{/if}}</label>
                                <input type="email" id="email" name="email" required
                                       class="modern-form-input"
                                       placeholder="your.email@example.com">
                            </div>
                            
                            <div class="modern-form-group">
                                <label for="phone" class="modern-form-label">{{#if contact_content.form_phone_label}}{{contact_content.form_phone_label}}{{else}}Phone Number{{/if}}</label>
                                <input type="tel" id="phone" name="phone"
                                       class="modern-form-input"
                                       placeholder="(555) 123-4567">
                            </div>
                            
                            <div class="modern-form-group">
                                <label for="date" class="modern-form-label">{{#if contact_content.form_date_label}}{{contact_content.form_date_label}}{{else}}Preferred Date{{/if}}</label>
                                <input type="date" id="date" name="date"
                                       class="modern-form-input">
                            </div>
                            
                            <div class="modern-form-group">
                                <label for="duration" class="modern-form-label">{{#if contact_content.form_duration_label}}{{contact_content.form_duration_label}}{{else}}Duration{{/if}}</label>
                                <select id="duration" name="duration" class="modern-form-input">
                                    <option value="">Select duration...</option>
                                    {{#each (split (or contact_content.form_duration_options "1 Hour,90 Minutes,2 Hours,3 Hours,Overnight,Extended (please specify)") ",")}}
                                        <option value="{{trim this}}">{{trim this}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            
                            <div class="modern-form-group">
                                <label for="message" class="modern-form-label">{{#if contact_content.form_message_label}}{{contact_content.form_message_label}}{{else}}Message{{/if}}</label>
                                <textarea id="message" name="message" rows="5" required
                                          class="modern-form-input"
                                          placeholder="{{#if contact_content.form_message_placeholder}}{{contact_content.form_message_placeholder}}{{else}}Tell me more about what you're looking for...{{/if}}"></textarea>
                            </div>
                            
                            <div class="modern-form-actions">
                                <button type="submit" class="modern-form-submit-btn">
                                    <i class="fas fa-paper-plane mr-3"></i>
                                    {{#if contact_content.form_button_text}}{{contact_content.form_button_text}}{{else}}Send Message{{/if}}
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            {{/if}}
            
            <!-- Right Column: Contact Information & Details -->
            <div class="modern-contact-info-column">
                <!-- Direct Contact Information -->
                {{#if contact_content.contact_direct_visible}}
                <div class="modern-contact-info-section" data-aos="fade-left">
                    <div class="modern-info-card">
                        <div class="modern-info-header">
                            <div class="modern-info-badge">Direct Contact</div>
                            <h3 style="font-size: 1.5rem; font-weight: 700; margin-bottom: 1.5rem; color: {{theme.colors.text}};">
                                {{#if contact_content.direct_title}}{{contact_content.direct_title}}{{else}}Reach Out Directly{{/if}}
                            </h3>
                        </div>
                        
                        <div class="modern-contact-methods space-y-4">
                            {{#if contactEmail}}
                            <div class="modern-contact-method">
                                <div class="modern-contact-icon">
                                    <i class="fas fa-envelope"></i>
                                </div>
                                <div class="modern-contact-details">
                                    <div class="modern-contact-label">{{#if contact_content.direct_email_label}}{{contact_content.direct_email_label}}{{else}}Email{{/if}}</div>
                                    <a href="mailto:{{contactEmail}}" class="modern-contact-value">{{contactEmail}}</a>
                                </div>
                            </div>
                            {{/if}}
                            
                            {{#if contactPhone}}
                            <div class="modern-contact-method">
                                <div class="modern-contact-icon">
                                    <i class="fas fa-phone"></i>
                                </div>
                                <div class="modern-contact-details">
                                    <div class="modern-contact-label">{{#if contact_content.direct_phone_label}}{{contact_content.direct_phone_label}}{{else}}Phone{{/if}}</div>
                                    <a href="tel:{{contactPhone}}" class="modern-contact-value">{{contactPhone}}</a>
                                </div>
                            </div>
                            {{/if}}
                            
                            <div class="modern-contact-method">
                                <div class="modern-contact-icon">
                                    <i class="fas fa-clock"></i>
                                </div>
                                <div class="modern-contact-details">
                                    <div class="modern-contact-label">{{#if contact_content.direct_response_label}}{{contact_content.direct_response_label}}{{else}}Response Time{{/if}}</div>
                                    <div class="modern-contact-value">{{#if contact_content.direct_response_text}}{{contact_content.direct_response_text}}{{else}}Within 2-4 hours{{/if}}</div>
                                </div>
                            </div>
                            
                            {{#unless contactEmail}}
                            <div class="modern-contact-method">
                                <div class="modern-contact-icon">
                                    <i class="fas fa-envelope"></i>
                                </div>
                                <div class="modern-contact-details">
                                    <div class="modern-contact-label">{{#if contact_content.direct_email_label}}{{contact_content.direct_email_label}}{{else}}Email{{/if}}</div>
                                    <div class="modern-contact-value">Available upon request</div>
                                </div>
                            </div>
                            {{/unless}}
                        </div>
                    </div>
                </div>
                {{/if}}
                
                <!-- Contact Guidelines -->
                {{#if contact_content.contact_guidelines_visible}}
                <div class="modern-guidelines-section mt-8" data-aos="fade-left" data-aos-delay="200">
                    <div class="modern-info-card">
                        <div class="modern-info-header">
                            <div class="modern-info-badge">Guidelines</div>
                            <h3 style="font-size: 1.5rem; font-weight: 700; margin-bottom: 1.5rem; color: {{theme.colors.text}};">
                                {{#if contact_content.guidelines_title}}{{contact_content.guidelines_title}}{{else}}Contact Guidelines{{/if}}
                            </h3>
                        </div>
                        
                        <div class="modern-guidelines-content">
                            {{#if contact_content.guidelines_content}}
                            <div style="color: {{theme.colors.text-light}};">
                                {{{contact_content.guidelines_content}}}
                            </div>
                            {{else}}
                            <div class="modern-guideline-list">
                                {{#if contact_content.guideline_1}}
                                <div class="modern-guideline-item">
                                    <div class="modern-guideline-icon">
                                        <i class="fas fa-check-circle"></i>
                                    </div>
                                    <div class="modern-guideline-text">{{contact_content.guideline_1}}</div>
                                </div>
                                {{/if}}
                                {{#if contact_content.guideline_2}}
                                <div class="modern-guideline-item">
                                    <div class="modern-guideline-icon">
                                        <i class="fas fa-clock"></i>
                                    </div>
                                    <div class="modern-guideline-text">{{contact_content.guideline_2}}</div>
                                </div>
                                {{/if}}
                                {{#if contact_content.guideline_3}}
                                <div class="modern-guideline-item">
                                    <div class="modern-guideline-icon">
                                        <i class="fas fa-user-check"></i>
                                    </div>
                                    <div class="modern-guideline-text">{{contact_content.guideline_3}}</div>
                                </div>
                                {{/if}}
                                {{#if contact_content.guideline_4}}
                                <div class="modern-guideline-item">
                                    <div class="modern-guideline-icon">
                                        <i class="fas fa-shield-alt"></i>
                                    </div>
                                    <div class="modern-guideline-text">{{contact_content.guideline_4}}</div>
                                </div>
                                {{/if}}
                                {{#if contact_content.guideline_5}}
                                <div class="modern-guideline-item">
                                    <div class="modern-guideline-icon">
                                        <i class="fas fa-calendar-alt"></i>
                                    </div>
                                    <div class="modern-guideline-text">{{contact_content.guideline_5}}</div>
                                </div>
                                {{/if}}
                                
                                {{#unless contact_content.guideline_1}}
                                <div class="modern-guideline-item">
                                    <div class="modern-guideline-icon">
                                        <i class="fas fa-clock"></i>
                                    </div>
                                    <div class="modern-guideline-text">I typically respond within 2-4 hours</div>
                                </div>
                                <div class="modern-guideline-item">
                                    <div class="modern-guideline-icon">
                                        <i class="fas fa-shield-alt"></i>
                                    </div>
                                    <div class="modern-guideline-text">All communications are confidential</div>
                                </div>
                                <div class="modern-guideline-item">
                                    <div class="modern-guideline-icon">
                                        <i class="fas fa-user-check"></i>
                                    </div>
                                    <div class="modern-guideline-text">Please be respectful and professional</div>
                                </div>
                                <div class="modern-guideline-item">
                                    <div class="modern-guideline-icon">
                                        <i class="fas fa-calendar-alt"></i>
                                    </div>
                                    <div class="modern-guideline-text">Advance booking is recommended</div>
                                </div>
                                {{/unless}}
                            </div>
                            {{/if}}
                        </div>
                    </div>
                </div>
                {{/if}}
                
                <!-- Location Information -->
                {{#if contact_content.contact_location_visible}}
                <div class="modern-location-section mt-8" data-aos="fade-left" data-aos-delay="400">
                    <div class="modern-info-card">
                        <div class="modern-info-header">
                            <div class="modern-info-badge">Location</div>
                            <h3 style="font-size: 1.5rem; font-weight: 700; margin-bottom: 1.5rem; color: {{theme.colors.text}};">
                                {{#if contact_content.location_title}}{{contact_content.location_title}}{{else}}Service Areas{{/if}}
                            </h3>
                        </div>
                        
                        <div class="modern-location-content">
                            {{#if contact_content.location_content}}
                            <div style="color: {{theme.colors.text-light}};">
                                {{{contact_content.location_content}}}
                            </div>
                            {{else}}
                            <div class="modern-location-info">
                                {{#if contact_content.location_area_text}}
                                <div class="modern-location-item">
                                    <div class="modern-location-icon">
                                        <i class="fas fa-map-marker-alt"></i>
                                    </div>
                                    <div class="modern-location-text">{{contact_content.location_area_text}}</div>
                                </div>
                                {{/if}}
                                {{#if contact_content.location_services_text}}
                                <div class="modern-location-item">
                                    <div class="modern-location-icon">
                                        <i class="fas fa-concierge-bell"></i>
                                    </div>
                                    <div class="modern-location-text">{{contact_content.location_services_text}}</div>
                                </div>
                                {{/if}}
                                {{#if contact_content.location_travel_text}}
                                <div class="modern-location-item">
                                    <div class="modern-location-icon">
                                        <i class="fas fa-plane"></i>
                                    </div>
                                    <div class="modern-location-text">{{contact_content.location_travel_text}}</div>
                                </div>
                                {{/if}}
                                
                                {{#unless contact_content.location_area_text}}
                                <div class="modern-location-item">
                                    <div class="modern-location-icon">
                                        <i class="fas fa-map-marker-alt"></i>
                                    </div>
                                    <div class="modern-location-text">Primary service area information available upon contact</div>
                                </div>
                                <div class="modern-location-item">
                                    <div class="modern-location-icon">
                                        <i class="fas fa-plane"></i>
                                    </div>
                                    <div class="modern-location-text">Travel arrangements can be discussed</div>
                                </div>
                                {{/unless}}
                            </div>
                            {{/if}}
                        </div>
                    </div>
                </div>
                {{/if}}
                
                <!-- Privacy Information -->
                {{#if contact_content.contact_privacy_visible}}
                <div class="modern-privacy-section mt-8" data-aos="fade-left" data-aos-delay="600">
                    <div class="modern-info-card">
                        <div class="modern-info-header">
                            <div class="modern-info-badge">Privacy</div>
                            <h3 style="font-size: 1.5rem; font-weight: 700; margin-bottom: 1.5rem; color: {{theme.colors.text}};">
                                {{#if contact_content.privacy_title}}{{contact_content.privacy_title}}{{else}}Privacy & Discretion{{/if}}
                            </h3>
                        </div>
                        
                        <div class="modern-privacy-content">
                            {{#if contact_content.privacy_text}}
                            <div style="color: {{theme.colors.text-light}};">
                                {{{contact_content.privacy_text}}}
                            </div>
                            {{else if contact_content.privacy_content}}
                            <div style="color: {{theme.colors.text-light}};">
                                {{{contact_content.privacy_content}}}
                            </div>
                            {{else}}
                            <div class="modern-privacy-assurance">
                                <div class="modern-privacy-item">
                                    <div class="modern-privacy-icon">
                                        <i class="fas fa-lock"></i>
                                    </div>
                                    <div class="modern-privacy-text">Your privacy is my highest priority</div>
                                </div>
                                <div class="modern-privacy-item">
                                    <div class="modern-privacy-icon">
                                        <i class="fas fa-eye-slash"></i>
                                    </div>
                                    <div class="modern-privacy-text">Complete discretion guaranteed</div>
                                </div>
                                <div class="modern-privacy-item">
                                    <div class="modern-privacy-icon">
                                        <i class="fas fa-user-secret"></i>
                                    </div>
                                    <div class="modern-privacy-text">Confidential communications</div>
                                </div>
                            </div>
                            {{/if}}
                        </div>
                    </div>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</section>

<!-- Modern Contact CTA Section -->
<section style="padding: 4rem 0; background: {{theme.colors.card-bg}};" class="modern-contact-cta-section">
    <div style="max-width: 56rem; margin: 0 auto; padding: 0 2rem; text-align: center;" data-aos="fade-up">
        <div class="modern-cta-contact-card">
            <div class="modern-cta-contact-background-gradient"></div>
            <div class="modern-cta-contact-content">
                <div class="modern-cta-contact-badge">Ready to Connect</div>
                <h2 style="font-size: 1.875rem; font-weight: 700; margin-bottom: 1.5rem; color: {{theme.colors.primary-text}};">
                    {{#if contact_content.cta_title}}{{contact_content.cta_title}}{{else}}Let's Start a Conversation{{/if}}
                </h2>
                <p style="font-size: 1.25rem; margin-bottom: 2rem; color: {{theme.colors.primary-text}}; opacity: 0.9; max-width: 42rem; margin-left: auto; margin-right: auto;">
                    {{#if contact_content.cta_description}}{{contact_content.cta_description}}{{else}}I'm looking forward to hearing from you and creating something truly special together. Your discretion is assured.{{/if}}
                </p>
                <div style="display: flex; flex-direction: column; justify-content: center; gap: 1rem;">
                    <a href="/{{modelSlug}}/rates{{previewParam}}" style="background: {{theme.colors.btn-bg}}; color: {{theme.colors.primary}}; padding: 1rem 2rem; border-radius: 12px; font-weight: 600; text-decoration: none; display: flex; align-items: center; justify-content: center; transition: all 0.3s ease;">
                        <i class="fas fa-gem" style="margin-right: 0.75rem;"></i>
                        View Services & Rates
                    </a>
                    <a href="/{{modelSlug}}/calendar{{previewParam}}" style="background: transparent; color: {{theme.colors.primary-text}}; padding: 1rem 2rem; border-radius: 12px; font-weight: 600; text-decoration: none; display: flex; align-items: center; justify-content: center; transition: all 0.3s ease; border: 2px solid {{theme.colors.btn-border}};">
                        <i class="fas fa-calendar-alt" style="margin-right: 0.75rem;"></i>
                        Check Availability
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

