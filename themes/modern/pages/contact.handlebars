<!-- Contact Hero Section -->
<section class="modern-hero min-h-96 flex items-center justify-center text-white pt-16" data-aos="fade-in">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
        <div class="modern-badge mb-4">Contact</div>
        <h1 class="text-5xl md:text-6xl font-bold mb-6 modern-heading">
            Get in Touch
        </h1>
        <p class="text-xl md:text-2xl opacity-90 max-w-3xl mx-auto font-light">
            {{content.contactIntro}}
        </p>
    </div>
</section>

<!-- Contact Information & Form -->
<section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="modern-grid modern-grid-2">
            <!-- Contact Information -->
            <div data-aos="fade-right">
                <h2 class="text-3xl font-bold mb-8 modern-heading text-modern-primary">
                    Let's Connect
                </h2>
                
                <div class="space-y-6">
                    {{#if contactEmail}}
                    <div class="modern-card p-6 flex items-center space-x-4">
                        <div class="w-12 h-12 bg-modern-primary rounded-xl flex items-center justify-center">
                            <i class="fas fa-envelope text-white"></i>
                        </div>
                        <div>
                            <h3 class="font-bold text-modern-text modern-mono text-sm">Email</h3>
                            <a href="mailto:{{contactEmail}}" class="text-modern-primary hover:text-modern-secondary transition-colors">
                                {{contactEmail}}
                            </a>
                        </div>
                    </div>
                    {{/if}}
                    
                    {{#if contactPhone}}
                    <div class="modern-card p-6 flex items-center space-x-4">
                        <div class="w-12 h-12 bg-modern-primary rounded-xl flex items-center justify-center">
                            <i class="fas fa-phone text-white"></i>
                        </div>
                        <div>
                            <h3 class="font-bold text-modern-text modern-mono text-sm">Phone</h3>
                            <a href="tel:{{contactPhone}}" class="text-modern-primary hover:text-modern-secondary transition-colors">
                                {{contactPhone}}
                            </a>
                        </div>
                    </div>
                    {{/if}}
                    
                    {{#if location}}
                    <div class="modern-card p-6 flex items-center space-x-4">
                        <div class="w-12 h-12 bg-modern-primary rounded-xl flex items-center justify-center">
                            <i class="fas fa-map-marker-alt text-white"></i>
                        </div>
                        <div>
                            <h3 class="font-bold text-modern-text modern-mono text-sm">Location</h3>
                            <p class="text-modern-muted">{{location}}</p>
                        </div>
                    </div>
                    {{/if}}
                    
                    {{#if workingHours}}
                    <div class="modern-card p-6 flex items-center space-x-4">
                        <div class="w-12 h-12 bg-modern-primary rounded-xl flex items-center justify-center">
                            <i class="fas fa-clock text-white"></i>
                        </div>
                        <div>
                            <h3 class="font-bold text-modern-text modern-mono text-sm">Hours</h3>
                            <p class="text-modern-muted">{{workingHours}}</p>
                        </div>
                    </div>
                    {{/if}}
                </div>
                
                <!-- Social Links -->
                {{#if socialLinks}}
                <div class="mt-12">
                    <h3 class="text-lg font-bold mb-4 modern-heading">Follow Me</h3>
                    <div class="flex space-x-3">
                        {{#each socialLinks}}
                        <a href="{{this.url}}" class="w-12 h-12 bg-modern-primary rounded-xl flex items-center justify-center text-white hover:bg-modern-secondary transition-colors transform hover:scale-105">
                            <i class="fab fa-{{this.icon}}"></i>
                        </a>
                        {{/each}}
                    </div>
                </div>
                {{/if}}
            </div>
            
            <!-- Contact Form -->
            <div data-aos="fade-left">
                <div class="modern-card p-8">
                    <h2 class="text-2xl font-bold mb-6 modern-heading text-modern-primary">
                        Send Message
                    </h2>
                    
                    <form id="modernContactForm" class="space-y-6">
                        <div class="modern-grid modern-grid-2">
                            <div>
                                <label for="firstName" class="block text-sm font-bold text-modern-text mb-2 modern-mono uppercase tracking-wide">
                                    First Name *
                                </label>
                                <input type="text" id="firstName" name="firstName" required
                                       class="w-full px-4 py-3 border border-modern-border rounded-lg focus:ring-2 focus:ring-modern-primary focus:border-transparent transition-all">
                            </div>
                            <div>
                                <label for="lastName" class="block text-sm font-bold text-modern-text mb-2 modern-mono uppercase tracking-wide">
                                    Last Name *
                                </label>
                                <input type="text" id="lastName" name="lastName" required
                                       class="w-full px-4 py-3 border border-modern-border rounded-lg focus:ring-2 focus:ring-modern-primary focus:border-transparent transition-all">
                            </div>
                        </div>
                        
                        <div>
                            <label for="email" class="block text-sm font-bold text-modern-text mb-2 modern-mono uppercase tracking-wide">
                                Email *
                            </label>
                            <input type="email" id="email" name="email" required
                                   class="w-full px-4 py-3 border border-modern-border rounded-lg focus:ring-2 focus:ring-modern-primary focus:border-transparent transition-all">
                        </div>
                        
                        <div>
                            <label for="phone" class="block text-sm font-bold text-modern-text mb-2 modern-mono uppercase tracking-wide">
                                Phone
                            </label>
                            <input type="tel" id="phone" name="phone"
                                   class="w-full px-4 py-3 border border-modern-border rounded-lg focus:ring-2 focus:ring-modern-primary focus:border-transparent transition-all">
                        </div>
                        
                        <div>
                            <label for="subject" class="block text-sm font-bold text-modern-text mb-2 modern-mono uppercase tracking-wide">
                                Subject *
                            </label>
                            <select id="subject" name="subject" required
                                    class="w-full px-4 py-3 border border-modern-border rounded-lg focus:ring-2 focus:ring-modern-primary focus:border-transparent transition-all">
                                <option value="">Select subject</option>
                                <option value="general">General Inquiry</option>
                                <option value="booking">Service Booking</option>
                                <option value="rates">Rates & Pricing</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                        
                        <div>
                            <label for="message" class="block text-sm font-bold text-modern-text mb-2 modern-mono uppercase tracking-wide">
                                Message *
                            </label>
                            <textarea id="message" name="message" rows="5" required
                                      class="w-full px-4 py-3 border border-modern-border rounded-lg focus:ring-2 focus:ring-modern-primary focus:border-transparent transition-all"></textarea>
                        </div>
                        
                        <div>
                            <button type="submit" class="modern-btn w-full">
                                <i class="fas fa-paper-plane mr-2"></i>
                                Send Message
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Response Time -->
<section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16" data-aos="fade-up">
            <div class="modern-badge mb-4">Service</div>
            <h2 class="text-3xl font-bold mb-4 modern-heading text-modern-primary">
                What to Expect
            </h2>
        </div>
        
        <div class="modern-grid modern-grid-3">
            <div class="modern-card p-8 text-center" data-aos="fade-up" data-aos-delay="0">
                <div class="w-16 h-16 mx-auto mb-6 bg-modern-primary rounded-2xl flex items-center justify-center">
                    <i class="fas fa-clock text-2xl text-white"></i>
                </div>
                <h3 class="text-xl font-bold mb-3 modern-heading">Quick Response</h3>
                <p class="text-modern-muted">I respond to all messages within 24 hours</p>
            </div>
            
            <div class="modern-card p-8 text-center" data-aos="fade-up" data-aos-delay="100">
                <div class="w-16 h-16 mx-auto mb-6 bg-modern-primary rounded-2xl flex items-center justify-center">
                    <i class="fas fa-shield-alt text-2xl text-white"></i>
                </div>
                <h3 class="text-xl font-bold mb-3 modern-heading">Confidential</h3>
                <p class="text-modern-muted">All communications are kept strictly private</p>
            </div>
            
            <div class="modern-card p-8 text-center" data-aos="fade-up" data-aos-delay="200">
                <div class="w-16 h-16 mx-auto mb-6 bg-modern-primary rounded-2xl flex items-center justify-center">
                    <i class="fas fa-handshake text-2xl text-white"></i>
                </div>
                <h3 class="text-xl font-bold mb-3 modern-heading">Professional</h3>
                <p class="text-modern-muted">Courteous and professional service always</p>
            </div>
        </div>
    </div>
</section>

