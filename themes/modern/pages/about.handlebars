<!-- Modern Portrait Preview JavaScript -->
<script>
function openModernPortraitPreview(imageUrl, altText) {
    const modal = document.getElementById('modern-portrait-preview-modal');
    const image = document.getElementById('modern-portrait-preview-image');
    const caption = document.getElementById('modern-portrait-preview-caption');
    
    if (modal && image && caption) {
        image.src = imageUrl;
        image.alt = altText;
        caption.textContent = altText;
        
        modal.classList.remove('hidden');
        modal.classList.add('flex');
        
        // Prevent body scroll
        document.body.style.overflow = 'hidden';
        
        // Close on escape key
        document.addEventListener('keydown', handleModernEscapeKey);
        
        // Close on background click
        modal.addEventListener('click', function(e) {
            if (e.target === modal) {
                closeModernPortraitPreview();
            }
        });
    }
}

function closeModernPortraitPreview() {
    const modal = document.getElementById('modern-portrait-preview-modal');
    
    if (modal) {
        modal.classList.add('hidden');
        modal.classList.remove('flex');
        
        // Restore body scroll
        document.body.style.overflow = '';
        
        // Remove event listeners
        document.removeEventListener('keydown', handleModernEscapeKey);
    }
}

function handleModernEscapeKey(e) {
    if (e.key === 'Escape') {
        closeModernPortraitPreview();
    }
}
</script>