<!-- Phase 2.3b: Modern Template About Page - Contemporary Personal Profile -->

<!-- Standardized Modern Hero Section -->
{{#if about_content.page_title_visible}}
<section class="hero-section" style="min-height: 40vh; background: {{theme.colors.hero-bg}}; display: flex; align-items: center; position: relative;">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h1 style="font-size: 3.75rem; font-weight: 800; margin-bottom: 1.5rem; color: {{theme.colors.hero-text}};">
      {{#if about_content.page_title}}{{about_content.page_title}}{{else}}About Me{{/if}}
    </h1>
    {{#if about_content.page_subtitle}}
    <p style="font-size: 1.25rem; color: {{theme.colors.hero-subtext}}; max-width: 42rem; margin: 0 auto;">
      {{about_content.page_subtitle}}
    </p>
    {{else}}
    <p style="font-size: 1.25rem; color: {{theme.colors.hero-subtext}}; max-width: 42rem; margin: 0 auto;">
      Discover my story, interests, and what makes our time together special.
    </p>
    {{/if}}
  </div>
</section>
{{/if}}

<!-- Modern Main About Content -->
<section class="py-20 modern-about-main-section">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-16 items-start">
            <!-- Left Column: Main Content & Services -->
            <div class="modern-about-content-column">
                {{#if about_content.main_content_visible}}
                <div class="modern-content-section" data-aos="fade-right">
                    <div class="space-y-6 text-lg leading-relaxed">
                        {{#if about_content.main_paragraph_1}}
                        <p class="text-xl text-gray-800 modern-paragraph modern-highlight">{{about_content.main_paragraph_1}}</p>
                        {{/if}}
                        
                        {{#if about_content.main_paragraph_2}}
                        <p class="text-gray-700 modern-paragraph">{{about_content.main_paragraph_2}}</p>
                        {{/if}}
                        
                        {{#if about_content.main_paragraph_3}}
                        <p class="text-gray-700 modern-paragraph">{{about_content.main_paragraph_3}}</p>
                        {{/if}}
                        
                        {{#if about_content.main_paragraph_4}}
                        <p class="text-gray-700 modern-paragraph">{{about_content.main_paragraph_4}}</p>
                        {{/if}}
                        
                        {{#unless about_content.main_paragraph_1}}
                        <p class="text-xl text-gray-800 modern-paragraph modern-highlight">Welcome to a world where contemporary elegance meets professional excellence. I specialize in creating sophisticated experiences that blend modern sensibilities with timeless grace.</p>
                        <p class="text-gray-700 modern-paragraph">With a focus on genuine connection and attention to detail, I provide companionship services that cater to the discerning individual who appreciates quality and discretion.</p>
                        {{/unless}}
                    </div>
                </div>
                {{/if}}
                
                {{#if about_content.services_visible}}
                <div class="mt-12" data-aos="fade-right" data-aos-delay="200">
                    <div style="background: white;
                                border-radius: 12px;
                                border: 1px solid #e2e8f0;
                                box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
                                padding: 1.5rem;">
                        <div style="display: flex; align-items: center; margin-bottom: 1rem;">
                            <i class="fas fa-star" style="color: #2563eb; margin-right: 0.5rem;"></i>
                            <h3 style="font-size: 1.125rem; font-weight: 600; margin: 0;">
                                {{#if about_content.services_title}}{{about_content.services_title}}{{else}}My Services{{/if}}
                            </h3>
                        </div>
                        <ul style="list-style: none; margin: 0; padding: 0;">
                            {{#if about_content.service_1}}<li style="display: flex; align-items: center; margin: 0.5rem 0;"><i class="fas fa-check" style="color: #10b981; margin-right: 0.5rem;"></i>{{about_content.service_1}}</li>{{/if}}
                            {{#if about_content.service_2}}<li style="display: flex; align-items: center; margin: 0.5rem 0;"><i class="fas fa-check" style="color: #10b981; margin-right: 0.5rem;"></i>{{about_content.service_2}}</li>{{/if}}
                            {{#if about_content.service_3}}<li style="display: flex; align-items: center; margin: 0.5rem 0;"><i class="fas fa-check" style="color: #10b981; margin-right: 0.5rem;"></i>{{about_content.service_3}}</li>{{/if}}
                            {{#if about_content.service_4}}<li style="display: flex; align-items: center; margin: 0.5rem 0;"><i class="fas fa-check" style="color: #10b981; margin-right: 0.5rem;"></i>{{about_content.service_4}}</li>{{/if}}
                            {{#if about_content.service_5}}<li style="display: flex; align-items: center; margin: 0.5rem 0;"><i class="fas fa-check" style="color: #10b981; margin-right: 0.5rem;"></i>{{about_content.service_5}}</li>{{/if}}
                            {{#if about_content.service_6}}<li style="display: flex; align-items: center; margin: 0.5rem 0;"><i class="fas fa-check" style="color: #10b981; margin-right: 0.5rem;"></i>{{about_content.service_6}}</li>{{/if}}
                        </ul>
                    </div>
                </div>
                {{/if}}
                
                {{#if about_content.interests_visible}}
                {{#if about_content.interests}}
                <div class="mt-12" data-aos="fade-right" data-aos-delay="400">
                    <div style="background: white;
                                border-radius: 12px;
                                border: 1px solid #e2e8f0;
                                box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
                                padding: 1.5rem;
                                position: relative;
                                overflow: hidden;">
                        
                        <!-- Top Accent Border -->
                        <div style="position: absolute;
                                    top: 0;
                                    left: 0;
                                    right: 0;
                                    height: 4px;
                                    background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);"></div>
                        
                        <!-- Card Header -->
                        <div style="margin-bottom: 1rem;
                                    padding-bottom: 1rem;
                                    border-bottom: 1px solid #f1f5f9;">
                            <div style="display: inline-flex;
                                        align-items: center;
                                        justify-content: center;
                                        width: 48px;
                                        height: 48px;
                                        background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
                                        color: white;
                                        border-radius: 12px;
                                        margin-bottom: 1rem;
                                        font-size: 1.25rem;">
                                <i class="fas fa-heart"></i>
                            </div>
                            <h3 style="font-size: 1.25rem;
                                       font-weight: 700;
                                       color: #0f172a;
                                       margin: 0;
                                       line-height: 1.4;">
                                {{#if about_content.interests_title}}{{about_content.interests_title}}{{else}}My Interests{{/if}}
                            </h3>
                        </div>
                        
                        <!-- Interests Badges -->
                        <div style="display: flex; flex-wrap: wrap; gap: 0.5rem;">
                            {{#each (split about_content.interests ',')}}
                            <span style="background: {{theme.colors.primary}}; color: {{theme.colors.primary-text}}; padding: 0.5rem 1rem; border-radius: 9999px; font-size: 0.875rem; font-weight: 500;">
                                {{trim this}}
                            </span>
                            {{/each}}
                        </div>
                    </div>
                </div>
                {{/if}}
                {{/if}}
            </div>
            
            <!-- Right Column: Portrait, Quick Facts, CTA -->
            <div class="modern-about-sidebar">
                <!-- Modern Portrait Card -->
                {{#if about_content.portrait_visible}}
                <div class="modern-portrait-section" data-aos="fade-left">
                    <div class="modern-portrait-card-large" onclick="openModernPortraitPreview('{{about_content.portrait_image_url}}', '{{#if about_content.portrait_alt}}{{about_content.portrait_alt}}{{else}}Professional Portrait{{/if}}')">
                        <div class="modern-portrait-gradient-overlay"></div>
                        <img src="{{about_content.portrait_image_url}}" 
                             alt="{{#if about_content.portrait_alt}}{{about_content.portrait_alt}}{{else}}Professional Portrait{{/if}}"
                             loading="lazy"
                             class="modern-portrait-image-large">
                        
                        <!-- Modern Hover Effect -->
                        <div class="modern-portrait-hover-overlay">
                            <div class="modern-portrait-zoom-icon">
                                <i class="fas fa-expand-alt"></i>
                            </div>
                            <div class="modern-portrait-hint">Click to preview</div>
                        </div>
                    </div>
                </div>
                {{else}}
                <div class="modern-portrait-section" data-aos="fade-left">
                    <div class="modern-portrait-placeholder-large">
                        <div class="modern-portrait-placeholder-icon">
                            <i class="fas fa-user"></i>
                        </div>
                        <p class="modern-portrait-placeholder-text">Professional portrait coming soon</p>
                    </div>
                </div>
                {{/if}}
                
                <!-- Modern Quick Facts -->
                {{#if about_content.quick_facts_visible}}
                <div class="modern-quick-facts-section mt-8" data-aos="fade-left" data-aos-delay="200">
                    <div class="modern-quick-facts-card">
                        <div class="modern-quick-facts-header">
                            <div class="modern-quick-facts-badge">Personal Details</div>
                            <h3 class="modern-quick-facts-title">
                                {{#if about_content.quick_facts_title}}{{about_content.quick_facts_title}}{{else}}Quick Facts{{/if}}
                            </h3>
                        </div>
                        
                        <div class="modern-quick-facts-grid">
                            {{#if about_content.quickFacts}}
                            {{#each about_content.quickFacts}}
                            <div class="modern-quick-fact-item">
                                <div class="modern-quick-fact-label">{{this.question}}</div>
                                <div class="modern-quick-fact-value">{{this.answer}}</div>
                            </div>
                            {{/each}}
                            {{else}}
                            <!-- Individual Quick Facts Fields -->
                            {{#if about_content.qf_location}}
                            <div class="modern-quick-fact-item">
                                <div class="modern-quick-fact-label">Location</div>
                                <div class="modern-quick-fact-value">{{about_content.qf_location}}</div>
                            </div>
                            {{/if}}
                            {{#if about_content.qf_languages}}
                            <div class="modern-quick-fact-item">
                                <div class="modern-quick-fact-label">Languages</div>
                                <div class="modern-quick-fact-value">{{about_content.qf_languages}}</div>
                            </div>
                            {{/if}}
                            {{#if about_content.qf_education}}
                            <div class="modern-quick-fact-item">
                                <div class="modern-quick-fact-label">Education</div>
                                <div class="modern-quick-fact-value">{{about_content.qf_education}}</div>
                            </div>
                            {{/if}}
                            {{#if about_content.qf_specialties}}
                            <div class="modern-quick-fact-item">
                                <div class="modern-quick-fact-label">Specialties</div>
                                <div class="modern-quick-fact-value">{{about_content.qf_specialties}}</div>
                            </div>
                            {{/if}}
                            {{/if}}
                        </div>
                    </div>
                </div>
                {{/if}}
                
                <!-- Modern CTA Section -->
                <div class="modern-cta-section mt-8" data-aos="fade-left" data-aos-delay="400">
                    <div class="modern-cta-card-simple">
                        <div class="modern-cta-content-simple">
                            <h3 class="modern-cta-title-simple">
                                {{#if about_content.cta_title}}{{about_content.cta_title}}{{else}}Ready to Connect?{{/if}}
                            </h3>
                            <p class="modern-cta-description-simple">
                                {{#if about_content.cta_description}}{{about_content.cta_description}}{{else}}I would love to hear from you and discuss how we can create an unforgettable experience together.{{/if}}
                            </p>
                            
                            <div class="modern-cta-buttons">
                                <a href="/{{model.slug}}/{{#if about_content.cta_button_1_link}}{{about_content.cta_button_1_link}}{{else}}calendar{{/if}}{{previewParam}}" 
                                   class="modern-cta-btn-primary">
                                   <i class="fas fa-calendar-alt mr-3"></i>
                                   {{#if about_content.cta_button_1_text}}{{about_content.cta_button_1_text}}{{else}}View My Calendar{{/if}}
                                </a>
                                <a href="/{{model.slug}}/{{#if about_content.cta_button_2_link}}{{about_content.cta_button_2_link}}{{else}}contact{{/if}}{{previewParam}}" 
                                   class="modern-cta-btn-outline">
                                   <i class="fas fa-envelope mr-3"></i>
                                   {{#if about_content.cta_button_2_text}}{{about_content.cta_button_2_text}}{{else}}Contact Me{{/if}}
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Modern Additional Content Section -->
{{#if about_content.additional_content_visible}}
<section class="py-16 modern-additional-content-section">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="modern-additional-content-card" data-aos="fade-up">
            <div class="modern-additional-background-gradient"></div>
            <div class="modern-additional-content">
                <div class="modern-additional-badge">Additional Information</div>
                {{#if about_content.additional_title}}
                <h3 class="modern-additional-title">{{about_content.additional_title}}</h3>
                {{/if}}
                {{#if about_content.additional_description}}
                <div class="modern-additional-text">
                    <p>{{about_content.additional_description}}</p>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</section>
{{/if}}

<!-- Modern Portrait Preview Modal -->
<div id="modern-portrait-preview-modal" class="fixed inset-0 bg-black bg-opacity-95 z-50 hidden flex items-center justify-center p-4">
    <div class="relative max-w-6xl max-h-full">
        <!-- Modern Close Button -->
        <button onclick="closeModernPortraitPreview()" 
                class="absolute -top-12 right-0 modern-btn-close">
            <i class="fas fa-times text-xl"></i>
        </button>
        
        <!-- Image Container -->
        <div class="relative">
            <img id="modern-portrait-preview-image" 
                 src="" 
                 alt="" 
                 class="max-w-full max-h-full object-contain rounded-lg shadow-2xl">
        </div>
        
        <!-- Modern Caption -->
        <div class="absolute bottom-4 left-4 right-4 modern-portrait-caption">
            <p id="modern-portrait-preview-caption" class="text-center modern-caption-text"></p>
        </div>
    </div>
</div>

<!-- Modern About Page Styling -->
