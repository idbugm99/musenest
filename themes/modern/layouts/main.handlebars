<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{pageTitle}} - {{siteName}}</title>
    <meta name="description" content="{{metaDescription}}">
    <meta name="og:title" content="{{pageTitle}} - {{siteName}}">
    <meta name="og:description" content="{{metaDescription}}">
    <meta name="og:type" content="website">
    {{#if ogImage}}
    <meta name="og:image" content="{{ogImage}}">
    {{/if}}
    
    <!-- Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <!-- Universal Icon System -->
    <link rel="stylesheet" href="/templates/universal/universal-icons.css">
    
    <!-- Google Fonts - Modern Typography -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=JetBrains+Mono:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- AOS Animation Library -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    
    <!-- Universal Page System CSS -->
    <link rel="stylesheet" href="/templates/universal/universal-page-styles.css">
    <link rel="stylesheet" href="/templates/universal/universal-hero-styles.css">
    
    <!-- Modern Theme Override CSS -->
    <link rel="stylesheet" href="/themes/modern/styles/modern-theme-overrides.css">
    
    <style>
        :root {
            /* Modern Contemporary Color Palette - Dynamic Database Colors */
            --modern-primary: {{theme.colors.background}};          /* Primary from database */
            --modern-secondary: {{theme.colors.surface}};           /* Secondary from database */
            --modern-accent: {{theme.colors.accent}};               /* Accent from database */
            --modern-text: {{theme.colors.text-light}};             /* Text from database */
            --modern-background: {{theme.colors.bg-light}};         /* Background from database */
            --modern-surface: {{theme.colors.card-bg}};             /* Surface from database */
            --modern-border: {{theme.colors.border-light}};         /* Border from database */
            --modern-muted: {{theme.colors.text}};                  /* Muted from database */
            
            /* Universal Theme Variables - Modern Contemporary */
            --theme-bg-primary: {{theme.colors.background}};        /* Clean background */
            --theme-bg-secondary: {{theme.colors.surface}};         /* Secondary background */
            --theme-bg-tertiary: {{theme.colors.card-bg}};          /* Card backgrounds */
            --theme-bg-light: {{theme.colors.bg-light}};            /* Lighter elements */
            --theme-bg-surface: {{theme.colors.surface}};           /* Surface elements */
            
            --theme-text-primary: {{theme.colors.text-light}};      /* Primary text */
            --theme-text-secondary: {{theme.colors.text}};          /* Secondary text */
            --theme-text-muted: {{theme.colors.disabled-text}};     /* Muted text */
            --theme-text-subtle: {{theme.colors.disabled-text}};    /* Subtle text */
            --theme-text-inverted: {{theme.colors.text-dark}};      /* Inverted text */
            
            --theme-border-primary: {{theme.colors.border-dark}};   /* Primary borders */
            --theme-border-light: {{theme.colors.border-light}};    /* Light borders */
            --theme-border-subtle: {{theme.colors.divider}};        /* Subtle borders */
            
            --theme-accent: {{theme.colors.accent}};                /* Accent color */
            --theme-accent-hover: {{theme.colors.btn-bg-hover}};    /* Accent hover */
            --theme-accent-light: {{theme.colors.link-hover}};      /* Light accent */
            --theme-success: {{theme.colors.success}};              /* Success color */
            --theme-warning: {{theme.colors.warning}};              /* Warning color */
            --theme-error: {{theme.colors.danger}};                 /* Error color */
        }
        
        /* Modern Contemporary Typography */
        .modern-heading {
            font-family: 'Inter', sans-serif;
            font-weight: 700;
            letter-spacing: -0.02em;
            line-height: 1.2;
        }
        
        .modern-mono {
            font-family: 'JetBrains Mono', monospace;
            font-weight: 500;
        }
        
        body {
            font-family: 'Inter', sans-serif;
            background-color: {{theme.colors.background}};
            color: {{theme.colors.text-light}};
            line-height: 1.7;
            font-weight: 400;
            padding-top: 64px; /* Height of modern navigation (h-16 = 64px) */
        }
        
        /* Enhanced Typography Hierarchy */
        h1, .text-5xl, .text-7xl {
            font-family: 'Inter', sans-serif;
            font-weight: 800;
            letter-spacing: -0.025em;
            line-height: 1.1;
        }
        
        h2, .text-4xl {
            font-family: 'Inter', sans-serif;
            font-weight: 700;
            letter-spacing: -0.02em;
            line-height: 1.2;
        }
        
        h3, .text-2xl {
            font-family: 'Inter', sans-serif;
            font-weight: 600;
            letter-spacing: -0.01em;
            line-height: 1.3;
        }
        
        p, .text-lg {
            line-height: 1.8;
            font-weight: 400;
        }
        
        /* Modern Contemporary Card Styling */
        .modern-card {
            background: {{theme.colors.card-bg}};
            border-radius: 12px;
            border: 1px solid {{theme.colors.border-light}};
            box-shadow: 0 2px 8px {{theme.colors.card-shadow}};
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }
        
        .modern-card:hover {
            box-shadow: 0 8px 20px {{theme.colors.card-shadow}};
            transform: translateY(-3px);
        }
        
        .modern-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 2px;
            background: linear-gradient(90deg, {{theme.colors.background}}, {{theme.colors.accent}});
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }
        
        .modern-card:hover::before {
            transform: scaleX(1);
        }
        
        /* Modern Contemporary Button Styling */
        .modern-btn {
            background: {{theme.colors.accent}};
            color: {{theme.colors.text-light}};
            padding: 14px 28px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 14px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            border: none;
            cursor: pointer;
            letter-spacing: 0.025em;
            position: relative;
            overflow: hidden;
        }
        
        .modern-btn::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            background: {{theme.colors.backdrop}};
            border-radius: 50%;
            transform: translate(-50%, -50%);
            transition: width 0.3s, height 0.3s;
        }
        
        .modern-btn:hover::before {
            width: 300px;
            height: 300px;
        }
        
        .modern-btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px {{theme.colors.card-shadow}};
        }
        
        .modern-btn-outline {
            background: transparent;
            color: {{theme.colors.accent}};
            border: 2px solid {{theme.colors.accent}};
            padding: 10px 22px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 14px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .modern-btn-outline:hover {
            background: {{theme.colors.accent}};
            color: {{theme.colors.text-light}};
            transform: translateY(-1px);
            box-shadow: 0 4px 12px {{theme.colors.card-shadow}};
        }
        
        /* Modern Navigation */
        .modern-nav {
            background: {{theme.colors.nav-bg}};
            backdrop-filter: blur(20px);
            border-bottom: 1px solid {{theme.colors.nav-border}};
            box-shadow: 0 1px 3px {{theme.colors.card-shadow}};
        }
        
        .modern-nav .nav-link {
            font-weight: 500;
            color: {{theme.colors.nav-text}};
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-size: 13px;
            transition: all 0.2s ease;
            position: relative;
            padding: 8px 16px;
            border-radius: 6px;
        }
        
        .modern-nav .nav-link::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 0;
            height: 2px;
            background: {{theme.colors.accent}};
            transition: width 0.3s ease;
        }
        
        .modern-nav .nav-link:hover::after,
        .modern-nav .nav-link.active::after {
            width: 100%;
        }
        
        .modern-nav .nav-link:hover,
        .modern-nav .nav-link.active {
            color: {{theme.colors.accent}};
            background: {{theme.colors.overlay}};
        }
        
        /* Modern Brand */
        .modern-brand {
            font-family: 'Inter', sans-serif;
            font-weight: 900;
            font-size: 24px;
            color: {{theme.colors.accent}};
            text-decoration: none;
            letter-spacing: -0.02em;
        }
        
        /* Hero Section Styling */
        .modern-hero {
            background: {{theme.colors.hero-bg}};
            position: relative;
            overflow: hidden;
        }
        
        .modern-hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="modern-grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="0.5"/></pattern></defs><rect width="100" height="100" fill="url(%23modern-grid)"/></svg>');
            opacity: 0.3;
        }
        
        /* Modern Hero Canvas with Custom Background Support */
        .modern-hero-canvas {
            background: {{theme.colors.hero-bg}};
            position: relative;
            overflow: hidden;
        }
        
        .modern-hero-custom-bg {
            background-size: cover !important;
            background-position: center center !important;
            background-attachment: fixed !important;
            background-repeat: no-repeat !important;
        }
        
        /* Modern Contemporary Grid System */
        .modern-grid {
            display: grid;
            gap: 2.5rem;
        }
        
        .modern-grid-2 {
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        }
        
        .modern-grid-3 {
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        }
        
        .modern-grid-4 {
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        }
        
        /* Enhanced Spacing System */
        .modern-section-padding {
            padding: 5rem 0;
        }
        
        .modern-container-spacing {
            padding-left: 1.5rem;
            padding-right: 1.5rem;
        }
        
        @media (min-width: 768px) {
            .modern-container-spacing {
                padding-left: 2rem;
                padding-right: 2rem;
            }
            
            .modern-section-padding {
                padding: 6rem 0;
            }
        }
        
        @media (min-width: 1024px) {
            .modern-container-spacing {
                padding-left: 2.5rem;
                padding-right: 2.5rem;
            }
            
            .modern-section-padding {
                padding: 7rem 0;
            }
        }
        
        /* Modern Contemporary Animations */
        @keyframes modernSlide {
            0% { transform: translateX(-100%); opacity: 0; }
            100% { transform: translateX(0); opacity: 1; }
        }
        
        @keyframes modernFade {
            0% { opacity: 0; transform: translateY(30px); }
            100% { opacity: 1; transform: translateY(0); }
        }
        
        @keyframes modernScale {
            0% { opacity: 0; transform: scale(0.9); }
            100% { opacity: 1; transform: scale(1); }
        }
        
        @keyframes modernPulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.7; }
        }
        
        @keyframes modernBounce {
            0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
            40% { transform: translateY(-8px); }
            60% { transform: translateY(-4px); }
        }
        
        .modern-slide {
            animation: modernSlide 0.8s cubic-bezier(0.4, 0, 0.2, 1);
        }
        
        .modern-fade {
            animation: modernFade 0.6s cubic-bezier(0.4, 0, 0.2, 1);
        }
        
        .modern-scale {
            animation: modernScale 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        }
        
        /* Interactive Element Styles */
        .modern-interactive {
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }
        
        .modern-interactive:hover {
            transform: translateY(-2px);
        }
        
        .modern-pulse {
            animation: modernPulse 2s infinite;
        }
        
        .modern-hover-lift:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 25px {{theme.colors.card-shadow}};
        }
        
        /* Focus States for Accessibility */
        .modern-btn:focus,
        .modern-interactive:focus {
            outline: 2px solid {{theme.colors.focus-ring}};
            outline-offset: 2px;
        }
        
        /* Modern Utilities */
        .modern-divider {
            height: 1px;
            background: linear-gradient(90deg, transparent, {{theme.colors.divider}}, transparent);
            margin: 2rem 0;
        }
        
        .modern-badge {
            background: {{theme.colors.accent}};
            color: {{theme.colors.text-light}};
            padding: 4px 12px;
            border-radius: 999px;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        /* Responsive Design */
        @media (max-width: 768px) {
            .modern-heading {
                font-size: 2rem;
            }
            
            .modern-card {
                border-radius: 12px;
            }
            
            .modern-btn {
                padding: 10px 20px;
                font-size: 13px;
            }
        }
        
        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 6px;
        }
        
        ::-webkit-scrollbar-track {
            background: {{theme.colors.border-light}};
        }
        
        ::-webkit-scrollbar-thumb {
            background: {{theme.colors.accent}};
            border-radius: 3px;
        }
        
        ::-webkit-scrollbar-thumb:hover {
            background: {{theme.colors.btn-bg-hover}};
        }
        
        /* Universal Theme Utility Classes */
        /* Background Classes */
        .theme-bg-primary { background-color: var(--theme-bg-primary) !important; }
        .theme-bg-secondary { background-color: var(--theme-bg-secondary) !important; }
        .theme-bg-tertiary { background-color: var(--theme-bg-tertiary) !important; }
        .theme-bg-light { background-color: var(--theme-bg-light) !important; }
        
        /* Text Color Classes */
        .theme-text-primary { color: var(--theme-text-primary) !important; }
        .theme-text-secondary { color: var(--theme-text-secondary) !important; }
        .theme-text-muted { color: var(--theme-text-muted) !important; }
        .theme-text-subtle { color: var(--theme-text-subtle) !important; }
        
        /* Border Classes */
        .theme-border-primary { border-color: var(--theme-border-primary) !important; }
        .theme-border-light { border-color: var(--theme-border-light) !important; }
        
        /* Accent Classes */
        .theme-accent { color: var(--theme-accent) !important; }
        .theme-accent-bg { background-color: var(--theme-accent) !important; }
        .theme-accent-border { border-color: var(--theme-accent) !important; }
        
        /* Semantic Component Classes */
        .theme-card {
            background-color: var(--theme-bg-tertiary);
            color: var(--theme-text-primary);
            border: 1px solid var(--theme-border-light);
            border-radius: 12px;
            box-shadow: 0 10px 30px {{theme.colors.card-shadow}};
            transition: all 0.3s ease;
        }
        
        .theme-card:hover {
            box-shadow: 0 20px 40px {{theme.colors.card-shadow}};
            transform: translateY(-2px);
        }
        
        .theme-section {
            background-color: var(--theme-bg-primary);
            color: var(--theme-text-primary);
        }
        
        .theme-section-alt {
            background-color: var(--theme-bg-secondary);
            color: var(--theme-text-primary);
        }
        
        .theme-header {
            color: var(--theme-text-primary);
            font-weight: bold;
        }
        
        .theme-body-text {
            color: var(--theme-text-secondary);
        }
        
        .theme-muted-text {
            color: var(--theme-text-muted);
        }
        
        .theme-subtle-text {
            color: var(--theme-text-subtle);
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    {{> navigation}}
    
    <!-- Theme Preview Banner -->
    {{#if theme.isPreview}}
    <div class="bg-blue-600 text-white py-2 px-4 text-center text-sm font-medium">
        <i class="fas fa-eye me-2"></i>You are previewing the <strong>{{theme.previewThemeName}}</strong> theme. This is not your active theme.
    </div>
    {{/if}}
    
    <!-- Main Content -->
    <main>
        {{{body}}}
    </main>
    
    <!-- Footer -->
    {{> footer}}
    
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    
    <script>
        // Initialize AOS
        AOS.init({
            duration: 600,
            easing: 'ease-out',
            once: true,
            offset: 50
        });
        
        // Modern scroll effects with performance optimization
        let ticking = false;
        
        function updateNavigation() {
            const nav = document.querySelector('.modern-nav');
            if (nav) {
                if (window.scrollY > 50) {
                    nav.style.background = '{{theme.colors.nav-bg}}';
                    nav.style.boxShadow = '0 4px 12px {{theme.colors.card-shadow}}';
                } else {
                    nav.style.background = '{{theme.colors.nav-bg}}';
                    nav.style.boxShadow = '0 1px 3px {{theme.colors.card-shadow}}';
                }
            }
            ticking = false;
        }
        
        window.addEventListener('scroll', function() {
            if (!ticking) {
                requestAnimationFrame(updateNavigation);
                ticking = true;
            }
        });
        
        // Enhanced button effects with ripple
        document.querySelectorAll('.modern-btn, .modern-interactive').forEach(btn => {
            btn.addEventListener('click', function(e) {
                // Create ripple effect
                let ripple = document.createElement('span');
                ripple.style.cssText = `
                    position: absolute;
                    border-radius: 50%;
                    background: {{theme.colors.backdrop}};
                    transform: scale(0);
                    animation: ripple-animation 0.6s linear;
                    pointer-events: none;
                `;
                
                this.style.position = 'relative';
                this.style.overflow = 'hidden';
                
                let rect = this.getBoundingClientRect();
                let size = Math.max(rect.width, rect.height);
                ripple.style.width = ripple.style.height = size + 'px';
                ripple.style.left = (e.clientX - rect.left - size / 2) + 'px';
                ripple.style.top = (e.clientY - rect.top - size / 2) + 'px';
                
                this.appendChild(ripple);
                
                setTimeout(() => {
                    if (ripple.parentNode) {
                        ripple.remove();
                    }
                }, 600);
            });
        });
        
        // Add ripple keyframe animation
        const rippleStyle = document.createElement('style');
        rippleStyle.textContent = `
            @keyframes ripple-animation {
                to {
                    transform: scale(2);
                    opacity: 0;
                }
            }
        `;
        document.head.appendChild(rippleStyle);
        
        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
        
        // Enhanced intersection observer for modern animations
        const observerOptions = {
            threshold: 0.15,
            rootMargin: '0px 0px -100px 0px'
        };
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    // Add staggered animation delays
                    const delay = Array.from(entry.target.parentNode.children).indexOf(entry.target) * 150;
                    setTimeout(() => {
                        entry.target.classList.add('modern-fade');
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }, delay);
                }
            });
        }, observerOptions);
        
        // Initialize elements for animation
        document.querySelectorAll('.modern-card, .modern-gallery-card, .modern-service-card, .modern-testimonial-card, .modern-travel-card').forEach(element => {
            element.style.opacity = '0';
            element.style.transform = 'translateY(30px)';
            element.style.transition = 'opacity 0.6s cubic-bezier(0.4, 0, 0.2, 1), transform 0.6s cubic-bezier(0.4, 0, 0.2, 1)';
            observer.observe(element);
        });
        
        // Add hover effects for interactive elements
        document.querySelectorAll('.modern-card, .modern-gallery-card, .modern-service-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-6px)';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });
    </script>
</body>
</html>