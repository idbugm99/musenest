                            {{else}}{{#if this.isMostPopular}}
                            <span class="rose-popular-badge">{{#if ../rates_content.rates_highlight_badge_text}}{{../rates_content.rates_highlight_badge_text}}{{else}}Popular{{/if}}</span>
                            {{/if}}{{/if}}
                            {{/if}}
                        </div>
                        <div class="rose-rate-price">${{this.price}}</div>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/if}}
            
            <!-- Outcall Services -->
            {{#if rates_content.rates_outcall_visible}}
            <div class="rose-service-card rose-outcall-card" data-aos="fade-up" data-aos-delay="200">
                <div class="rose-card-header">
                    <h3 class="rose-service-title">Outcall Services</h3>
                    <div class="rose-service-accent"></div>
                </div>
                
                <div class="rose-service-content">
                    {{#each rates.outcall}}
                    <div class="rose-rate-row">
                        <div class="rose-rate-info">
                            <div class="rose-service-name">{{#if this.serviceName}}{{this.serviceName}}{{else}}{{this.duration}}{{/if}}</div>
                            {{#if this.serviceName}}
                            <div class="rose-service-duration">{{this.duration}}</div>
