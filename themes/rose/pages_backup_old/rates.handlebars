                        <div class="rose-payment-item">Payment required at the beginning of our time together</div>
                        <div class="rose-payment-item">All transactions are handled with complete discretion</div>
                        {{/if}}
                    </div>
                </div>
            </div>
            {{/if}}
            
            <!-- Terms & Conditions -->
            {{#if rates_content.terms_visible}}
            <div class="rose-accordion-item" data-aos="fade-up" data-aos-delay="400">
                <button class="rose-accordion-header" onclick="toggleRoseAccordion(this)">
                    <h3 class="rose-accordion-title">
                        {{#if rates_content.terms_title}}{{rates_content.terms_title}}{{else}}Terms & Conditions{{/if}}
