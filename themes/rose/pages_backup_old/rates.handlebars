            <h2 class="rose-section-title">{{rates_content.table_title}}</h2>
            {{#if rates_content.table_description}}
            <p class="rose-section-description">{{rates_content.table_description}}</p>
            {{/if}}
            <div class="rose-title-accent"></div>
        </div>
        {{/if}}
        <div class="grid lg:grid-cols-2 gap-8">
            
            <!-- Incall Services -->
