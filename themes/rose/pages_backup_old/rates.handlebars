<!-- Rose Elegance Rates Page Custom Styles -->
<style>
/* Import Google Fonts */
@import url('https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;0,800;0,900;1,400;1,500;1,600&family=Montserrat:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600&display=swap');

/* Rose Elegance Refined Color Palette */
:root {
    /* Rose palette tokens */
    --rose-100: #fdecef;
    --rose-200: #f9d4db;
    --rose-300: #e9a8b5;
    --rose-500: #b23a50;  /* primary rose */
    --rose-600: #8f2e40;  /* headings, strong accents */
    
    /* Gold accents */
    --gold-400: #d9b36c;  /* price highlights, dividers */
    
    /* Neutral ink colors */
    --ink-900: #1d1a1b;   /* body text */
    --ink-700: #3b3336;   /* secondary text */
    
    /* Background colors */
    --card-bg: #ffffff;   
    --panel-bg: #f7f3f4; 
    --page-bg: #fff9fb;
    
    /* Legacy compatibility */
    --rose-deep-crimson: var(--rose-600);
    --rose-gold: var(--gold-400);
    --rose-blush: var(--rose-200);
    --rose-cream: var(--rose-100);
    --rose-charcoal: var(--ink-900);
    --rose-elegant-gray: var(--ink-700);
}

/* Rose Elegance Typography */
.rose-elegant-title,
.rose-section-title,
.rose-service-title,
.rose-cta-title,
.rose-footer-title,
.rose-accordion-title,
.rose-extended-title {
    font-family: 'Playfair Display', serif;
    font-weight: 700;
    color: var(--rose-deep-crimson);
}

.rose-elegant-subtitle,
.rose-section-description,
.rose-service-duration,
.rose-cta-description,
.rose-footer-description {
    font-family: 'Montserrat', sans-serif;
    color: var(--rose-elegant-gray);
}

/* Refined Elegant Header */
.rose-elegant-header {
    position: relative;
    padding: 6rem 0 4rem;
    background: linear-gradient(135deg, var(--page-bg) 0%, var(--rose-100) 100%);
    overflow: hidden;
}

.rose-elegant-header::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 60%;
    background: linear-gradient(transparent, var(--page-bg) 60%);
    pointer-events: none;
    z-index: 1;
}

.rose-watermark-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" opacity="0.03"><text x="50" y="50" font-family="serif" font-size="60" text-anchor="middle" dominant-baseline="middle" fill="%238f2e40">ðŸŒ¹</text></svg>') repeat;
    background-size: 300px 300px;
    pointer-events: none;
}

.rose-header-ornament {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 2rem;
}

.rose-ornament-line {
    width: 60px;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--rose-gold), transparent);
}

.rose-ornament-center {
    font-size: 1.5rem;
    filter: grayscale(50%) opacity(80%);
}

.rose-elegant-title {
    font-size: 3.5rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 1.5rem;
    letter-spacing: 0.5px;
    line-height: 1.25;
    position: relative;
    z-index: 2;
}

.rose-elegant-subtitle {
    font-size: 1.2rem;
    text-align: center;
    max-width: 600px;
    margin: 0 auto 2rem;
    line-height: 1.6;
    font-style: italic;
    color: var(--ink-700) !important;
    position: relative;
    z-index: 2;
}

.rose-header-accent {
    width: 100px;
    height: 2px;
    background: var(--rose-gold);
    margin: 2rem auto 0;
    border-radius: 1px;
}

/* Navigation - Force visibility */
nav.rose-elegant-nav,
.rose-elegant-nav {
    position: sticky !important;
    top: 0 !important;
    z-index: 50 !important;
    background: rgba(255, 255, 255, 0.98) !important;
    backdrop-filter: blur(15px) !important;
    border-bottom: 1px solid rgba(178, 58, 80, 0.15) !important;
    padding: 1rem 0 !important;
    box-shadow: 0 2px 10px rgba(178, 58, 80, 0.05) !important;
}

.rose-nav-container {
    display: flex !important;
    justify-content: center !important;
    gap: 2.5rem !important;
    flex-wrap: wrap !important;
}

.rose-nav-link {
    font-family: 'Montserrat', sans-serif !important;
    font-weight: 500 !important;
    font-size: 0.9rem !important;
    text-transform: uppercase !important;
    letter-spacing: 1px !important;
    color: var(--ink-900) !important;
    text-decoration: none !important;
    padding: 8px 16px !important;
    border-radius: 20px !important;
    border: 1px solid transparent !important;
    transition: all 0.3s ease !important;
    position: relative !important;
    display: inline-block !important;
}

/* Navigation link overrides - ensure visibility */
nav .rose-nav-link,
