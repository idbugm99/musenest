<script>
// Accordion functionality
function toggleRoseAccordion(header) {
    const accordionItem = header.parentElement;
    const content = accordionItem.querySelector('.rose-accordion-content');
    const icon = header.querySelector('.rose-accordion-icon');
    
    // Toggle active state
    accordionItem.classList.toggle('active');
    
    // Update icon
    if (accordionItem.classList.contains('active')) {
        icon.textContent = 'Ã—';
        content.style.maxHeight = content.scrollHeight + 'px';
    } else {
        icon.textContent = '+';
        content.style.maxHeight = '0';
    }
}

// Navigation and smooth scrolling
document.addEventListener('DOMContentLoaded', function() {
    const nav = document.getElementById('rose-nav');
    const navLinks = document.querySelectorAll('.rose-nav-link');
    const sections = document.querySelectorAll('section[id]');
    
    // Smooth scrolling for navigation links
    navLinks.forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            
            const targetId = this.getAttribute('href').substring(1);
            const targetSection = document.getElementById(targetId);
            
            if (targetSection) {
                const navHeight = nav.offsetHeight;
                const targetPosition = targetSection.offsetTop - navHeight - 20;
                
                window.scrollTo({
                    top: targetPosition,
                    behavior: 'smooth'
                });
                
                // Update active nav link
                navLinks.forEach(nl => nl.classList.remove('active'));
                this.classList.add('active');
            }
        });
    });
    
    // Update active nav link on scroll
    const scrollObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                const targetId = entry.target.id;
                navLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('href') === `#${targetId}`) {
                        link.classList.add('active');
                    }
                });
            }
        });
    }, {
        rootMargin: '-20% 0px -70% 0px'
    });
    
    // Observe all sections for active nav highlighting
    sections.forEach(section => {
        scrollObserver.observe(section);
    });
    
    // Rose theme specific: Prevent main layout scroll handler from affecting rose navigation
    // Only apply this fix when rose navigation is present
    const roseNav = document.querySelector('.rose-elegant-nav');
    if (roseNav) {
        // Override the main layout's scroll handler by removing existing listeners
        // and adding our own that preserves rose navigation styling
        const roseScrollHandler = function() {
            // Only apply styles to rose navigation, leave other navs alone
            if (roseNav) {
                roseNav.style.background = 'rgba(255, 255, 255, 0.98)';
                roseNav.style.backdropFilter = 'blur(15px)';
                roseNav.style.borderBottom = '1px solid rgba(178, 58, 80, 0.15)';
                
                // Keep rose nav links dark
                const roseNavLinks = roseNav.querySelectorAll('.rose-nav-link');
                roseNavLinks.forEach(link => {
                    link.style.color = '#1d1a1b';
                    link.style.opacity = '1';
                    link.style.visibility = 'visible';
                });
            }
        };
        
        // Apply rose navigation styling immediately
        roseScrollHandler();
        
        // Add rose-specific scroll handler
        window.addEventListener('scroll', roseScrollHandler, { passive: true });
    }
});
