    left: 15%;
    animation-delay: 0s;
}

.rose-petal-2 {
    top: 60%;
    right: 20%;
    animation-delay: 3s;
}

.rose-petal-3 {
    top: 30%;
    left: 70%;
    animation-delay: 6s;
}

.rose-petal-4 {
    bottom: 30%;
    left: 25%;
    animation-delay: 9s;
}

.rose-petal-5 {
    top: 70%;
    right: 60%;
    animation-delay: 12s;
}

@keyframes rosePetalHeaderFloat {
    0%, 100% { transform: translateY(0px) rotate(0deg) scale(1); }
    33% { transform: translateY(-20px) rotate(120deg) scale(1.1); }
    66% { transform: translateY(-5px) rotate(240deg) scale(0.9); }
