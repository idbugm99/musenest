<!-- Enhanced Rose Theme Home Page with Custom Decorative Elements -->
<!-- Load universal styles first, then theme enhancements -->
<link rel="stylesheet" href="/themes/rose/assets/rose-enhancements.css">

<!-- Hero Section with Rose Garden Background -->
<section class="py-24 theme-section rose-garden-bg relative overflow-hidden">
    <!-- Floating Rose Petals -->
    <div class="rose-petals">
        <div class="rose-petal"></div>
        <div class="rose-petal"></div>
        <div class="rose-petal"></div>
        <div class="rose-petal"></div>
    </div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        {{#if home_content.hero_section_visible}}
        <div class="text-center" data-aos="fade-up">
            <!-- Rose Section Header -->
            <div class="rose-section-header mb-8">
                <span class="header-text text-5xl font-bold theme-header">
                    {{#if home_content.hero_title}}{{home_content.hero_title}}{{else}}{{siteName}}{{/if}}
                </span>
            </div>
            
            {{#if home_content.hero_subtitle}}
            <p class="text-2xl theme-text-secondary mb-8 max-w-3xl mx-auto leading-relaxed">
                {{home_content.hero_subtitle}}
            </p>
            {{/if}}
            
            <!-- Enhanced Rose Button -->
            {{#if home_content.hero_cta_visible}}
            <a href="{{#if home_content.hero_cta_link}}{{home_content.hero_cta_link}}{{else}}/{{modelSlug}}/contact{{previewParam}}{{/if}}" 
               class="inline-block theme-accent-bg rose-button theme-text-inverted py-4 px-8 rounded-lg text-lg font-semibold hover:opacity-95 transition-all">
                {{#if home_content.hero_cta_text}}{{home_content.hero_cta_text}}{{else}}Get In Touch{{/if}}
            </a>
            {{/if}}
        </div>
        {{/if}}
    </div>
    
    <!-- Decorative Rose Flowers -->
    <div class="absolute top-16 right-16 rose-flower" style="animation-delay: 0s;"></div>
    <div class="absolute bottom-24 left-20 rose-flower" style="animation-delay: 1s;"></div>
    <div class="absolute top-32 left-1/4 rose-flower" style="animation-delay: 2s;"></div>
</section>

<!-- About Section with Rose Vine Border -->
{{#if home_content.about_section_visible}}
<section class="py-16 theme-section-alt">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 gap-12 items-center">
            <div data-aos="fade-right">
                <div class="rose-section-header text-left mb-6">
                    <span class="header-text text-3xl">
                        {{#if home_content.about_title}}{{home_content.about_title}}{{else}}About Me{{/if}}
                    </span>
                </div>
                <div class="theme-card rose-enhanced p-8">
                    <p class="text-lg theme-text-secondary leading-relaxed mb-6">
                        {{#if home_content.about_description}}{{home_content.about_description}}{{else}}Experience elegance, sophistication, and genuine companionship in an exclusive, personalized setting.{{/if}}
                    </p>
                    <a href="/{{modelSlug}}/about{{previewParam}}" 
                       class="theme-accent-bg rose-button theme-text-inverted py-3 px-6 rounded-lg font-semibold hover:opacity-95 transition-all">
                        Learn More
                    </a>
                </div>
            </div>
            
            {{#if home_content.about_image_visible}}
            <div class="rose-vine-border p-4" data-aos="fade-left">
                <img src="{{#if home_content.about_image_url}}{{home_content.about_image_url}}{{else}}/images/placeholder-portrait.jpg{{/if}}" 
                     alt="{{siteName}}" 
                     class="w-full h-96 object-cover rounded-lg shadow-lg">
            </div>
            {{/if}}
        </div>
    </div>
</section>
{{/if}}

<!-- Services Section with Enhanced Cards -->
{{#if home_content.services_section_visible}}
<section class="py-16 theme-section">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="rose-section-header mb-12">
            <span class="header-text text-3xl">
                {{#if home_content.services_title}}{{home_content.services_title}}{{else}}Services{{/if}}
            </span>
        </div>
        
        <div class="grid md:grid-cols-3 gap-8">
            {{#if home_content.service_1_title}}
            <div class="theme-card rose-enhanced p-6 text-center" data-aos="fade-up" data-aos-delay="100">
                <div class="rose-flower mx-auto mb-4"></div>
                <h3 class="text-xl font-semibold theme-header mb-3">{{home_content.service_1_title}}</h3>
                <p class="theme-text-secondary">{{home_content.service_1_description}}</p>
            </div>
            {{/if}}
            
            {{#if home_content.service_2_title}}
            <div class="theme-card rose-enhanced p-6 text-center" data-aos="fade-up" data-aos-delay="200">
                <div class="rose-flower mx-auto mb-4"></div>
                <h3 class="text-xl font-semibold theme-header mb-3">{{home_content.service_2_title}}</h3>
                <p class="theme-text-secondary">{{home_content.service_2_description}}</p>
            </div>
            {{/if}}
            
            {{#if home_content.service_3_title}}
            <div class="theme-card rose-enhanced p-6 text-center" data-aos="fade-up" data-aos-delay="300">
                <div class="rose-flower mx-auto mb-4"></div>
                <h3 class="text-xl font-semibold theme-header mb-3">{{home_content.service_3_title}}</h3>
                <p class="theme-text-secondary">{{home_content.service_3_description}}</p>
            </div>
            {{/if}}
        </div>
    </div>
</section>
{{/if}}

<!-- Gallery Preview with Rose Garden Background -->
{{#if home_content.gallery_section_visible}}
<section class="py-16 theme-section-alt rose-garden-bg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="rose-section-header mb-12">
            <span class="header-text text-3xl">
                {{#if home_content.gallery_title}}{{home_content.gallery_title}}{{else}}Gallery{{/if}}
            </span>
        </div>
        
        <!-- Gallery preview content here -->
        <div class="text-center">
            <p class="text-lg theme-text-secondary mb-8 max-w-2xl mx-auto">
                {{#if home_content.gallery_description}}{{home_content.gallery_description}}{{else}}Discover an elegant collection of professional portraits showcasing grace, beauty, and sophistication.{{/if}}
            </p>
            <a href="/{{modelSlug}}/gallery{{previewParam}}" 
               class="theme-accent-bg rose-button theme-text-inverted py-3 px-8 rounded-lg text-lg font-semibold hover:opacity-95 transition-all">
                View Gallery
            </a>
        </div>
    </div>
</section>
{{/if}}

<!-- Contact CTA with Rose Vine Border -->
{{#if home_content.contact_cta_visible}}
<section class="py-16 theme-section">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="rose-vine-border p-8 text-center" data-aos="fade-up">
            <div class="rose-section-header mb-6">
                <span class="header-text text-2xl">
                    {{#if home_content.contact_cta_title}}{{home_content.contact_cta_title}}{{else}}Ready to Connect?{{/if}}
                </span>
            </div>
            <p class="text-lg theme-text-secondary mb-8">
                {{#if home_content.contact_cta_text}}{{home_content.contact_cta_text}}{{else}}Experience personalized, exclusive companionship. Let's create memorable moments together.{{/if}}
            </p>
            <a href="/{{modelSlug}}/contact{{previewParam}}" 
               class="theme-accent-bg rose-button theme-text-inverted py-4 px-8 rounded-lg text-lg font-semibold hover:opacity-95 transition-all mr-4">
                Contact Me
            </a>
            <a href="/{{modelSlug}}/rates{{previewParam}}" 
               class="theme-border-primary border-2 theme-text-primary py-4 px-8 rounded-lg text-lg font-semibold hover:bg-opacity-10 hover:theme-accent-bg transition-all">
                View Rates
            </a>
        </div>
    </div>
</section>
{{/if}}

<style>
/* Page-specific rose enhancements */
.rose-decorative-element {
    position: relative;
    z-index: 1;
}

/* Custom rose animations for this page */
@keyframes gentle-sway {
    0%, 100% { transform: rotate(0deg); }
    25% { transform: rotate(1deg); }
    75% { transform: rotate(-1deg); }
}

.rose-flower {
    animation: gentle-sway 4s ease-in-out infinite, rose-bloom 3s ease-in-out infinite alternate;
}
</style>