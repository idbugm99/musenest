    display: flex;
    flex-direction: column;
    gap: 30px;
}

.rose-form-group {
    position: relative;
}

.rose-form-label {
    display: flex;
    align-items: center;
    gap: 8px;
    font-weight: 600;
    color: var(--rose-deep);
    margin-bottom: 12px;
    font-size: 16px;
}

.rose-label-icon {
    font-size: 16px;
}

.rose-form-input,
.rose-form-textarea {
    width: 100%;
    padding: 16px 20px;
    border: 2px solid var(--rose-light);
    border-radius: 12px;
    background: var(--rose-white);
    color: var(--rose-text);
    font-size: 16px;
    font-family: inherit;
    transition: all 0.3s ease;
    position: relative;
    z-index: 2;
}

.rose-form-input:focus,
.rose-form-textarea:focus {
    outline: none;
    border-color: var(--rose-primary);
    box-shadow: 0 0 0 4px rgba(220, 38, 38, 0.1);
    transform: translateY(-2px);
}

.rose-input-underline {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--rose-primary);
    transform: scaleX(0);
    transition: transform 0.3s ease;
    border-radius: 0 0 12px 12px;
}

.rose-form-input:focus + .rose-input-underline,
.rose-form-textarea:focus + .rose-input-underline {
    transform: scaleX(1);
}

.rose-form-textarea {
    resize: vertical;
    min-height: 120px;
}

/* Rose Submit Button */
.rose-form-submit {
    text-align: center;
    margin-top: 20px;
}

.rose-submit-btn {
    background: linear-gradient(135deg, var(--rose-primary) 0%, var(--rose-deep) 100%);
    border: none;
    padding: 18px 40px;
    border-radius: 50px;
    color: var(--rose-white);
    font-size: 18px;
    font-weight: 600;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0.0, 0.2, 1);
    text-transform: uppercase;
    letter-spacing: 1px;
    box-shadow: 0 8px 32px var(--rose-shadow);
}

.rose-submit-btn:hover {
    transform: translateY(-4px) scale(1.05);
    box-shadow: 0 16px 48px rgba(185, 28, 28, 0.35);
}

.rose-btn-content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    position: relative;
    z-index: 2;
}

.rose-btn-petals {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 1;
}

.rose-btn-petal {
    position: absolute;
    width: 8px;
    height: 8px;
    background: rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    opacity: 0;
    animation: roseBtnPetals 2s ease-in-out infinite;
}

.rose-btn-petal-1 { animation-delay: 0s; }
.rose-btn-petal-2 { animation-delay: 0.7s; }
.rose-btn-petal-3 { animation-delay: 1.4s; }

/* Direct Contact Garden */
.rose-direct-garden {
    background: var(--rose-blush);
    padding: 40px;
    border-radius: 20px;
    border: 2px solid var(--rose-light);
    box-shadow: 0 20px 40px var(--rose-shadow);
}

.rose-direct-header {
    text-align: center;
    margin-bottom: 40px;
}

.rose-direct-subtitle {
    color: var(--rose-muted);
    font-style: italic;
