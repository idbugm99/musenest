<script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>

<!-- Contact Form JavaScript -->
<script>
// Contact form handling with enhanced security and API integration
let lastSubmitTime = 0;
let turnstileToken = null;
const SUBMIT_COOLDOWN = 5000; // 5 seconds

// Initialize Turnstile when DOM is ready
document.addEventListener('DOMContentLoaded', function() {
    initializeTurnstile();
    initializeFormHandling();
    initializeFocusStyles();
});

function initializeTurnstile() {
    // Only initialize if Turnstile script is available and site key is configured
    const siteKey = '{{TURNSTILE_SITE_KEY}}';
    const hasSiteKey = siteKey && siteKey !== '{{TURNSTILE_SITE_KEY}}' && siteKey.trim() !== '';
    
    if (typeof turnstile !== 'undefined' && hasSiteKey) {
        turnstile.render('#turnstile-widget', {
            sitekey: siteKey,
            callback: function(token) {
                turnstileToken = token;
            },
            'expired-callback': function() {
                turnstileToken = null;
            },
            'error-callback': function() {
                turnstileToken = null;
                showError('Security verification failed. Please refresh the page.');
            }
        });
    } else {
        // Hide Turnstile widget if not configured
        const widget = document.getElementById('turnstile-widget');
        if (widget) {
            widget.style.display = 'none';
        }
        // Set flag that Turnstile is not required
        window.turnstileRequired = false;
    }
}

function initializeFormHandling() {
    const form = document.getElementById('contactForm');
    if (!form) return;
    
    form.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        // Throttle submissions
        const now = Date.now();
        if (now - lastSubmitTime < SUBMIT_COOLDOWN) {
            showError('Please wait before submitting again.');
            return;
        }
        
        // Get form data
        const formData = new FormData(this);
        const data = Object.fromEntries(formData);
        
        // Check honeypot fields
        if (data.website || data.company || data.phone_alt) {
            // Silent fail for bots
            return;
        }
        
        // Clear previous errors
        clearErrors();
        
        // Validate form
        if (!validateForm(data)) {
            return;
        }
        
        // Add Turnstile token (only if Turnstile is actually required and configured)
        if (window.turnstileRequired !== false) {
            if (typeof turnstile !== 'undefined' && turnstileToken) {
                data['cf-turnstile-response'] = turnstileToken;
            } else if (typeof turnstile !== 'undefined') {
                showError('Please complete the security verification.');
                return;
            }
        }
        // If Turnstile is not required (turnstileRequired === false), continue without it
        
        // Add model context if available
        const modelId = window.modelId || document.querySelector('meta[name="model-id"]')?.content;
        if (modelId) {
            data.model_id = modelId;
        }
        
        // Convert checkbox values to booleans
        data.consent_contact = document.getElementById('consent_contact').checked;
        data.consent_marketing = document.getElementById('consent_marketing').checked;
        data.consent_analytics = document.getElementById('consent_analytics').checked;
        
        // Show loading state
        const submitBtn = document.getElementById('submitBtn');
        const buttonText = submitBtn.querySelector('.button-text');
        const originalText = buttonText.textContent;
        
        submitBtn.disabled = true;
        buttonText.textContent = 'Sending...';
        
        try {
            // Submit to API endpoint
            const response = await fetch('/api/contact/submit', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            });
            
            const result = await response.json();
            
            if (response.ok) {
                lastSubmitTime = now;
                
                // Show success message
                showSuccess('Thank you for your message! I will get back to you soon.');
                
                // Reset form
                this.reset();
                
                // Reset Turnstile
                if (typeof turnstile !== 'undefined' && window.turnstileRequired !== false) {
                    const widget = document.getElementById('turnstile-widget');
                    if (widget && widget.firstChild) {
                        turnstile.reset(widget.firstChild);
                    }
                    turnstileToken = null;
                }
            } else {
                // Handle validation errors
                if (result.details) {
                    handleValidationErrors(result.details);
                } else {
                    showError(result.error || 'An error occurred. Please try again.');
                }
            }
            
        } catch (error) {
            console.error('Contact form error:', error);
            showError('Sorry, there was an error sending your message. Please try again.');
            
        } finally {
            // Reset button state
            submitBtn.disabled = false;
            buttonText.textContent = originalText;
        }
    });
}

function validateForm(data) {
    let hasErrors = false;
    
    // Required field validation
    if (!data.name?.trim()) {
        showFieldError('name', 'Name is required.');
        hasErrors = true;
    } else if (data.name.length < 2) {
        showFieldError('name', 'Name must be at least 2 characters.');
        hasErrors = true;
    }
    
    if (!data.email?.trim()) {
        showFieldError('email', 'Email is required.');
        hasErrors = true;
    } else if (!isValidEmail(data.email)) {
        showFieldError('email', 'Please enter a valid email address.');
        hasErrors = true;
    }
    
    if (!data.message?.trim()) {
        showFieldError('message', 'Message is required.');
        hasErrors = true;
    } else if (data.message.length < 10) {
        showFieldError('message', 'Message must be at least 10 characters.');
        hasErrors = true;
    }
    
    // Phone validation (if provided)
    if (data.phone && data.phone.trim() && !isValidPhone(data.phone)) {
        showFieldError('phone', 'Please enter a valid phone number.');
        hasErrors = true;
    }
    
    // Consent validation
    if (!document.getElementById('consent_contact').checked) {
        showError('You must consent to being contacted to submit this form.');
        hasErrors = true;
    }
    
    return !hasErrors;
}

function handleValidationErrors(errors) {
    errors.forEach(error => {
        const fieldName = error.path?.[0];
        if (fieldName && document.getElementById(fieldName)) {
            showFieldError(fieldName, error.message);
        } else {
            showError(error.message);
        }
    });
}

function showFieldError(fieldName, message) {
    const field = document.getElementById(fieldName);
    if (!field) return;
    
    const errorDiv = field.parentElement.querySelector('.error-message');
    
    field.classList.add('border-red-500', 'focus:ring-red-500');
    if (errorDiv) {
        errorDiv.textContent = message;
        errorDiv.classList.remove('hidden');
    }
}

function clearErrors() {
    document.querySelectorAll('.contact-input').forEach(input => {
        input.classList.remove('border-red-500', 'focus:ring-red-500');
    });
    document.querySelectorAll('.error-message').forEach(error => {
        error.classList.add('hidden');
    });
}

function showError(message) {
    // Create or update error notification
    const existingError = document.getElementById('error-notification');
    if (existingError) {
        existingError.remove();
    }
    
    const notification = document.createElement('div');
    notification.id = 'error-notification';
    notification.className = 'fixed top-4 right-4 bg-red-500 text-white px-6 py-3 rounded-lg shadow-lg z-50 max-w-sm';
    notification.innerHTML = `
        <div class="flex items-center justify-between">
            <span>${message}</span>
            <button onclick="this.parentElement.parentElement.remove()" class="ml-4 text-white hover:text-gray-200">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"/>
                </svg>
            </button>
        </div>
    `;
    
    document.body.appendChild(notification);
    
    // Auto-remove after 5 seconds
    setTimeout(() => {
        if (notification.parentElement) {
            notification.remove();
        }
    }, 5000);
}

function showSuccess(message) {
    // Create success notification
    const notification = document.createElement('div');
    notification.className = 'fixed top-4 right-4 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50 max-w-sm';
    notification.innerHTML = `
        <div class="flex items-center justify-between">
            <span>${message}</span>
            <button onclick="this.parentElement.parentElement.remove()" class="ml-4 text-white hover:text-gray-200">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
