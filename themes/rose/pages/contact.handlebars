<!-- Rose Garden Contact Page -->

<!-- Rose Garden Contact Hero -->
{{#if contact_content.contact_header_visible}}
<section class="rose-contact-hero" data-aos="fade-in">
    <!-- Rose Petals Background -->
    <div class="rose-petals-bg">
        <div class="rose-petal-float rose-petal-1">🌹</div>
        <div class="rose-petal-float rose-petal-2">🌹</div>
        <div class="rose-petal-float rose-petal-3">🌹</div>
        <div class="rose-petal-float rose-petal-4">🌹</div>
        <div class="rose-petal-float rose-petal-5">🌹</div>
    </div>
    
    <!-- Rose Garden Trellis -->
    <div class="rose-trellis-pattern"></div>
    
    <div class="luxury-container">
        <div class="rose-contact-header-content" data-aos="fade-down">
            <!-- Rose Crown Icon -->
            <div class="rose-crown">
                <span class="rose-icon">🌹</span>
            </div>
            
            <h1 class="luxury-heading rose-text-deep">
                {{#if contact_content.page_title}}{{contact_content.page_title}}{{else}}Connect with Rose{{/if}}
            </h1>
            
            <p class="rose-contact-subtitle">
                {{#if contact_content.page_subtitle}}{{contact_content.page_subtitle}}{{else}}Let's begin our conversation in the rose garden of connection{{/if}}
            </p>
            {{#if contact_content.page_description}}
            <p class="rose-contact-description" data-aos="fade-up" data-aos-delay="300">
                {{contact_content.page_description}}
            </p>
            {{/if}}
            {{#if contact_content.page_subtext}}
            <p class="rose-contact-subtext" data-aos="fade-up" data-aos-delay="400">
                {{contact_content.page_subtext}}
            </p>
            {{/if}}
        </div>
    </div>
</section>
{{/if}}

<!-- Rose Contact Content -->
<section class="rose-contact-main luxury-section">
    <div class="luxury-container">
        <div class="rose-contact-grid">
            
            <!-- Contact Form Garden -->
            {{#if contact_content.contact_form_visible}}
            <div class="rose-form-garden" data-aos="fade-right">
                <!-- Rose Form Header -->
                <div class="rose-form-header">
                    <div class="rose-bloom-badge">
                        <span class="rose-icon">🌸</span>
                    </div>
                    <h2 class="luxury-h3 rose-text-deep">
                        {{#if contact_content.form_title}}{{contact_content.form_title}}{{else}}Send a Message{{/if}}
                    </h2>
                    <p class="rose-form-subtitle">Share your thoughts like petals in the wind</p>
                    {{#if contact_content.form_description}}
                    <p class="rose-form-description">
                        {{contact_content.form_description}}
                    </p>
                    {{/if}}
                </div>
                
                <!-- Rose Contact Form -->
                <form class="rose-contact-form" id="contactForm">
                    <!-- Rose Form Fields -->
                    <div class="rose-form-group">
                        <label for="name" class="rose-form-label">
                            <span class="rose-label-icon">🌹</span>
                            {{#if contact_content.form_name_label}}{{contact_content.form_name_label}}{{else}}Your Name{{/if}}
                        </label>
                        <input type="text" id="name" name="name" class="rose-form-input" placeholder="Like a rose, beautiful and unique" required>
                        <div class="rose-input-underline"></div>
                    </div>
                    
                    <div class="rose-form-group">
                        <label for="email" class="rose-form-label">
                            <span class="rose-label-icon">📧</span>
                            {{#if contact_content.form_email_label}}{{contact_content.form_email_label}}{{else}}Email Address{{/if}}
                        </label>
                        <input type="email" id="email" name="email" class="rose-form-input" placeholder="Where our garden letters will bloom" required>
                        <div class="rose-input-underline"></div>
                    </div>
                    
                    <div class="rose-form-group">
                        <label for="phone" class="rose-form-label">
                            <span class="rose-label-icon">📱</span>
                            {{#if contact_content.form_phone_label}}{{contact_content.form_phone_label}}{{else}}Phone Number{{/if}}
                        </label>
                        <input type="tel" id="phone" name="phone" class="rose-form-input" placeholder="Optional - for urgent garden calls">
                        <div class="rose-input-underline"></div>
                    </div>
                    
                    <div class="rose-form-group">
                        <label for="subject" class="rose-form-label">
                            <span class="rose-label-icon">💌</span>
                            Subject
                        </label>
                        <input type="text" id="subject" name="subject" class="rose-form-input" placeholder="The essence of your message" required>
                        <div class="rose-input-underline"></div>
                    </div>
                    
                    <div class="rose-form-group">
                        <label for="message" class="rose-form-label">
                            <span class="rose-label-icon">✍️</span>
                            {{#if contact_content.form_message_label}}{{contact_content.form_message_label}}{{else}}Your Message{{/if}}
                        </label>
                        <textarea id="message" name="message" class="rose-form-textarea" placeholder="{{#if contact_content.form_message_placeholder}}{{contact_content.form_message_placeholder}}{{else}}Share your thoughts and desires in this blooming garden of words...{{/if}}" rows="6" required></textarea>
                        <div class="rose-input-underline"></div>
                    </div>
                    
                    <!-- Rose Submit Button -->
                    <div class="rose-form-submit">
                        <button type="submit" class="rose-submit-btn">
                            <span class="rose-btn-content">
                                <span class="rose-btn-icon">🌹</span>
                                <span class="rose-btn-text">{{#if contact_content.form_button_text}}{{contact_content.form_button_text}}{{else}}Send Message{{/if}}</span>
                            </span>
                            <div class="rose-btn-petals">
                                <div class="rose-btn-petal rose-btn-petal-1"></div>
                                <div class="rose-btn-petal rose-btn-petal-2"></div>
                                <div class="rose-btn-petal rose-btn-petal-3"></div>
                            </div>
                        </button>
                    </div>
                </form>
            </div>
            {{/if}}
            
            <!-- Direct Contact Rose Garden -->
            {{#if contact_content.contact_direct_visible}}
            <div class="rose-direct-garden" data-aos="fade-left">
                
                <!-- Rose Direct Contact Header -->
                <div class="rose-direct-header">
                    <div class="rose-bloom-badge rose-bloom-gold">
                        <span class="rose-icon">🌺</span>
                    </div>
                    <h2 class="luxury-h3 rose-text-deep">
                        {{#if contact_content.direct_title}}{{contact_content.direct_title}}{{else}}Direct Contact{{/if}}
                    </h2>
                    <p class="rose-direct-subtitle">Connect directly through these rose-petaled paths</p>
                </div>
                
                <!-- Rose Contact Methods -->
                <div class="rose-contact-methods">
                    
                    <!-- Rose Email Garden -->
                    <div class="rose-contact-method" data-aos="zoom-in" data-aos-delay="100">
                        <div class="rose-method-icon">
                            <div class="rose-method-bloom">💌</div>
                        </div>
                        <div class="rose-method-content">
                            <h3 class="rose-method-title">
                                {{#if contact_content.direct_email_label}}{{contact_content.direct_email_label}}{{else}}Email Garden{{/if}}
                            </h3>
                            <p class="rose-method-description">Preferred for detailed conversations</p>
                            <a href="mailto:{{model.email}}" class="rose-method-link">
                                <span class="rose-link-icon">🌹</span>
                                <span>{{model.email}}</span>
                            </a>
                        </div>
                    </div>
                    
                    <!-- Rose Phone Garden -->
                    {{#if model.phone}}
                    <div class="rose-contact-method" data-aos="zoom-in" data-aos-delay="200">
                        <div class="rose-method-icon">
                            <div class="rose-method-bloom">📱</div>
                        </div>
                        <div class="rose-method-content">
                            <h3 class="rose-method-title">
                                {{#if contact_content.direct_phone_label}}{{contact_content.direct_phone_label}}{{else}}Phone Rose{{/if}}
                            </h3>
                            <p class="rose-method-description">For immediate garden connections</p>
                            <a href="tel:{{model.phone}}" class="rose-method-link">
                                <span class="rose-link-icon">🌹</span>
                                <span>{{model.phone}}</span>
                            </a>
                        </div>
                    </div>
                    {{/if}}
                    
                    <!-- Rose Calendar Garden -->
                    <div class="rose-contact-method" data-aos="zoom-in" data-aos-delay="300">
                        <div class="rose-method-icon">
                            <div class="rose-method-bloom">📅</div>
                        </div>
                        <div class="rose-method-content">
                            <h3 class="rose-method-title">Schedule Visit</h3>
                            <p class="rose-method-description">Plan your time in the rose garden</p>
                            <a href="/{{modelSlug}}/calendar{{previewParam}}" class="rose-method-link">
                                <span class="rose-link-icon">🌹</span>
                                <span>View Calendar</span>
                            </a>
                        </div>
                    </div>
                    
                </div>
                
                <!-- Rose Response Time -->
                <div class="rose-response-time" data-aos="fade-up" data-aos-delay="400">
                    <div class="rose-response-icon">⏰</div>
                    <div class="rose-response-content">
                        <h4 class="rose-response-title">Response Time</h4>
                        <p class="rose-response-text">{{#if contact_content.direct_response_text}}{{contact_content.direct_response_text}}{{else}}Like roses blooming at dawn, I typically respond within 2-4 hours during daytime hours.{{/if}}</p>
                    </div>
                </div>
                
            </div>
            {{/if}}
            
        </div>
    </div>
</section>

<!-- Rose Guidelines Garden -->
{{#if contact_content.contact_guidelines_visible}}
<section class="rose-guidelines-garden luxury-section" style="background: var(--rose-blush);">
    <div class="luxury-container">
        
        <!-- Rose Guidelines Header -->
        <div class="rose-guidelines-header" data-aos="fade-down">
            <div class="rose-guidelines-crown">
                <span class="rose-icon">🌸</span>
                <span class="rose-icon">🌹</span>
                <span class="rose-icon">🌸</span>
            </div>
            <h2 class="luxury-h2 rose-text-deep">Rose Garden Guidelines</h2>
            <p class="rose-guidelines-subtitle">Creating beautiful connections through respectful communication</p>
        </div>
        
        <!-- Rose Guidelines Grid -->
        <div class="rose-guidelines-grid">
            
            <div class="rose-guideline-card" data-aos="zoom-in" data-aos-delay="100">
                <div class="rose-guideline-icon">
                    <div class="rose-bloom-frame">💌</div>
                </div>
                <h3 class="rose-guideline-title">Initial Contact</h3>
                <p class="rose-guideline-text">Please introduce yourself warmly and share what type of experience you're seeking. Like tending a rose garden, patience and care create the most beautiful results.</p>
            </div>
            
            <div class="rose-guideline-card" data-aos="zoom-in" data-aos-delay="200">
                <div class="rose-guideline-icon">
                    <div class="rose-bloom-frame">🌹</div>
                </div>
                <h3 class="rose-guideline-title">Professional Respect</h3>
                <p class="rose-guideline-text">I value respectful, professional communication. Like roses require gentle care, our interactions should be courteous and considerate.</p>
            </div>
            
            <div class="rose-guideline-card" data-aos="zoom-in" data-aos-delay="300">
                <div class="rose-guideline-icon">
                    <div class="rose-bloom-frame">⏰</div>
                </div>
                <h3 class="rose-guideline-title">Advance Planning</h3>
                <p class="rose-guideline-text">Like planting roses for future blooms, advance booking ensures the most beautiful experiences. Please provide your preferred dates and times when reaching out.</p>
            </div>
            
            <div class="rose-guideline-card" data-aos="zoom-in" data-aos-delay="400">
                <div class="rose-guideline-icon">
                    <div class="rose-bloom-frame">🤝</div>
                </div>
                <h3 class="rose-guideline-title">Mutual Understanding</h3>
                <p class="rose-guideline-text">Clear communication helps ensure our time together exceeds expectations. Don't hesitate to ask questions - like tending roses, clarity leads to beautiful results.</p>
            </div>
            
        </div>
        
    </div>
</section>
{{/if}}

<!-- Rose Location Garden -->
{{#if contact_content.contact_location_visible}}
<section class="rose-location-garden luxury-section">
    <div class="luxury-container">
        
        <div class="rose-location-content" data-aos="fade-up">
            <!-- Rose Location Header -->
            <div class="rose-location-header">
                <div class="rose-location-icon">
                    <span class="rose-icon">🗺️</span>
                </div>
                <h2 class="luxury-h2 rose-text-deep">
                    {{#if contact_content.location_title}}{{contact_content.location_title}}{{else}}Rose Garden Location{{/if}}
                </h2>
            </div>
            
            <!-- Rose Location Info -->
            <div class="rose-location-info">
                <div class="rose-location-details">
                    <div class="rose-location-item">
                        <span class="rose-location-label">
                            <span class="rose-icon">🌹</span>
                            Primary Location
                        </span>
                        <span class="rose-location-value">
                            {{#if contact_content.location_primary}}{{contact_content.location_primary}}{{else}}Denver, Colorado{{/if}}
                        </span>
                    </div>
                    
                    {{#if contact_content.location_secondary}}
                    <div class="rose-location-item">
                        <span class="rose-location-label">
                            <span class="rose-icon">🌸</span>
                            Also Available
                        </span>
                        <span class="rose-location-value">{{contact_content.location_secondary}}</span>
                    </div>
                    {{/if}}
                    
                    <div class="rose-location-item">
                        <span class="rose-location-label">
                            <span class="rose-icon">✈️</span>
                            Travel
                        </span>
                        <span class="rose-location-value">
                            {{#if contact_content.travel_info}}{{contact_content.travel_info}}{{else}}Available for select destinations - inquire for details{{/if}}
                        </span>
                    </div>
                </div>
            </div>
            
        </div>
        
    </div>
</section>
{{/if}}

<!-- Rose Privacy Garden -->
{{#if contact_content.contact_privacy_visible}}
<section class="rose-privacy-garden luxury-section" style="background: var(--rose-dark-gradient); color: var(--rose-white);">
    <div class="luxury-container">
        
        <!-- Rose Privacy Header -->
        <div class="rose-privacy-header" data-aos="fade-down">
            <div class="rose-privacy-crown">
                <span class="rose-icon">🔒</span>
                <span class="rose-icon">🌹</span>
                <span class="rose-icon">🔒</span>
            </div>
            <h2 class="luxury-h2" style="color: var(--rose-white);">
                {{#if contact_content.privacy_title}}{{contact_content.privacy_title}}{{else}}Privacy & Discretion{{/if}}
            </h2>
            <p class="rose-privacy-subtitle">Your secrets are safe in this rose garden sanctuary</p>
        </div>
        
        <!-- Rose Privacy Content -->
        <div class="rose-privacy-content" data-aos="fade-up">
            <div class="rose-privacy-grid">
                
                <div class="rose-privacy-card">
                    <div class="rose-privacy-icon">🔐</div>
                    <h3 class="rose-privacy-card-title">Confidentiality</h3>
                    <p class="rose-privacy-card-text">All communications and meetings remain strictly confidential. Like roses in a private garden, your privacy is sacred and protected.</p>
                </div>
                
                <div class="rose-privacy-card">
                    <div class="rose-privacy-icon">🤫</div>
                    <h3 class="rose-privacy-card-title">Discretion</h3>
                    <p class="rose-privacy-card-text">I understand the importance of discretion and maintain the highest standards of professional privacy in all interactions.</p>
                </div>
                
                <div class="rose-privacy-card">
                    <div class="rose-privacy-icon">🛡️</div>
                    <h3 class="rose-privacy-card-title">Secure Communication</h3>
                    <p class="rose-privacy-card-text">All contact information and personal details are handled with the utmost care and stored securely, like precious roses in a protected garden.</p>
                </div>
                
            </div>
        </div>
        
    </div>
</section>
{{/if}}

<!-- Rose Contact Styling -->
<style>
/* Rose Contact Hero */
.rose-contact-hero {
    background: linear-gradient(135deg, var(--rose-blush) 0%, var(--rose-light) 50%, #f9a8d4 100%);
    position: relative;
    overflow: hidden;
    padding: 120px 0 80px;
    border-bottom: 4px solid var(--rose-gold);
}

.rose-petals-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    z-index: 1;
}

.rose-petal-float {
    position: absolute;
    font-size: 24px;
    opacity: 0.3;
    animation: roseContactFloat 8s ease-in-out infinite;
}

.rose-petal-1 { top: 20%; left: 10%; animation-delay: 0s; }
.rose-petal-2 { top: 40%; right: 15%; animation-delay: 1.5s; }
.rose-petal-3 { top: 60%; left: 20%; animation-delay: 3s; }
.rose-petal-4 { top: 80%; right: 25%; animation-delay: 4.5s; }
.rose-petal-5 { top: 30%; left: 50%; animation-delay: 6s; }

.rose-trellis-pattern {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
        radial-gradient(circle at 25% 25%, rgba(185, 28, 28, 0.05) 2px, transparent 2px),
        radial-gradient(circle at 75% 75%, rgba(185, 28, 28, 0.05) 2px, transparent 2px);
    background-size: 60px 60px;
    opacity: 0.6;
}

.rose-contact-header-content {
    position: relative;
    z-index: 10;
    text-align: center;
}

.rose-crown {
    margin-bottom: 24px;
}

.rose-crown .rose-icon {
    font-size: 48px;
    display: inline-block;
    animation: roseCrownSpin 10s linear infinite;
}

.rose-contact-subtitle {
    font-size: 20px;
    color: var(--rose-muted);
    margin-top: 20px;
    font-style: italic;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
}

.rose-contact-description {
    font-size: 18px;
    color: var(--rose-text);
    text-align: center;
    font-weight: 300;
    line-height: 1.6;
    max-width: 700px;
    margin: 1.5rem auto 0;
}

.rose-contact-subtext {
    font-size: 16px;
    color: var(--rose-muted);
    text-align: center;
    font-style: italic;
    max-width: 600px;
    margin: 1rem auto 0;
}

/* Rose Contact Grid */
.rose-contact-main {
    background: var(--rose-white);
}

.rose-contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: start;
}

/* Rose Form Garden */
.rose-form-garden {
    background: var(--rose-white);
    padding: 40px;
    border-radius: 20px;
    box-shadow: 0 20px 40px var(--rose-shadow);
    border: 2px solid var(--rose-light);
    position: relative;
    overflow: hidden;
}

.rose-form-garden::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 6px;
    background: linear-gradient(90deg, var(--rose-primary), var(--rose-gold));
}

.rose-form-header {
    text-align: center;
    margin-bottom: 40px;
}

.rose-bloom-badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    background: var(--rose-gradient);
    border-radius: 50%;
    margin-bottom: 20px;
    border: 3px solid var(--rose-primary);
    animation: roseBadgeGlow 3s ease-in-out infinite;
}

.rose-bloom-badge.rose-bloom-gold {
    background: linear-gradient(135deg, var(--rose-gold), var(--rose-bronze));
    border-color: var(--rose-gold);
}

.rose-bloom-badge .rose-icon {
    font-size: 24px;
}

.rose-form-subtitle {
    color: var(--rose-muted);
    font-style: italic;
    margin-top: 12px;
}

.rose-form-description {
    color: var(--rose-text);
    margin-top: 16px;
    line-height: 1.6;
}

