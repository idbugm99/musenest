{
  "theme": "rose",
  "version": "1.0.0",
  "prefix": "rose",
  "displayName": "Rose Garden",
  "cssClasses": {
    "gallery": "rose-gallery-collections",
    "section": "rose-gallery-section", 
    "item": "rose-gallery-item",
    "lightbox": "rose-lightbox-modal",
    "navigation": "rose-nav",
    "caption": "rose-caption",
    "filters": "rose-filters",
    "pagination": "rose-pagination"
  },
  "animations": {
    "hover": "rose-hover-effect",
    "transition": "rose-fade-in",
    "lightboxOpen": "rose-bloom-open",
    "lightboxClose": "rose-bloom-close"
  },
  "icons": {
    "close": "ðŸŒ¹",
    "fullscreen": "â¤¢",
    "prev": "â€¹",
    "next": "â€º",
    "grid": "âŠž",
    "masonry": "âŠ¡",
    "carousel": "âŠ²"
  },
  "layouts": {
    "grid": {
      "defaultColumns": {
        "sm": 2,
        "md": 3,
        "lg": 4
      },
      "aspectRatio": "1:1"
    },
    "masonry": {
      "columnWidth": 300,
      "gutter": 24
    },
    "carousel": {
      "autoplay": false,
      "autoplaySpeed": 5000,
      "slidesToShow": 1,
      "infinite": true
    }
  },
  "customizations": {
    "enableHoverEffects": true,
    "enableAnimations": true,
    "enableParallax": false,
    "enableBlurBackground": false,
    "colorScheme": "light"
  },
  "breakpoints": {
    "sm": 576,
    "md": 768,
    "lg": 992,
    "xl": 1200
  },
  "assets": {
    "cssFile": "rose.css",
    "fontFiles": []
  },
  "galleryDefaults": {
    "enable_lightbox": true,
    "enable_fullscreen": true,
    "show_captions": true,
    "show_image_info": false,
    "default_layout": "masonry",
    "images_per_page": 24,
    "grid_columns": 4
  }
