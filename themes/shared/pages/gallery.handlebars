<!-- Shared Gallery Theme Customization -->
<style>
/* Universal Gallery Theme Integration */
.universal-gallery {
    /* Use theme background */
    background: var(--theme-bg-primary);
    color: var(--theme-text-primary);
}

/* Gallery Hero Section */
.universal-gallery .gallery-hero {
