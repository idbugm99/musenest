    transform: translateY(-2px);
    box-shadow: 0 8px 25px color-mix(in srgb, var(--theme-text-inverted), transparent 60%);
}

.universal-gallery .gallery-cta-secondary {
    border: 2px solid var(--theme-text-inverted);
