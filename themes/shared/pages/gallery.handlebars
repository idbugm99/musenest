    background: color-mix(in srgb, var(--theme-text-inverted), transparent 80%);
    color: var(--theme-text-inverted);
    border: 2px solid color-mix(in srgb, var(--theme-text-inverted), transparent 60%);
    width: 50px;
    height: 50px;
    border-radius: 50%;
