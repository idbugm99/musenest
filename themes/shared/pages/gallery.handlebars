    transform: translateY(-2px);
}

/* Lightbox Modal */
.universal-gallery .gallery-lightbox-modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.95);
