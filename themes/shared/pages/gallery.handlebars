<!-- Shared Theme Gallery CSS Variables Override -->
<style>
:root {
    /* Map universal theme variables to gallery variables */
    --gallery-primary: var(--theme-accent);
    --gallery-primary-hover: var(--theme-accent-hover, var(--theme-accent));
    --gallery-secondary: var(--theme-secondary, var(--theme-accent));
    --gallery-accent: var(--theme-accent);
    --gallery-background: var(--theme-bg-primary);
    --gallery-surface: var(--theme-card-bg, var(--theme-bg-primary));
    --gallery-text: var(--theme-text-primary);
    --gallery-text-muted: var(--theme-text-secondary);
    --gallery-border: var(--theme-border-primary);
    --gallery-shadow: var(--theme-shadow, rgba(0, 0, 0, 0.1));
