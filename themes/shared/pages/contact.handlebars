<!-- Contact Page - Universal Template with Theme Classes -->
<!-- This template works across all themes using universal CSS variables -->

<section class="py-16 theme-section-alt">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <!-- Page Header -->
        {{#if contact_content.contact_header_visible}}
        <div class="text-center mb-12" data-aos="fade-up">
            <h1 class="text-4xl font-bold mb-6 theme-header">
                {{#if contact_content.page_title}}{{contact_content.page_title}}{{else}}Contact Me{{/if}}
            </h1>
            {{#if contact_content.page_subtitle}}
            <p class="text-xl theme-text-secondary max-w-3xl mx-auto">
                {{contact_content.page_subtitle}}
            </p>
            {{/if}}
        </div>
        {{/if}}
        
        <div class="grid md:grid-cols-2 gap-12">
            <!-- Contact Form -->
            {{#if contact_content.contact_form_visible}}
            <div class="theme-card p-8 hover:shadow-lg transition-shadow" data-aos="fade-up" data-aos-delay="100">
                <h2 class="text-2xl font-bold mb-6 theme-header">
                    {{#if contact_content.form_title}}{{contact_content.form_title}}{{else}}Send a Message{{/if}}
                </h2>
                
                <form method="POST" class="space-y-6" id="contactForm">
                    <!-- Honeypot field -->
                    <input type="text" name="website" style="display: none;" tabindex="-1" autocomplete="off">
                    
                    <div>
                        <label for="name" class="block text-sm font-medium mb-2 theme-text-subtle">
                            {{#if contact_content.form_name_label}}{{contact_content.form_name_label}}{{else}}Your Name{{/if}}<span class="text-red-500">*</span>
                        </label>
                        <input type="text" id="name" name="name" required 
                               class="contact-input w-full px-4 py-3 rounded-lg border theme-border-primary theme-bg-primary theme-text-primary focus:outline-none focus:ring-2 focus:ring-opacity-50">
                        <div class="error-message hidden text-sm text-red-500 mt-1"></div>
                    </div>
                    
                    <div>
                        <label for="email" class="block text-sm font-medium mb-2 theme-text-subtle">
                            {{#if contact_content.form_email_label}}{{contact_content.form_email_label}}{{else}}Email Address{{/if}}<span class="text-red-500">*</span>
                        </label>
                        <input type="email" id="email" name="email" required 
                               class="contact-input w-full px-4 py-3 rounded-lg border theme-border-primary theme-bg-primary theme-text-primary focus:outline-none focus:ring-2 focus:ring-opacity-50">
                        <div class="error-message hidden text-sm text-red-500 mt-1"></div>
                    </div>
                    
                    <div>
                        <label for="phone" class="block text-sm font-medium mb-2 theme-text-subtle">
                            {{#if contact_content.form_phone_label}}{{contact_content.form_phone_label}}{{else}}Phone Number (Optional){{/if}}
                        </label>
                        <input type="tel" id="phone" name="phone" 
                               class="contact-input w-full px-4 py-3 rounded-lg border theme-border-primary theme-bg-primary theme-text-primary focus:outline-none focus:ring-2 focus:ring-opacity-50">
                        <div class="error-message hidden text-sm text-red-500 mt-1"></div>
                    </div>
                    
                    <div>
                        <label for="date" class="block text-sm font-medium mb-2 theme-text-subtle">
                            {{#if contact_content.form_date_label}}{{contact_content.form_date_label}}{{else}}Preferred Date{{/if}}
                        </label>
                        <input type="date" id="date" name="date" 
                               class="contact-input w-full px-4 py-3 rounded-lg border theme-border-primary theme-bg-primary theme-text-primary focus:outline-none focus:ring-2 focus:ring-opacity-50">
                        <div class="error-message hidden text-sm text-red-500 mt-1"></div>
                    </div>
                    
                    <div>
                        <label for="duration" class="block text-sm font-medium mb-2 theme-text-subtle">
                            {{#if contact_content.form_duration_label}}{{contact_content.form_duration_label}}{{else}}Duration{{/if}}
                        </label>
                        <select id="duration" name="duration" 
                                class="contact-input w-full px-4 py-3 rounded-lg border theme-border-primary theme-bg-primary theme-text-primary focus:outline-none focus:ring-2 focus:ring-opacity-50">
                            <option value="">Select duration</option>
                            {{#each (split (or contact_content.form_duration_options "1 Hour,90 Minutes,2 Hours,3 Hours,Overnight,Extended (please specify)") ",")}}
                                <option value="{{trim this}}">{{trim this}}</option>
                            {{/each}}
                        </select>
                        <div class="error-message hidden text-sm text-red-500 mt-1"></div>
                    </div>
                    
                    <div>
                        <label for="message" class="block text-sm font-medium mb-2 theme-text-subtle">
                            {{#if contact_content.form_message_label}}{{contact_content.form_message_label}}{{else}}Message{{/if}}<span class="text-red-500">*</span>
                        </label>
                        <textarea id="message" name="message" rows="5" required 
                                  class="contact-input w-full px-4 py-3 rounded-lg border theme-border-primary theme-bg-primary theme-text-primary focus:outline-none focus:ring-2 focus:ring-opacity-50"
                                  placeholder="{{#if contact_content.form_message_placeholder}}{{contact_content.form_message_placeholder}}{{else}}Please include any specific requests or questions...{{/if}}"></textarea>
                        <div class="error-message hidden text-sm text-red-500 mt-1"></div>
                    </div>
                    
                    <button type="submit" id="submitBtn"
                            class="w-full md:w-auto theme-accent-bg theme-text-inverted py-3 px-6 rounded-lg font-semibold hover:opacity-90 transition-opacity disabled:opacity-50 disabled:cursor-not-allowed">
                        <span class="button-text">{{#if contact_content.form_button_text}}{{contact_content.form_button_text}}{{else}}Send Message{{/if}}</span>
                        <span class="spinner hidden">Sending...</span>
                    </button>
                </form>
            </div>
            {{/if}}
            
            <!-- Contact Information Sections -->
            <div class="space-y-8">
                <!-- Direct Contact -->
                {{#if contact_content.contact_direct_visible}}
                <div class="theme-card p-8 hover:shadow-lg transition-shadow" data-aos="fade-up" data-aos-delay="200">
                    <h2 class="text-2xl font-bold mb-6 theme-header">
                        {{#if contact_content.direct_title}}{{contact_content.direct_title}}{{else}}Direct Contact{{/if}}
                    </h2>
                    <div class="space-y-4">
                        <div class="flex items-center">
                            <div class="theme-accent w-12 h-12 rounded-full flex items-center justify-center mr-4">
                                <svg class="w-6 h-6 theme-text-inverted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                </svg>
                            </div>
                            <div>
                                <p class="font-medium theme-text-primary">
                                    {{#if contact_content.direct_email_label}}{{contact_content.direct_email_label}}{{else}}Email{{/if}}
                                </p>
                                <p class="theme-text-secondary">
                                    <a href="mailto:{{contactEmail}}" class="theme-accent hover:underline">{{contactEmail}}</a>
                                </p>
                            </div>
                        </div>
                        
                        {{#if contactPhone}}
                        <div class="flex items-center">
                            <div class="theme-accent w-12 h-12 rounded-full flex items-center justify-center mr-4">
                                <svg class="w-6 h-6 theme-text-inverted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                </svg>
                            </div>
                            <div>
                                <p class="font-medium theme-text-primary">
                                    {{#if contact_content.direct_phone_label}}{{contact_content.direct_phone_label}}{{else}}Phone{{/if}}
                                </p>
                                <p class="theme-text-secondary">
                                    <a href="tel:{{contactPhone}}" class="theme-accent hover:underline">{{contactPhone}}</a>
                                </p>
                            </div>
                        </div>
                        {{/if}}
                        
                        <div class="flex items-center">
                            <div class="theme-accent w-12 h-12 rounded-full flex items-center justify-center mr-4">
                                <svg class="w-6 h-6 theme-text-inverted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                            </div>
                            <div>
                                <p class="font-medium theme-text-primary text-sm">
                                    {{#if contact_content.direct_response_text}}{{contact_content.direct_response_text}}{{else}}I typically respond within 2-4 hours{{/if}}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                {{/if}}
                
                <!-- Booking Guidelines -->
                {{#if contact_content.contact_guidelines_visible}}
                <div class="theme-card p-8 hover:shadow-lg transition-shadow" data-aos="fade-up" data-aos-delay="300">
                    <h3 class="text-xl font-bold mb-4 theme-header">
                        {{#if contact_content.guidelines_title}}{{contact_content.guidelines_title}}{{else}}Booking Guidelines{{/if}}
                    </h3>
                    <div class="space-y-3">
                        {{#if contact_content.guideline_1}}
                        <div class="flex items-start">
                            <div class="theme-accent w-2 h-2 rounded-full mt-2 mr-3 flex-shrink-0"></div>
                            <span class="theme-text-secondary">{{contact_content.guideline_1}}</span>
                        </div>
                        {{/if}}
                        {{#if contact_content.guideline_2}}
                        <div class="flex items-start">
                            <div class="theme-accent w-2 h-2 rounded-full mt-2 mr-3 flex-shrink-0"></div>
                            <span class="theme-text-secondary">{{contact_content.guideline_2}}</span>
                        </div>
                        {{/if}}
                        {{#if contact_content.guideline_3}}
                        <div class="flex items-start">
                            <div class="theme-accent w-2 h-2 rounded-full mt-2 mr-3 flex-shrink-0"></div>
                            <span class="theme-text-secondary">{{contact_content.guideline_3}}</span>
                        </div>
                        {{/if}}
                        {{#if contact_content.guideline_4}}
                        <div class="flex items-start">
                            <div class="theme-accent w-2 h-2 rounded-full mt-2 mr-3 flex-shrink-0"></div>
                            <span class="theme-text-secondary">{{contact_content.guideline_4}}</span>
                        </div>
                        {{/if}}
                    </div>
                </div>
                {{/if}}
                
                <!-- Location & Services -->
                {{#if contact_content.contact_location_visible}}
                <div class="theme-card p-8 hover:shadow-lg transition-shadow" data-aos="fade-up" data-aos-delay="400">
                    <h3 class="text-xl font-bold mb-4 theme-header">
                        {{#if contact_content.location_title}}{{contact_content.location_title}}{{else}}Location & Services{{/if}}
                    </h3>
                    <div class="space-y-3">
                        {{#if contact_content.location_area_text}}
                        <div class="flex items-start">
                            <div class="theme-accent w-2 h-2 rounded-full mt-2 mr-3 flex-shrink-0"></div>
                            <span class="theme-text-secondary">{{contact_content.location_area_text}}</span>
                        </div>
                        {{/if}}
                        {{#if contact_content.location_services_text}}
                        <div class="flex items-start">
                            <div class="theme-accent w-2 h-2 rounded-full mt-2 mr-3 flex-shrink-0"></div>
                            <span class="theme-text-secondary">{{contact_content.location_services_text}}</span>
                        </div>
                        {{/if}}
                    </div>
                </div>
                {{/if}}
                
                <!-- Privacy & Discretion -->
                {{#if contact_content.contact_privacy_visible}}
                <div class="theme-accent-bg theme-text-inverted p-6 rounded-2xl shadow-lg" data-aos="fade-up" data-aos-delay="500">
                    <h3 class="text-lg font-bold mb-3">
                        {{#if contact_content.privacy_title}}{{contact_content.privacy_title}}{{else}}Privacy & Discretion{{/if}}
                    </h3>
                    <p class="text-sm leading-relaxed opacity-90">
                        {{#if contact_content.privacy_text}}{{contact_content.privacy_text}}{{else}}All communications are handled with the utmost discretion and confidentiality. Your privacy is my priority.{{/if}}
                    </p>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</section>

<!-- Contact Form JavaScript -->
<script>
// Contact form handling with spam protection
let lastSubmitTime = 0;
const SUBMIT_COOLDOWN = 5000; // 5 seconds

document.getElementById('contactForm')?.addEventListener('submit', function(e) {
    e.preventDefault();
    
    // Throttle submissions
    const now = Date.now();
    if (now - lastSubmitTime < SUBMIT_COOLDOWN) {
        showError('Please wait before submitting again.');
        return;
    }
    
    // Get form data
    const formData = new FormData(this);
    const data = Object.fromEntries(formData);
    
    // Check honeypot
    if (data.website) {
        // Silent fail for bots
        return;
    }
    
    // Clear previous errors
    clearErrors();
    
    // Validate required fields
    let hasErrors = false;
    
    if (!data.name?.trim()) {
        showFieldError('name', 'Name is required.');
        hasErrors = true;
    }
    
    if (!data.email?.trim()) {
        showFieldError('email', 'Email is required.');
        hasErrors = true;
    } else if (!isValidEmail(data.email)) {
        showFieldError('email', 'Please enter a valid email address.');
        hasErrors = true;
    }
    
    if (!data.message?.trim()) {
        showFieldError('message', 'Message is required.');
        hasErrors = true;
    }
    
    if (hasErrors) return;
    
    // Show loading state
    const submitBtn = document.getElementById('submitBtn');
    const buttonText = submitBtn.querySelector('.button-text');
    const spinner = submitBtn.querySelector('.spinner');
    
    submitBtn.disabled = true;
    buttonText.classList.add('hidden');
    spinner.classList.remove('hidden');
    
    // Submit form to backend
    fetch(window.location.pathname, {
        method: 'POST',
        body: formData
    })
    .then(response => {
        if (response.ok) {
            return response.json();
        }
        throw new Error('Network response was not ok');
    })
    .then(result => {
        lastSubmitTime = now;
        
        // Reset button state
        submitBtn.disabled = false;
        buttonText.classList.remove('hidden');
        spinner.classList.add('hidden');
        
        // Show success message
        alert('Thank you for your message! I will get back to you soon.');
        
        // Reset form
        this.reset();
    })
    .catch(error => {
        // Reset button state
        submitBtn.disabled = false;
        buttonText.classList.remove('hidden');
        spinner.classList.add('hidden');
        
        // Show error message
        showError('Sorry, there was an error sending your message. Please try again.');
    });
});

function showFieldError(fieldName, message) {
    const field = document.getElementById(fieldName);
    const errorDiv = field.parentElement.querySelector('.error-message');
    
    field.classList.add('border-red-500');
    field.classList.add('focus:ring-red-500');
    errorDiv.textContent = message;
    errorDiv.classList.remove('hidden');
}

function clearErrors() {
    document.querySelectorAll('.contact-input').forEach(input => {
        input.classList.remove('border-red-500', 'focus:ring-red-500');
    });
    document.querySelectorAll('.error-message').forEach(error => {
        error.classList.add('hidden');
    });
}

function showError(message) {
    alert(message);
}

function isValidEmail(email) {
    return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
}

// Enhanced focus styles using theme accent color
document.addEventListener('DOMContentLoaded', function() {
    const inputs = document.querySelectorAll('.contact-input');
    inputs.forEach(input => {
        input.addEventListener('focus', function() {
            this.style.borderColor = 'var(--theme-accent)';
            this.style.boxShadow = `0 0 0 3px color-mix(in srgb, var(--theme-accent), transparent 75%)`;
        });
        
        input.addEventListener('blur', function() {
            if (!this.classList.contains('border-red-500')) {
                this.style.borderColor = 'var(--theme-border-primary)';
                this.style.boxShadow = 'none';
            }
        });
    });
});
</script>

<!-- Contact Form Styles -->
<style>
/* Contact form responsive adjustments */
@media (max-width: 768px) {
    .grid.md\\:grid-cols-2 {
        gap: 1.5rem;
    }
    
    .space-y-8 > * + * {
        margin-top: 1.5rem;
    }
    
    #submitBtn {
        width: 100%;
    }
}

/* Contact input transitions */
