<!-- Dark Sophisticated Boudoir About Page -->

<!-- Hero Section -->
<section class="boudoir-hero boudoir-section" style="min-height: 60vh; {{#if heroBackgroundImageUrl}}background: var(--theme-bg);{{else}}background: linear-gradient(135deg, var(--theme-bg), var(--theme-bg-alt));{{/if}}">
    
    <!-- Silk Decorative Background Elements -->
    <div class="silk-accent silk-accent-1" data-parallax="0.3"></div>
    <div class="silk-accent silk-accent-2" data-parallax="0.5"></div>

    <!-- Parallax Background Image -->
    {{#if heroBackgroundImageUrl}}
    <div class="boudoir-hero-backdrop" 
         style="background-image: url('{{heroBackgroundImageUrl}}'); opacity: {{#if content.hero_background_opacity}}{{content.hero_background_opacity}}{{else}}0.4{{/if}};"
         data-parallax="0.5"></div>
    <div class="boudoir-hero-overlay"></div>
    {{/if}}

    <div class="boudoir-container">
        <div class="boudoir-hero-content">
            <h1 class="boudoir-title" 
                style="font-size: clamp(3rem, 6vw, 5rem); margin-bottom: var(--space-md);"
                data-aos="fade-up" data-aos-duration="1200">
                {{#if content.page_title}}{{content.page_title}}{{else}}About {{siteName}}{{/if}}
            </h1>
            
            <p style="font-size: clamp(1.1rem, 2.5vw, 1.4rem); color: var(--theme-text-subtle); max-width: 600px; margin: 0 auto;"
               data-aos="fade-up" data-aos-delay="300">
                {{#if content.page_subtitle}}{{content.page_subtitle}}{{else}}Sophisticated elegance with refined taste{{/if}}
            </p>
        </div>
    </div>
</section>

<!-- Main Bio Section -->
<section class="boudoir-section" style="background: var(--theme-bg-alt);">
    <div class="boudoir-container">
        <div class="boudoir-grid boudoir-grid-2" style="align-items: center; gap: var(--space-3xl);">
            
            <!-- Portrait Image -->
            {{#if portraitImageUrl}}
            <div data-aos="fade-right" data-aos-duration="800">
                <div style="position: relative; border-radius: var(--radius-xl); overflow: hidden; box-shadow: var(--shadow-xl);">
                    <img src="{{portraitImageUrl}}" 
                         alt="{{portraitAlt}}" 
                         style="width: 100%; height: 700px; object-fit: cover;">
                    <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: linear-gradient(135deg, transparent 60%, rgba(212, 175, 55, 0.15) 100%);"></div>
                </div>
            </div>
            {{/if}}
            
            <!-- Bio Content -->
            <div {{#unless portraitImageUrl}}style="grid-column: 1 / -1;"{{/unless}} data-aos="fade-left" data-aos-duration="800">
                <div class="boudoir-card-luxury" style="padding: var(--space-2xl);">
                    
                    {{#if content.mission_statement_visible}}
                    <div style="margin-bottom: var(--space-xl);">
                        <h3 style="font-family: var(--font-accent); font-size: 1.8rem; color: var(--theme-accent); margin-bottom: var(--space-md);">
                            My Philosophy
                        </h3>
                        <p style="font-size: 1.1rem; line-height: 1.8; color: var(--theme-text-subtle);">
                            {{#if content.mission_statement}}{{content.mission_statement}}{{else}}I believe in creating authentic connections through sophisticated encounters that celebrate elegance, discretion, and mutual respect.{{/if}}
                        </p>
                    </div>
                    {{/if}}

                    {{#if content.bio_text}}
                    <div style="margin-bottom: var(--space-xl);">
                        <h3 style="font-family: var(--font-accent); font-size: 1.8rem; color: var(--theme-accent); margin-bottom: var(--space-md);">
                            About Me
                        </h3>
                        <div style="font-size: 1.05rem; line-height: 1.7; color: var(--theme-text);">
                            {{{content.bio_text}}}
                        </div>
                    </div>
                    {{/if}}

                    {{#if content.interests_visible}}
                    <div>
                        <h3 style="font-family: var(--font-accent); font-size: 1.8rem; color: var(--theme-accent); margin-bottom: var(--space-md);">
                            Interests & Passions
                        </h3>
                        <div style="font-size: 1.05rem; line-height: 1.7; color: var(--theme-text);">
                            {{#if content.interests_text}}
                                {{{content.interests_text}}}
                            {{else}}
                                Fine dining, art galleries, classical music, literature, travel, and meaningful conversations that stimulate both mind and spirit.
                            {{/if}}
                        </div>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Quick Facts Section -->
{{#if content.quick_facts_visible}}
<section class="boudoir-section" style="background: var(--theme-bg);">
    <div class="boudoir-container">
        <div style="text-align: center; margin-bottom: var(--space-3xl);" data-aos="fade-up">
            <span class="boudoir-script" style="font-size: 1.5rem; display: block; margin-bottom: var(--space-sm);">Details</span>
            <h2 class="boudoir-title" style="font-size: clamp(2.5rem, 5vw, 4rem); margin-bottom: var(--space-md);">
                {{#if content.quick_facts_title}}{{content.quick_facts_title}}{{else}}Quick Facts{{/if}}
            </h2>
        </div>
        
        <div class="boudoir-grid boudoir-grid-4" style="max-width: 1000px; margin: 0 auto;">
            {{#each quickFacts}}
            <div class="boudoir-card" style="text-align: center; padding: var(--space-xl);" data-aos="fade-up" data-aos-delay="{{multiply @index 100}}">
                <h4 style="color: var(--theme-primary); font-size: 1rem; text-transform: uppercase; letter-spacing: 1px; margin-bottom: var(--space-md); font-weight: 600;">{{question}}</h4>
                <p style="color: var(--theme-text); font-weight: 500; font-size: 1.1rem; line-height: 1.4;">{{answer}}</p>
            </div>
            {{/each}}
        </div>
    </div>
</section>
{{/if}}

<!-- Services Preview Section -->
{{#if content.services_visible}}
<section class="boudoir-section" style="background: var(--theme-surface);">
    <div class="boudoir-container">
        <div style="text-align: center; margin-bottom: var(--space-3xl);" data-aos="fade-up">
            <span class="boudoir-script" style="font-size: 1.5rem; display: block; margin-bottom: var(--space-sm);">What I Offer</span>
            <h2 class="boudoir-title" style="font-size: clamp(2.5rem, 5vw, 4rem); margin-bottom: var(--space-md);">
                {{#if content.services_title}}{{content.services_title}}{{else}}Premium Services{{/if}}
            </h2>
            <p style="font-size: 1.1rem; color: var(--theme-text-subtle); max-width: 600px; margin: 0 auto;">
                {{#if content.services_description}}{{content.services_description}}{{else}}Curated experiences tailored to discerning individuals{{/if}}
            </p>
        </div>
        
        {{#if services}}
        <div class="boudoir-grid boudoir-grid-3">
            {{#each services}}
            <div class="boudoir-card" style="text-align: center; padding: var(--space-xl);" data-aos="fade-up" data-aos-delay="{{multiply @index 150}}">
                <h3 style="font-size: 1.4rem; color: var(--theme-text); margin-bottom: var(--space-sm);">{{name}}</h3>
                
                <div style="background: linear-gradient(135deg, var(--theme-primary), var(--theme-accent)); color: var(--theme-bg); padding: var(--space-sm) var(--space-md); border-radius: var(--radius-md); font-weight: 700; font-size: 1.1rem; margin-bottom: var(--space-md); display: inline-block;">
                    ${{price}}
                </div>
                
                <p style="color: var(--theme-text-subtle); line-height: 1.6; margin-bottom: var(--space-md);">
                    {{description}}
                </p>
                
                <div style="color: var(--theme-text-subtle); font-size: 0.9rem;">
                    <svg width="16" height="16" viewBox="0 0 16 16" style="margin-right: var(--space-xs);" fill="currentColor">
                        <path d="M8 0C3.6 0 0 3.6 0 8s3.6 8 8 8 8-3.6 8-8-3.6-8-8-8zm3.5 9L7 10.5v-5h1.5v4.2l2.8 1.3-.8 1.5z"/>
                    </svg>
                    {{duration}} {{#if duration_unit}}{{duration_unit}}{{else}}hour{{/if}}{{#if (gt duration 1)}}s{{/if}}
                </div>
            </div>
            {{/each}}
        </div>
        {{/if}}
        
        <div style="text-align: center; margin-top: var(--space-xl);">
            <a href="/{{modelSlug}}/rates{{previewParam}}" class="boudoir-btn boudoir-btn-primary">
                <span>View All Services</span>
                <svg width="16" height="16" viewBox="0 0 16 16" style="margin-left: var(--space-xs);" fill="currentColor">
                    <path d="M8 0L6.59 1.41L12.17 7H0V9H12.17L6.59 14.59L8 16L16 8L8 0Z"/>
                </svg>
            </a>
        </div>
    </div>
</section>
{{/if}}

<!-- Call to Action Section -->
{{#if content.cta_visible}}
<section class="boudoir-section" style="background: linear-gradient(135deg, var(--theme-bg-alt), var(--theme-bg)); position: relative; overflow: hidden;">
    
    <!-- Background Decorations -->
    <div class="silk-accent silk-accent-1" style="top: 20%; left: 10%;"></div>
    <div class="silk-accent silk-accent-2" style="bottom: 20%; right: 10%;"></div>
    
    <div class="boudoir-container" style="position: relative; z-index: 10;">
        <div style="text-align: center; max-width: 700px; margin: 0 auto;" data-aos="zoom-in">
            <div class="boudoir-card-luxury" style="padding: var(--space-3xl);">
                <h2 class="boudoir-title" style="font-size: clamp(2.5rem, 5vw, 4rem); margin-bottom: var(--space-md);">
                    {{#if content.cta_title}}{{content.cta_title}}{{else}}Let's Connect{{/if}}
                </h2>
                
                <p style="font-size: 1.1rem; color: var(--theme-text-subtle); margin-bottom: var(--space-xl); line-height: 1.6;">
                    {{#if content.cta_description}}{{content.cta_description}}{{else}}Ready to experience sophisticated companionship? I look forward to our conversation and creating memorable moments together.{{/if}}
                </p>
                
                <div style="display: flex; gap: var(--space-md); justify-content: center; flex-wrap: wrap;">
                    <a href="/{{modelSlug}}/contact{{previewParam}}" class="boudoir-btn boudoir-btn-primary" style="font-size: 1.1rem; padding: var(--space-md) var(--space-xl);">
                        {{#if content.cta_button_1_text}}{{content.cta_button_1_text}}{{else}}Contact Me{{/if}}
                    </a>
                    <a href="/{{modelSlug}}/calendar{{previewParam}}" class="boudoir-btn boudoir-btn-secondary" style="font-size: 1.1rem; padding: var(--space-md) var(--space-xl);">
                        {{#if content.cta_button_2_text}}{{content.cta_button_2_text}}{{else}}Check Availability{{/if}}
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
{{/if}}