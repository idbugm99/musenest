<!-- Universal Gallery System for Dark Theme -->
{{{renderUniversalGallery modelSlug previewTheme=previewThemeId}}}

<!-- Load Universal Gallery System CSS and JavaScript -->
<link rel="stylesheet" href="/templates/universal/gallery-styles.css">
<script src="/templates/universal/gallery-script.js"></script>

<!-- Dark Theme Gallery CSS Variables Override -->
<style>
:root {
    --gallery-primary: #8b5cf6;
    --gallery-primary-hover: #7c3aed;
    --gallery-secondary: #6b46c1;
    --gallery-accent: #a855f7;
    --gallery-background: #111827;
    --gallery-surface: #1f2937;
    --gallery-text: #f9fafb;
    --gallery-text-muted: #d1d5db;
    --gallery-border: #374151;
    --gallery-shadow: rgba(0, 0, 0, 0.3);
    --gallery-shadow-hover: rgba(139, 92, 246, 0.3);
    
    --gallery-border-radius: 8px;
    --gallery-border-radius-large: 12px;
    --gallery-grid-columns-desktop: 3;
    --gallery-transition-duration: 0.3s;
    --gallery-hover-lift: -2px;
    --gallery-hover-scale: 1.05;
}
</style>

<!-- Dark Theme Gallery Custom Page Styles -->
<style>
/* Dark Theme Gallery Specific Styling */
.universal-gallery .gallery-hero {
    background: linear-gradient(135deg, #8b5cf6, #7c3aed);
    color: white;
}

.universal-gallery .gallery-hero .hero-badge {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    border: 2px solid rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(10px);
}

/* Dark Theme Gallery Items */
.universal-gallery .gallery-grid-item {
    background: #1f2937;
    border: 1px solid #374151;
}

.universal-gallery .gallery-grid-item:hover {
    border-color: var(--gallery-primary);
    box-shadow: 0 4px 15px rgba(139, 92, 246, 0.3);
}

/* Dark Theme Gallery Sections */
.universal-gallery .gallery-section-title {
    color: var(--gallery-primary);
}

/* Dark Theme Carousel Styling */
.universal-gallery .gallery-carousel-container {
    background: rgba(31, 41, 55, 0.8);
    border: 1px solid #374151;
}

.universal-gallery .gallery-carousel-nav {
    background: rgba(255, 255, 255, 0.9);
    color: #374151;
}

.universal-gallery .gallery-carousel-nav:hover {
    background: rgba(255, 255, 255, 1);
}

.universal-gallery .gallery-carousel-dot {
    background: #94a3b8;
}

.universal-gallery .gallery-carousel-dot.active {
    background: var(--gallery-primary);
}

/* Dark Theme Empty State */
.universal-gallery .gallery-empty-state {
    background: #1f2937;
    border: 1px solid #374151;
    color: var(--gallery-text);
}

.universal-gallery .gallery-empty-icon {
    background: var(--gallery-primary);
}

/* Dark Theme CTA Section */
.universal-gallery .gallery-cta {
    background: linear-gradient(135deg, #8b5cf6, #7c3aed);
    color: white;
}

.universal-gallery .gallery-cta-badge {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    border: 2px solid rgba(255, 255, 255, 0.3);
}

.universal-gallery .gallery-cta-primary {
    background: white;
    color: #8b5cf6;
}

.universal-gallery .gallery-cta-primary:hover {
    background: #f3f4f6;
}

.universal-gallery .gallery-cta-secondary {
    border: 2px solid white;
    background: transparent;
    color: white;
}

.universal-gallery .gallery-cta-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
}
</style>