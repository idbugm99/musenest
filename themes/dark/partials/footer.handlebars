<!-- Dark Footer -->
<footer class="py-5" style="background: var(--dark-surface); border-top: 1px solid var(--dark-border);">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="d-flex align-items-center">
                    <i class="fas fa-terminal text-dark-primary me-2 fs-4"></i>
                    <div>
                        <h5 class="mb-1 dark-heading text-dark-primary">{{siteName}}</h5>
                        <p class="mb-0 text-dark-muted small dark-mono">Professional Services</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 text-md-end mt-3 mt-md-0">
                {{#if socialLinks}}
                <div class="mb-3">
                    {{#each socialLinks}}
                    <a href="{{this.url}}" class="btn btn-outline-light btn-sm me-2 dark-btn-outline" style="width: 40px; height: 40px; border-radius: 10px;">
                        <i class="fab fa-{{this.icon}}"></i>
                    </a>
                    {{/each}}
                </div>
                {{/if}}
                <p class="mb-0 text-dark-muted small dark-mono">
                    &copy; {{currentYear}} {{siteName}}. All rights reserved.
                </p>
            </div>
        </div>
    </div>
</footer>