<nav style="background: var(--theme-surface); border-bottom: 1px solid var(--theme-border); padding: 1rem 0; position: static; z-index: 100;">
    <div class="boudoir-container" style="display: flex; align-items: center; justify-content: space-between;">
        <a href="/" style="display: flex; align-items: center; gap: 0.75rem; color: var(--theme-accent); text-decoration: none; font-family: var(--font-display); font-size: 1.5rem; font-weight: 600;">
            <svg width="32" height="32" viewBox="0 0 80 80" style="color: var(--theme-primary);">
                <defs>
                    <linearGradient id="nav-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                        <stop offset="0%" style="stop-color:var(--theme-primary);stop-opacity:1" />
                        <stop offset="100%" style="stop-color:var(--theme-accent);stop-opacity:1" />
                    </linearGradient>
                </defs>
                <circle cx="40" cy="40" r="30" fill="none" stroke="url(#nav-gradient)" stroke-width="3" opacity="0.8"/>
                <circle cx="40" cy="40" r="8" fill="url(#nav-gradient)" opacity="0.9"/>
            </svg>
            {{siteName}}
        </a>
        
        <ul style="display: flex; list-style: none; margin: 0; padding: 0; gap: 2rem; align-items: center;">
            <li><a href="/{{modelSlug}}{{previewParam}}" style="color: var(--theme-text); text-decoration: none; font-weight: 500; padding: 0.5rem 1rem; border-radius: var(--radius-md); transition: all 0.3s ease; {{#if (eq pageType 'home')}}background: var(--theme-primary); color: var(--theme-bg);{{/if}}" class="{{#if (eq pageType 'home')}}active{{/if}}">Home</a></li>
            <li><a href="/{{modelSlug}}/about{{previewParam}}" style="color: var(--theme-text); text-decoration: none; font-weight: 500; padding: 0.5rem 1rem; border-radius: var(--radius-md); transition: all 0.3s ease; {{#if (eq pageType 'about')}}background: var(--theme-primary); color: var(--theme-bg);{{/if}}" class="{{#if (eq pageType 'about')}}active{{/if}}">About</a></li>
            <li><a href="/{{modelSlug}}/gallery{{previewParam}}" style="color: var(--theme-text); text-decoration: none; font-weight: 500; padding: 0.5rem 1rem; border-radius: var(--radius-md); transition: all 0.3s ease; {{#if (eq pageType 'gallery')}}background: var(--theme-primary); color: var(--theme-bg);{{/if}}" class="{{#if (eq pageType 'gallery')}}active{{/if}}">Gallery</a></li>
            <li><a href="/{{modelSlug}}/rates{{previewParam}}" style="color: var(--theme-text); text-decoration: none; font-weight: 500; padding: 0.5rem 1rem; border-radius: var(--radius-md); transition: all 0.3s ease; {{#if (eq pageType 'rates')}}background: var(--theme-primary); color: var(--theme-bg);{{/if}}" class="{{#if (eq pageType 'rates')}}active{{/if}}">Rates</a></li>
            <li><a href="/{{modelSlug}}/etiquette{{previewParam}}" style="color: var(--theme-text); text-decoration: none; font-weight: 500; padding: 0.5rem 1rem; border-radius: var(--radius-md); transition: all 0.3s ease; {{#if (eq pageType 'etiquette')}}background: var(--theme-primary); color: var(--theme-bg);{{/if}}" class="{{#if (eq pageType 'etiquette')}}active{{/if}}">Etiquette</a></li>
            <li><a href="/{{modelSlug}}/calendar{{previewParam}}" style="color: var(--theme-text); text-decoration: none; font-weight: 500; padding: 0.5rem 1rem; border-radius: var(--radius-md); transition: all 0.3s ease; {{#if (eq pageType 'calendar')}}background: var(--theme-primary); color: var(--theme-bg);{{/if}}" class="{{#if (eq pageType 'calendar')}}active{{/if}}">Calendar</a></li>
            <li><a href="/{{modelSlug}}/contact{{previewParam}}" style="color: var(--theme-text); text-decoration: none; font-weight: 500; padding: 0.5rem 1rem; border-radius: var(--radius-md); transition: all 0.3s ease; {{#if (eq pageType 'contact')}}background: var(--theme-primary); color: var(--theme-bg);{{/if}}" class="{{#if (eq pageType 'contact')}}active{{/if}}">Contact</a></li>
        </ul>
    </div>
</nav>