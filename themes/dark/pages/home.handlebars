<!-- Dark Hero Section -->
<section class="dark-hero min-vh-100 d-flex align-items-center text-white position-relative" data-aos="fade-in">
    <div class="container position-relative" style="z-index: 10;">
        <div class="row justify-content-center text-center">
            <div class="col-lg-10">
                <div class="dark-badge mb-4" data-aos="fade-up" data-aos-delay="100">
                    Welcome
                </div>
                <h1 class="display-1 fw-bold mb-4 dark-heading" data-aos="fade-up" data-aos-delay="200">
                    {{siteName}}
                </h1>
                <p class="fs-4 text-dark-muted mb-5 mx-auto" style="max-width: 600px;" data-aos="fade-up" data-aos-delay="300">
                    {{content.heroSubtitle}}
                </p>
                <div class="d-flex flex-column flex-sm-row justify-content-center gap-3" data-aos="fade-up" data-aos-delay="400">
                    <a href="/{{modelSlug}}/contact" class="dark-btn fs-5 px-4 py-3">
                        <i class="fas fa-envelope me-2"></i>
                        Get Started
                    </a>
                    <a href="/{{modelSlug}}/gallery" class="dark-btn-outline fs-5 px-4 py-3">
                        <i class="fas fa-images me-2"></i>
                        View Work
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Animated Background Elements -->
    <div class="position-absolute top-0 start-0 w-100 h-100" style="z-index: 1;">
        <div class="position-absolute" style="top: 20%; left: 10%; width: 2px; height: 2px; background: var(--dark-primary); border-radius: 50%; animation: darkGlow 3s infinite;"></div>
        <div class="position-absolute" style="top: 60%; right: 15%; width: 3px; height: 3px; background: var(--dark-accent); border-radius: 50%; animation: darkGlow 4s infinite 1s;"></div>
        <div class="position-absolute" style="bottom: 30%; left: 20%; width: 1px; height: 1px; background: var(--dark-primary); border-radius: 50%; animation: darkGlow 2s infinite 2s;"></div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5 bg-dark-surface">
    <div class="container">
        <div class="text-center mb-5" data-aos="fade-up">
            <div class="dark-badge mb-3">Features</div>
            <h2 class="display-5 fw-bold dark-heading text-dark-primary mb-4">
                What Sets Me Apart
            </h2>
            <p class="fs-5 text-dark-muted mx-auto" style="max-width: 600px;">
                Professional excellence backed by cutting-edge approach
            </p>
        </div>
        
        {{#if features}}
        <div class="dark-grid dark-grid-3">
            {{#each features}}
            <div class="dark-card p-4 text-center" data-aos="fade-up" data-aos-delay="{{@index}}00">
                <div class="d-inline-flex align-items-center justify-content-center rounded-3 mb-4" 
                     style="width: 80px; height: 80px; background: linear-gradient(135deg, var(--dark-primary)20, var(--dark-accent)20); border: 2px solid var(--dark-primary);">
                    <i class="{{this.icon}} fs-2 text-dark-primary"></i>
                </div>
                <h4 class="fw-bold mb-3 dark-heading">{{this.title}}</h4>
                <p class="text-dark-muted">{{this.description}}</p>
            </div>
            {{/each}}
        </div>
        {{else}}
        <div class="dark-grid dark-grid-3">
            <div class="dark-card p-4 text-center" data-aos="fade-up" data-aos-delay="0">
                <div class="d-inline-flex align-items-center justify-content-center rounded-3 mb-4" 
                     style="width: 80px; height: 80px; background: linear-gradient(135deg, var(--dark-primary)20, var(--dark-accent)20); border: 2px solid var(--dark-primary);">
                    <i class="fas fa-rocket fs-2 text-dark-primary"></i>
                </div>
                <h4 class="fw-bold mb-3 dark-heading">Innovation</h4>
                <p class="text-dark-muted">Cutting-edge solutions for modern challenges</p>
            </div>
            <div class="dark-card p-4 text-center" data-aos="fade-up" data-aos-delay="100">
                <div class="d-inline-flex align-items-center justify-content-center rounded-3 mb-4" 
                     style="width: 80px; height: 80px; background: linear-gradient(135deg, var(--dark-primary)20, var(--dark-accent)20); border: 2px solid var(--dark-primary);">
                    <i class="fas fa-shield-alt fs-2 text-dark-primary"></i>
                </div>
                <h4 class="fw-bold mb-3 dark-heading">Reliability</h4>
                <p class="text-dark-muted">Consistent, professional service delivery</p>
            </div>
            <div class="dark-card p-4 text-center" data-aos="fade-up" data-aos-delay="200">
                <div class="d-inline-flex align-items-center justify-content-center rounded-3 mb-4" 
                     style="width: 80px; height: 80px; background: linear-gradient(135deg, var(--dark-primary)20, var(--dark-accent)20); border: 2px solid var(--dark-primary);">
                    <i class="fas fa-users fs-2 text-dark-primary"></i>
                </div>
                <h4 class="fw-bold mb-3 dark-heading">Personalized</h4>
                <p class="text-dark-muted">Tailored experiences for every client</p>
            </div>
        </div>
        {{/if}}
    </div>
</section>

<!-- Stats Section -->
{{#if stats}}
<section class="py-5" style="background: var(--dark-bg);">
    <div class="container">
        <div class="text-center mb-5" data-aos="fade-up">
            <div class="dark-badge mb-3">Metrics</div>
            <h2 class="display-5 fw-bold dark-heading text-dark-primary">
                By the Numbers
            </h2>
        </div>
        
        <div class="dark-grid dark-grid-4">
            {{#if stats.experience}}
            <div class="text-center" data-aos="fade-up" data-aos-delay="0">
                <div class="display-3 fw-bold text-dark-primary mb-2 dark-mono">{{stats.experience}}</div>
                <div class="text-dark-muted text-uppercase fw-bold small">Years Experience</div>
            </div>
            {{/if}}
            
            {{#if stats.clients}}
            <div class="text-center" data-aos="fade-up" data-aos-delay="100">
                <div class="display-3 fw-bold text-dark-primary mb-2 dark-mono">{{stats.clients}}</div>
                <div class="text-dark-muted text-uppercase fw-bold small">Happy Clients</div>
            </div>
            {{/if}}
            
            {{#if stats.projects}}
            <div class="text-center" data-aos="fade-up" data-aos-delay="200">
                <div class="display-3 fw-bold text-dark-primary mb-2 dark-mono">{{stats.projects}}</div>
                <div class="text-dark-muted text-uppercase fw-bold small">Projects</div>
            </div>
            {{/if}}
            
            {{#if stats.satisfaction}}
            <div class="text-center" data-aos="fade-up" data-aos-delay="300">
                <div class="display-3 fw-bold text-dark-primary mb-2 dark-mono">{{stats.satisfaction}}%</div>
                <div class="text-dark-muted text-uppercase fw-bold small">Satisfaction</div>
            </div>
            {{/if}}
        </div>
    </div>
</section>
{{/if}}

<!-- Services Preview -->
<section class="py-5 bg-dark-surface">
    <div class="container">
        <div class="text-center mb-5" data-aos="fade-up">
            <div class="dark-badge mb-3">Services</div>
            <h2 class="display-5 fw-bold dark-heading text-dark-primary mb-4">
                What I Offer
            </h2>
            <p class="fs-5 text-dark-muted mx-auto" style="max-width: 600px;">
                Professional services tailored to your specific needs
            </p>
        </div>
        
        {{#if services}}
        <div class="dark-grid dark-grid-3">
            {{#each services}}
            {{#if (lt @index 3)}}
            <div class="dark-card p-4" data-aos="fade-up" data-aos-delay="{{@index}}00">
                <div class="d-flex align-items-center mb-3">
                    <div class="d-inline-flex align-items-center justify-content-center rounded-3 me-3" 
                         style="width: 60px; height: 60px; background: var(--dark-card); border: 2px solid var(--dark-primary);">
                        <i class="{{this.icon}} fs-4 text-dark-primary"></i>
                    </div>
                    <h4 class="fw-bold mb-0 dark-heading">{{this.name}}</h4>
                </div>
                <p class="text-dark-muted mb-4">{{this.description}}</p>
                {{#if this.price}}
                <div class="d-flex justify-content-between align-items-center">
                    <span class="fs-4 fw-bold text-dark-primary dark-mono">{{formatCurrency this.price}}</span>
                    <a href="/{{../modelSlug}}/contact?service={{this.slug}}" class="dark-btn-outline">
                        Book Now
                    </a>
                </div>
                {{/if}}
            </div>
            {{/if}}
            {{/each}}
        </div>
        
        <div class="text-center mt-5" data-aos="fade-up">
            <a href="/{{modelSlug}}/rates" class="dark-btn fs-5 px-4 py-3">
                <i class="fas fa-list me-2"></i>
                View All Services
            </a>
        </div>
        {{else}}
        <div class="text-center py-5">
            <div class="d-inline-flex align-items-center justify-content-center rounded-3 mb-4" 
                 style="width: 120px; height: 120px; background: var(--dark-card); border: 2px solid var(--dark-primary);">
                <i class="fas fa-cogs fs-1 text-dark-primary"></i>
            </div>
            <h3 class="fw-bold mb-4 dark-heading">Professional Services</h3>
            <p class="text-dark-muted mb-4">Discover tailored solutions for your needs</p>
            <a href="/{{modelSlug}}/contact" class="dark-btn">
                <i class="fas fa-envelope me-2"></i>
                Get in Touch
            </a>
        </div>
        {{/if}}
    </div>
</section>

<!-- Call to Action -->
<section class="py-5" style="background: linear-gradient(135deg, var(--dark-primary)20, var(--dark-accent)20); border-top: 1px solid var(--dark-border); border-bottom: 1px solid var(--dark-border);">
    <div class="container text-center" data-aos="fade-up">
        <h2 class="display-5 fw-bold dark-heading text-dark-primary mb-4">
            Ready to Get Started?
        </h2>
        <p class="fs-5 text-dark-muted mb-5 mx-auto" style="max-width: 600px;">
            Let's discuss your project and bring your vision to life with professional expertise.
        </p>
        <div class="d-flex flex-column flex-sm-row justify-content-center gap-3">
            <a href="/{{modelSlug}}/contact" class="dark-btn fs-5 px-4 py-3">
                <i class="fas fa-envelope me-2"></i>
                Contact Me
            </a>
            <a href="/{{modelSlug}}/about" class="dark-btn-outline fs-5 px-4 py-3">
                <i class="fas fa-user me-2"></i>
                Learn More
            </a>
        </div>
    </div>
</section>