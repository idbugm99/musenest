<!-- Dark Sophisticated Boudoir About Page - Hero Section -->
<section class="boudoir-section" style="background: linear-gradient(135deg, var(--theme-primary), var(--theme-secondary)); min-height: 60vh; display: flex; align-items: center; justify-content: center; padding: 4rem 0; position: relative; overflow: hidden;">
    <!-- Boudoir Decorative Elements -->
    <div style="position: absolute; top: 20%; left: 10%; opacity: 0.6;">
        <svg width="64" height="64" viewBox="0 0 80 80" style="animation: silk-float 6s ease-in-out infinite; color: var(--theme-accent);">
            <rect x="30" y="30" width="20" height="20" fill="currentColor" opacity="0.7"/>
        </svg>
    </div>
    <div style="position: absolute; top: 30%; right: 15%; opacity: 0.4;">
        <svg width="64" height="64" viewBox="0 0 80 80" style="animation: silk-float 8s ease-in-out infinite; animation-delay: 2s; color: var(--theme-accent);">
            <circle cx="40" cy="40" r="8" fill="currentColor" opacity="0.8"/>
        </svg>
    </div>
    <div style="position: absolute; bottom: 20%; left: 70%; opacity: 0.5;">
        <svg width="32" height="32" viewBox="0 0 80 80" style="animation: silk-float 10s ease-in-out infinite; animation-delay: 4s; color: var(--theme-primary);">
            <circle cx="40" cy="40" r="5" fill="currentColor" opacity="0.9"/>
        </svg>
    </div>
    
    <div class="boudoir-container" style="position: relative; z-index: 2; width: 100%;">
        <!-- Page Header -->
        {{#if about_content.page_title_visible}}
        <div style="text-align: center; position: relative; z-index: 2;">
            <div style="margin-bottom: 2rem;">
                <svg width="80" height="80" viewBox="0 0 80 80" style="color: var(--theme-accent); animation: pulse 3s ease-in-out infinite;">
                    <defs>
                        <linearGradient id="about-crown-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                            <stop offset="0%" style="stop-color:var(--theme-accent);stop-opacity:1" />
                            <stop offset="100%" style="stop-color:var(--theme-primary);stop-opacity:1" />
                        </linearGradient>
                    </defs>
                    <circle cx="40" cy="40" r="35" fill="none" stroke="url(#about-crown-gradient)" stroke-width="3" opacity="0.8"/>
                    <circle cx="40" cy="40" r="12" fill="url(#about-crown-gradient)" opacity="0.9"/>
                </svg>
            </div>
            <h1 style="background: linear-gradient(45deg, var(--theme-accent), var(--theme-text)); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; font-family: var(--font-display); font-size: clamp(3rem, 6vw, 5rem);">
                {{#if about_content.page_title}}{{about_content.page_title}}{{else}}About {{model.name}}{{/if}}
            </h1>
            {{#if about_content.page_subtitle}}
            <p style="font-size: 1.2rem; color: var(--theme-text-subtle); max-width: 600px; margin: 0 auto;">
                {{about_content.page_subtitle}}
            </p>
            {{/if}}
        </div>
        {{/if}}
    </div>
</section>

<!-- About Content Section with Boudoir Background -->
<section style="padding: 5rem 0; background: var(--theme-bg);">
    <div class="boudoir-container">
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 4rem; align-items: center; margin-bottom: 4rem;">
            <!-- Portrait Section -->
            {{#if about_content.portrait_visible}}
            <div style="order: 1;">
                {{#if about_content.portraitImageUrl}}
                <div class="boudoir-card" style="padding: 0; overflow: hidden; position: relative;">
                    <img src="{{about_content.portraitImageUrl}}" 
                         alt="{{#if about_content.portrait_alt}}{{about_content.portrait_alt}}{{else}}Professional Portrait{{/if}}" 
                         style="width: 100%; height: 500px; object-fit: cover; display: block;">
                    <div style="position: absolute; bottom: 0; left: 0; right: 0; background: var(--theme-overlay); padding: 1rem; backdrop-filter: blur(5px);">
                        <div style="color: var(--theme-text); font-family: var(--font-display); font-size: 1.1rem; text-align: center;">
                            <svg width="24" height="24" viewBox="0 0 80 80" style="margin-right: 0.5rem; color: var(--theme-accent);">
                                <circle cx="40" cy="40" r="8" fill="currentColor" opacity="0.9"/>
                            </svg>
                            Exclusive & Professional
                        </div>
                    </div>
                </div>
                {{/if}}
            </div>
            {{/if}}
            
            <!-- Main Content -->
            {{#if about_content.main_content_visible}}
            <div style="order: 2;">
                <div class="boudoir-card-luxury">
                    <h2 style="color: var(--theme-accent); margin-bottom: 1.5rem; display: flex; align-items: center; gap: 0.5rem; font-family: var(--font-display);">
                        <svg width="32" height="32" viewBox="0 0 80 80" style="color: var(--theme-accent);">
                            <circle cx="40" cy="40" r="8" fill="currentColor" opacity="0.9"/>
                        </svg>
                        My Story
                    </h2>
                    <div style="color: var(--theme-text); line-height: 1.8; font-size: 1.1rem;">
                        {{#if about_content.main_paragraph_1}}
                            <p style="margin-bottom: 1rem;">{{about_content.main_paragraph_1}}</p>
                        {{/if}}
                        {{#if about_content.main_paragraph_2}}
                            <p style="margin-bottom: 1rem;">{{about_content.main_paragraph_2}}</p>
                        {{/if}}
                        {{#if about_content.main_paragraph_3}}
                            <p style="margin-bottom: 1rem;">{{about_content.main_paragraph_3}}</p>
                        {{/if}}
                        {{#if about_content.main_paragraph_4}}
                            <p style="margin-bottom: 1rem;">{{about_content.main_paragraph_4}}</p>
                        {{/if}}
                        {{#unless about_content.main_paragraph_1}}
                            <p style="margin-bottom: 1rem;">Welcome to my exclusive world. I am dedicated to providing sophisticated companionship and unforgettable experiences for discerning individuals who appreciate elegance, intelligence, and discretion.</p>
                            <p>My approach combines genuine warmth with professional excellence, ensuring every encounter is both memorable and meaningful.</p>
                        {{/unless}}
                    </div>
                </div>
            </div>
            {{/if}}
        </div>
        
        <!-- Services Section - Boudoir Styled -->
        {{#if about_content.services_visible}}
        <div class="boudoir-card-luxury" style="margin-bottom: 4rem; background: linear-gradient(135deg, var(--theme-surface), rgba(212, 175, 55, 0.02));">
            <h3 style="color: var(--theme-accent); text-align: center; margin-bottom: 3rem; display: flex; align-items: center; justify-content: center; gap: 0.8rem; font-size: 1.8rem; font-family: var(--font-display);">
                <svg width="64" height="64" viewBox="0 0 80 80" style="color: var(--theme-accent);">
                    <circle cx="40" cy="40" r="35" fill="none" stroke="currentColor" stroke-width="2" opacity="0.8"/>
                    <circle cx="40" cy="40" r="12" fill="currentColor" opacity="0.9"/>
                </svg>
                {{#if about_content.services_title}}{{about_content.services_title}}{{else}}My Services{{/if}}
            </h3>
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem;">
                {{#if about_content.service_1}}
                <div style="text-align: center; padding: 2rem; background: var(--theme-surface); border-radius: var(--radius-md); position: relative; overflow: hidden; transition: all 0.3s ease; box-shadow: var(--shadow-md);" onmouseover="this.style.transform='translateY(-5px)'; this.style.boxShadow='var(--shadow-lg)'" onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='var(--shadow-md)'">
                    <div style="position: absolute; top: -20px; right: -20px; opacity: 0.2; z-index: 1;">
                        <svg style="width: 60px; height: 60px; color: var(--theme-accent);" viewBox="0 0 80 80">
                            <rect x="30" y="30" width="20" height="20" fill="currentColor" opacity="0.7"/>
                        </svg>
                    </div>
                    <div style="position: relative; z-index: 2;">
                        <div style="margin-bottom: 1rem;">
                            <svg width="32" height="32" viewBox="0 0 80 80" style="color: var(--theme-accent);">
                                <circle cx="40" cy="40" r="8" fill="currentColor" opacity="0.9"/>
                            </svg>
                        </div>
                        <div style="color: var(--theme-text); font-size: 1.1rem; line-height: 1.7; font-weight: 500;">{{about_content.service_1}}</div>
                    </div>
                </div>
                {{/if}}
                {{#if about_content.service_2}}
                <div style="text-align: center; padding: 2rem; background: var(--theme-surface); border-radius: var(--radius-md); position: relative; overflow: hidden; transition: all 0.3s ease; box-shadow: var(--shadow-md);" onmouseover="this.style.transform='translateY(-5px)'; this.style.boxShadow='var(--shadow-lg)'" onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='var(--shadow-md)'">
                    <div style="position: absolute; top: -20px; right: -20px; opacity: 0.2; z-index: 1;">
                        <svg style="width: 60px; height: 60px; color: var(--theme-accent);" viewBox="0 0 80 80">
                            <circle cx="40" cy="40" r="8" fill="currentColor" opacity="0.8"/>
                        </svg>
                    </div>
                    <div style="position: relative; z-index: 2;">
                        <div style="margin-bottom: 1rem;">
                            <svg width="32" height="32" viewBox="0 0 80 80" style="color: var(--theme-accent);">
                                <rect x="25" y="25" width="30" height="30" fill="none" stroke="currentColor" stroke-width="2" opacity="0.8"/>
                            </svg>
                        </div>
                        <div style="color: var(--theme-text); font-size: 1.1rem; line-height: 1.7; font-weight: 500;">{{about_content.service_2}}</div>
                    </div>
                </div>
                {{/if}}
                {{#if about_content.service_3}}
                <div style="text-align: center; padding: 2rem; background: var(--theme-surface); border-radius: var(--radius-md); position: relative; overflow: hidden; transition: all 0.3s ease; box-shadow: var(--shadow-md);" onmouseover="this.style.transform='translateY(-5px)'; this.style.boxShadow='var(--shadow-lg)'" onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='var(--shadow-md)'">
                    <div style="position: absolute; top: -20px; right: -20px; opacity: 0.2; z-index: 1;">
                        <svg style="width: 60px; height: 60px; color: var(--theme-accent);" viewBox="0 0 80 80">
                            <circle cx="40" cy="40" r="5" fill="currentColor" opacity="0.9"/>
                        </svg>
                    </div>
                    <div style="position: relative; z-index: 2;">
                        <div style="margin-bottom: 1rem;">
                            <svg width="32" height="32" viewBox="0 0 80 80" style="color: var(--theme-accent);">
                                <path d="M40 10c-11 0-20 9-20 20 0 15 20 40 20 40s20-25 20-40c0-11-9-20-20-20zm0 27c-4 0-7-3-7-7s3-7 7-7 7 3 7 7-3 7-7 7z" fill="currentColor" opacity="0.8"/>
                            </svg>
                        </div>
                        <div style="color: var(--theme-text); font-size: 1.1rem; line-height: 1.7; font-weight: 500;">{{about_content.service_3}}</div>
                    </div>
                </div>
                {{/if}}
                {{#if about_content.service_4}}
                <div style="text-align: center; padding: 2rem; background: var(--theme-surface); border-radius: var(--radius-md); position: relative; overflow: hidden; transition: all 0.3s ease; box-shadow: var(--shadow-md);" onmouseover="this.style.transform='translateY(-5px)'; this.style.boxShadow='var(--shadow-lg)'" onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='var(--shadow-md)'">
                    <div style="position: absolute; top: -20px; right: -20px; opacity: 0.2; z-index: 1;">
                        <svg style="width: 60px; height: 60px; color: var(--theme-accent);" viewBox="0 0 80 80">
                            <circle cx="40" cy="40" r="8" fill="currentColor" opacity="0.8"/>
                        </svg>
                    </div>
                    <div style="position: relative; z-index: 2;">
                        <div style="margin-bottom: 1rem;">
                            <svg width="32" height="32" viewBox="0 0 80 80" style="color: var(--theme-accent);">
                                <circle cx="40" cy="40" r="8" fill="currentColor" opacity="0.9"/>
                            </svg>
                        </div>
                        <div style="color: var(--theme-text); font-size: 1.1rem; line-height: 1.7; font-weight: 500;">{{about_content.service_4}}</div>
                    </div>
                </div>
                {{/if}}
                {{#if about_content.service_5}}
                <div style="text-align: center; padding: 2rem; background: var(--theme-surface); border-radius: var(--radius-md); position: relative; overflow: hidden; transition: all 0.3s ease; box-shadow: var(--shadow-md);" onmouseover="this.style.transform='translateY(-5px)'; this.style.boxShadow='var(--shadow-lg)'" onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='var(--shadow-md)'">
                    <div style="position: absolute; top: -20px; right: -20px; opacity: 0.2; z-index: 1;">
                        <svg style="width: 60px; height: 60px; color: var(--theme-accent);" viewBox="0 0 80 80">
                            <circle cx="40" cy="40" r="35" fill="none" stroke="currentColor" stroke-width="2" opacity="0.5"/>
                            <circle cx="40" cy="40" r="15" fill="currentColor" opacity="0.3"/>
                        </svg>
                    </div>
                    <div style="position: relative; z-index: 2;">
                        <div style="margin-bottom: 1rem;">
                            <svg width="32" height="32" viewBox="0 0 80 80" style="color: var(--theme-accent);">
                                <circle cx="40" cy="40" r="8" fill="currentColor" opacity="0.9"/>
                            </svg>
                        </div>
                        <div style="color: var(--theme-text); font-size: 1.1rem; line-height: 1.7; font-weight: 500;">{{about_content.service_5}}</div>
                    </div>
                </div>
                {{/if}}
            </div>
        </div>
        {{/if}}
        
        <!-- Quick Facts Section -->
        {{#if about_content.facts_visible}}
        <div class="boudoir-card-luxury" style="margin-bottom: 4rem;">
            <h3 style="color: var(--theme-accent); text-align: center; margin-bottom: 2rem; display: flex; align-items: center; justify-content: center; gap: 0.5rem; font-family: var(--font-display); font-size: 1.8rem;">
                <svg width="32" height="32" viewBox="0 0 80 80" style="color: var(--theme-accent);">
                    <rect x="25" y="25" width="30" height="30" fill="none" stroke="currentColor" stroke-width="2" opacity="0.8"/>
                </svg>
                {{#if about_content.facts_title}}{{about_content.facts_title}}{{else}}At a Glance{{/if}}
            </h3>
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 2rem;">
                {{#if quickFacts}}
                    {{#each quickFacts}}
                    <div style="text-align: center; padding: 1.5rem; background: rgba(212, 175, 55, 0.05); border-radius: var(--radius-md); border: 1px solid var(--theme-border-muted);">
                        <div style="color: var(--theme-accent); font-weight: 600; margin-bottom: 0.5rem; font-family: var(--font-display);">{{this.question}}</div>
                        <div style="color: var(--theme-text);">{{this.answer}}</div>
                    </div>
                    {{/each}}
                {{else}}
                    <!-- Fallback facts if quickFacts array is empty -->
                    {{#if about_content.fact_age_visible}}
                    <div style="text-align: center; padding: 1.5rem; background: rgba(212, 175, 55, 0.05); border-radius: var(--radius-md); border: 1px solid var(--theme-border-muted);">
                        <div style="color: var(--theme-accent); font-weight: 600; margin-bottom: 0.5rem; font-family: var(--font-display);">Age</div>
                        <div style="color: var(--theme-text);">{{about_content.fact_age}}</div>
                    </div>
                    {{/if}}
                    {{#if about_content.fact_height_visible}}
                    <div style="text-align: center; padding: 1.5rem; background: rgba(212, 175, 55, 0.05); border-radius: var(--radius-md); border: 1px solid var(--theme-border-muted);">
                        <div style="color: var(--theme-accent); font-weight: 600; margin-bottom: 0.5rem; font-family: var(--font-display);">Height</div>
                        <div style="color: var(--theme-text);">{{about_content.fact_height}}</div>
                    </div>
                    {{/if}}
                    {{#if about_content.fact_languages_visible}}
                    <div style="text-align: center; padding: 1.5rem; background: rgba(212, 175, 55, 0.05); border-radius: var(--radius-md); border: 1px solid var(--theme-border-muted);">
                        <div style="color: var(--theme-accent); font-weight: 600; margin-bottom: 0.5rem; font-family: var(--font-display);">Languages</div>
                        <div style="color: var(--theme-text);">{{about_content.fact_languages}}</div>
                    </div>
                    {{/if}}
                    {{#if about_content.fact_education_visible}}
                    <div style="text-align: center; padding: 1.5rem; background: rgba(212, 175, 55, 0.05); border-radius: var(--radius-md); border: 1px solid var(--theme-border-muted);">
                        <div style="color: var(--theme-accent); font-weight: 600; margin-bottom: 0.5rem; font-family: var(--font-display);">Education</div>
                        <div style="color: var(--theme-text);">{{about_content.fact_education}}</div>
                    </div>
                    {{/if}}
                    {{#if about_content.fact_availability_visible}}
                    <div style="text-align: center; padding: 1.5rem; background: rgba(212, 175, 55, 0.05); border-radius: var(--radius-md); border: 1px solid var(--theme-border-muted);">
                        <div style="color: var(--theme-accent); font-weight: 600; margin-bottom: 0.5rem; font-family: var(--font-display);">Availability</div>
                        <div style="color: var(--theme-text);">{{about_content.fact_availability}}</div>
                    </div>
                    {{/if}}
                {{/if}}
            </div>
        </div>
        {{/if}}
        
        <!-- Interests Section -->
        {{#if about_content.interests_visible}}
        {{#if about_content.interests}}
        <div class="boudoir-card-luxury" style="margin-bottom: 4rem;">
            <h3 style="color: var(--theme-accent); text-align: center; margin-bottom: 2rem; display: flex; align-items: center; justify-content: center; gap: 0.5rem; font-family: var(--font-display); font-size: 1.8rem;">
                <svg width="32" height="32" viewBox="0 0 80 80" style="color: var(--theme-accent);">
                    <path d="M40 10c-11 0-20 9-20 20 0 15 20 40 20 40s20-25 20-40c0-11-9-20-20-20zm0 27c-4 0-7-3-7-7s3-7 7-7 7 3 7 7-3 7-7 7z" fill="currentColor" opacity="0.8"/>
                </svg>
                {{#if about_content.interests_title}}{{about_content.interests_title}}{{else}}Interests & Passions{{/if}}
            </h3>
            <div style="display: flex; flex-wrap: wrap; gap: 1rem; justify-content: center;">
                {{#each (split about_content.interests ',')}}
                <span style="background: linear-gradient(45deg, var(--theme-accent), var(--theme-primary)); color: var(--theme-bg); padding: 0.5rem 1rem; border-radius: var(--radius-sm); font-weight: 500; box-shadow: var(--shadow-sm);">
                    {{trim this}}
                </span>
                {{/each}}
            </div>
        </div>
        {{/if}}
        {{/if}}
        
        <!-- Call to Action -->
        {{#if about_content.about_cta_visible}}
        <div class="boudoir-card-luxury" style="text-align: center; background: linear-gradient(135deg, var(--theme-surface), var(--theme-bg-alt)); position: relative; overflow: hidden;">
            <div style="position: absolute; top: -20px; right: -20px; opacity: 0.3;">
                <svg style="width: 100px; height: 100px; color: var(--theme-accent);" viewBox="0 0 80 80">
                    <circle cx="40" cy="40" r="35" fill="none" stroke="currentColor" stroke-width="2" opacity="0.5"/>
                    <circle cx="40" cy="40" r="15" fill="currentColor" opacity="0.3"/>
                </svg>
            </div>
            
            <div style="position: relative; z-index: 2;">
                <h3 style="color: var(--theme-text); margin-bottom: 1rem; font-family: var(--font-display); font-size: 2rem;">{{#if about_content.cta_title}}{{about_content.cta_title}}{{else}}Ready to Connect?{{/if}}</h3>
                <p style="color: var(--theme-text-subtle); margin-bottom: 2rem; font-size: 1.1rem;">
                    {{#if about_content.cta_description}}{{about_content.cta_description}}{{else}}I would love to hear from you and discuss how we can create an unforgettable experience together.{{/if}}
                </p>
                <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
                    {{#if about_content.cta_button_1_text}}
                    <a href="/{{model.slug}}/{{#if about_content.cta_button_1_link}}{{about_content.cta_button_1_link}}{{else}}calendar{{/if}}{{previewParam}}" class="boudoir-btn boudoir-btn-primary">
                        {{about_content.cta_button_1_text}}
                    </a>
                    {{/if}}
                    {{#if about_content.cta_button_2_text}}
                    <a href="/{{model.slug}}/{{#if about_content.cta_button_2_link}}{{about_content.cta_button_2_link}}{{else}}contact{{/if}}{{previewParam}}" class="boudoir-btn boudoir-btn-outline">
                        {{about_content.cta_button_2_text}}
                    </a>
                    {{/if}}
                </div>
            </div>
        </div>
        {{/if}}
    </div>
</section>

<style>
@keyframes silk-float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
}

@keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .boudoir-container > div[style*="grid-template-columns"] {
        grid-template-columns: 1fr !important;
        gap: 2rem !important;
    }
    
    .boudoir-container > div[style*="grid-template-columns"] > div {
        order: initial !important;
    }
    
    .boudoir-container img {
        height: 300px !important;
    }
}
</style>