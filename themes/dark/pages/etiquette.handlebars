<!-- Dark Sophisticated Boudoir Etiquette Page - Universal System Integration -->
<section class="boudoir-section" style="background: linear-gradient(135deg, var(--theme-primary), var(--theme-secondary)); min-height: 60vh; display: flex; align-items: center; justify-content: center; padding: 4rem 0; position: relative; overflow: hidden;">
    <!-- Boudoir Decorative Elements -->
    <div style="position: absolute; top: 10%; left: 5%; opacity: 0.3; z-index: 1;">
        <svg width="40" height="40" viewBox="0 0 80 80" style="animation: silk-float 9s ease-in-out infinite; color: var(--theme-accent);">
            <circle cx="40" cy="40" r="8" fill="currentColor" opacity="0.9"/>
        </svg>
    </div>
    <div style="position: absolute; top: 60%; right: 8%; opacity: 0.4; z-index: 1;">
        <svg width="32" height="32" viewBox="0 0 80 80" style="animation: silk-float 7s ease-in-out infinite; animation-delay: 3s; color: var(--theme-accent);">
            <path d="M40 10c-11 0-20 9-20 20 0 15 20 40 20 40s20-25 20-40c0-11-9-20-20-20zm0 27c-4 0-7-3-7-7s3-7 7-7 7 3 7 7-3 7-7 7z" fill="currentColor" opacity="0.8"/>
        </svg>
    </div>
    <div style="position: absolute; bottom: 15%; left: 90%; opacity: 0.5; z-index: 1;">
        <svg width="32" height="32" viewBox="0 0 80 80" style="animation: silk-float 11s ease-in-out infinite; animation-delay: 5s; color: var(--theme-primary);">
            <circle cx="40" cy="40" r="35" fill="none" stroke="currentColor" stroke-width="2" opacity="0.5"/>
            <circle cx="40" cy="40" r="15" fill="currentColor" opacity="0.3"/>
        </svg>
    </div>

    <div class="boudoir-container" style="position: relative; z-index: 2; width: 100%;">
        <!-- Page Header -->
        {{#if etiquette_content.etiquette_header_visible}}
        <div style="text-align: center;">
            <div style="margin-bottom: 2rem;">
                <svg width="80" height="80" viewBox="0 0 80 80" style="color: var(--theme-accent); animation: pulse 3s ease-in-out infinite;">
                    <defs>
                        <linearGradient id="etiquette-crown-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                            <stop offset="0%" style="stop-color:var(--theme-accent);stop-opacity:1" />
                            <stop offset="100%" style="stop-color:var(--theme-primary);stop-opacity:1" />
                        </linearGradient>
                    </defs>
                    <circle cx="40" cy="40" r="35" fill="none" stroke="url(#etiquette-crown-gradient)" stroke-width="3" opacity="0.8"/>
                    <circle cx="40" cy="40" r="12" fill="url(#etiquette-crown-gradient)" opacity="0.9"/>
                </svg>
            </div>
            <h1 style="background: linear-gradient(45deg, var(--theme-accent), var(--theme-text)); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; font-family: var(--font-display); font-size: clamp(3rem, 6vw, 5rem);">
                {{#if etiquette_content.page_title}}{{etiquette_content.page_title}}{{else}}Etiquette & Guidelines{{/if}}
            </h1>
            {{#if etiquette_content.page_subtitle}}
            <p style="font-size: 1.2rem; color: var(--theme-text-subtle); max-width: 700px; margin: 0 auto;">
                {{etiquette_content.page_subtitle}}
            </p>
            {{/if}}
        </div>
        {{else}}
        <!-- Default Header -->
        <div style="text-align: center; margin-bottom: 4rem;">
            <div style="margin-bottom: 2rem;">
                <svg width="80" height="80" viewBox="0 0 80 80" style="color: var(--theme-accent); animation: pulse 3s ease-in-out infinite;">
                    <defs>
                        <linearGradient id="etiquette-default-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                            <stop offset="0%" style="stop-color:var(--theme-accent);stop-opacity:1" />
                            <stop offset="100%" style="stop-color:var(--theme-primary);stop-opacity:1" />
                        </linearGradient>
                    </defs>
                    <circle cx="40" cy="40" r="35" fill="none" stroke="url(#etiquette-default-gradient)" stroke-width="3" opacity="0.8"/>
                    <circle cx="40" cy="40" r="12" fill="url(#etiquette-default-gradient)" opacity="0.9"/>
                </svg>
            </div>
            <h1 style="background: linear-gradient(45deg, var(--theme-accent), var(--theme-text)); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; font-family: var(--font-display); font-size: clamp(3rem, 6vw, 5rem);">
                Etiquette & Guidelines
            </h1>
            <p style="font-size: 1.2rem; color: var(--theme-text-subtle); max-width: 700px; margin: 0 auto;">
                Guidelines to ensure our time together is respectful, comfortable, and memorable for both of us.
            </p>
        </div>
        {{/if}}
    </div>
</section>

