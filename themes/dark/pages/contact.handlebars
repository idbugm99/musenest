<!-- Dark Sophisticated Boudoir Contact Page - Comprehensive Contact System -->
<section class="boudoir-section" style="background: linear-gradient(135deg, var(--theme-primary), var(--theme-secondary)); min-height: 60vh; display: flex; align-items: center; justify-content: center; padding: 4rem 0; position: relative; overflow: hidden;">
    <!-- Boudoir Decorative Elements -->
    <div style="position: absolute; top: 15%; left: 12%; opacity: 0.4; z-index: 1;">
        <svg width="64" height="64" viewBox="0 0 80 80" style="animation: silk-float 6s ease-in-out infinite; color: var(--theme-accent);">
            <rect x="25" y="25" width="30" height="30" fill="none" stroke="currentColor" stroke-width="2" opacity="0.8"/>
        </svg>
    </div>
    <div style="position: absolute; top: 50%; right: 10%; opacity: 0.3; z-index: 1;">
        <svg width="32" height="32" viewBox="0 0 80 80" style="animation: silk-float 8s ease-in-out infinite; animation-delay: 4s; color: var(--theme-accent);">
            <circle cx="40" cy="40" r="8" fill="currentColor" opacity="0.8"/>
        </svg>
    </div>
    <div style="position: absolute; bottom: 20%; left: 80%; opacity: 0.5; z-index: 1;">
        <svg width="32" height="32" viewBox="0 0 80 80" style="animation: silk-float 10s ease-in-out infinite; animation-delay: 2s; color: var(--theme-primary);">
            <circle cx="40" cy="40" r="5" fill="currentColor" opacity="0.9"/>
        </svg>
    </div>

    <div class="boudoir-container" style="position: relative; z-index: 2; width: 100%;">
        <!-- Page Header -->
        {{#if contact_content.contact_header_visible}}
        <div style="text-align: center;">
            <div style="margin-bottom: 2rem;">
                <svg width="80" height="80" viewBox="0 0 80 80" style="color: var(--theme-accent); animation: pulse 3s ease-in-out infinite;">
                    <defs>
                        <linearGradient id="contact-crown-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                            <stop offset="0%" style="stop-color:var(--theme-accent);stop-opacity:1" />
                            <stop offset="100%" style="stop-color:var(--theme-primary);stop-opacity:1" />
                        </linearGradient>
                    </defs>
                    <circle cx="40" cy="40" r="35" fill="none" stroke="url(#contact-crown-gradient)" stroke-width="3" opacity="0.8"/>
                    <circle cx="40" cy="40" r="12" fill="url(#contact-crown-gradient)" opacity="0.9"/>
                </svg>
            </div>
            <h1 style="background: linear-gradient(45deg, var(--theme-accent), var(--theme-text)); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; font-family: var(--font-display); font-size: clamp(3rem, 6vw, 5rem);">
                {{#if contact_content.page_title}}{{contact_content.page_title}}{{else}}Contact Me{{/if}}
            </h1>
            {{#if contact_content.page_subtitle}}
            <p style="font-size: 1.2rem; color: var(--theme-text-subtle); max-width: 700px; margin: 0 auto;">
                {{contact_content.page_subtitle}}
            </p>
            {{/if}}
        </div>
        {{else}}
        <!-- Default Header -->
        <div style="text-align: center; margin-bottom: 4rem;">
            <div style="margin-bottom: 2rem;">
                <svg width="80" height="80" viewBox="0 0 80 80" style="color: var(--theme-accent); animation: pulse 3s ease-in-out infinite;">
                    <defs>
                        <linearGradient id="contact-default-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                            <stop offset="0%" style="stop-color:var(--theme-accent);stop-opacity:1" />
                            <stop offset="100%" style="stop-color:var(--theme-primary);stop-opacity:1" />
                        </linearGradient>
                    </defs>
                    <circle cx="40" cy="40" r="35" fill="none" stroke="url(#contact-default-gradient)" stroke-width="3" opacity="0.8"/>
                    <circle cx="40" cy="40" r="12" fill="url(#contact-default-gradient)" opacity="0.9"/>
                </svg>
            </div>
            <h1 style="background: linear-gradient(45deg, var(--theme-accent), var(--theme-text)); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; font-family: var(--font-display); font-size: clamp(3rem, 6vw, 5rem);">
                Contact Me
            </h1>
            <p style="font-size: 1.2rem; color: var(--theme-text-subtle); max-width: 700px; margin: 0 auto;">
                Begin your journey into elegance and sophistication. Reach out with discretion and respect.
            </p>
        </div>
        {{/if}}
    </div>
</section>

