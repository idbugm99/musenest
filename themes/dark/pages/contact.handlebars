<!-- Boudoir Contact JavaScript -->
<script>
// Boudoir contact form handling with spam protection
let boudeiroLastSubmitTime = 0;
const BOUDEIRO_SUBMIT_COOLDOWN = 5000; // 5 seconds

document.getElementById('boudoir-contact-form')?.addEventListener('submit', function(e) {
    e.preventDefault();
    
    // Throttle submissions
    const now = Date.now();
    if (now - boudeiroLastSubmitTime < BOUDEIRO_SUBMIT_COOLDOWN) {
        showBoudeiroError('Please wait before submitting again.');
        return;
    }
    
    // Get form data
    const formData = new FormData(this);
    const data = Object.fromEntries(formData);
    
    // Check honeypot
    if (data.website) {
        // Silent fail for bots
        return;
    }
    
    // Clear previous errors
    clearBoudeiroErrors();
    
    // Validate required fields
    let hasErrors = false;
    
    if (!data.name?.trim()) {
        showBoudeiroFieldError('boudoir-name', 'Name is required.');
        hasErrors = true;
    }
    
    if (!data.email?.trim()) {
        showBoudeiroFieldError('boudoir-email', 'Email is required.');
        hasErrors = true;
    } else if (!isValidBoudeiroEmail(data.email)) {
        showBoudeiroFieldError('boudoir-email', 'Please enter a valid email address.');
        hasErrors = true;
    }
    
    if (!data.message?.trim()) {
        showBoudeiroFieldError('boudoir-message', 'Message is required.');
        hasErrors = true;
    }
    
    if (hasErrors) return;
    
    // Show loading state
    const submitBtn = document.getElementById('boudoir-submit-btn');
    const buttonText = submitBtn.querySelector('.boudoir-button-text');
    const spinner = submitBtn.querySelector('.boudoir-spinner');
    
    submitBtn.disabled = true;
    submitBtn.style.opacity = '0.7';
    buttonText.style.display = 'none';
    spinner.style.display = 'inline-flex';
    
    // Simulate form submission (in real implementation, this would send to backend)
    setTimeout(() => {
        boudeiroLastSubmitTime = now;
        
        // Reset button state
        submitBtn.disabled = false;
        submitBtn.style.opacity = '1';
        buttonText.style.display = 'inline-flex';
        spinner.style.display = 'none';
        
        // Show success message with boudoir styling
        showBoudeiroSuccess('Thank you for your message! I will get back to you within 2-4 hours.');
        
        // Reset form
        this.reset();
    }, 2000);
});

function showBoudeiroFieldError(fieldId, message) {
    const field = document.getElementById(fieldId);
    const errorDiv = field.parentElement.querySelector('.boudoir-error-message');
    
    field.style.borderColor = 'var(--theme-error, #ef4444)';
    field.style.boxShadow = '0 0 0 3px rgba(239, 68, 68, 0.2)';
    errorDiv.textContent = message;
