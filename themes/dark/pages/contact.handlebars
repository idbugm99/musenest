<!-- Contact Hero Section -->
<section class="dark-hero min-vh-50 d-flex align-items-center text-white position-relative pt-5" data-aos="fade-in">
    <div class="container position-relative" style="z-index: 10;">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <div class="dark-badge mb-4">Contact</div>
                <h1 class="display-2 fw-bold mb-4 dark-heading">
                    Get in Touch
                </h1>
                <p class="fs-4 text-dark-muted mx-auto" style="max-width: 600px;">
                    {{content.contactIntro}}
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Contact Information & Form -->
<section class="py-5 bg-dark-surface">
    <div class="container">
        <div class="dark-grid dark-grid-2">
            <!-- Contact Information -->
            <div data-aos="fade-right">
                <h2 class="display-6 fw-bold mb-4 dark-heading text-dark-primary">
                    Let's Connect
                </h2>
                
                <div class="row g-4 mb-5">
                    {{#if contactEmail}}
                    <div class="col-12">
                        <div class="dark-card p-4 d-flex align-items-center">
                            <div class="d-inline-flex align-items-center justify-content-center rounded-3 me-3" 
                                 style="width: 60px; height: 60px; background: var(--dark-card); border: 2px solid var(--dark-primary);">
                                <i class="fas fa-envelope text-dark-primary"></i>
                            </div>
                            <div>
                                <h3 class="fw-bold text-dark-text dark-mono small mb-1">Email</h3>
                                <a href="mailto:{{contactEmail}}" class="text-dark-primary text-decoration-none hover:text-dark-secondary">
                                    {{contactEmail}}
                                </a>
                            </div>
                        </div>
                    </div>
                    {{/if}}
                    
                    {{#if contactPhone}}
                    <div class="col-12">
                        <div class="dark-card p-4 d-flex align-items-center">
                            <div class="d-inline-flex align-items-center justify-content-center rounded-3 me-3" 
                                 style="width: 60px; height: 60px; background: var(--dark-card); border: 2px solid var(--dark-primary);">
                                <i class="fas fa-phone text-dark-primary"></i>
                            </div>
                            <div>
                                <h3 class="fw-bold text-dark-text dark-mono small mb-1">Phone</h3>
                                <a href="tel:{{contactPhone}}" class="text-dark-primary text-decoration-none">
                                    {{contactPhone}}
                                </a>
                            </div>
                        </div>
                    </div>
                    {{/if}}
                    
                    {{#if location}}
                    <div class="col-12">
                        <div class="dark-card p-4 d-flex align-items-center">
                            <div class="d-inline-flex align-items-center justify-content-center rounded-3 me-3" 
                                 style="width: 60px; height: 60px; background: var(--dark-card); border: 2px solid var(--dark-primary);">
                                <i class="fas fa-map-marker-alt text-dark-primary"></i>
                            </div>
                            <div>
                                <h3 class="fw-bold text-dark-text dark-mono small mb-1">Location</h3>
                                <p class="text-dark-muted mb-0">{{location}}</p>
                            </div>
                        </div>
                    </div>
                    {{/if}}
                    
                    {{#if workingHours}}
                    <div class="col-12">
                        <div class="dark-card p-4 d-flex align-items-center">
                            <div class="d-inline-flex align-items-center justify-content-center rounded-3 me-3" 
                                 style="width: 60px; height: 60px; background: var(--dark-card); border: 2px solid var(--dark-primary);">
                                <i class="fas fa-clock text-dark-primary"></i>
                            </div>
                            <div>
                                <h3 class="fw-bold text-dark-text dark-mono small mb-1">Hours</h3>
                                <p class="text-dark-muted mb-0">{{workingHours}}</p>
                            </div>
                        </div>
                    </div>
                    {{/if}}
                </div>
                
                <!-- Social Links -->
                {{#if socialLinks}}
                <div class="mt-5">
                    <h3 class="fs-5 fw-bold mb-3 dark-heading">Follow Me</h3>
                    <div class="d-flex gap-3">
                        {{#each socialLinks}}
                        <a href="{{this.url}}" class="d-inline-flex align-items-center justify-content-center rounded-3 text-dark-primary border border-dark-primary" 
                           style="width: 60px; height: 60px; transition: all 0.3s ease;"
                           onmouseover="this.style.background='var(--dark-primary)'; this.style.color='var(--dark-bg)'"
                           onmouseout="this.style.background='transparent'; this.style.color='var(--dark-primary)'">
                            <i class="fab fa-{{this.icon}} fs-4"></i>
                        </a>
                        {{/each}}
                    </div>
                </div>
                {{/if}}
            </div>
            
            <!-- Contact Form -->
            <div data-aos="fade-left">
                <div class="dark-card p-5">
                    <h2 class="display-6 fw-bold mb-4 dark-heading text-dark-primary">
                        Send Message
                    </h2>
                    
                    <form id="darkContactForm" class="row g-4">
                        <div class="col-md-6">
                            <label for="firstName" class="form-label fw-bold text-dark-text dark-mono small text-uppercase">
                                First Name *
                            </label>
                            <input type="text" id="firstName" name="firstName" class="form-control" required>
                        </div>
                        <div class="col-md-6">
                            <label for="lastName" class="form-label fw-bold text-dark-text dark-mono small text-uppercase">
                                Last Name *
                            </label>
                            <input type="text" id="lastName" name="lastName" class="form-control" required>
                        </div>
                        
                        <div class="col-12">
                            <label for="email" class="form-label fw-bold text-dark-text dark-mono small text-uppercase">
                                Email *
                            </label>
                            <input type="email" id="email" name="email" class="form-control" required>
                        </div>
                        
                        <div class="col-12">
                            <label for="phone" class="form-label fw-bold text-dark-text dark-mono small text-uppercase">
                                Phone
                            </label>
                            <input type="tel" id="phone" name="phone" class="form-control">
                        </div>
                        
                        <div class="col-12">
                            <label for="subject" class="form-label fw-bold text-dark-text dark-mono small text-uppercase">
                                Subject *
                            </label>
                            <select id="subject" name="subject" class="form-control" required>
                                <option value="">Select subject</option>
                                <option value="general">General Inquiry</option>
                                <option value="booking">Service Booking</option>
                                <option value="rates">Rates & Pricing</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                        
                        <div class="col-12">
                            <label for="message" class="form-label fw-bold text-dark-text dark-mono small text-uppercase">
                                Message *
                            </label>
                            <textarea id="message" name="message" rows="5" class="form-control" required></textarea>
                        </div>
                        
                        <div class="col-12">
                            <button type="submit" class="dark-btn w-100 fs-5 py-3">
                                <i class="fas fa-paper-plane me-2"></i>
                                Send Message
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Response Time -->
<section class="py-5" style="background: var(--dark-bg);">
    <div class="container">
        <div class="text-center mb-5" data-aos="fade-up">
            <div class="dark-badge mb-3">Service</div>
            <h2 class="display-6 fw-bold mb-4 dark-heading text-dark-primary">
                What to Expect
            </h2>
        </div>
        
        <div class="dark-grid dark-grid-3">
            <div class="dark-card p-4 text-center" data-aos="fade-up" data-aos-delay="0">
                <div class="d-inline-flex align-items-center justify-content-center rounded-3 mb-4" 
                     style="width: 80px; height: 80px; background: var(--dark-card); border: 2px solid var(--dark-primary);">
                    <i class="fas fa-clock fs-2 text-dark-primary"></i>
                </div>
                <h3 class="fs-4 fw-bold mb-3 dark-heading">Quick Response</h3>
                <p class="text-dark-muted">I respond to all messages within 24 hours</p>
            </div>
            
            <div class="dark-card p-4 text-center" data-aos="fade-up" data-aos-delay="100">
                <div class="d-inline-flex align-items-center justify-content-center rounded-3 mb-4" 
                     style="width: 80px; height: 80px; background: var(--dark-card); border: 2px solid var(--dark-primary);">
                    <i class="fas fa-shield-alt fs-2 text-dark-primary"></i>
                </div>
                <h3 class="fs-4 fw-bold mb-3 dark-heading">Confidential</h3>
                <p class="text-dark-muted">All communications are kept strictly private</p>
            </div>
            
            <div class="dark-card p-4 text-center" data-aos="fade-up" data-aos-delay="200">
                <div class="d-inline-flex align-items-center justify-content-center rounded-3 mb-4" 
                     style="width: 80px; height: 80px; background: var(--dark-card); border: 2px solid var(--dark-primary);">
                    <i class="fas fa-handshake fs-2 text-dark-primary"></i>
                </div>
                <h3 class="fs-4 fw-bold mb-3 dark-heading">Professional</h3>
                <p class="text-dark-muted">Courteous and professional service always</p>
            </div>
        </div>
    </div>
</section>

