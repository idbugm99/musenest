{{!-- Media Library Page Template --}}
{{!-- Part of Phase 3: Frontend Components Development --}}
<div class="admin-page-wrapper">
    <div class="page-header mb-4">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h1 class="mb-2">
                    <i class="fas fa-images me-2 text-primary"></i>Media Library
                </h1>
                <p class="text-muted mb-0">Upload, organize, and edit your images with advanced tools</p>
            </div>
            <div class="d-flex gap-2">
                <a href="/{{modelSlug}}/admin/gallery-sections" class="btn btn-outline-primary">
                    <i class="fas fa-layer-group me-1"></i>Gallery Sections
                </a>
                <a href="/{{modelSlug}}/admin/content" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
                </a>
            </div>
        </div>
    </div>
    
    {{!-- Navigation Breadcrumb --}}
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/{{modelSlug}}/admin">Dashboard</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Media Library</li>
        </ol>
    </nav>
    
    {{!-- Main Media Library Component --}}
    {{{renderComponent 'media-library'}}}
    
    {{!-- Image Editor Modal Component --}}
    {{{renderComponent 'image-editor-modal'}}}
</div>

