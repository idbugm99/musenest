    try {
      const response = await fetch(`/api/model-gallery/${encodeURIComponent(modelSlug)}/sections/${sectionId}/settings`, {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(settingsData)
