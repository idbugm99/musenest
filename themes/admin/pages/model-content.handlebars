<!-- Legacy Content Manager - Redirecting to New Hub -->
<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-primary d-flex align-items-center">
                <i class="fas fa-info-circle me-2"></i>
                <div>
                    <strong>Content Manager Upgraded!</strong> We've improved the content management experience. Redirecting you to the new professional interface...
                </div>
            </div>
        </div>
    </div>
    
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 text-muted">Loading new content management interface...</p>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-redirect to new content hub after a brief delay
    const slug = {{{json model.slug}}};
    
    if (slug) {
        setTimeout(() => {
            window.location.href = `/${slug}/admin/content/hub`;
        }, 2000);
    } else {
        // Fallback if no slug is available
        console.error('No model slug available for redirect');
        setTimeout(() => {
            window.location.href = '/admin';
        }, 2000);
    }
});
</script>

