<!-- Model Admin Dashboard -->
<div class="row mb-4">
    <div class="col-12">
        <div class="alert alert-info">
            <h4><i class="fas fa-user me-2"></i>Welcome to Your Model Dashboard</h4>
            <p>This is your personal admin area where you can manage your content, view your site, and update your information.</p>
        </div>
    </div>
</div>

<!-- Model Stats -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                            <i class="fas fa-eye text-primary fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="fw-bold fs-4">{{#if stats.pageViews}}{{stats.pageViews}}{{else}}0{{/if}}</div>
                        <div class="text-muted small">Page Views</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-success bg-opacity-10 rounded-circle p-3">
                            <i class="fas fa-palette text-success fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="fw-bold fs-4">{{#if model.theme_name}}{{model.theme_name}}{{else}}—{{/if}}</div>
                        <div class="text-muted small">Current Theme</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-info bg-opacity-10 rounded-circle p-3">
                            <i class="fas fa-file-alt text-info fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="fw-bold fs-4">{{#if stats.contentPages}}{{stats.contentPages}}{{else}}0{{/if}}</div>
                        <div class="text-muted small">Content Pages</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                            <i class="fas fa-calendar text-warning fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div class="fw-bold fs-4">{{#if stats.lastUpdated}}{{stats.lastUpdated}}{{else}}—{{/if}}</div>
                        <div class="text-muted small">Last Updated</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0 fw-bold">
                    <i class="fas fa-tasks me-2"></i>Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <a href="/{{model.slug}}" target="_blank" class="btn btn-primary w-100 mb-2">
                            <i class="fas fa-external-link-alt me-2"></i>View My Live Site
                        </a>
                        <small class="text-muted">See how your site looks to visitors</small>
                    </div>
                    <div class="col-md-6 mb-3">
                        <button class="btn btn-outline-primary w-100 mb-2" onclick="editContent()">
                            <i class="fas fa-edit me-2"></i>Edit Content
                        </button>
                        <small class="text-muted">Update your pages and information</small>
                    </div>
                    <div class="col-md-6 mb-3">
                        <button class="btn btn-outline-secondary w-100 mb-2" onclick="manageGallery()">
                            <i class="fas fa-images me-2"></i>Manage Gallery
                        </button>
                        <small class="text-muted">Upload and organize photos</small>
                    </div>
                    <div class="col-md-6 mb-3">
                        <button class="btn btn-outline-info w-100 mb-2" onclick="viewAnalytics()">
                            <i class="fas fa-chart-bar me-2"></i>View Analytics
                        </button>
                        <small class="text-muted">See your site performance</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0 fw-bold">
                    <i class="fas fa-user me-2"></i>Your Profile
                </h5>
            </div>
            <div class="card-body">
                <div class="text-center mb-3">
                    <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                        <i class="fas fa-user text-primary fs-1"></i>
                    </div>
                </div>
                <div class="text-center">
                    <h6 class="fw-bold">{{#if model.name}}{{model.name}}{{else}}Model Name{{/if}}</h6>
                    <p class="text-muted small mb-2">@{{#if model.slug}}{{model.slug}}{{else}}slug{{/if}}</p>
                    <p class="text-muted small mb-3">{{#if model.email}}{{model.email}}{{else}}email@example.com{{/if}}</p>
                    <button class="btn btn-outline-primary btn-sm" onclick="editProfile()">
                        <i class="fas fa-edit me-1"></i>Edit Profile
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Site Status -->
        <div class="card border-0 shadow-sm mt-3">
            <div class="card-header bg-white">
                <h5 class="mb-0 fw-bold">
                    <i class="fas fa-globe me-2"></i>Site Status
                </h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="text-muted small">Site Status</span>
                    <span class="badge bg-success">Live</span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="text-muted small">Theme</span>
                    <span class="badge bg-info">{{#if model.theme_name}}{{model.theme_name}}{{else}}Not Set{{/if}}</span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="text-muted small">SSL Certificate</span>
                    <span class="badge bg-success">Active</span>
                </div>
            </div>
        </div>
    </div>
</div>

