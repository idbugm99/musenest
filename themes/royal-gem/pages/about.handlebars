<!-- Royal Gem About Page - Hero Section -->
<section class="royal-section" style="background: linear-gradient(135deg, var(--theme-primary), var(--theme-secondary)); position: relative;">
    <!-- Royal Decorative Elements -->
    <div style="position: absolute; top: 20%; left: 10%; opacity: 0.6;">
        <svg class="royal-icon-lg" viewBox="0 0 64 64" style="animation: float 6s ease-in-out infinite;">
            <use href="/assets/sprites/royal-icons.ddf91c.svg#diamond"></use>
        </svg>
    </div>
    <div style="position: absolute; top: 30%; right: 15%; opacity: 0.4;">
        <svg class="royal-icon-lg" viewBox="0 0 64 64" style="animation: float 8s ease-in-out infinite; animation-delay: 2s;">
            <use href="/assets/sprites/royal-icons.ddf91c.svg#ruby"></use>
        </svg>
    </div>
    <div style="position: absolute; bottom: 20%; left: 70%; opacity: 0.5;">
        <svg class="royal-icon" viewBox="0 0 64 64" style="animation: float 10s ease-in-out infinite; animation-delay: 4s;">
            <use href="/assets/sprites/royal-icons.ddf91c.svg#sapphire"></use>
        </svg>
    </div>
    
    <div class="royal-container">
        <!-- Page Header -->
        {{#if about_content.page_title_visible}}
        <div style="text-align: center; margin-bottom: 4rem; position: relative; z-index: 2;">
            <div style="margin-bottom: 2rem;">
                <svg class="royal-icon-lg" viewBox="0 0 64 64" style="color: var(--theme-accent); animation: pulse 3s ease-in-out infinite;">
                    <use href="/assets/sprites/royal-icons.ddf91c.svg#crown-royal"></use>
                </svg>
            </div>
            <h1 style="background: linear-gradient(45deg, var(--theme-accent), var(--theme-text)); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
                {{#if about_content.page_title}}{{about_content.page_title}}{{else}}About {{model.name}}{{/if}}
            </h1>
            {{#if about_content.page_subtitle}}
            <p style="font-size: 1.2rem; color: var(--theme-text-subtle); max-width: 600px; margin: 0 auto;">
                {{about_content.page_subtitle}}
            </p>
            {{/if}}
        </div>
        {{/if}}
    </div>
</section>

