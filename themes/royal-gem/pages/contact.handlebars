<!-- Royal Contact JavaScript -->
<script>
// Royal contact form handling with spam protection
let royalLastSubmitTime = 0;
const ROYAL_SUBMIT_COOLDOWN = 5000; // 5 seconds

document.getElementById('royal-contact-form')?.addEventListener('submit', function(e) {
    e.preventDefault();
    
    // Throttle submissions
    const now = Date.now();
    if (now - royalLastSubmitTime < ROYAL_SUBMIT_COOLDOWN) {
        showRoyalError('Please wait before submitting again.');
        return;
    }
    
    // Get form data
    const formData = new FormData(this);
    const data = Object.fromEntries(formData);
    
    // Check honeypot
    if (data.website) {
        // Silent fail for bots
        return;
    }
    
    // Clear previous errors
    clearRoyalErrors();
    
    // Validate required fields
    let hasErrors = false;
    
    if (!data.name?.trim()) {
        showRoyalFieldError('royal-name', 'Name is required.');
        hasErrors = true;
    }
    
    if (!data.email?.trim()) {
        showRoyalFieldError('royal-email', 'Email is required.');
        hasErrors = true;
    } else if (!isValidRoyalEmail(data.email)) {
        showRoyalFieldError('royal-email', 'Please enter a valid email address.');
        hasErrors = true;
    }
    
    if (!data.message?.trim()) {
        showRoyalFieldError('royal-message', 'Message is required.');
        hasErrors = true;
    }
    
    if (hasErrors) return;
    
    // Show loading state
    const submitBtn = document.getElementById('royal-submit-btn');
    const buttonText = submitBtn.querySelector('.royal-button-text');
    const spinner = submitBtn.querySelector('.royal-spinner');
    
    submitBtn.disabled = true;
    submitBtn.style.opacity = '0.7';
    buttonText.style.display = 'none';
    spinner.style.display = 'inline-flex';
    
    // Simulate form submission (in real implementation, this would send to backend)
    setTimeout(() => {
        royalLastSubmitTime = now;
        
        // Reset button state
        submitBtn.disabled = false;
        submitBtn.style.opacity = '1';
        buttonText.style.display = 'inline-flex';
        spinner.style.display = 'none';
        
        // Show success message with royal styling
        showRoyalSuccess('Thank you for your message! I will get back to you within 2-4 hours.');
        
        // Reset form
        this.reset();
    }, 2000);
});

function showRoyalFieldError(fieldId, message) {
    const field = document.getElementById(fieldId);
    const errorDiv = field.parentElement.querySelector('.royal-error-message');
    
    field.style.borderColor = 'var(--theme-danger, #ef4444)';
    field.style.boxShadow = '0 0 0 3px rgba(239, 68, 68, 0.2)';
    errorDiv.textContent = message;
    errorDiv.style.display = 'block';
}

function clearRoyalErrors() {
    document.querySelectorAll('.royal-input').forEach(input => {
        input.style.borderColor = 'var(--theme-border)';
        input.style.boxShadow = 'none';
    });
    document.querySelectorAll('.royal-error-message').forEach(error => {
        error.style.display = 'none';
    });
}

function showRoyalError(message) {
    // Create royal styled error notification
    const notification = document.createElement('div');
    notification.style.cssText = `
        position: fixed;
        top: 2rem;
        right: 2rem;
        background: var(--theme-danger, #ef4444);
        color: white;
        padding: 1rem 1.5rem;
        border-radius: var(--radius-sm);
        box-shadow: 0 8px 32px rgba(0,0,0,0.3);
        z-index: 9999;
        font-weight: 600;
        animation: slideInRight 0.3s ease;
    `;
    notification.textContent = message;
    document.body.appendChild(notification);
    
    setTimeout(() => {
        notification.remove();
    }, 5000);
}

function showRoyalSuccess(message) {
    // Create royal styled success notification
    const notification = document.createElement('div');
    notification.style.cssText = `
        position: fixed;
        top: 2rem;
        right: 2rem;
        background: linear-gradient(45deg, var(--theme-accent), var(--theme-primary));
        color: var(--theme-bg);
        padding: 1rem 1.5rem;
        border-radius: var(--radius-sm);
        box-shadow: 0 8px 32px rgba(212, 175, 55, 0.4);
        z-index: 9999;
        font-weight: 600;
        animation: slideInRight 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    `;
    notification.innerHTML = `
        <svg style="width: 1.25rem; height: 1.25rem;" viewBox="0 0 64 64">
            <use href="/assets/sprites/royal-icons.ddf91c.svg#crown"></use>
        </svg>
        ${message}
    `;
    document.body.appendChild(notification);
    
    setTimeout(() => {
        notification.remove();
    }, 6000);
}

function isValidRoyalEmail(email) {
    return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
}

// Royal input focus effects
document.querySelectorAll('.royal-input').forEach(input => {
    input.addEventListener('focus', function() {
        this.style.borderColor = 'var(--theme-accent)';
        this.style.boxShadow = '0 0 0 3px rgba(212, 175, 55, 0.2)';
    });
    
    input.addEventListener('blur', function() {
        if (!this.parentElement.querySelector('.royal-error-message').style.display === 'block') {
            this.style.borderColor = 'var(--theme-border)';
