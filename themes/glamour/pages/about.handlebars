<!-- Hero Header -->
{{#if content.page_title_visible}}
<section class="relative py-32 overflow-hidden" style="background: var(--glamour-gradient); color: white;">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6" style="font-family: var(--font-display);">
            {{#if content.page_title}}{{content.page_title}}{{else}}About {{siteName}}{{/if}}
        </h1>
        {{#if content.page_subtitle}}
        <p class="text-xl text-white/90 max-w-3xl mx-auto">
            {{content.page_subtitle}}
        </p>
        {{/if}}
    </div>
    <div class="absolute inset-0 opacity-10 pointer-events-none">
        <div class="absolute top-20 right-20 w-32 h-32 border border-white/20 rounded-full"></div>
        <div class="absolute bottom-32 left-10 w-24 h-24 border border-white/20 rounded-full"></div>
    </div>
</section>
{{/if}}

<!-- Main About Content -->
{{#if content.main_content_visible}}
<section class="py-20" style="background-color: var(--theme-bg);">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
            
            <!-- Portrait -->
            {{#if content.portrait_visible}}
            <div class="order-2 lg:order-1">
                {{#if content.portraitImageUrl}}
                <div class="glamour-card overflow-hidden">
                    <img src="{{content.portraitImageUrl}}" 
                         alt="{{#if content.portrait_alt}}{{content.portrait_alt}}{{else}}{{siteName}} Portrait{{/if}}" 
                         class="w-full h-[700px] object-cover">
                </div>
                {{/if}}
            </div>
            {{/if}}
            
            <!-- Main Content -->
            <div class="order-1 lg:order-2">
                <h2 class="text-4xl font-bold mb-8" style="color: var(--theme-text); font-family: var(--font-display);">
                    About {{siteName}}
                </h2>
                
                {{#if content.main_paragraph_1}}
                <p class="text-lg mb-6 leading-relaxed" style="color: var(--theme-text-subtle);">
                    {{content.main_paragraph_1}}
                </p>
                {{/if}}
                
                {{#if content.main_paragraph_2}}
                <p class="text-lg mb-6 leading-relaxed" style="color: var(--theme-text-subtle);">
                    {{content.main_paragraph_2}}
                </p>
                {{/if}}
                
                {{#if content.main_paragraph_3}}
                <p class="text-lg mb-6 leading-relaxed" style="color: var(--theme-text-subtle);">
                    {{content.main_paragraph_3}}
                </p>
                {{/if}}
                
                {{#if content.main_paragraph_4}}
                <p class="text-lg mb-8 leading-relaxed" style="color: var(--theme-text-subtle);">
                    {{content.main_paragraph_4}}
                </p>
                {{/if}}
                
                <!-- Quick Facts -->
                {{#if content.facts_visible}}
                <div class="glamour-card p-6 mb-8">
                    <h3 class="text-2xl font-semibold mb-6" style="color: var(--theme-text); font-family: var(--font-display);">
                        {{#if content.facts_title}}{{content.facts_title}}{{else}}Quick Facts{{/if}}
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        {{#if quickFacts}}
                        {{#each quickFacts}}
                        <div class="flex items-start space-x-3">
                            <i class="fas fa-gem mt-1" style="color: var(--theme-accent);"></i>
                            <div>
                                <div class="font-semibold" style="color: var(--theme-text);">
                                    {{this.question}}
                                </div>
                                <div style="color: var(--theme-text-subtle);">
                                    {{this.answer}}
                                </div>
                            </div>
                        </div>
                        {{/each}}
                        {{else}}
                        <!-- Fallback to individual fact fields if quickFacts array not available -->
                        {{#if content.fact_age_visible}}
                        <div class="flex items-start space-x-3">
                            <i class="fas fa-gem mt-1" style="color: var(--theme-accent);"></i>
                            <div>
                                <div class="font-semibold" style="color: var(--theme-text);">Age</div>
                                <div style="color: var(--theme-text-subtle);">{{content.fact_age}}</div>
                            </div>
                        </div>
                        {{/if}}
                        {{#if content.fact_height_visible}}
                        <div class="flex items-start space-x-3">
                            <i class="fas fa-gem mt-1" style="color: var(--theme-accent);"></i>
                            <div>
                                <div class="font-semibold" style="color: var(--theme-text);">Height</div>
                                <div style="color: var(--theme-text-subtle);">{{content.fact_height}}</div>
                            </div>
                        </div>
                        {{/if}}
                        {{#if content.fact_languages_visible}}
                        <div class="flex items-start space-x-3">
                            <i class="fas fa-gem mt-1" style="color: var(--theme-accent);"></i>
                            <div>
                                <div class="font-semibold" style="color: var(--theme-text);">Languages</div>
                                <div style="color: var(--theme-text-subtle);">{{content.fact_languages}}</div>
                            </div>
                        </div>
                        {{/if}}
                        {{#if content.fact_education_visible}}
                        <div class="flex items-start space-x-3">
                            <i class="fas fa-gem mt-1" style="color: var(--theme-accent);"></i>
                            <div>
                                <div class="font-semibold" style="color: var(--theme-text);">Education</div>
                                <div style="color: var(--theme-text-subtle);">{{content.fact_education}}</div>
                            </div>
                        </div>
                        {{/if}}
                        {{#if content.fact_availability_visible}}
                        <div class="flex items-start space-x-3">
                            <i class="fas fa-gem mt-1" style="color: var(--theme-accent);"></i>
                            <div>
                                <div class="font-semibold" style="color: var(--theme-text);">Availability</div>
                                <div style="color: var(--theme-text-subtle);">{{content.fact_availability}}</div>
                            </div>
                        </div>
                        {{/if}}
                        {{/if}}
                    </div>
                </div>
                {{/if}}
                
                <a href="/{{modelSlug}}/contact{{previewParam}}" class="glamour-btn">
                    <i class="fas fa-envelope"></i>
                    Get in Touch
                </a>
            </div>
        </div>
    </div>
</section>
{{/if}}

<!-- Services Section -->
{{#if content.services_visible}}
<section class="py-20" style="background-color: var(--theme-bg-alt);">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-4xl font-bold mb-6" style="color: var(--theme-text); font-family: var(--font-display);">
                {{#if content.services_title}}{{content.services_title}}{{else}}What I Offer{{/if}}
            </h2>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {{#if content.service_1}}
            <div class="glamour-card p-8 text-center">
                <div class="mb-6">
                    <i class="fas fa-star text-5xl" style="color: var(--theme-primary);"></i>
                </div>
                <p style="color: var(--theme-text-subtle);">{{content.service_1}}</p>
            </div>
            {{/if}}
            
            {{#if content.service_2}}
            <div class="glamour-card p-8 text-center">
                <div class="mb-6">
                    <i class="fas fa-heart text-5xl" style="color: var(--theme-primary);"></i>
                </div>
                <p style="color: var(--theme-text-subtle);">{{content.service_2}}</p>
            </div>
            {{/if}}
            
            {{#if content.service_3}}
            <div class="glamour-card p-8 text-center">
                <div class="mb-6">
                    <i class="fas fa-gem text-5xl" style="color: var(--theme-primary);"></i>
                </div>
                <p style="color: var(--theme-text-subtle);">{{content.service_3}}</p>
            </div>
            {{/if}}
            
            {{#if content.service_4}}
            <div class="glamour-card p-8 text-center">
                <div class="mb-6">
                    <i class="fas fa-crown text-5xl" style="color: var(--theme-primary);"></i>
                </div>
                <p style="color: var(--theme-text-subtle);">{{content.service_4}}</p>
            </div>
            {{/if}}
            
            {{#if content.service_5}}
            <div class="glamour-card p-8 text-center">
                <div class="mb-6">
                    <i class="fas fa-magic text-5xl" style="color: var(--theme-primary);"></i>
                </div>
                <p style="color: var(--theme-text-subtle);">{{content.service_5}}</p>
            </div>
            {{/if}}
        </div>
    </div>
</section>
{{/if}}

<!-- Interests Section -->
{{#if content.interests_visible}}
<section class="py-20" style="background-color: var(--theme-bg);">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-4xl font-bold mb-6" style="color: var(--theme-text); font-family: var(--font-display);">
                {{#if content.interests_title}}{{content.interests_title}}{{else}}Interests & Passions{{/if}}
            </h2>
        </div>
        
        {{#if content.interests}}
        <div class="flex flex-wrap justify-center gap-4">
            {{#each (split content.interests ',')}}
            <span class="px-6 py-3 rounded-full text-lg font-medium transition-transform hover:scale-105"
                  style="background: var(--glamour-gradient); color: white;">
                {{trim this}}
            </span>
            {{/each}}
        </div>
        {{/if}}
    </div>
</section>
{{/if}}

<!-- CTA Section -->
{{#if content.about_cta_visible}}
<section class="py-16" style="background-color: var(--theme-bg-alt);">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="glamour-card p-12">
            {{#if content.cta_title}}
            <h2 class="text-3xl font-bold mb-6" style="color: var(--theme-text); font-family: var(--font-display);">
                {{content.cta_title}}
            </h2>
            {{/if}}
            
            {{#if content.cta_description}}
            <p class="text-lg mb-8" style="color: var(--theme-text-subtle);">
                {{content.cta_description}}
            </p>
            {{/if}}
            
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                {{#if content.cta_button_1_text}}
                <a href="/{{modelSlug}}/{{#if content.cta_button_1_link}}{{content.cta_button_1_link}}{{else}}calendar{{/if}}{{previewParam}}" 
                   class="glamour-btn">
                    <i class="fas fa-calendar-alt"></i>
                    {{content.cta_button_1_text}}
                </a>
                {{/if}}
                
                {{#if content.cta_button_2_text}}
                <a href="/{{modelSlug}}/{{#if content.cta_button_2_link}}{{content.cta_button_2_link}}{{else}}contact{{/if}}{{previewParam}}" 
                   class="glamour-btn-outline">
                    <i class="fas fa-envelope"></i>
                    {{content.cta_button_2_text}}
                </a>
                {{/if}}
                
                {{#unless content.cta_button_1_text}}{{#unless content.cta_button_2_text}}
                <!-- Default CTAs if no custom buttons are set -->
                <a href="/{{modelSlug}}/calendar{{previewParam}}" class="glamour-btn">
                    <i class="fas fa-calendar-alt"></i>
                    Schedule Time
                </a>
                <a href="/{{modelSlug}}/contact{{previewParam}}" class="glamour-btn-outline">
                    <i class="fas fa-envelope"></i>
                    Send Message
                </a>
                {{/unless}}{{/unless}}
            </div>
        </div>
    </div>
</section>
{{/if}}