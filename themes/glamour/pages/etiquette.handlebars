<!-- Etiquette Header -->
{{#if content.etiquette_header_visible}}
<section class="relative py-32 overflow-hidden" style="background: var(--glamour-gradient); color: white;">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="mb-8">
            <i class="fas fa-heart text-6xl mb-6 text-white/80"></i>
        </div>
        <h1 class="text-5xl md:text-6xl font-bold mb-6" style="font-family: var(--font-display);">
            {{#if content.page_title}}{{content.page_title}}{{else}}Etiquette & Guidelines{{/if}}
        </h1>
        {{#if content.page_subtitle}}
        <p class="text-xl text-white/90 max-w-3xl mx-auto">
            {{content.page_subtitle}}
        </p>
        {{else}}
        <p class="text-xl text-white/90 max-w-3xl mx-auto">
            Creating memorable experiences through mutual respect and understanding.
        </p>
        {{/if}}
    </div>
    <div class="absolute inset-0 opacity-10 pointer-events-none">
        <div class="absolute top-16 left-16 w-32 h-32 border border-white/20 rounded-full"></div>
        <div class="absolute bottom-24 right-12 w-24 h-24 border border-white/20 rounded-full"></div>
    </div>
</section>
{{/if}}

<!-- 2x2 Grid Layout -->
<section class="py-20" style="background-color: var(--theme-bg);">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <!-- Main Grid -->
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(500px, 1fr)); gap: 2rem; margin-bottom: 3rem;">
            
            <!-- Booking & Screening Section -->
            {{#if content.etiquette_booking_visible}}
            <div class="glamour-card p-8">
                <h2 class="text-2xl font-bold mb-6" style="color: var(--theme-text); font-family: var(--font-display);">
                    <i class="fas fa-calendar-check mr-3" style="color: var(--theme-primary);"></i>
                    {{#if content.booking_title}}{{content.booking_title}}{{else}}Booking & Screening{{/if}}
                </h2>
                
                <div class="space-y-6">
                    <div>
                        <h3 class="text-lg font-semibold mb-3" style="color: var(--theme-text);">
                            {{#if content.booking_initial_contact_title}}{{content.booking_initial_contact_title}}{{else}}Initial Contact{{/if}}
                        </h3>
                        <p class="leading-relaxed" style="color: var(--theme-text-subtle);">
                            {{#if content.booking_initial_contact_text}}{{content.booking_initial_contact_text}}{{else}}Please introduce yourself politely and include your desired date, time, and duration when reaching out.{{/if}}
                        </p>
                    </div>
                    
                    <div>
                        <h3 class="text-lg font-semibold mb-3" style="color: var(--theme-text);">
                            {{#if content.booking_screening_title}}{{content.booking_screening_title}}{{else}}Screening Process{{/if}}
                        </h3>
                        <p class="leading-relaxed" style="color: var(--theme-text-subtle);">
                            {{#if content.booking_screening_text}}{{content.booking_screening_text}}{{else}}For everyone's safety, a brief screening process is required for all new clients.{{/if}}
                        </p>
                    </div>
                    
                    <div>
                        <h3 class="text-lg font-semibold mb-3" style="color: var(--theme-text);">
                            {{#if content.booking_advance_title}}{{content.booking_advance_title}}{{else}}Advance Booking{{/if}}
                        </h3>
                        <p class="leading-relaxed" style="color: var(--theme-text-subtle);">
                            {{#if content.booking_advance_text}}{{content.booking_advance_text}}{{else}}Advance booking is preferred to ensure availability and proper preparation for our time together.{{/if}}
                        </p>
                    </div>
                </div>
            </div>
            {{/if}}
            
            <!-- Respect & Boundaries Section -->
            {{#if content.etiquette_respect_visible}}
            <div class="glamour-card p-8">
                <h2 class="text-2xl font-bold mb-6" style="color: var(--theme-text); font-family: var(--font-display);">
                    <i class="fas fa-handshake mr-3" style="color: var(--theme-primary);"></i>
                    {{#if content.respect_title}}{{content.respect_title}}{{else}}Respect & Boundaries{{/if}}
                </h2>
                
                <div class="space-y-6">
                    <div>
                        <h3 class="text-lg font-semibold mb-3" style="color: var(--theme-text);">
                            {{#if content.respect_mutual_title}}{{content.respect_mutual_title}}{{else}}Mutual Respect{{/if}}
                        </h3>
                        <p class="leading-relaxed" style="color: var(--theme-text-subtle);">
                            {{#if content.respect_mutual_text}}{{content.respect_mutual_text}}{{else}}Our time together is built on mutual respect, courtesy, and genuine connection.{{/if}}
                        </p>
                    </div>
                    
                    <div>
                        <h3 class="text-lg font-semibold mb-3" style="color: var(--theme-text);">
                            {{#if content.respect_boundaries_title}}{{content.respect_boundaries_title}}{{else}}Personal Boundaries{{/if}}
                        </h3>
                        <p class="leading-relaxed" style="color: var(--theme-text-subtle);">
                            {{#if content.respect_boundaries_text}}{{content.respect_boundaries_text}}{{else}}Clear communication about boundaries ensures a comfortable experience for everyone involved.{{/if}}
                        </p>
                    </div>
                    
                    <div>
                        <h3 class="text-lg font-semibold mb-3" style="color: var(--theme-text);">
                            {{#if content.respect_personal_title}}{{content.respect_personal_title}}{{else}}Personal Space{{/if}}
                        </h3>
                        <p class="leading-relaxed" style="color: var(--theme-text-subtle);">
                            {{#if content.respect_personal_text}}{{content.respect_personal_text}}{{else}}Respecting personal space and privacy creates a foundation for meaningful connection.{{/if}}
                        </p>
                    </div>
                </div>
            </div>
            {{/if}}
            
            <!-- Hygiene & Presentation Section -->
            {{#if content.etiquette_hygiene_visible}}
            <div class="glamour-card p-8">
                <h2 class="text-2xl font-bold mb-6" style="color: var(--theme-text); font-family: var(--font-display);">
                    <i class="fas fa-sparkles mr-3" style="color: var(--theme-primary);"></i>
                    {{#if content.hygiene_title}}{{content.hygiene_title}}{{else}}Hygiene & Presentation{{/if}}
                </h2>
                
                <div class="space-y-6">
                    <div>
                        <h3 class="text-lg font-semibold mb-3" style="color: var(--theme-text);">
                            {{#if content.hygiene_personal_title}}{{content.hygiene_personal_title}}{{else}}Personal Hygiene{{/if}}
                        </h3>
                        <p class="leading-relaxed" style="color: var(--theme-text-subtle);">
                            {{#if content.hygiene_personal_text}}{{content.hygiene_personal_text}}{{else}}Fresh breath, clean body, and good grooming are essential for creating an enjoyable experience.{{/if}}
                        </p>
                    </div>
                    
                    <div>
                        <h3 class="text-lg font-semibold mb-3" style="color: var(--theme-text);">
                            {{#if content.hygiene_attire_title}}{{content.hygiene_attire_title}}{{else}}Appropriate Attire{{/if}}
                        </h3>
                        <p class="leading-relaxed" style="color: var(--theme-text-subtle);">
                            {{#if content.hygiene_attire_text}}{{content.hygiene_attire_text}}{{else}}Dressing appropriately for the occasion shows consideration and respect.{{/if}}
                        </p>
                    </div>
                    
                    <div>
                        <h3 class="text-lg font-semibold mb-3" style="color: var(--theme-text);">
                            {{#if content.hygiene_substances_title}}{{content.hygiene_substances_title}}{{else}}Substances & Sobriety{{/if}}
                        </h3>
                        <p class="leading-relaxed" style="color: var(--theme-text-subtle);">
                            {{#if content.hygiene_substances_text}}{{content.hygiene_substances_text}}{{else}}Please arrive sober and avoid excessive substances that might impair judgment or enjoyment.{{/if}}
                        </p>
                    </div>
                </div>
            </div>
            {{/if}}
            
            <!-- Cancellation Policy Section -->
            {{#if content.etiquette_cancellation_visible}}
            <div class="glamour-card p-8">
                <h2 class="text-2xl font-bold mb-6" style="color: var(--theme-text); font-family: var(--font-display);">
                    <i class="fas fa-clock mr-3" style="color: var(--theme-primary);"></i>
                    {{#if content.cancellation_title}}{{content.cancellation_title}}{{else}}Cancellation Policy{{/if}}
                </h2>
                
                <div class="space-y-6">
                    <div>
                        <h3 class="text-lg font-semibold mb-3" style="color: var(--theme-text);">
                            {{#if content.cancellation_advance_title}}{{content.cancellation_advance_title}}{{else}}Advance Notice{{/if}}
                        </h3>
                        <p class="leading-relaxed" style="color: var(--theme-text-subtle);">
                            {{#if content.cancellation_advance_text}}{{content.cancellation_advance_text}}{{else}}Please provide at least 24 hours notice if you need to reschedule or cancel your appointment.{{/if}}
                        </p>
                    </div>
                    
                    <div>
                        <h3 class="text-lg font-semibold mb-3" style="color: var(--theme-text);">
                            {{#if content.cancellation_noshow_title}}{{content.cancellation_noshow_title}}{{else}}No-Show Policy{{/if}}
                        </h3>
                        <p class="leading-relaxed" style="color: var(--theme-text-subtle);">
                            {{#if content.cancellation_noshow_text}}{{content.cancellation_noshow_text}}{{else}}No-shows or last-minute cancellations may result in deposit forfeiture and future booking restrictions.{{/if}}
                        </p>
                    </div>
                    
                    <div>
                        <h3 class="text-lg font-semibold mb-3" style="color: var(--theme-text);">
                            {{#if content.cancellation_my_title}}{{content.cancellation_my_title}}{{else}}Emergency Cancellations{{/if}}
                        </h3>
                        <p class="leading-relaxed" style="color: var(--theme-text-subtle);">
                            {{#if content.cancellation_my_text}}{{content.cancellation_my_text}}{{else}}In rare cases where I must cancel, you will receive full notice and priority for rescheduling.{{/if}}
                        </p>
                    </div>
                </div>
            </div>
            {{/if}}
            
        </div>
        
    </div>
</section>

<!-- Safety & Discretion Section (Full Width) -->
{{#if content.etiquette_safety_visible}}
<section class="py-20" style="background-color: var(--theme-bg-alt);">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-4xl font-bold mb-6" style="color: var(--theme-text); font-family: var(--font-display);">
                <i class="fas fa-shield-alt mr-3" style="color: var(--theme-primary);"></i>
                {{#if content.safety_title}}{{content.safety_title}}{{else}}Safety & Discretion{{/if}}
            </h2>
            <div class="w-24 h-1 mx-auto rounded" style="background: var(--glamour-gradient);"></div>
        </div>
        
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 2rem;">
            <div class="glamour-card p-8 text-center">
                <div class="mb-6">
                    <i class="fas fa-user-secret text-5xl" style="color: var(--theme-primary);"></i>
                </div>
                <h3 class="text-xl font-semibold mb-4" style="color: var(--theme-text); font-family: var(--font-display);">
                    {{#if content.safety_confidentiality_title}}{{content.safety_confidentiality_title}}{{else}}Confidentiality{{/if}}
                </h3>
                <p class="leading-relaxed" style="color: var(--theme-text-subtle);">
                    {{#if content.safety_confidentiality_text}}{{content.safety_confidentiality_text}}{{else}}Complete discretion is guaranteed. Your privacy and personal information will never be compromised.{{/if}}
                </p>
            </div>
            
            <div class="glamour-card p-8 text-center">
                <div class="mb-6">
                    <i class="fas fa-home text-5xl" style="color: var(--theme-primary);"></i>
                </div>
                <h3 class="text-xl font-semibold mb-4" style="color: var(--theme-text); font-family: var(--font-display);">
                    {{#if content.safety_environment_title}}{{content.safety_environment_title}}{{else}}Safe Environment{{/if}}
                </h3>
                <p class="leading-relaxed" style="color: var(--theme-text-subtle);">
                    {{#if content.safety_environment_text}}{{content.safety_environment_text}}{{else}}All meetings take place in safe, clean, and comfortable environments that respect everyone involved.{{/if}}
                </p>
            </div>
            
            <div class="glamour-card p-8 text-center">
                <div class="mb-6">
                    <i class="fas fa-comments text-5xl" style="color: var(--theme-primary);"></i>
                </div>
                <h3 class="text-xl font-semibold mb-4" style="color: var(--theme-text); font-family: var(--font-display);">
                    {{#if content.safety_communication_title}}{{content.safety_communication_title}}{{else}}Open Communication{{/if}}
                </h3>
                <p class="leading-relaxed" style="color: var(--theme-text-subtle);">
                    {{#if content.safety_communication_text}}{{content.safety_communication_text}}{{else}}Clear, honest communication ensures expectations are met and boundaries are respected.{{/if}}
                </p>
            </div>
        </div>
    </div>
</section>
{{/if}}

<!-- Questions/Contact CTA Section -->
{{#if content.etiquette_questions_visible}}
<section class="py-16" style="background-color: var(--theme-bg);">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="glamour-card p-12">
            <div class="mb-8">
                <i class="fas fa-question-circle text-6xl" style="color: var(--theme-primary);"></i>
            </div>
            
            <h2 class="text-3xl font-bold mb-6" style="color: var(--theme-text); font-family: var(--font-display);">
                {{#if content.questions_title}}{{content.questions_title}}{{else}}Questions or Clarifications?{{/if}}
            </h2>
            
            <p class="text-lg mb-8" style="color: var(--theme-text-subtle);">
                {{#if content.questions_text}}{{content.questions_text}}{{else}}If you have any questions about these guidelines or need clarification on anything, please don't hesitate to reach out. Clear communication makes for better experiences.{{/if}}
            </p>
            
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                {{#if content.questions_button_text}}
                <a href="/{{modelSlug}}/{{#if content.questions_button_link}}{{content.questions_button_link}}{{else}}contact{{/if}}{{previewParam}}" 
                   class="glamour-btn">
                    <i class="fas fa-envelope"></i>
                    {{content.questions_button_text}}
                </a>
                {{else}}
                <a href="/{{modelSlug}}/contact{{previewParam}}" class="glamour-btn">
                    <i class="fas fa-envelope"></i>
                    Contact Me
                </a>
                {{/if}}
                
                <a href="/{{modelSlug}}/rates{{previewParam}}" class="glamour-btn-outline">
                    <i class="fas fa-info-circle"></i>
                    View Rates & Services
                </a>
            </div>
        </div>
    </div>
</section>
{{/if}}

<style>
/* Enhanced responsive grid for mobile */
@media (max-width: 768px) {
    [style*="grid-template-columns: repeat(auto-fit, minmax(500px, 1fr))"] {
        grid-template-columns: 1fr !important;
    }
    
    [style*="grid-template-columns: repeat(auto-fit, minmax(250px, 1fr))"] {
        grid-template-columns: 1fr !important;
        gap: 1rem !important;
    }
}

/* Smooth hover effects for cards */
.glamour-card {
    transition: var(--glamour-transition);
}

.glamour-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--glamour-glow);
}
</style>