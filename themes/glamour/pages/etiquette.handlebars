<!-- Glamour Etiquette Page - Movie Star Elegance -->

<!-- Professional Hero Section -->
{{#if etiquette_content.etiquette_header_visible}}
<section class="glamour-etiquette-hero" data-aos="fade-in">
    <div class="max-w-6xl mx-auto text-center px-4 sm:px-6 lg:px-8">
        <h1 class="glamour-hero-title" data-aos="fade-up" data-aos-delay="200">
            {{#if etiquette_content.page_title}}{{etiquette_content.page_title}}{{else}}Etiquette & Guidelines{{/if}}
        </h1>
        {{#if etiquette_content.page_subtitle}}
        <p class="glamour-hero-subtitle" data-aos="fade-up" data-aos-delay="400">
            {{etiquette_content.page_subtitle}}
        </p>
        {{/if}}
    </div>
</section>
{{/if}}

<!-- Main Etiquette Content -->
<section class="glamour-etiquette-main">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <div class="grid md:grid-cols-2 gap-8 mb-16">
            <!-- Booking & Screening -->
            {{#if etiquette_content.etiquette_booking_visible}}
            <div class="glamour-etiquette-card" data-aos="fade-up" data-aos-delay="100">
                <div class="glamour-section-badge">Planning</div>
                <h2 class="glamour-card-heading">
                    <i class="fas fa-calendar-check glamour-heading-icon"></i>
                    {{#if etiquette_content.booking_title}}{{etiquette_content.booking_title}}{{else}}Booking & Screening{{/if}}
                </h2>
                <div class="glamour-card-content">
                    <ul class="glamour-bullet-list">
                        <li>
                            <strong>{{#if etiquette_content.booking_initial_contact_title}}{{etiquette_content.booking_initial_contact_title}}{{else}}Initial Contact{{/if}}:</strong>
                            {{#if etiquette_content.booking_initial_contact_text}}{{etiquette_content.booking_initial_contact_text}}{{else}}Please introduce yourself politely and include your desired date, time, and duration when reaching out.{{/if}}
                        </li>
                        <li>
                            <strong>{{#if etiquette_content.booking_screening_title}}{{etiquette_content.booking_screening_title}}{{else}}Screening Process{{/if}}:</strong>
                            {{#if etiquette_content.booking_screening_text}}{{etiquette_content.booking_screening_text}}{{else}}For everyone's safety, a brief screening process is required for all new clients. This includes basic verification and references.{{/if}}
                        </li>
                        <li>
                            <strong>{{#if etiquette_content.booking_advance_title}}{{etiquette_content.booking_advance_title}}{{else}}Advance Booking{{/if}}:</strong>
                            {{#if etiquette_content.booking_advance_text}}{{etiquette_content.booking_advance_text}}{{else}}I prefer bookings made at least 24 hours in advance. Same-day appointments may be available with an additional fee.{{/if}}
                        </li>
                    </ul>
                </div>
            </div>
            {{/if}}
            
            <!-- Respect & Boundaries -->
            {{#if etiquette_content.etiquette_respect_visible}}
            <div class="glamour-etiquette-card" data-aos="fade-up" data-aos-delay="200">
                <div class="glamour-section-badge">Policies</div>
                <h2 class="glamour-card-heading">
                    <i class="fas fa-handshake glamour-heading-icon"></i>
                    {{#if etiquette_content.respect_title}}{{etiquette_content.respect_title}}{{else}}Respect & Boundaries{{/if}}
                </h2>
                <div class="glamour-card-content">
                    <ul class="glamour-bullet-list">
                        <li>
                            <strong>{{#if etiquette_content.respect_mutual_title}}{{etiquette_content.respect_mutual_title}}{{else}}Mutual Respect{{/if}}:</strong>
                            {{#if etiquette_content.respect_mutual_text}}{{etiquette_content.respect_mutual_text}}{{else}}I treat all clients with respect and kindness, and I expect the same in return. Rude or disrespectful behavior will not be tolerated.{{/if}}
                        </li>
                        <li>
                            <strong>{{#if etiquette_content.respect_boundaries_title}}{{etiquette_content.respect_boundaries_title}}{{else}}Professional Boundaries{{/if}}:</strong>
                            {{#if etiquette_content.respect_boundaries_text}}{{etiquette_content.respect_boundaries_text}}{{else}}Our time together is for companionship and social interaction. Please respect all boundaries and guidelines.{{/if}}
                        </li>
                        <li>
                            <strong>{{#if etiquette_content.respect_personal_title}}{{etiquette_content.respect_personal_title}}{{else}}Personal Information{{/if}}:</strong>
                            {{#if etiquette_content.respect_personal_text}}{{etiquette_content.respect_personal_text}}{{else}}Please do not ask for personal information beyond what is shared publicly. Discretion works both ways.{{/if}}
                        </li>
                    </ul>
                </div>
            </div>
            {{/if}}
        </div>
        
        <div class="grid md:grid-cols-2 gap-8 mb-16">
            <!-- Hygiene & Presentation -->
            {{#if etiquette_content.etiquette_hygiene_visible}}
            <div class="glamour-etiquette-card" data-aos="fade-up" data-aos-delay="300">
                <div class="glamour-section-badge">Standards</div>
                <h2 class="glamour-card-heading">
                    <i class="fas fa-star glamour-heading-icon"></i>
                    {{#if etiquette_content.hygiene_title}}{{etiquette_content.hygiene_title}}{{else}}Hygiene & Presentation{{/if}}
                </h2>
                <div class="glamour-card-content">
                    <ul class="glamour-bullet-list">
                        <li>
                            <strong>{{#if etiquette_content.hygiene_personal_title}}{{etiquette_content.hygiene_personal_title}}{{else}}Personal Hygiene{{/if}}:</strong>
                            {{#if etiquette_content.hygiene_personal_text}}{{etiquette_content.hygiene_personal_text}}{{else}}Please arrive freshly showered and well-groomed. Good personal hygiene is essential for a comfortable experience.{{/if}}
                        </li>
                        <li>
                            <strong>{{#if etiquette_content.hygiene_attire_title}}{{etiquette_content.hygiene_attire_title}}{{else}}Attire{{/if}}:</strong>
                            {{#if etiquette_content.hygiene_attire_text}}{{etiquette_content.hygiene_attire_text}}{{else}}Dress appropriately for our planned activities. I'll always be well-dressed and expect the same consideration.{{/if}}
                        </li>
                        <li>
                            <strong>{{#if etiquette_content.hygiene_substances_title}}{{etiquette_content.hygiene_substances_title}}{{else}}Substances{{/if}}:</strong>
                            {{#if etiquette_content.hygiene_substances_text}}{{etiquette_content.hygiene_substances_text}}{{else}}Please do not arrive under the influence of alcohol or other substances. Light social drinking during our time is acceptable.{{/if}}
                        </li>
                    </ul>
                </div>
            </div>
            {{/if}}
            
            <!-- Cancellation Policy -->
            {{#if etiquette_content.etiquette_cancellation_visible}}
            <div class="glamour-etiquette-card" data-aos="fade-up" data-aos-delay="400">
                <div class="glamour-section-badge">Policies</div>
                <h2 class="glamour-card-heading">
                    <i class="fas fa-clock glamour-heading-icon"></i>
                    {{#if etiquette_content.cancellation_title}}{{etiquette_content.cancellation_title}}{{else}}Cancellation Policy{{/if}}
                </h2>
                <div class="glamour-card-content">
                    <ul class="glamour-bullet-list">
                        <li>
                            <strong>{{#if etiquette_content.cancellation_advance_title}}{{etiquette_content.cancellation_advance_title}}{{else}}Advance Notice{{/if}}:</strong>
                            {{#if etiquette_content.cancellation_advance_text}}{{etiquette_content.cancellation_advance_text}}{{else}}Please provide at least 2 hours notice for cancellations. Last-minute cancellations may result in a cancellation fee.{{/if}}
                        </li>
                        <li>
                            <strong>{{#if etiquette_content.cancellation_noshow_title}}{{etiquette_content.cancellation_noshow_title}}{{else}}No-Shows{{/if}}:</strong>
                            {{#if etiquette_content.cancellation_noshow_text}}{{etiquette_content.cancellation_noshow_text}}{{else}}No-shows without notice will result in being blacklisted from future bookings.{{/if}}
                        </li>
                        <li>
                            <strong>{{#if etiquette_content.cancellation_my_title}}{{etiquette_content.cancellation_my_title}}{{else}}My Cancellations{{/if}}:</strong>
                            {{#if etiquette_content.cancellation_my_text}}{{etiquette_content.cancellation_my_text}}{{else}}In the rare event I need to cancel, I'll provide as much notice as possible and offer to reschedule.{{/if}}
                        </li>
                    </ul>
                </div>
            </div>
            {{/if}}
        </div>
        
        <!-- Safety & Discretion -->
        {{#if etiquette_content.etiquette_safety_visible}}
        <div class="glamour-safety-section" data-aos="fade-up" data-aos-delay="500">
            <div class="glamour-section-badge">Security</div>
            <h2 class="glamour-safety-title">
                {{#if etiquette_content.safety_title}}{{etiquette_content.safety_title}}{{else}}Safety & Discretion{{/if}}
            </h2>
            <div class="grid md:grid-cols-3 gap-6">
                <div class="glamour-safety-item" data-aos="fade-up" data-aos-delay="600">
                    <div class="glamour-safety-icon">
                        <i class="fas fa-lock"></i>
                    </div>
                    <h3 class="glamour-safety-item-title">
                        {{#if etiquette_content.safety_confidentiality_title}}{{etiquette_content.safety_confidentiality_title}}{{else}}Confidentiality{{/if}}
                    </h3>
                    <p class="glamour-safety-text">
                        {{#if etiquette_content.safety_confidentiality_text}}{{etiquette_content.safety_confidentiality_text}}{{else}}Your privacy is paramount. All interactions remain strictly confidential.{{/if}}
                    </p>
                </div>
                <div class="glamour-safety-item" data-aos="fade-up" data-aos-delay="700">
                    <div class="glamour-safety-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h3 class="glamour-safety-item-title">
                        {{#if etiquette_content.safety_environment_title}}{{etiquette_content.safety_environment_title}}{{else}}Safe Environment{{/if}}
                    </h3>
                    <p class="glamour-safety-text">
                        {{#if etiquette_content.safety_environment_text}}{{etiquette_content.safety_environment_text}}{{else}}I maintain a safe, clean, and welcoming environment for all meetings.{{/if}}
                    </p>
                </div>
                <div class="glamour-safety-item" data-aos="fade-up" data-aos-delay="800">
                    <div class="glamour-safety-icon">
                        <i class="fas fa-comments"></i>
                    </div>
                    <h3 class="glamour-safety-item-title">
                        {{#if etiquette_content.safety_communication_title}}{{etiquette_content.safety_communication_title}}{{else}}Professional Communication{{/if}}
                    </h3>
                    <p class="glamour-safety-text">
                        {{#if etiquette_content.safety_communication_text}}{{etiquette_content.safety_communication_text}}{{else}}All communications are handled professionally and discreetly.{{/if}}
                    </p>
                </div>
            </div>
        </div>
        {{/if}}
        
        <!-- Questions/Contact CTA -->
        {{#if etiquette_content.etiquette_questions_visible}}
        <div class="glamour-questions-section" data-aos="fade-up" data-aos-delay="700">
            <h3 class="glamour-questions-title">
                {{#if etiquette_content.questions_title}}{{etiquette_content.questions_title}}{{else}}Questions?{{/if}}
            </h3>
            <p class="glamour-questions-text">
                {{#if etiquette_content.questions_text}}{{etiquette_content.questions_text}}{{else}}If you have any questions about these guidelines, feel free to reach out.{{/if}}
            </p>
            <a href="/{{modelSlug}}/{{#if etiquette_content.questions_button_link}}{{etiquette_content.questions_button_link}}{{else}}contact{{/if}}{{previewParam}}" 
               class="glamour-btn glamour-btn-primary">
                <span>{{#if etiquette_content.questions_button_text}}{{etiquette_content.questions_button_text}}{{else}}Contact Me{{/if}}</span>
            </a>
        </div>
        {{/if}}
    </div>
</section>

<!-- Professional Etiquette Page Styles -->
<style>
/* Professional Glamour Theme Variables */
:root {
    --glamour-primary: {{theme.colors.accent}};
    --glamour-primary-hover: {{theme.colors.btn-bg-hover}};
    --glamour-gold: {{theme.colors.accent}};
    --glamour-rose-gold: {{theme.colors.secondary}};
    --glamour-deep-purple: {{theme.colors.bg-dark}};
    --glamour-neutral: {{theme.colors.surface}};
    --glamour-champagne: {{theme.colors.text-light}};
    --glamour-heading-color: {{theme.colors.text-light}};
    --glamour-black: {{theme.colors.text-dark}};
    --glamour-white: {{theme.colors.text-light}};
    --glamour-card: {{theme.colors.card-bg}};
    --glamour-section-badge-bg: {{theme.colors.surface}};
    --glamour-border: {{theme.colors.border-light}};
}

/* Professional Hero Section */
.glamour-etiquette-hero {
    position: relative;
    min-height: 60vh;
    background: linear-gradient(160deg, {{theme.colors.bg-dark}} 0%, {{theme.colors.card-bg}} 45%, {{theme.colors.surface}} 100%);
    display: flex;
    align-items: center;
    overflow: hidden;
    color: var(--glamour-white);
    padding: 8rem 0 6rem;
}

.glamour-hero-title {
    font-size: 48px;
    line-height: 56px;
    font-weight: 800;
    color: var(--glamour-white);
    text-align: center;
    margin-bottom: 1.5rem;
    background: linear-gradient(45deg, var(--glamour-white) 30%, var(--glamour-gold) 70%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: 0 0 50px {{theme.colors.focus-ring}};
}

.glamour-hero-subtitle {
    font-size: 18px;
    line-height: 28px;
    color: var(--glamour-champagne);
    text-align: center;
    font-weight: 400;
    max-width: 600px;
    margin: 0 auto;
    opacity: 0.9;
}

/* Main Etiquette Section */
.glamour-etiquette-main {
    background: var(--glamour-neutral);
    padding: 6rem 0;
    color: var(--glamour-white);
}

/* Professional Card System */
.glamour-etiquette-card {
    background: var(--glamour-card);
    border-radius: 20px;
    padding: 2.5rem 2rem;
    border: 1px solid var(--glamour-border);
    box-shadow: 0 8px 32px {{theme.colors.card-shadow}};
    transition: all 0.3s ease;
    position: relative;
}

.glamour-etiquette-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 16px 48px {{theme.colors.card-shadow}};
}

/* Section Badges */
.glamour-section-badge {
    display: inline-block;
    background: var(--glamour-section-badge-bg);
    color: var(--glamour-primary);
    padding: 6px 12px;
    border-radius: 6px;
    font-size: 10px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    margin-bottom: 1.5rem;
}

/* Card Headings with Icons */
.glamour-card-heading {
    font-size: 24px;
    line-height: 32px;
    font-weight: 600;
    color: var(--glamour-white);
    margin-bottom: 2rem;
    display: flex;
    align-items: center;
    gap: 12px;
    letter-spacing: -0.01em;
}

.glamour-heading-icon {
    font-size: 24px;
    color: var(--glamour-primary);
    flex-shrink: 0;
}

/* Professional Bullet Lists */
.glamour-bullet-list {
    list-style: none;
    padding: 0;
    margin: 0;
}

.glamour-bullet-list li {
    font-size: 16px;
    line-height: 26px;
    color: var(--glamour-champagne);
    margin-bottom: 1.5rem;
    position: relative;
    padding-left: 1rem;
}

.glamour-bullet-list li:last-child {
    margin-bottom: 0;
}

.glamour-bullet-list li::before {
    content: 'â€¢';
    position: absolute;
    left: 0;
    color: var(--glamour-primary);
    font-weight: bold;
}

.glamour-bullet-list li strong {
    color: var(--glamour-white);
    font-weight: 600;
}

/* Professional Button System */
.glamour-btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    height: 44px;
    padding: 0 24px;
    font-weight: 500;
    text-decoration: none;
    border-radius: 22px;
    transition: all 0.2s ease;
    overflow: hidden;
    font-size: 16px;
    line-height: 1;
}

.glamour-btn-primary {
    background: linear-gradient(135deg, var(--glamour-primary) 0%, var(--glamour-primary-hover) 100%);
    color: var(--glamour-black);
    border: none;
    box-shadow: 0 2px 8px {{theme.colors.focus-ring}};
}

.glamour-btn-primary:hover {
    background: linear-gradient(135deg, var(--glamour-primary-hover) 0%, {{theme.colors.accent}} 100%);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px {{theme.colors.focus-ring}};
    text-decoration: none;
    color: var(--glamour-black);
}

/* Professional Safety & Discretion Section */
.glamour-safety-section {
    background: var(--glamour-card);
    border-radius: 20px;
    padding: 3rem 2.5rem;
    margin: 4rem 0;
    border: 1px solid var(--glamour-border);
    box-shadow: 0 8px 32px {{theme.colors.card-shadow}};
}

.glamour-safety-title {
    font-size: 24px;
    line-height: 32px;
    font-weight: 600;
    color: var(--glamour-white);
    text-align: center;
    margin-bottom: 3rem;
    letter-spacing: -0.01em;
}

.glamour-safety-item {
    text-align: center;
    padding: 1.5rem 1rem;
}

.glamour-safety-icon {
    width: 64px;
    height: 64px;
    background: var(--glamour-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    font-size: 24px;
    color: var(--glamour-black);
    /* Remove halo glow as requested */
}

.glamour-safety-item-title {
    font-size: 18px;
    line-height: 24px;
    font-weight: 600;
    color: var(--glamour-white);
    margin-bottom: 1rem;
    letter-spacing: -0.01em;
}

.glamour-safety-text {
    font-size: 16px;
    line-height: 26px;
    color: var(--glamour-champagne);
    opacity: 0.9;
}

/* Professional Questions Section */
.glamour-questions-section {
    background: var(--glamour-card);
    border-radius: 20px;
    padding: 3rem 2.5rem;
    text-align: center;
    margin: 4rem 0;
    border: 1px solid var(--glamour-border);
    box-shadow: 0 8px 32px {{theme.colors.card-shadow}};
}

.glamour-questions-title {
    font-size: 24px;
    line-height: 32px;
    font-weight: 600;
    color: var(--glamour-white);
    margin-bottom: 1rem;
    letter-spacing: -0.01em;
}

.glamour-questions-text {
    font-size: 16px;
    line-height: 26px;
    color: var(--glamour-champagne);
    margin-bottom: 2rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
    opacity: 0.9;
}

/* Responsive Design */
@media (max-width: 768px) {
    .glamour-etiquette-hero {
        padding: 6rem 0 4rem;
    }
    
    .glamour-hero-title {
        font-size: 36px;
        line-height: 42px;
    }
    
    .glamour-hero-subtitle {
        font-size: 16px;
        line-height: 24px;
    }
    
    .glamour-etiquette-main {
        padding: 4rem 0;
    }
    
    .glamour-etiquette-card {
        padding: 2rem 1.5rem;
        margin-bottom: 2rem;
    }
    
    .glamour-card-heading {
        font-size: 20px;
        line-height: 28px;
        text-align: center;
        flex-direction: column;
        gap: 8px;
    }
    
    .glamour-safety-section,
    .glamour-questions-section {
        padding: 2rem 1.5rem;
        margin: 3rem 0;
    }
    
    .glamour-btn {
        width: 100%;
        max-width: 280px;
    }
}
    --glamour-white: {{theme.colors.text-light}};
    --glamour-page-bg: {{theme.colors.bg-dark}};
    --glamour-card-dark: {{theme.colors.card-bg}};
    --glamour-text-light: {{theme.colors.text-light}};
    --glamour-text-dark: {{theme.colors.text-dark}};
}

/* Hero Section */
.glamour-etiquette-hero {
    position: relative;
    padding: 8rem 0 6rem;
    background: linear-gradient(135deg, var(--glamour-deep-purple) 0%, {{theme.colors.primary}} 50%, var(--glamour-black) 100%);
    overflow: hidden;
    min-height: 60vh;
}

.glamour-spotlight-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
}

.glamour-spotlight {
    position: absolute;
    width: 300px;
    height: 300px;
    border-radius: 50%;
    background: radial-gradient(circle, {{theme.colors.focus-ring}} 0%, {{theme.colors.backdrop}} 40%, transparent 70%);
    filter: blur(20px);
    animation: glamourSpotlightMove 15s infinite ease-in-out;
}

.glamour-spotlight-1 {
    top: 10%;
    left: 20%;
    animation-delay: 0s;
}

.glamour-spotlight-2 {
    top: 40%;
    right: 15%;
    animation-delay: 5s;
}

.glamour-spotlight-3 {
    bottom: 20%;
    left: 60%;
    animation-delay: 10s;
}

@keyframes glamourSpotlightMove {
    0%, 100% { transform: scale(1) rotate(0deg); opacity: 0.6; }
    33% { transform: scale(1.2) rotate(120deg); opacity: 0.8; }
    66% { transform: scale(0.9) rotate(240deg); opacity: 0.7; }
}

.glamour-hero-content {
    position: relative;
    z-index: 2;
}

.glamour-hero-title {
    font-size: 4.5rem;
    font-weight: 800;
    text-align: center;
    margin-bottom: 1.5rem;
    background: linear-gradient(45deg, var(--glamour-white) 30%, var(--glamour-gold) 70%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: 0 0 40px {{theme.colors.focus-ring}};
}

.glamour-hero-subtitle {
    font-size: 1.4rem;
    color: var(--glamour-champagne);
    text-align: center;
    font-weight: 300;
    letter-spacing: 1px;
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
}

/* Floating Stars */
.glamour-floating-elements {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
}

.glamour-star {
    position: absolute;
    color: var(--glamour-gold);
    font-size: 1.5rem;
    animation: glamourStarFloat 12s infinite ease-in-out;
}

.glamour-star-1 {
    top: 15%;
    left: 15%;
    animation-delay: 0s;
}

.glamour-star-2 {
    top: 25%;
    right: 20%;
    animation-delay: 3s;
}


@keyframes glamourStarFloat {
    0%, 100% { transform: translateY(0px) rotate(0deg); opacity: 0.7; }
    25% { transform: translateY(-15px) rotate(90deg); opacity: 1; }
    50% { transform: translateY(-10px) rotate(180deg); opacity: 0.8; }
    75% { transform: translateY(-20px) rotate(270deg); opacity: 0.9; }
