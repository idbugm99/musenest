<!-- Glamour Sticky Navigation JavaScript -->
<script>
// Sticky Navigation Functionality
let ticking = false;

function updateStickyNav() {
    const stickyNav = document.getElementById('glamour-sticky-nav');
    if (!stickyNav) return;
    
    const scrollPosition = window.pageYOffset;
    const windowHeight = window.innerHeight;
    
    // Show sticky nav after scrolling past the hero section
    if (scrollPosition > windowHeight * 0.3) {
        stickyNav.classList.add('visible');
    } else {
        stickyNav.classList.remove('visible');
    }
    
    // Update active navigation link based on scroll position
    const sections = ['rates-section', 'extended-section', 'services-section', 'policies-section', 'payment-section', 'contact-section'];
    const navLinks = stickyNav.querySelectorAll('.glamour-nav-link');
    
    sections.forEach((sectionId, index) => {
        const section = document.getElementById(sectionId);
        if (section) {
            const sectionTop = section.offsetTop - 100;
            const sectionBottom = sectionTop + section.offsetHeight;
            
            if (scrollPosition >= sectionTop && scrollPosition < sectionBottom) {
                navLinks.forEach(link => link.classList.remove('active'));
                if (navLinks[index]) {
                    navLinks[index].classList.add('active');
                }
            }
        }
    });
    
    ticking = false;
}

// Smooth scroll to sections
function scrollToSection(sectionId) {
    const section = document.getElementById(sectionId);
    if (section) {
        const offsetTop = section.offsetTop - 80; // Account for sticky nav height
        window.scrollTo({
            top: offsetTop,
            behavior: 'smooth'
        });
    }
}

// Throttled scroll event listener
function requestTick() {
    if (!ticking) {
        requestAnimationFrame(updateStickyNav);
        ticking = true;
    }
}

// Initialize sticky navigation
document.addEventListener('DOMContentLoaded', function() {
    window.addEventListener('scroll', requestTick);
    
    // Add click event listeners to navigation links
    const navLinks = document.querySelectorAll('.glamour-nav-link');
    navLinks.forEach(link => {
        link.addEventListener('click', function(e) {
            const href = this.getAttribute('href');
            
            // Only prevent default if it's a hash link (anchor link)
            if (href && href.startsWith('#')) {
                e.preventDefault();
                const sectionId = href.substring(1); // Remove the '#' character
                scrollToSection(sectionId);
            }
            // For regular page links, let them work normally (don't preventDefault)
        });
    });
    
    // Initial check
    updateStickyNav();
});
</script>

