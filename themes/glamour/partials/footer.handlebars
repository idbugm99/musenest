<!-- Glamour Theme Footer -->
<footer class="glamour-footer">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Brand Section -->
            <div class="text-center md:text-left">
                <h3 class="text-2xl font-bold mb-4">{{siteName}}</h3>
                <p class="glamour-footer-text mb-4">{{tagline}}</p>
                {{#if socialLinks}}
                <div class="flex justify-center md:justify-start space-x-4">
                    {{#each socialLinks}}
                    <a href="{{this.url}}" class="glamour-footer-text glamour-footer-link" aria-label="{{this.platform}}">
                        <i class="fab fa-{{this.icon}} text-xl"></i>
                    </a>
                    {{/each}}
                </div>
                {{/if}}
            </div>
            
            <!-- Quick Links -->
            <div class="text-center">
                <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
                <div class="flex flex-wrap justify-center gap-x-6 gap-y-2">
                    {{#each navigation}}
                    <a href="{{this.url}}" class="glamour-footer-text glamour-footer-link">
                        {{this.name}}
                    </a>
                    {{/each}}
                </div>
            </div>
            
            <!-- Contact Info -->
            <div class="text-center md:text-right">
                <h4 class="text-lg font-semibold mb-4">Contact</h4>
                {{#if contactEmail}}
                <p class="glamour-footer-text mb-2">
                    <i class="fas fa-envelope mr-2"></i>
                    <a href="mailto:{{contactEmail}}" class="glamour-footer-link">
                        {{contactEmail}}
                    </a>
                </p>
                {{/if}}
                {{#if contactPhone}}
                <p class="glamour-footer-text mb-2">
                    <i class="fas fa-phone mr-2"></i>
                    <a href="tel:{{contactPhone}}" class="glamour-footer-link">
                        {{contactPhone}}
                    </a>
                </p>
                {{/if}}
                {{#if location}}
                <p class="glamour-footer-text">
                    <i class="fas fa-map-marker-alt mr-2"></i>
                    {{location}}
                </p>
                {{/if}}
            </div>
        </div>
        
        <!-- Bottom Bar -->
        <div class="glamour-footer-border mt-8 pt-8 text-center">
            <div class="flex flex-col md:flex-row justify-between items-center">
                <p class="glamour-footer-text text-sm mb-4 md:mb-0">
                    Â© {{currentYear}} {{siteName}}. All rights reserved.
                </p>
                <div class="flex space-x-6">
                    <a href="/privacy" class="glamour-footer-text glamour-footer-link text-sm">Privacy Policy</a>
                    <a href="/terms" class="glamour-footer-text glamour-footer-link text-sm">Terms of Service</a>
                    {{#if disclaimer}}
                    <a href="/disclaimer" class="glamour-footer-text glamour-footer-link text-sm">Disclaimer</a>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</footer>