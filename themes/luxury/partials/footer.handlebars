<!-- Luxury Theme Footer -->
<footer class="luxury-footer relative overflow-hidden">
    <!-- Background Elements -->
    <div class="luxury-footer-background">
        <div class="luxury-footer-overlay"></div>
    </div>
    
    <!-- Content -->
    <div class="luxury-footer-content">
        <div class="luxury-footer-grid">
            
            <!-- Brand Section -->
            <div class="luxury-footer-brand">
                <div class="luxury-footer-brand-header">
                    {{#if branding.logoUrl}}
                    <img src="{{branding.logoUrl}}" alt="{{branding.siteName}}" class="luxury-footer-logo">
                    {{/if}}
                    <div>
                        <h3 class="luxury-footer-brand-title">
                            {{branding.siteName}}{{#unless branding.siteName}}{{siteName}}{{/unless}}
                        </h3>
                        {{#if branding.tagline}}
                        <p class="luxury-footer-tagline">{{branding.tagline}}</p>
                        {{/if}}
                    </div>
                </div>
                
                <p class="luxury-footer-description">
                    {{#if content.footerDescription}}
                    {{content.footerDescription}}
                    {{else}}
                    Experience the pinnacle of luxury and sophistication with personalized, exclusive services tailored to discerning clientele.
                    {{/if}}
                </p>
                
                <!-- Social Media Links -->
                {{#if socialMedia}}
                <div class="luxury-footer-social">
                    {{#each socialMedia}}
                    <a href="{{this.url}}" 
                       class="luxury-social-link group relative w-12 h-12 rounded-full flex items-center justify-center overflow-hidden"
                       target="_blank" rel="noopener noreferrer"
                       aria-label="{{this.platform}}">
                        <div class="absolute inset-0 bg-gradient-to-br from-luxury-primary to-luxury-accent opacity-90 group-hover:opacity-100 transition-opacity duration-300"></div>
                        <div class="absolute inset-0 bg-white/10 group-hover:bg-white/20 transition-colors duration-300"></div>
                        <i class="{{this.icon}} relative z-10 text-white text-lg group-hover:scale-110 transition-transform duration-300"></i>
                    </a>
                    {{/each}}
                </div>
                {{/if}}
            </div>
            
            <!-- Navigation Links -->
            <div class="luxury-footer-section">
                <h4 class="luxury-footer-section-title">
                    <span class="luxury-footer-title-wrapper">
                        Quick Links
                        <div class="luxury-footer-title-underline"></div>
                    </span>
                </h4>
                <ul class="luxury-footer-nav-list">
                    <li>
                        <a href="/{{modelSlug}}" class="luxury-footer-link">
                            <i class="fas fa-home"></i>
                            <span>Home</span>
                        </a>
                    </li>
                    {{#if pages.about}}
                    <li>
                        <a href="/{{modelSlug}}/about" class="luxury-footer-link">
                            <i class="fas fa-user"></i>
                            <span>About</span>
                        </a>
                    </li>
                    {{/if}}
                    {{#if pages.gallery}}
                    <li>
                        <a href="/{{modelSlug}}/gallery" class="luxury-footer-link">
                            <i class="fas fa-images"></i>
                            <span>Gallery</span>
                        </a>
                    </li>
                    {{/if}}
                    {{#if pages.rates}}
                    <li>
                        <a href="/{{modelSlug}}/rates" class="luxury-footer-link">
                            <i class="fas fa-tags"></i>
                            <span>Services</span>
                        </a>
                    </li>
                    {{/if}}
                    {{#if pages.calendar}}
                    <li>
                        <a href="/{{modelSlug}}/calendar" class="luxury-footer-link">
                            <i class="fas fa-calendar"></i>
                            <span>Calendar</span>
                        </a>
                    </li>
                    {{/if}}
                    {{#if pages.contact}}
                    <li>
                        <a href="/{{modelSlug}}/contact" class="luxury-footer-link">
                            <i class="fas fa-envelope"></i>
                            <span>Contact</span>
                        </a>
                    </li>
                    {{/if}}
                </ul>
            </div>
            
            <!-- Contact Information -->
            <div class="luxury-footer-section">
                <h4 class="luxury-footer-section-title">
                    <span class="luxury-footer-title-wrapper">
                        Contact Info
                        <div class="luxury-footer-title-underline"></div>
                    </span>
                </h4>
                <ul class="luxury-footer-contact-list">
                    {{#if contact.email}}
                    <li class="luxury-contact-item">
                        <div class="luxury-contact-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div>
                            <span class="luxury-contact-label">Email</span>
                            <a href="mailto:{{contact.email}}" class="luxury-contact-value">
                                {{contact.email}}
                            </a>
                        </div>
                    </li>
                    {{/if}}
                    {{#if contact.phone}}
                    <li class="luxury-contact-item">
                        <div class="luxury-contact-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div>
                            <span class="luxury-contact-label">Phone</span>
                            <a href="tel:{{contact.phone}}" class="luxury-contact-value">
                                {{contact.phone}}
                            </a>
                        </div>
                    </li>
                    {{/if}}
                    {{#if contact.location}}
                    <li class="luxury-contact-item">
                        <div class="luxury-contact-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div>
                            <span class="luxury-contact-label">Location</span>
                            <span class="luxury-contact-value">{{contact.location}}</span>
                        </div>
                    </li>
                    {{/if}}
                    {{#if availability}}
                    <li class="luxury-contact-item">
                        <div class="luxury-contact-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div>
                            <span class="luxury-contact-label">Availability</span>
                            <span class="luxury-contact-value">{{availability}}</span>
                        </div>
                    </li>
                    {{/if}}
                </ul>
                
                <!-- CTA Button -->
                <div class="luxury-footer-cta">
                    <a href="/{{modelSlug}}/contact" class="luxury-footer-btn">
                        <i class="fas fa-star"></i>
                        Book Consultation
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Divider -->
        <div class="luxury-footer-divider"></div>
        
        <!-- Bottom Section -->
        <div class="luxury-footer-bottom">
            <div class="luxury-footer-copyright">
                <span>Â© {{currentYear}} {{branding.siteName}}{{#unless branding.siteName}}{{siteName}}{{/unless}}. All rights reserved.</span>
                <span class="luxury-footer-separator">|</span>
                <span>Privacy & Discretion Guaranteed</span>
            </div>
            
            <!-- Powered By -->
            <div class="luxury-footer-credits">
                <span class="luxury-footer-credits-text">Crafted with</span>
                <div class="luxury-heart-icon">
                    <i class="fas fa-heart"></i>
                </div>
                <span class="luxury-footer-credits-text">by</span>
                <a href="https://phoenix4ge.com" class="luxury-footer-credits-link">
                    phoenix4ge
                </a>
            </div>
        </div>
    </div>
</footer>

