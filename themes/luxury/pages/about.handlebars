<!-- Portrait Preview JavaScript -->
<script>
function openPortraitPreview(imageUrl, altText) {
    const modal = document.querySelector('.luxury-portrait-modal');
    const image = document.getElementById('portrait-preview-image');
    const caption = document.getElementById('portrait-preview-caption');
    
    if (modal && image && caption) {
        image.src = imageUrl;
        image.alt = altText;
        caption.textContent = altText;
        
        modal.style.display = 'flex';
        
        // Prevent body scroll
        document.body.style.overflow = 'hidden';
        
        // Close on escape key
        document.addEventListener('keydown', handleEscapeKey);
        
        // Close on background click
        modal.addEventListener('click', function(e) {
            if (e.target === modal) {
                closePortraitPreview();
            }
        });
    }
}

function closePortraitPreview() {
    const modal = document.querySelector('.luxury-portrait-modal');
    
    if (modal) {
        modal.style.display = 'none';
        
        // Restore body scroll
        document.body.style.overflow = '';
        
        // Remove event listeners
        document.removeEventListener('keydown', handleEscapeKey);
    }
}

function handleEscapeKey(e) {
    if (e.key === 'Escape') {
        closePortraitPreview();
    }
}
</script>