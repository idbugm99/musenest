<!-- About Hero Section -->
<section class="luxury-hero min-h-96 flex items-center justify-center text-white pt-20" data-aos="fade-in">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
        <h1 class="text-5xl md:text-7xl font-bold mb-8 luxury-heading">
            About {{siteName}}
        </h1>
        <p class="text-xl md:text-2xl opacity-90 max-w-3xl mx-auto font-light">
            {{content.aboutIntro}}
        </p>
    </div>
</section>

<!-- Main About Content -->
<section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">
            <!-- About Text -->
            <div data-aos="fade-right">
                <div class="prose prose-lg max-w-none">
                    <div class="text-lg text-gray-700 leading-relaxed space-y-8">
                        {{{content.mainContent}}}
                    </div>
                </div>
                
                {{#if content.personalInfo}}
                <div class="mt-16">
                    <h3 class="text-3xl font-bold mb-8 luxury-heading text-luxury-primary">
                        Personal Details
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        {{#each content.personalInfo}}
                        <div class="luxury-card p-6 flex items-center space-x-4">
                            <div class="w-12 h-12 bg-gradient-to-br from-luxury-primary to-luxury-accent rounded-full flex items-center justify-center">
                                <i class="{{this.icon}} text-white"></i>
                            </div>
                            <div>
                                <h4 class="font-bold text-gray-900">{{this.label}}</h4>
                                <p class="text-gray-600">{{this.value}}</p>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
                {{/if}}
            </div>
            
            <!-- About Images -->
            <div data-aos="fade-left">
                {{#if content.aboutImages}}
                <div class="space-y-8">
                    {{#each content.aboutImages}}
                    <div class="relative luxury-card overflow-hidden">
                        <img src="{{this.url}}" alt="{{this.caption}}" 
                             class="w-full rounded-2xl shadow-2xl">
                        {{#if this.caption}}
                        <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black to-transparent p-6">
                            <p class="text-white font-medium">{{this.caption}}</p>
                        </div>
                        {{/if}}
                    </div>
                    {{/each}}
                </div>
                {{else}}
                <div class="luxury-card p-16 text-center">
                    <div class="w-40 h-40 mx-auto mb-8 bg-gradient-to-br from-luxury-primary to-luxury-accent rounded-full flex items-center justify-center shadow-2xl luxury-float">
                        <i class="fas fa-camera text-5xl text-white"></i>
                    </div>
                    <h3 class="text-2xl font-bold mb-4 luxury-heading">Exclusive Gallery</h3>
                    <p class="text-gray-600 mb-8">Professional luxury photography coming soon</p>
                    <a href="/{{modelSlug}}/gallery" class="luxury-btn">
                        <i class="fas fa-images mr-2"></i>
                        View Current Gallery
                    </a>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</section>

<!-- Values/Philosophy Section -->
{{#if content.values}}
<section class="py-24 bg-gradient-to-b from-gray-50 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16" data-aos="fade-up">
            <h2 class="text-4xl md:text-5xl font-bold mb-6 luxury-heading text-luxury-primary">
                My Philosophy
            </h2>
            <p class="text-xl text-gray-600">
                The principles that define my approach to luxury service
            </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {{#each content.values}}
            <div class="luxury-card p-10 text-center group hover:scale-105 transition-all duration-500" data-aos="fade-up" data-aos-delay="{{@index}}00">
                <div class="w-24 h-24 mx-auto mb-8 bg-gradient-to-br from-luxury-primary to-luxury-accent rounded-full flex items-center justify-center shadow-xl luxury-float">
                    <i class="{{this.icon}} text-3xl text-white"></i>
                </div>
                <h3 class="text-2xl font-bold mb-6 luxury-heading group-hover:text-luxury-primary transition-colors">{{this.title}}</h3>
                <p class="text-gray-600 leading-relaxed">{{this.description}}</p>
            </div>
            {{/each}}
        </div>
    </div>
</section>
{{/if}}

<!-- Experience Section -->
{{#if content.experience}}
<section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16" data-aos="fade-up">
            <h2 class="text-4xl md:text-5xl font-bold mb-6 luxury-heading text-luxury-primary">
                Experience & Expertise
            </h2>
            <p class="text-xl text-gray-600">
                My journey in providing exceptional luxury experiences
            </p>
        </div>
        
        <div class="max-w-4xl mx-auto">
            <div class="space-y-8">
                {{#each content.experience}}
                <div class="luxury-card p-10 flex items-start space-x-6" data-aos="fade-up" data-aos-delay="{{@index}}00">
                    <div class="w-16 h-16 bg-gradient-to-br from-luxury-primary to-luxury-accent rounded-full flex items-center justify-center flex-shrink-0 shadow-lg">
                        <i class="{{this.icon}} text-white text-xl"></i>
                    </div>
                    <div class="flex-1">
                        <h3 class="text-2xl font-bold mb-3 luxury-heading">{{this.title}}</h3>
                        {{#if this.period}}
                        <p class="text-luxury-primary font-semibold mb-4 text-lg">{{this.period}}</p>
                        {{/if}}
                        <p class="text-gray-700 leading-relaxed">{{this.description}}</p>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</section>
{{/if}}

