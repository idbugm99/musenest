<!-- Luxury About Page Custom Styles -->
<style>
/* Luxury About Page Variables */
:root {
    --luxury-gold: #d4af37;
    --luxury-rich-gold: #b8860b;
    --luxury-rose-gold: #e8b4b8;
    --luxury-platinum: #e5e4e2;
    --luxury-marble-white: #f8f6f0;
    --luxury-marble-cream: #faf5f0;
    --luxury-deep-burgundy: #722f37;
    --luxury-royal-purple: #663399;
    --luxury-obsidian: #0f0f23;
    --luxury-pearl: #f0ead6;
}

/* About Header Styling */
.luxury-about-header {
    position: relative;
    padding: 8rem 0 6rem;
    background: linear-gradient(135deg, var(--luxury-marble-white) 0%, var(--luxury-marble-cream) 50%, var(--luxury-pearl) 100%);
    overflow: hidden;
}

.luxury-imperial-marble {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
        radial-gradient(circle at 30% 60%, rgba(212, 175, 55, 0.08) 0%, transparent 50%),
        radial-gradient(circle at 70% 30%, rgba(232, 180, 184, 0.08) 0%, transparent 50%),
        radial-gradient(circle at 50% 80%, rgba(212, 175, 55, 0.06) 0%, transparent 50%);
}

.luxury-royal-crowns {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
}

.luxury-floating-crown {
    position: absolute;
    font-size: 3rem;
    color: var(--luxury-gold);
    opacity: 0.2;
    animation: luxuryCrownFloat 15s infinite ease-in-out;
}

.luxury-crown-1 {
    top: 20%;
    left: 15%;
    animation-delay: 0s;
}

.luxury-crown-2 {
    top: 60%;
    right: 20%;
    animation-delay: 8s;
}

@keyframes luxuryCrownFloat {
    0%, 100% { transform: translateY(0px) rotate(0deg) scale(1); }
    33% { transform: translateY(-20px) rotate(10deg) scale(1.1); }
    66% { transform: translateY(-5px) rotate(-5deg) scale(0.9); }
}

.luxury-about-title {
    font-size: 5rem;
    font-weight: 900;
    text-align: center;
    margin-bottom: 2rem;
    background: linear-gradient(45deg, var(--luxury-rich-gold) 0%, var(--luxury-gold) 50%, var(--luxury-rose-gold) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: 0 4px 12px rgba(0, 0, 0, 0.4), 0 2px 8px rgba(212, 175, 55, 0.5);
    letter-spacing: 3px;
    position: relative;
}

.luxury-about-title::before {
    content: '';
    position: absolute;
    top: -20px;
    left: -20px;
    right: -20px;
    bottom: -20px;
    background: radial-gradient(ellipse, rgba(0, 0, 0, 0.1) 0%, transparent 70%);
    z-index: -1;
    border-radius: 20px;
}

.luxury-about-subtitle {
    font-size: 1.6rem;
    color: var(--luxury-deep-burgundy);
    text-align: center;
    margin-bottom: 3rem;
    font-weight: 400;
    font-style: italic;
    letter-spacing: 1px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
}

.luxury-title-separator {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    margin: 3rem 0;
}

.luxury-separator-line {
    width: 100px;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--luxury-gold), transparent);
}

.luxury-separator-ornament {
    font-size: 2rem;
    color: var(--luxury-gold);
    animation: luxuryOrnamentPulse 4s infinite ease-in-out;
}

@keyframes luxuryOrnamentPulse {
    0%, 100% { transform: scale(1); opacity: 0.8; }
    50% { transform: scale(1.2); opacity: 1; }
}

/* Header Ornaments */
.luxury-header-ornaments {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
}

.luxury-ornament {
    position: absolute;
    font-size: 2.5rem;
    color: var(--luxury-gold);
    opacity: 0.4;
    animation: luxuryOrnamentFloat 12s infinite ease-in-out;
}

.luxury-ornament-1 {
    top: 25%;
    left: 25%;
    animation-delay: 0s;
}

.luxury-ornament-2 {
    top: 70%;
    right: 30%;
    animation-delay: 4s;
}

.luxury-ornament-3 {
    bottom: 20%;
    left: 60%;
    animation-delay: 8s;
}

@keyframes luxuryOrnamentFloat {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-15px) rotate(180deg); }
}

/* Main Biography Section */
.luxury-main-biography {
    padding: 8rem 0;
    background: linear-gradient(180deg, var(--luxury-pearl) 0%, var(--luxury-marble-cream) 100%);
}

/* Portrait Chamber */
.luxury-portrait-chamber {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.luxury-portrait-throne {
    position: relative;
    padding: 25px;
    background: linear-gradient(45deg, var(--luxury-gold) 0%, var(--luxury-rich-gold) 100%);
    border-radius: 35px;
    box-shadow: 
        0 40px 80px rgba(0, 0, 0, 0.3),
        inset 0 0 0 4px var(--luxury-pearl);
}

.luxury-portrait-royal {
    width: 100%;
    max-width: 500px;
    height: 650px;
    object-fit: cover;
    border-radius: 20px;
    cursor: pointer;
    transition: transform 0.5s ease;
}

.luxury-portrait-royal:hover {
    transform: scale(1.02);
}

.luxury-portrait-placeholder-throne {
    width: 100%;
    max-width: 500px;
    height: 650px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: var(--luxury-marble-white);
    border-radius: 20px;
    color: var(--luxury-deep-burgundy);
}

.luxury-crown-placeholder-large {
    font-size: 6rem;
    color: var(--luxury-gold);
    margin-bottom: 2rem;
    animation: luxuryCrownPulse 4s infinite ease-in-out;
}

.luxury-placeholder-text {
    font-size: 1.5rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2px;
}

/* Portrait Frame Effects */
.luxury-portrait-frame-effects {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
}

.luxury-frame-corner {
    position: absolute;
    width: 50px;
    height: 50px;
    border: 4px solid var(--luxury-pearl);
}

.luxury-corner-top-left {
    top: 15px;
    left: 15px;
    border-right: none;
    border-bottom: none;
    border-radius: 15px 0 0 0;
}

.luxury-corner-top-right {
    top: 15px;
    right: 15px;
    border-left: none;
    border-bottom: none;
    border-radius: 0 15px 0 0;
}

.luxury-corner-bottom-left {
    bottom: 15px;
