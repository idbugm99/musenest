<!-- Contact Hero Section -->
<section class="luxury-hero min-h-96 flex items-center justify-center text-white pt-20" data-aos="fade-in">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
        <h1 class="text-5xl md:text-7xl font-bold mb-8 luxury-heading">
            Contact {{siteName}}
        </h1>
        <p class="text-xl md:text-2xl opacity-90 max-w-3xl mx-auto font-light">
            {{content.contactIntro}}
        </p>
    </div>
</section>

<!-- Contact Information & Form -->
<section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-20">
            <!-- Contact Information -->
            <div data-aos="fade-right">
                <h2 class="text-4xl font-bold mb-12 luxury-heading text-luxury-primary">
                    Let's Connect
                </h2>
                
                <div class="space-y-10">
                    {{#if contactEmail}}
                    <div class="flex items-center space-x-6">
                        <div class="w-20 h-20 bg-gradient-to-br from-luxury-primary to-luxury-accent rounded-full flex items-center justify-center shadow-2xl luxury-float">
                            <i class="fas fa-envelope text-white text-2xl"></i>
                        </div>
                        <div>
                            <h3 class="font-bold text-gray-900 text-xl mb-2">Email</h3>
                            <a href="mailto:{{contactEmail}}" class="text-luxury-primary hover:text-luxury-secondary transition-colors font-semibold text-lg">
                                {{contactEmail}}
                            </a>
                        </div>
                    </div>
                    {{/if}}
                    
                    {{#if contactPhone}}
                    <div class="flex items-center space-x-6">
                        <div class="w-20 h-20 bg-gradient-to-br from-luxury-primary to-luxury-accent rounded-full flex items-center justify-center shadow-2xl luxury-float" style="animation-delay: 1s;">
                            <i class="fas fa-phone text-white text-2xl"></i>
                        </div>
                        <div>
                            <h3 class="font-bold text-gray-900 text-xl mb-2">Phone</h3>
                            <a href="tel:{{contactPhone}}" class="text-luxury-primary hover:text-luxury-secondary transition-colors font-semibold text-lg">
                                {{contactPhone}}
                            </a>
                        </div>
                    </div>
                    {{/if}}
                    
                    {{#if location}}
                    <div class="flex items-center space-x-6">
                        <div class="w-20 h-20 bg-gradient-to-br from-luxury-primary to-luxury-accent rounded-full flex items-center justify-center shadow-2xl luxury-float" style="animation-delay: 2s;">
                            <i class="fas fa-map-marker-alt text-white text-2xl"></i>
                        </div>
                        <div>
                            <h3 class="font-bold text-gray-900 text-xl mb-2">Location</h3>
                            <p class="text-gray-600 text-lg">{{location}}</p>
                        </div>
                    </div>
                    {{/if}}
                    
                    {{#if workingHours}}
                    <div class="flex items-center space-x-6">
                        <div class="w-20 h-20 bg-gradient-to-br from-luxury-primary to-luxury-accent rounded-full flex items-center justify-center shadow-2xl luxury-float" style="animation-delay: 3s;">
                            <i class="fas fa-clock text-white text-2xl"></i>
                        </div>
                        <div>
                            <h3 class="font-bold text-gray-900 text-xl mb-2">Availability</h3>
                            <p class="text-gray-600 text-lg">{{workingHours}}</p>
                        </div>
                    </div>
                    {{/if}}
                </div>
                
                <!-- Social Links -->
                {{#if socialLinks}}
                <div class="mt-16">
                    <h3 class="text-2xl font-bold mb-8 luxury-heading">Follow My Journey</h3>
                    <div class="flex space-x-6">
                        {{#each socialLinks}}
                        <a href="{{this.url}}" class="w-16 h-16 bg-gradient-to-br from-luxury-primary to-luxury-accent rounded-full flex items-center justify-center text-white hover:shadow-2xl transition-all duration-300 transform hover:scale-110 luxury-float">
                            <i class="fab fa-{{this.icon}} text-xl"></i>
                        </a>
                        {{/each}}
                    </div>
                </div>
                {{/if}}
            </div>
            
            <!-- Contact Form -->
            <div data-aos="fade-left">
                <div class="luxury-card p-12 shadow-2xl">
                    <h2 class="text-3xl font-bold mb-10 luxury-heading text-luxury-primary">
                        Send a Message
                    </h2>
                    
                    <form id="contactForm" class="space-y-8">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                            <div>
                                <label for="firstName" class="block text-sm font-bold text-gray-700 mb-3 uppercase tracking-wide">
                                    First Name *
                                </label>
                                <input type="text" id="firstName" name="firstName" required
                                       class="w-full px-6 py-4 border-2 border-gray-200 rounded-xl focus:ring-2 focus:ring-luxury-primary focus:border-transparent transition-all text-lg">
                            </div>
                            <div>
                                <label for="lastName" class="block text-sm font-bold text-gray-700 mb-3 uppercase tracking-wide">
                                    Last Name *
                                </label>
                                <input type="text" id="lastName" name="lastName" required
                                       class="w-full px-6 py-4 border-2 border-gray-200 rounded-xl focus:ring-2 focus:ring-luxury-primary focus:border-transparent transition-all text-lg">
                            </div>
                        </div>
                        
                        <div>
                            <label for="email" class="block text-sm font-bold text-gray-700 mb-3 uppercase tracking-wide">
                                Email Address *
                            </label>
                            <input type="email" id="email" name="email" required
                                   class="w-full px-6 py-4 border-2 border-gray-200 rounded-xl focus:ring-2 focus:ring-luxury-primary focus:border-transparent transition-all text-lg">
                        </div>
                        
                        <div>
                            <label for="phone" class="block text-sm font-bold text-gray-700 mb-3 uppercase tracking-wide">
                                Phone Number
                            </label>
                            <input type="tel" id="phone" name="phone"
                                   class="w-full px-6 py-4 border-2 border-gray-200 rounded-xl focus:ring-2 focus:ring-luxury-primary focus:border-transparent transition-all text-lg">
                        </div>
                        
                        <div>
                            <label for="subject" class="block text-sm font-bold text-gray-700 mb-3 uppercase tracking-wide">
                                Subject *
                            </label>
                            <select id="subject" name="subject" required
                                    class="w-full px-6 py-4 border-2 border-gray-200 rounded-xl focus:ring-2 focus:ring-luxury-primary focus:border-transparent transition-all text-lg">
                                <option value="">Select a subject</option>
                                <option value="general">General Inquiry</option>
                                <option value="booking">Exclusive Booking</option>
                                <option value="rates">Luxury Services & Rates</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                        
                        <div>
                            <label for="message" class="block text-sm font-bold text-gray-700 mb-3 uppercase tracking-wide">
                                Message *
                            </label>
                            <textarea id="message" name="message" rows="6" required
                                      class="w-full px-6 py-4 border-2 border-gray-200 rounded-xl focus:ring-2 focus:ring-luxury-primary focus:border-transparent transition-all text-lg"></textarea>
                        </div>
                        
                        <div>
                            <button type="submit" class="luxury-btn w-full text-lg py-4">
                                <i class="fas fa-paper-plane mr-3"></i>
                                Send Luxury Message
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Response Expectations -->
