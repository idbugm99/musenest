<!-- Rates Hero Section -->
<section class="luxury-hero min-h-96 flex items-center justify-center text-white pt-20" data-aos="fade-in">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
        <h1 class="text-5xl md:text-7xl font-bold mb-8 luxury-heading">
            Luxury Services & Rates
        </h1>
        <p class="text-xl md:text-2xl opacity-90 max-w-3xl mx-auto font-light">
            {{content.ratesIntro}}
        </p>
    </div>
</section>

<!-- Services Grid -->
<section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        {{#if services}}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
            {{#each services}}
            <div class="luxury-card p-10 text-center group hover:scale-105 transition-all duration-500 shadow-2xl" data-aos="fade-up" data-aos-delay="{{@index}}00">
                <div class="w-24 h-24 mx-auto mb-8 bg-gradient-to-br from-luxury-primary to-luxury-accent rounded-full flex items-center justify-center shadow-xl luxury-float">
                    <i class="{{this.icon}} text-3xl text-white"></i>
                </div>
                <h3 class="text-2xl font-bold mb-6 luxury-heading group-hover:text-luxury-primary transition-colors">{{this.name}}</h3>
                <p class="text-gray-600 mb-8 leading-relaxed">{{this.description}}</p>
                {{#if this.duration}}
                <div class="text-sm text-gray-500 mb-4 flex items-center justify-center">
                    <i class="fas fa-clock mr-2"></i> 
                    <span class="font-semibold">{{this.duration}}</span>
                </div>
                {{/if}}
                {{#if this.price}}
                <div class="text-4xl font-bold text-luxury-primary mb-6">
                    {{formatCurrency this.price}}
                </div>
                {{/if}}
                {{#if this.features}}
                <ul class="text-left text-sm text-gray-600 space-y-2 mb-8 bg-gray-50 p-4 rounded-lg">
                    {{#each this.features}}
                    <li class="flex items-center">
                        <i class="fas fa-gem text-luxury-primary mr-3"></i>
                        <span>{{this}}</span>
                    </li>
                    {{/each}}
                </ul>
                {{/if}}
                <a href="/{{../modelSlug}}/contact?service={{this.slug}}" class="luxury-btn w-full">
                    <i class="fas fa-crown mr-2"></i>
                    Book Luxury Experience
                </a>
            </div>
            {{/each}}
        </div>
        {{else}}
        <div class="text-center py-20">
            <div class="w-40 h-40 mx-auto mb-8 bg-gradient-to-br from-luxury-primary to-luxury-accent rounded-full flex items-center justify-center shadow-2xl luxury-float">
                <i class="fas fa-gem text-5xl text-white"></i>
            </div>
            <h3 class="text-3xl font-bold mb-6 luxury-heading">Exclusive Luxury Services</h3>
            <p class="text-gray-600 mb-8 text-lg max-w-2xl mx-auto">Contact me for detailed information about my premium luxury services and bespoke rates.</p>
            <a href="/{{modelSlug}}/contact" class="luxury-btn">
                <i class="fas fa-envelope mr-2"></i>
                Inquire About Services
            </a>
        </div>
        {{/if}}
    </div>
</section>

