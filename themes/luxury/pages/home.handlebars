<style>
/* Luxury Theme Variables */
:root {
    --luxury-gold: #d4af37;
    --luxury-rich-gold: #b8860b;
    --luxury-rose-gold: #e8b4b8;
    --luxury-platinum: #e5e4e2;
    --luxury-marble-white: #f8f6f0;
    --luxury-marble-cream: #faf5f0;
    --luxury-deep-burgundy: #722f37;
    --luxury-royal-purple: #663399;
    --luxury-obsidian: #0f0f23;
    --luxury-pearl: #f0ead6;
}

/* Hero Section Styling */
.luxury-hero {
    position: relative;
    min-height: 100vh;
    background: linear-gradient(135deg, var(--luxury-marble-white) 0%, var(--luxury-marble-cream) 50%, var(--luxury-pearl) 100%);
    display: flex;
    align-items: center;
    overflow: hidden;
}

.luxury-marble-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
        radial-gradient(circle at 20% 50%, rgba(212, 175, 55, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 80% 20%, rgba(232, 180, 184, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 40% 80%, rgba(212, 175, 55, 0.08) 0%, transparent 50%);
    filter: blur(1px);
}

.luxury-gold-accents {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
}

.luxury-gold-leaf {
    position: absolute;
    width: 60px;
    height: 60px;
    background: linear-gradient(45deg, var(--luxury-gold) 0%, var(--luxury-rich-gold) 100%);
    border-radius: 0 100% 0 100%;
    opacity: 0.3;
    animation: luxuryFloatLeaf 20s infinite ease-in-out;
}

.luxury-leaf-1 {
    top: 10%;
    left: 10%;
    animation-delay: 0s;
    transform: rotate(45deg);
}

.luxury-leaf-2 {
