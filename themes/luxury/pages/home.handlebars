<!-- Hero Section -->
<section class="luxury-hero min-h-screen flex items-center justify-center text-white relative pt-20" data-aos="fade-in">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
        <div class="luxury-float">
            <h1 class="text-5xl md:text-7xl font-bold mb-8 luxury-heading">
                {{content.heroTitle}}
            </h1>
            <p class="text-xl md:text-3xl mb-12 opacity-90 font-light max-w-4xl mx-auto">
                {{content.heroSubtitle}}
            </p>
            <div class="flex flex-col sm:flex-row justify-center gap-6">
                <a href="/{{modelSlug}}/contact" class="luxury-btn text-lg px-8 py-4">
                    <i class="fas fa-gem mr-3"></i>
                    Experience Luxury
                </a>
                <a href="/{{modelSlug}}/about" class="luxury-btn-outline text-lg px-8 py-4 text-white border-white hover:bg-white hover:text-gray-900">
                    <i class="fas fa-crown mr-3"></i>
                    Discover More
                </a>
            </div>
        </div>
    </div>
    
    <!-- Animated Background Elements -->
    <div class="absolute inset-0 overflow-hidden">
        <div class="absolute top-1/4 left-1/4 w-32 h-32 bg-yellow-400 rounded-full opacity-10 luxury-float"></div>
        <div class="absolute top-3/4 right-1/4 w-24 h-24 bg-white rounded-full opacity-20 luxury-float" style="animation-delay: 2s;"></div>
        <div class="absolute bottom-1/4 left-1/3 w-16 h-16 bg-yellow-300 rounded-full opacity-15 luxury-float" style="animation-delay: 4s;"></div>
    </div>
</section>

<!-- About Preview Section -->
<section class="py-24 bg-gradient-to-b from-white to-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
            <div data-aos="fade-right">
                <h2 class="text-4xl md:text-5xl font-bold mb-8 luxury-heading text-luxury-primary">
                    About {{siteName}}
                </h2>
                <div class="text-lg text-gray-700 leading-relaxed space-y-6 mb-8">
                    {{{content.aboutPreview}}}
                </div>
                <div class="flex items-center space-x-6 mb-8">
                    <div class="flex items-center space-x-2">
                        <i class="fas fa-star text-yellow-400"></i>
                        <span class="text-sm font-semibold text-gray-600">Premium Experience</span>
                    </div>
                    <div class="flex items-center space-x-2">
                        <i class="fas fa-shield-alt text-green-500"></i>
                        <span class="text-sm font-semibold text-gray-600">100% Discreet</span>
                    </div>
                    <div class="flex items-center space-x-2">
                        <i class="fas fa-gem text-purple-500"></i>
                        <span class="text-sm font-semibold text-gray-600">Luxury Service</span>
                    </div>
                </div>
                <a href="/{{modelSlug}}/about" class="luxury-btn">
                    <i class="fas fa-user-circle mr-2"></i>
                    Learn More About Me
                </a>
            </div>
            <div data-aos="fade-left">
                {{#if content.aboutImage}}
                <div class="relative">
                    <div class="absolute inset-0 bg-gradient-to-r from-luxury-primary to-luxury-accent rounded-3xl transform rotate-3"></div>
                    <img src="{{content.aboutImage}}" alt="{{siteName}}" 
                         class="relative w-full rounded-3xl shadow-2xl transform -rotate-3 hover:rotate-0 transition-transform duration-500">
                </div>
                {{else}}
                <div class="luxury-card p-16 text-center">
                    <div class="w-40 h-40 mx-auto mb-8 bg-gradient-to-br from-luxury-primary to-luxury-accent rounded-full flex items-center justify-center shadow-2xl luxury-float">
                        <i class="fas fa-crown text-5xl text-white"></i>
                    </div>
                    <h3 class="text-2xl font-bold mb-4 luxury-heading">Luxury Awaits</h3>
                    <p class="text-gray-600">Exclusive photos and content coming soon</p>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</section>

<!-- Services Preview Section -->
<section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16" data-aos="fade-up">
            <h2 class="text-4xl md:text-5xl font-bold mb-6 luxury-heading text-luxury-primary">
                Luxury Services & Experiences
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                {{content.servicesPreview}}
            </p>
        </div>
        
        {{#if services}}
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {{#each services}}
            <div class="luxury-card p-10 text-center group hover:scale-105 transition-all duration-500" data-aos="fade-up" data-aos-delay="{{@index}}00">
                <div class="w-24 h-24 mx-auto mb-8 bg-gradient-to-br from-luxury-primary to-luxury-accent rounded-full flex items-center justify-center shadow-xl luxury-float">
                    <i class="{{this.icon}} text-3xl text-white"></i>
                </div>
                <h3 class="text-2xl font-bold mb-4 luxury-heading group-hover:text-luxury-primary transition-colors">{{this.name}}</h3>
                <p class="text-gray-600 mb-8 leading-relaxed">{{this.description}}</p>
                {{#if this.price}}
                <p class="text-3xl font-bold text-luxury-primary mb-4">{{formatCurrency this.price}}</p>
                {{/if}}
                <div class="w-16 h-1 bg-gradient-to-r from-luxury-primary to-luxury-accent mx-auto"></div>
            </div>
            {{/each}}
        </div>
        {{else}}
        <div class="luxury-card p-16 text-center max-w-2xl mx-auto">
            <div class="w-32 h-32 mx-auto mb-8 bg-gradient-to-br from-luxury-primary to-luxury-accent rounded-full flex items-center justify-center shadow-2xl luxury-float">
                <i class="fas fa-gem text-4xl text-white"></i>
            </div>
            <h3 class="text-3xl font-bold mb-6 luxury-heading">Exclusive Luxury Services</h3>
            <p class="text-gray-600 mb-8 text-lg">Bespoke experiences crafted for the most discerning clientele</p>
            <a href="/{{modelSlug}}/rates" class="luxury-btn">
                <i class="fas fa-list-alt mr-2"></i>
                View All Services
            </a>
        </div>
        {{/if}}
        
        <div class="text-center mt-16" data-aos="fade-up">
            <a href="/{{modelSlug}}/rates" class="luxury-btn-outline">
                <i class="fas fa-arrow-right mr-2"></i>
                View All Services & Rates
            </a>
        </div>
    </div>
</section>

<!-- Gallery Preview Section -->
{{#if galleryImages}}
<section class="py-24 bg-gradient-to-b from-gray-50 to-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16" data-aos="fade-up">
            <h2 class="text-4xl md:text-5xl font-bold mb-6 luxury-heading text-luxury-primary">
                Luxury Gallery
            </h2>
            <p class="text-xl text-gray-600">
                A curated collection of sophistication and elegance
            </p>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            {{#each galleryImages}}
            {{#if (lt @index 8)}}
            <div class="relative group overflow-hidden rounded-2xl shadow-xl" data-aos="zoom-in" data-aos-delay="{{@index}}00">
                <img src="{{this.thumbnail}}" alt="Gallery Image" 
                     class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-110">
                <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                    <div class="absolute bottom-4 left-4 right-4">
                        <p class="text-white text-sm font-medium">{{this.caption}}</p>
                    </div>
                </div>
                <div class="absolute inset-0 bg-black bg-opacity-50 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                    <i class="fas fa-expand text-white text-2xl"></i>
                </div>
            </div>
            {{/if}}
            {{/each}}
        </div>
        
        <div class="text-center mt-16" data-aos="fade-up">
            <a href="/{{modelSlug}}/gallery" class="luxury-btn">
                <i class="fas fa-images mr-2"></i>
                View Full Gallery
            </a>
        </div>
    </div>
</section>
{{/if}}

