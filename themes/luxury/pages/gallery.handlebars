<!-- Universal Gallery System for Luxury Theme -->
{{{renderUniversalGallery modelSlug previewTheme=previewThemeId}}}

<!-- Load Universal Gallery System CSS and JavaScript -->
<link rel="stylesheet" href="/templates/universal/gallery-styles.css">
<script src="/templates/universal/gallery-script.js"></script>

<!-- Luxury Theme Gallery CSS Variables Override -->
<style>
:root {
    --gallery-primary: #ffd700;
    --gallery-primary-hover: #ffed4e;
    --gallery-secondary: #cd9500;
    --gallery-accent: #ffb300;
    --gallery-background: linear-gradient(135deg, #f8f6f0, #f0ead6);
    --gallery-surface: rgba(255, 255, 255, 0.95);
    --gallery-text: #1a1a2e;
    --gallery-text-muted: #4a4a5e;
    --gallery-border: rgba(255, 215, 0, 0.2);
    --gallery-shadow: rgba(205, 149, 0, 0.2);
    --gallery-shadow-hover: rgba(205, 149, 0, 0.4);
    
    --gallery-border-radius: 12px;
    --gallery-border-radius-large: 20px;
    --gallery-grid-columns-desktop: 3;
    --gallery-transition-duration: 0.4s;
    --gallery-transition-easing: cubic-bezier(0.4, 0, 0.2, 1);
    --gallery-hover-lift: -8px;
    --gallery-hover-scale: 1.02;
}
</style>

<!-- Luxury Theme Gallery Custom Page Styles -->
<style>
/* Luxury Theme Gallery Hero Section */
.universal-gallery .gallery-hero {
    background: linear-gradient(135deg, #f8f6f0, #f0ead6, #e8dcc0);
    color: #1a1a2e;
    position: relative;
    overflow: hidden;
}

.universal-gallery .gallery-hero::before {
    content: '';
    position: absolute;
    top: -50px;
    left: 50%;
    transform: translateX(-50%);
    width: 300px;
    height: 150px;
    background: radial-gradient(ellipse, rgba(255, 215, 0, 0.3) 0%, transparent 70%);
    border-radius: 50%;
    animation: luxury-palace-glow 4s ease-in-out infinite alternate;
}

.universal-gallery .gallery-hero .hero-badge {
    display: inline-block;
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #ffd700, #ffed4e, #ffd700);
    border-radius: 50%;
    margin: 0 auto 2rem auto;
    box-shadow: 0 0 30px rgba(255, 215, 0, 0.5);
    animation: luxury-crown-pulse 3s ease-in-out infinite;
}

@keyframes luxury-palace-glow {
    0%, 100% { opacity: 0.6; transform: translateX(-50%) scale(1); }
    50% { opacity: 1; transform: translateX(-50%) scale(1.1); }
}

@keyframes luxury-crown-pulse {
    0%, 100% { box-shadow: 0 0 30px rgba(255, 215, 0, 0.5); }
    50% { box-shadow: 0 0 50px rgba(255, 215, 0, 0.8); }
}

/* Luxury Theme Gallery Items */
.universal-gallery .gallery-grid-item::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, #ffd700, #ffed4e, #ffd700);
    border-radius: calc(var(--gallery-border-radius) + 2px);
    z-index: -1;
    opacity: 0;
    transition: opacity 0.4s ease;
}

.universal-gallery .gallery-grid-item:hover::before {
    opacity: 1;
}

/* Luxury Theme Gallery Sections */
.universal-gallery .gallery-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 2px;
    background: linear-gradient(90deg, transparent, #ffd700, transparent);
}

.universal-gallery .gallery-section-title {
    color: #ffd700;
    text-shadow: 0 0 10px rgba(255, 215, 0, 0.3);
    position: relative;
}

.universal-gallery .gallery-section-title::after {
    content: '';
    position: absolute;
    bottom: -1rem;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 4px;
    background: linear-gradient(90deg, #ffd700, #ffed4e, #ffd700);
    border-radius: 2px;
    box-shadow: 0 0 10px rgba(255, 215, 0, 0.5);
}

/* Luxury Theme Carousel Styling */
.universal-gallery .gallery-carousel-container {
    background: linear-gradient(135deg, rgba(255, 215, 0, 0.05), rgba(205, 164, 0, 0.05));
    border: 1px solid rgba(255, 215, 0, 0.1);
}

.universal-gallery .gallery-carousel-nav {
    background: rgba(255, 215, 0, 0.9);
    color: #1a1a2e;
    box-shadow: 0 4px 15px rgba(255, 215, 0, 0.4);
}

.universal-gallery .gallery-carousel-nav:hover {
    background: rgba(255, 215, 0, 1);
    box-shadow: 0 8px 25px rgba(255, 215, 0, 0.6);
}

.universal-gallery .gallery-carousel-dot {
    background: rgba(255, 215, 0, 0.4);
}

.universal-gallery .gallery-carousel-dot.active {
    background: #ffd700;
}

/* Luxury Theme Empty State */
.universal-gallery .gallery-empty-state {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(248, 250, 252, 0.95));
    border: 1px solid rgba(255, 215, 0, 0.2);
    position: relative;
}

.universal-gallery .gallery-empty-state::before {
    content: '';
    position: absolute;
    top: -30px;
    left: 50%;
    transform: translateX(-50%);
    width: 200px;
    height: 100px;
    background: radial-gradient(ellipse, rgba(255, 215, 0, 0.2) 0%, transparent 70%);
    border-radius: 50%;
}

.universal-gallery .gallery-empty-icon {
    background: linear-gradient(135deg, #ffd700, #ffed4e);
    box-shadow: 0 0 30px rgba(255, 215, 0, 0.4);
}

/* Luxury Theme CTA Section */
.universal-gallery .gallery-cta {
    background: linear-gradient(135deg, #ffd700, #cd9500, #ffd700);
    color: white;
    position: relative;
}

.universal-gallery .gallery-cta::before {
    content: '';
    position: absolute;
    top: -40px;
    left: 50%;
    transform: translateX(-50%);
    width: 400px;
    height: 200px;
    background: radial-gradient(ellipse, rgba(255, 255, 255, 0.2) 0%, transparent 70%);
    border-radius: 50%;
    animation: luxury-palace-glow 4s ease-in-out infinite alternate;
}

.universal-gallery .gallery-cta-badge {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.7));
    color: #ffd700;
    box-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
    animation: luxury-crown-pulse 3s ease-in-out infinite;
}

.universal-gallery .gallery-cta-primary {
    background: white;
    color: #ffd700;
    box-shadow: 0 4px 15px rgba(255, 255, 255, 0.3);
}

.universal-gallery .gallery-cta-primary:hover {
    background: #f8f8f8;
    box-shadow: 0 8px 25px rgba(255, 255, 255, 0.4);
}

.universal-gallery .gallery-cta-secondary {
    border: 2px solid rgba(255, 255, 255, 0.8);
    background: rgba(255, 255, 255, 0.1);
    color: white;
}

.universal-gallery .gallery-cta-secondary:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: white;
}
</style>
