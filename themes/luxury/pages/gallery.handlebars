<!-- Universal Gallery System for Luxury Theme -->
{{{renderUniversalGallery modelSlug previewTheme=previewThemeId}}}

<!-- Load Universal Gallery System CSS and JavaScript -->
<link rel="stylesheet" href="/templates/universal/gallery-styles.css">
<script src="/templates/universal/gallery-script.js"></script>

<!-- Luxury Theme Gallery CSS Variables Override -->
<style>
:root {
    --gallery-primary: var(--theme-primary);
    --gallery-primary-hover: var(--theme-accent);
    --gallery-secondary: var(--theme-secondary);
    --gallery-accent: var(--theme-accent);
    --gallery-background: linear-gradient(135deg, var(--theme-bg), var(--theme-surface));
    --gallery-surface: var(--theme-surface);
    --gallery-text: var(--theme-text);
    --gallery-text-muted: var(--theme-text-subtle);
    --gallery-border: var(--theme-primary);
    --gallery-shadow: rgba(212, 175, 55, 0.25);
    --gallery-shadow-hover: rgba(212, 175, 55, 0.4);
    
    --gallery-border-radius: 16px;
    --gallery-border-radius-large: 24px;
    --gallery-grid-columns-desktop: 4;
    --gallery-transition-duration: 0.5s;
    --gallery-transition-easing: cubic-bezier(0.25, 0.46, 0.45, 0.94);
    --gallery-hover-lift: -12px;
    --gallery-hover-scale: 1.05;
}
</style>

<!-- Luxury Theme Gallery Custom Page Styles -->
<style>
/* Luxury Theme Gallery Hero Section */
.universal-gallery .gallery-hero {
    background: linear-gradient(135deg, #2C1810 0%, #8B4513 25%, #D4AF37 50%, #B8860B 75%, #8B4513 100%);
    color: #F5F5DC;
    position: relative;
    overflow: hidden;
    min-height: 40vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 0 3rem;
}

.universal-gallery .gallery-hero::before {
    content: '';
    position: absolute;
    top: -50px;
    left: 50%;
    transform: translateX(-50%);
    width: 300px;
    height: 150px;
    background: radial-gradient(ellipse, var(--theme-accent) 0%, transparent 70%);
    border-radius: 50%;
    animation: luxury-palace-glow 4s ease-in-out infinite alternate;
}

.universal-gallery .gallery-hero .hero-badge {
    display: inline-block;
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #D4AF37, #2C1810, #D4AF37);
    border-radius: 50%;
    margin: 0 auto 2rem auto;
    box-shadow: 0 0 30px rgba(212, 175, 55, 0.5);
    animation: luxury-crown-pulse 3s ease-in-out infinite;
}

@keyframes luxury-palace-glow {
    0%, 100% { opacity: 0.6; transform: translateX(-50%) scale(1); }
    50% { opacity: 1; transform: translateX(-50%) scale(1.1); }
}

@keyframes luxury-crown-pulse {
    0%, 100% { box-shadow: 0 0 30px rgba(212, 175, 55, 0.5); }
    50% { box-shadow: 0 0 50px rgba(212, 175, 55, 0.8); }
}

/* Gallery Hero Responsive */
@media (max-width: 768px) {
    .universal-gallery .gallery-hero {
        min-height: 35vh;
        padding: 4rem 0 3rem;
    }
}

@media (max-width: 480px) {
    .universal-gallery .gallery-hero {
        min-height: 30vh;
        padding: 3rem 0 2rem;
    }
}

/* Gallery Hero Text Styling */
.universal-gallery .gallery-hero .hero-title {
    color: #F5F5DC;
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.5), 0 2px 10px rgba(212, 175, 55, 0.3);
    font-family: Georgia, serif;
    letter-spacing: 3px;
}

.universal-gallery .gallery-hero .hero-subtitle {
    color: rgba(245, 245, 220, 0.9);
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
    font-family: Georgia, serif;
    font-style: italic;
}

/* Luxury Theme Gallery Items */
.universal-gallery .gallery-grid-item::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, var(--theme-accent), var(--theme-primary), var(--theme-accent));
    border-radius: calc(var(--gallery-border-radius) + 2px);
    z-index: -1;
    opacity: 0;
    transition: opacity 0.5s ease;
}

.universal-gallery .gallery-grid-item:hover::before {
    opacity: 1;
}

/* Luxury Theme Gallery Sections */
.universal-gallery .gallery-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--theme-accent), transparent);
}

.universal-gallery .gallery-section-title {
    color: var(--theme-accent);
    text-shadow: 0 0 10px rgba(212, 175, 55, 0.3);
    position: relative;
}

.universal-gallery .gallery-section-title::after {
    content: '';
    position: absolute;
    bottom: -1rem;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 4px;
    background: linear-gradient(90deg, var(--theme-accent), var(--theme-primary), var(--theme-accent));
    border-radius: 2px;
    box-shadow: 0 0 10px rgba(212, 175, 55, 0.4);
}

/* Luxury Theme Carousel Styling */
.universal-gallery .gallery-carousel-container {
    background: linear-gradient(135deg, var(--theme-surface), var(--theme-bg));
    border: 1px solid var(--theme-primary);
}

.universal-gallery .gallery-carousel-nav {
    background: var(--theme-accent);
    color: white;
    box-shadow: 0 4px 15px rgba(212, 175, 55, 0.3);
    opacity: 0.9;
}

.universal-gallery .gallery-carousel-nav:hover {
    background: var(--theme-accent);
    box-shadow: 0 8px 25px rgba(212, 175, 55, 0.5);
    opacity: 1;
}

.universal-gallery .gallery-carousel-dot {
    background: var(--theme-accent);
    opacity: 0.4;
}

.universal-gallery .gallery-carousel-dot.active {
    background: var(--theme-accent);
}

/* Luxury Theme Empty State */
.universal-gallery .gallery-empty-state {
    background: linear-gradient(135deg, var(--theme-surface), var(--theme-bg));
    border: 1px solid var(--theme-primary);
    position: relative;
    opacity: 0.95;
}

.universal-gallery .gallery-empty-state::before {
    content: '';
    position: absolute;
    top: -30px;
    left: 50%;
    transform: translateX(-50%);
    width: 200px;
    height: 100px;
    background: radial-gradient(ellipse, var(--theme-accent) 0%, transparent 70%);
    border-radius: 50%;
    opacity: 0.2;
}

.universal-gallery .gallery-empty-icon {
    background: linear-gradient(135deg, var(--theme-accent), var(--theme-primary));
    box-shadow: 0 0 30px rgba(212, 175, 55, 0.3);
}

/* Luxury Theme CTA Section */
.universal-gallery .gallery-cta {
    background: linear-gradient(135deg, var(--theme-accent), var(--theme-secondary), var(--theme-accent));
    color: white;
    position: relative;
}

.universal-gallery .gallery-cta::before {
    content: '';
    position: absolute;
    top: -40px;
    left: 50%;
    transform: translateX(-50%);
    width: 400px;
    height: 200px;
    background: radial-gradient(ellipse, var(--theme-primary) 0%, transparent 70%);
    border-radius: 50%;
    opacity: 0.2;
    animation: luxury-palace-glow 4s ease-in-out infinite alternate;
}

.universal-gallery .gallery-cta-badge {
    background: linear-gradient(135deg, var(--theme-surface), var(--theme-surface));
    color: var(--theme-accent);
    box-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
    opacity: 0.9;
    animation: luxury-crown-pulse 3s ease-in-out infinite;
}

.universal-gallery .gallery-cta-primary {
    background: white;
    color: var(--theme-accent);
    box-shadow: 0 4px 15px rgba(255, 255, 255, 0.3);
}

.universal-gallery .gallery-cta-primary:hover {
    background: var(--theme-surface);
    box-shadow: 0 8px 25px rgba(255, 255, 255, 0.4);
}

.universal-gallery .gallery-cta-secondary {
    border: 2px solid rgba(255, 255, 255, 0.8);
    background: rgba(255, 255, 255, 0.1);
    color: white;
}

.universal-gallery .gallery-cta-secondary:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: white;
}
</style>
