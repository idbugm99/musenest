<!-- Glamour Theme Home Page - Movie Star Aesthetic -->

<!-- Hero Section with Spotlight Effect -->
{{#if content.hero_section_visible}}
<section class="glamour-hero {{#if content.heroBackgroundImageUrl}}glamour-hero-with-bg{{/if}}" data-aos="fade-in" 
         {{#if content.heroBackgroundImageUrl}}style="background-image: url('{{content.heroBackgroundImageUrl}}')"{{/if}}>
    {{#if content.heroBackgroundImageUrl}}
    <!-- Dynamic overlay for better text contrast -->
    <div class="absolute inset-0 bg-black" style="opacity: {{#if content.hero_background_opacity}}{{content.hero_background_opacity}}{{else}}0.6{{/if}};"></div>
    {{/if}}
    
    <!-- Spotlight Background Effects -->
    <div class="glamour-spotlight-container">
        <div class="glamour-spotlight glamour-spotlight-1"></div>
        <div class="glamour-spotlight glamour-spotlight-2"></div>
        <div class="glamour-spotlight glamour-spotlight-3"></div>
    </div>
    
    <!-- Hero Content -->
    <div class="glamour-hero-content">
        <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
            <!-- Main Title with Dramatic Effect -->
            <h1 class="glamour-hero-title" data-aos="fade-up" data-aos-delay="200">
                {{#if content.hero_title}}{{content.hero_title}}{{else}}Welcome to Glamour{{/if}}
            </h1>
            
            <!-- Subtitle with Elegant Typography -->
            {{#if content.hero_subtitle}}
            <p class="glamour-hero-subtitle" data-aos="fade-up" data-aos-delay="400">
                {{content.hero_subtitle}}
            </p>
            {{/if}}
            
            <!-- CTA Buttons with Movie Star Styling -->
            <div class="glamour-cta-container" data-aos="fade-up" data-aos-delay="600">
                <!-- Primary Button -->
                {{#if content.hero_button_1_text}}
                    {{#if (eq content.hero_button_1_link 'calendar')}}
                        <a href="/{{modelSlug}}/calendar{{previewParam}}" class="glamour-btn glamour-btn-primary"><span>{{content.hero_button_1_text}}</span></a>
                    {{else if (eq content.hero_button_1_link 'contact')}}
                        <a href="/{{modelSlug}}/contact{{previewParam}}" class="glamour-btn glamour-btn-primary"><span>{{content.hero_button_1_text}}</span></a>
                    {{else if (eq content.hero_button_1_link 'about')}}
                        <a href="/{{modelSlug}}/about{{previewParam}}" class="glamour-btn glamour-btn-primary"><span>{{content.hero_button_1_text}}</span></a>
