<!-- Glamour Theme Custom Styles -->
<style>
/* Professional Glamour Theme Variables */
:root {
    --glamour-primary: {{theme.colors.accent}};
    --glamour-primary-hover: {{theme.colors.btn-bg-hover}};
    --glamour-gold: {{theme.colors.accent}};
    --glamour-rose-gold: {{theme.colors.secondary}};
    --glamour-deep-purple: {{theme.colors.bg-dark}};
    --glamour-neutral: {{theme.colors.surface}};
    --glamour-champagne: {{theme.colors.text-light}};
    --glamour-black: {{theme.colors.text-dark}};
    --glamour-white: {{theme.colors.text-light}};
    --glamour-card: {{theme.colors.card-bg}};
    --glamour-border: {{theme.colors.divider}};
    --glamour-success: {{theme.colors.success}};
    --glamour-warning: {{theme.colors.warning}};
    --glamour-danger: {{theme.colors.danger}};
    --glamour-burgundy: {{theme.colors.primary}};
}

/* Professional Hero Section */
.glamour-hero {
    position: relative;
    min-height: 100vh;
    background: linear-gradient(160deg, {{theme.colors.primary}} 0%, {{theme.colors.secondary}} 45%, {{theme.colors.card-bg}} 100%);
    display: flex;
    align-items: center;
    overflow: hidden;
}

/* Hero with Background Image */
.glamour-hero-with-bg {
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
}

.glamour-spotlight-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
}

.glamour-spotlight {
    position: absolute;
    width: 300px;
    height: 300px;
    border-radius: 50%;
    background: radial-gradient(circle, {{theme.colors.overlay}} 0%, rgba(255, 255, 255, 0.05) 40%, transparent 70%);
    filter: blur(20px);
    animation: glamourSpotlightMove 20s infinite linear;
}

.glamour-spotlight-1 {
    top: 10%;
    left: 20%;
    animation-delay: 0s;
}

.glamour-spotlight-2 {
    top: 60%;
    right: 30%;
    animation-delay: -7s;
}

.glamour-spotlight-3 {
    bottom: 20%;
    left: 60%;
    animation-delay: -14s;
}

@keyframes glamourSpotlightMove {
    0% { transform: translate(0, 0) scale(1); }
    33% { transform: translate(100px, -50px) scale(1.2); }
    66% { transform: translate(-80px, 80px) scale(0.8); }
    100% { transform: translate(0, 0) scale(1); }
}

.glamour-hero-content {
    position: relative;
    z-index: 10;
    width: 100%;
}

.glamour-hero-title {
    font-size: 48px;
    line-height: 56px;
    font-weight: 800;
    color: var(--glamour-white);
    text-align: center;
    margin-bottom: 1.5rem;
    background: linear-gradient(45deg, var(--glamour-white) 30%, var(--glamour-gold) 70%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: 0 0 50px rgba(255, 255, 255, 0.18);
}

.glamour-hero-subtitle {
    font-size: 1.5rem;
    color: var(--glamour-champagne);
    text-align: center;
    margin-bottom: 2rem;
    font-weight: 300;
    letter-spacing: 1px;
}

/* Professional Button System */
.glamour-btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    height: 44px;
    padding: 0 24px;
    font-weight: 500;
    text-decoration: none;
    border-radius: 22px;
    transition: all 0.2s ease;
    overflow: hidden;
    margin: 0 8px;
    font-size: 16px;
    line-height: 1;
}

.glamour-btn-primary {
    background: linear-gradient(135deg, var(--glamour-primary) 0%, var(--glamour-primary-hover) 100%);
    color: var(--glamour-black);
    border: none;
    box-shadow: 0 2px 8px {{theme.colors.card-shadow}};
}

.glamour-btn-primary:hover {
    background: linear-gradient(135deg, var(--glamour-primary-hover) 0%, {{theme.colors.accent}} 100%);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px {{theme.colors.card-shadow}};
    text-decoration: none;
    color: var(--glamour-black);
}

.glamour-btn-secondary {
    background: {{theme.colors.modal-bg}};
    color: var(--glamour-white);
    border: 1px solid var(--glamour-border);
    backdrop-filter: blur(10px);
    box-shadow: 0 2px 8px {{theme.colors.card-shadow}};
}

.glamour-btn-secondary:hover {
    background: {{theme.colors.popover-bg}};
    border-color: var(--glamour-primary);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px {{theme.colors.card-shadow}};
    text-decoration: none;
    color: var(--glamour-white);
}

/* Sparkle Effect for Primary Button */
.glamour-sparkle-effect::before {
    content: '';
