<!-- Glamour About Page Styles -->
<style>
/* About Page Variables */
:root {
    --glamour-gold: #E9C77A;
    --glamour-rose-gold: #D4B5B8;
    --glamour-deep-purple: #2d1b3d;
    --glamour-burgundy: #8b1538;
    --glamour-champagne: #f7e7ce;
    --glamour-black: #1a1a1a;
    --glamour-white: #ffffff;
    --glamour-page-bg: #14101D;
    --glamour-card-dark: #221A31;
    --glamour-text-light: #F3EFE7;
}

/* 48px Gold Underline */
.glamour-title-underline {
    width: 48px;
    height: 2px;
    background: var(--glamour-gold);
    margin: 0 auto;
}

/* Main Content */
.glamour-main-content {
    padding: 8rem 0;
    background: var(--glamour-page-bg);
    color: var(--glamour-text-light);
}

/* Portrait Frame - 20px radius, thin inner stroke */
.glamour-portrait-container {
    position: relative;
}

.glamour-portrait-frame {
    border-radius: 20px;
    overflow: hidden;
    cursor: pointer;
    position: relative;
    background: var(--glamour-card-dark);
    border: 1px solid rgba(255, 255, 255, 0.08);
}

.glamour-portrait-image {
    width: 100%;
    height: 480px; /* slightly taller to reduce crop severity */
    object-fit: cover;
    object-position: top center; /* prioritize the face; avoids cutting off the head */
    transition: transform 0.3s ease;
}

.glamour-portrait-frame:hover .glamour-portrait-image {
    transform: scale(1.02);
}

.glamour-portrait-placeholder {
    height: 480px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: var(--glamour-text-light);
    opacity: 0.6;
}

.glamour-icon-large {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: var(--glamour-gold);
}

/* Bio Card - Max width 640px, 17/28 typography */
.glamour-bio-column {
    display: flex;
    justify-content: flex-start;
}

.glamour-bio-card {
    max-width: 640px;
    background: var(--glamour-card-dark);
    border: 1px solid rgba(233, 199, 122, 0.15);
    border-radius: 16px;
    padding: 2.5rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.25);
}

.glamour-bio-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--glamour-text-light);
    margin-bottom: 2rem;
    text-align: left;
}

.glamour-bio-paragraph {
    font-size: 17px;
    line-height: 28px;
    color: var(--glamour-text-light);
    margin-bottom: 1.5rem;
    opacity: 0.9;
}

.glamour-bio-paragraph:last-child {
    margin-bottom: 0;
}

/* Left Column Layout */
.glamour-left-column {
    display: flex;
    flex-direction: column;
    gap: 3rem;
}

/* Quick Facts - 56px row height, consistent styling */
.glamour-facts-section {
    background: var(--glamour-card-dark);
    border: 1px solid rgba(233, 199, 122, 0.15);
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.25);
}

.glamour-facts-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--glamour-text-light);
    margin-bottom: 1.5rem;
}

.glamour-facts-list {
    display: flex;
    flex-direction: column;
    gap: 0;
}

.glamour-fact-row {
    display: flex;
    align-items: center;
    height: 56px;
    padding: 0 1rem;
    background: #201833;
    border-radius: 8px;
    margin-bottom: 4px;
}

.glamour-fact-row:last-child {
    margin-bottom: 0;
}

.glamour-fact-icon {
    width: 24px;
    height: 24px;
    color: var(--glamour-gold);
    margin-right: 16px;
    font-size: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.glamour-fact-info {
    flex: 1;
}

.glamour-fact-label {
    font-size: 12px;
    line-height: 16px;
    color: var(--glamour-gold);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.glamour-fact-value {
    font-size: 16px;
    line-height: 24px;
    color: var(--glamour-text-light);
    font-weight: 400;
}

/* Interests Pills - 12px radius, specific styling */
.glamour-interests-section {
    background: var(--glamour-card-dark);
    border: 1px solid rgba(233, 199, 122, 0.15);
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.25);
}

.glamour-interests-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--glamour-text-light);
    margin-bottom: 1.5rem;
}

.glamour-interests-pills {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
}

.glamour-interest-pill {
    background: #2A1F3A;
    color: var(--glamour-gold);
    padding: 8px 12px;
    border-radius: 12px;
    font-size: 12px;
    line-height: 18px;
    font-weight: 500;
    text-transform: capitalize;
    border: none;
    box-shadow: none;
}

/* Services Grid - Six Cards, Same Height, Matte Style */
.glamour-services-section {
    padding: 6rem 0;
    background: var(--glamour-page-bg);
}

.glamour-section-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--glamour-text-light);
    text-align: center;
    margin-bottom: 1rem;
}

.glamour-services-six-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
}

.glamour-service-matte-card {
    background: var(--glamour-card-dark);
    border: 1px solid rgba(233, 199, 122, 0.15);
    border-radius: 16px;
    padding: 2.5rem 2rem;
    text-align: center;
    min-height: 160px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.25);
    transition: transform 0.3s ease;
}

.glamour-service-matte-card:hover {
    transform: translateY(-4px);
}

.glamour-service-star {
    font-size: 18px;
    color: var(--glamour-gold);
    margin-bottom: 1rem;
}

.glamour-service-title {
    font-size: 18px;
    line-height: 24px;
    font-weight: 600;
    color: var(--glamour-text-light);
    text-align: center;
    margin: 0;
}

/* Responsive Design */
@media (max-width: 768px) {
    .glamour-main-content {
        padding: 4rem 0;
    }
    
    .glamour-left-column {
        gap: 2rem;
    }
    
    .glamour-portrait-image {
        height: 360px;
        object-position: top center;
    }
    
    .glamour-portrait-placeholder {
        height: 360px;
    }
    
    .glamour-services-six-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }
    
    .glamour-service-matte-card {
        min-height: 140px;
        padding: 2rem 1.5rem;
    }
    
    .glamour-interests-pills {
        gap: 6px;
    }
    
    .glamour-interest-pill {
        font-size: 11px;
        padding: 6px 10px;
    }
    
    .glamour-fact-row {
        height: 48px;
        padding: 0 0.75rem;
    }
    
    .glamour-fact-icon {
        width: 20px;
        height: 20px;
        font-size: 14px;
        margin-right: 12px;
    }
    
    .glamour-bio-card {
        max-width: 100%;
        padding: 2rem;
    }
    
    .glamour-bio-paragraph {
        font-size: 16px;
        line-height: 26px;
    }
}


