<!-- Hero Section with Identical Home Style -->
{{#if about_content.page_title_visible}}
<section class="glamour-hero" data-aos="fade-in">
    <!-- Spotlight Background Effects -->
    <div class="glamour-spotlight-container">
        <div class="glamour-spotlight glamour-spotlight-1"></div>
        <div class="glamour-spotlight glamour-spotlight-2"></div>
        <div class="glamour-spotlight glamour-spotlight-3"></div>
    </div>
    
    <!-- Hero Content -->
    <div class="glamour-hero-content">
        <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
            <h1 class="glamour-hero-title" data-aos="fade-up" data-aos-delay="200">
                {{#if about_content.page_title}}{{about_content.page_title}}{{else}}About {{siteName}}{{/if}}
            </h1>
            <div class="glamour-title-underline" data-aos="fade-up" data-aos-delay="400"></div>
            {{#if about_content.page_subtitle}}
            <p class="glamour-hero-subtitle" data-aos="fade-up" data-aos-delay="600">
                {{about_content.page_subtitle}}
            </p>
            {{/if}}
        </div>
    </div>
    
    <!-- Floating Glamour Elements -->
    <div class="glamour-floating-elements" aria-hidden="true">
        <div class="glamour-star glamour-star-1">✦</div>
        <div class="glamour-star glamour-star-2">✧</div>
        <div class="glamour-star glamour-star-3">✦</div>
        <div class="glamour-star glamour-star-4">✧</div>
    </div>
</section>
{{/if}}

<!-- Portrait + Bio Section -->
{{#if about_content.main_content_visible}}
<section class="glamour-main-content" data-aos="fade-in">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 items-start">
            
            <!-- Left Column: Portrait + Quick Facts + Interests -->
            <div class="glamour-left-column">
                <!-- Portrait with Clean Frame -->
                {{#if about_content.portrait_visible}}
                <div class="glamour-portrait-container" data-aos="fade-right">
                    <div class="glamour-portrait-frame" onclick="openPortraitPreview('{{about_content.portrait_image_url}}', '{{#if about_content.portrait_alt}}{{about_content.portrait_alt}}{{else}}Professional Portrait{{/if}}')">
                        {{#if about_content.portrait_image_url}}
                        <img src="{{about_content.portrait_image_url}}" 
                             alt="{{#if about_content.portrait_alt}}{{about_content.portrait_alt}}{{else}}Professional Portrait{{/if}}"
                             class="glamour-portrait-image">
                        {{else}}
                        <div class="glamour-portrait-placeholder">
                            <i class="fas fa-camera glamour-icon-large"></i>
                            <p>Professional Portrait</p>
                        </div>
                        {{/if}}
                    </div>
                </div>
                {{/if}}
                
                <!-- Quick Facts with Consistent Design -->
                {{#if about_content.quick_facts_visible}}
                <div class="glamour-facts-section" data-aos="fade-up" data-aos-delay="300">
                    <h3 class="glamour-facts-title">
                        {{#if about_content.quick_facts_title}}{{about_content.quick_facts_title}}{{else}}Quick Facts{{/if}}
                    </h3>
                    <div class="glamour-facts-list">
                        {{#if about_content.qf_location}}
                        <div class="glamour-fact-row">
                            <i class="fas fa-map-marker-alt glamour-fact-icon"></i>
                            <div class="glamour-fact-info">
                                <div class="glamour-fact-label">LOCATION</div>
                                <div class="glamour-fact-value">{{about_content.qf_location}}</div>
                            </div>
                        </div>
                        {{/if}}
                        
                        {{#if about_content.qf_languages}}
                        <div class="glamour-fact-row">
                            <i class="fas fa-language glamour-fact-icon"></i>
                            <div class="glamour-fact-info">
                                <div class="glamour-fact-label">LANGUAGES</div>
                                <div class="glamour-fact-value">{{about_content.qf_languages}}</div>
                            </div>
                        </div>
                        {{/if}}
                        
                        {{#if about_content.qf_education}}
                        <div class="glamour-fact-row">
                            <i class="fas fa-graduation-cap glamour-fact-icon"></i>
                            <div class="glamour-fact-info">
                                <div class="glamour-fact-label">EDUCATION</div>
                                <div class="glamour-fact-value">{{about_content.qf_education}}</div>
                            </div>
                        </div>
                        {{/if}}
                        
                        {{#if about_content.qf_specialties}}
                        <div class="glamour-fact-row">
                            <i class="fas fa-star glamour-fact-icon"></i>
                            <div class="glamour-fact-info">
                                <div class="glamour-fact-label">SPECIALTIES</div>
                                <div class="glamour-fact-value">{{about_content.qf_specialties}}</div>
                            </div>
                        </div>
                        {{/if}}
                    </div>
                </div>
                {{/if}}
                
                <!-- Interests Pills -->
                {{#if about_content.interests_visible}}
                {{#if about_content.interests}}
                <div class="glamour-interests-section" data-aos="fade-up" data-aos-delay="500">
                    <h3 class="glamour-interests-title">
                        {{#if about_content.interests_title}}{{about_content.interests_title}}{{else}}My Interests{{/if}}
                    </h3>
                    <div class="glamour-interests-pills">
                        {{#each (split about_content.interests ',')}}
                        <span class="glamour-interest-pill">{{trim this}}</span>
                        {{/each}}
                    </div>
                </div>
                {{/if}}
                {{/if}}
            </div>
            
            <!-- Right Column: Bio Content -->
            <div class="glamour-bio-column" data-aos="fade-left">
                <div class="glamour-bio-card">
                    <h2 class="glamour-bio-title">
                        {{#if about_content.bio_title}}{{about_content.bio_title}}{{else}}About {{siteName}}{{/if}}
                    </h2>
                    <div class="glamour-bio-content">
                        {{#if about_content.main_paragraph_1}}
                        <p class="glamour-bio-paragraph">{{about_content.main_paragraph_1}}</p>
                        {{/if}}
                        
                        {{#if about_content.main_paragraph_2}}
                        <p class="glamour-bio-paragraph">{{about_content.main_paragraph_2}}</p>
                        {{/if}}
                        
                        {{#if about_content.main_paragraph_3}}
                        <p class="glamour-bio-paragraph">{{about_content.main_paragraph_3}}</p>
                        {{/if}}
                        
                        {{#if about_content.main_paragraph_4}}
                        <p class="glamour-bio-paragraph">{{about_content.main_paragraph_4}}</p>
                        {{/if}}
                        
                        {{#unless about_content.main_paragraph_1}}
                        <p class="glamour-bio-paragraph">Welcome to my world of elegance and sophistication. I am a professional companion who values discretion, intelligence, and genuine connection.</p>
                        <p class="glamour-bio-paragraph">With years of experience in providing exceptional companionship services, I pride myself on creating memorable experiences tailored to each client's unique needs.</p>
                        {{/unless}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{{/if}}

<!-- Services Grid - Six Cards -->
{{#if about_content.services_visible}}
<section class="glamour-services-section" data-aos="fade-in">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="glamour-section-title">
                {{#if about_content.services_title}}{{about_content.services_title}}{{else}}My Services{{/if}}
            </h2>
            <div class="glamour-title-underline mx-auto"></div>
        </div>
        
        <div class="glamour-services-six-grid">
            {{#if about_content.service_1}}
            <div class="glamour-service-matte-card" data-aos="fade-up" data-aos-delay="100">
                <i class="fas fa-star glamour-service-star"></i>
                <h3 class="glamour-service-title">{{about_content.service_1}}</h3>
            </div>
            {{/if}}
            {{#if about_content.service_2}}
            <div class="glamour-service-matte-card" data-aos="fade-up" data-aos-delay="200">
                <i class="fas fa-star glamour-service-star"></i>
                <h3 class="glamour-service-title">{{about_content.service_2}}</h3>
            </div>
            {{/if}}
            {{#if about_content.service_3}}
            <div class="glamour-service-matte-card" data-aos="fade-up" data-aos-delay="300">
                <i class="fas fa-star glamour-service-star"></i>
                <h3 class="glamour-service-title">{{about_content.service_3}}</h3>
            </div>
            {{/if}}
            {{#if about_content.service_4}}
            <div class="glamour-service-matte-card" data-aos="fade-up" data-aos-delay="400">
                <i class="fas fa-star glamour-service-star"></i>
                <h3 class="glamour-service-title">{{about_content.service_4}}</h3>
            </div>
            {{/if}}
            {{#if about_content.service_5}}
            <div class="glamour-service-matte-card" data-aos="fade-up" data-aos-delay="500">
                <i class="fas fa-star glamour-service-star"></i>
                <h3 class="glamour-service-title">{{about_content.service_5}}</h3>
            </div>
            {{/if}}
            {{#if about_content.service_6}}
            <div class="glamour-service-matte-card" data-aos="fade-up" data-aos-delay="600">
                <i class="fas fa-star glamour-service-star"></i>
                <h3 class="glamour-service-title">{{about_content.service_6}}</h3>
            </div>
            {{/if}}
        </div>
    </div>
</section>
{{/if}}

<!-- Bottom CTA - Same as Home -->
{{#if about_content.about_cta_visible}}
<section class="glamour-cta-section" data-aos="fade-in">
    <!-- Red Carpet Background Effect -->
    <div class="glamour-red-carpet-bg"></div>
    
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
        <h2 class="glamour-cta-title" data-aos="fade-up">
            {{#if about_content.cta_title}}{{about_content.cta_title}}{{else}}Ready for the VIP Experience?{{/if}}
        </h2>
        
        <p class="glamour-cta-subtitle" data-aos="fade-up" data-aos-delay="200">
            {{#if about_content.cta_description}}{{about_content.cta_description}}{{else}}Let's create something extraordinary together.{{/if}}
        </p>
        
        <div class="glamour-cta-buttons" data-aos="fade-up" data-aos-delay="400">
            <a href="/{{modelSlug}}/{{#if about_content.cta_button_1_link}}{{about_content.cta_button_1_link}}{{else}}contact{{/if}}{{previewParam}}" 
               class="glamour-btn glamour-btn-primary glamour-sparkle-effect">
                <span>{{#if about_content.cta_button_1_text}}{{about_content.cta_button_1_text}}{{else}}Contact Me{{/if}}</span>
                <div class="glamour-btn-shine"></div>
            </a>
            
            <a href="/{{modelSlug}}/{{#if about_content.cta_button_2_link}}{{about_content.cta_button_2_link}}{{else}}gallery{{/if}}{{previewParam}}" 
               class="glamour-btn glamour-btn-secondary glamour-glass-effect">
                <span>{{#if about_content.cta_button_2_text}}{{about_content.cta_button_2_text}}{{else}}View Gallery{{/if}}</span>
            </a>
        </div>
    </div>
</section>
{{/if}}

<!-- Additional Content Section (if needed) -->
