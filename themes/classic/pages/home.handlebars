        <div class="classic-ornament-corner classic-ornament-bottom-right"></div>
        <div class="classic-decorative-line classic-line-top"></div>
        <div class="classic-decorative-line classic-line-bottom"></div>
    </div>
    
    <!-- Hero Content -->
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="text-center">
            <div class="classic-hero-content-frame" data-aos="zoom-in" data-aos-delay="300">
                <!-- Classic Header Ornament -->
                <div class="classic-header-ornament mb-8">
                    <div class="classic-ornament-flourish"></div>
                </div>
                
                <h1 class="text-5xl md:text-7xl font-serif mb-8 classic-elegant-text classic-text-shadow">
                    {{#if content.hero_title}}{{content.hero_title}}{{else}}{{siteName}}{{/if}}
                </h1>
                
                <!-- Classic Subtitle with Decorative Border -->
                <div class="classic-subtitle-frame">
                    <div class="classic-subtitle-border"></div>
                    <p class="text-xl md:text-2xl mb-10 max-w-3xl mx-auto classic-refined-text">
                        {{#if content.hero_subtitle}}{{content.hero_subtitle}}{{else}}{{#if content.tagline}}{{content.tagline}}{{else}}Timeless elegance and distinguished companionship{{/if}}{{/if}}
                    </p>
                    <div class="classic-subtitle-border"></div>
                </div>
                
                <!-- Classic Button Group -->
                <div class="flex flex-col sm:flex-row justify-center gap-6 classic-button-ensemble">
                    <!-- Hero Button 1 -->
                    {{#if content.hero_button_1_text}}
                        {{#eq content.hero_button_1_link 'calendar'}}
                            <a href="/{{modelSlug}}/calendar{{previewParam}}" class="classic-btn-primary">
                        {{/eq}}
                        {{#eq content.hero_button_1_link 'contact'}}
                            <a href="/{{modelSlug}}/contact{{previewParam}}" class="classic-btn-primary">
                        {{/eq}}
                        {{#eq content.hero_button_1_link 'gallery'}}
