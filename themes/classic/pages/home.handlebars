                        {{/eq}}
                        {{#eq content.hero_button_1_link 'about'}}
                            <a href="/{{modelSlug}}/about{{previewParam}}" class="classic-btn-primary">
                        {{/eq}}
                    {{else}}
                        <a href="/{{modelSlug}}/calendar{{previewParam}}" class="classic-btn-primary">
                    {{/if}}
                        <i class="fas fa-calendar-alt mr-3"></i>
                        {{#if content.hero_button_1_text}}{{content.hero_button_1_text}}{{else}}View Calendar{{/if}}
                    </a>
                    
                    <!-- Hero Button 2 -->
                    {{#if content.hero_button_2_text}}
                        {{#eq content.hero_button_2_link 'calendar'}}
                            <a href="/{{modelSlug}}/calendar{{previewParam}}" class="classic-btn-secondary">
                        {{/eq}}
                        {{#eq content.hero_button_2_link 'contact'}}
                            <a href="/{{modelSlug}}/contact{{previewParam}}" class="classic-btn-secondary">
                        {{/eq}}
                        {{#eq content.hero_button_2_link 'gallery'}}
                            <a href="/{{modelSlug}}/gallery{{previewParam}}" class="classic-btn-secondary">
                        {{/eq}}
                        {{#eq content.hero_button_2_link 'rates'}}
                            <a href="/{{modelSlug}}/rates{{previewParam}}" class="classic-btn-secondary">
                        {{/eq}}
                        {{#eq content.hero_button_2_link 'about'}}
                            <a href="/{{modelSlug}}/about{{previewParam}}" class="classic-btn-secondary">
                        {{/eq}}
                    {{else}}
                        <a href="/{{modelSlug}}/contact{{previewParam}}" class="classic-btn-secondary">
                    {{/if}}
                        <i class="fas fa-envelope mr-3"></i>
                        {{#if content.hero_button_2_text}}{{content.hero_button_2_text}}{{else}}Contact Me{{/if}}
                    </a>
                </div>
                
