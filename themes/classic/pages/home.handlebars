<!-- Classic CTA Section -->
{{#if content.cta_section_visible}}
<section class="py-20 classic-cta-invitation">
    <div class="classic-cta-background-pattern"></div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
        <div class="classic-cta-content" data-aos="zoom-in">
            <div class="classic-cta-ornamental-frame">
                <div class="classic-cta-corner classic-corner-tl"></div>
                <div class="classic-cta-corner classic-corner-tr"></div>
                <div class="classic-cta-corner classic-corner-bl"></div>
                <div class="classic-cta-corner classic-corner-br"></div>
            </div>
            
            <div class="classic-cta-inner-content">
                <div class="classic-cta-header-ornament">
                    <div class="classic-ornament-flourish-large"></div>
                </div>
                
                <h2 class="text-4xl font-serif mb-8 text-white classic-elegant-text">
                    {{#if content.cta_section_title}}{{content.cta_section_title}}{{else}}An Invitation to Excellence{{/if}}
                </h2>
                
                <div class="classic-cta-subtitle-frame">
                    <div class="classic-ornament-divider-light"></div>
                    <p class="text-xl mb-10 text-white classic-refined-text max-w-2xl mx-auto">
                        {{#if content.cta_section_subtitle}}{{content.cta_section_subtitle}}{{else}}Experience the refinement of timeless elegance paired with distinguished companionship and impeccable service{{/if}}
                    </p>
                    <div class="classic-ornament-divider-light"></div>
                </div>
                
                <!-- Classic CTA Buttons -->
                <div class="flex flex-col sm:flex-row justify-center gap-6">
                    <!-- CTA Button 1 -->
                    {{#if content.cta_button_1_text}}
                        {{#eq content.cta_button_1_link 'calendar'}}
                            <a href="/{{modelSlug}}/calendar{{previewParam}}" class="classic-btn-cta-primary">
                        {{/eq}}
                        {{#eq content.cta_button_1_link 'contact'}}
                            <a href="/{{modelSlug}}/contact{{previewParam}}" class="classic-btn-cta-primary">
                        {{/eq}}
                        {{#eq content.cta_button_1_link 'gallery'}}
                            <a href="/{{modelSlug}}/gallery{{previewParam}}" class="classic-btn-cta-primary">
                        {{/eq}}
                        {{#eq content.cta_button_1_link 'rates'}}
                            <a href="/{{modelSlug}}/rates{{previewParam}}" class="classic-btn-cta-primary">
                        {{/eq}}
                        {{#eq content.cta_button_1_link 'about'}}
                            <a href="/{{modelSlug}}/about{{previewParam}}" class="classic-btn-cta-primary">
                        {{/eq}}
                    {{else}}
                        <a href="/{{modelSlug}}/calendar{{previewParam}}" class="classic-btn-cta-primary">
                    {{/if}}
                        <i class="fas fa-calendar-alt mr-3"></i>
                        {{#if content.cta_button_1_text}}{{content.cta_button_1_text}}{{else}}View Calendar{{/if}}
                    </a>
                    
                    <!-- CTA Button 2 -->
                    {{#if content.cta_button_2_text}}
                        {{#eq content.cta_button_2_link 'calendar'}}
                            <a href="/{{modelSlug}}/calendar{{previewParam}}" class="classic-btn-cta-secondary">
                        {{/eq}}
                        {{#eq content.cta_button_2_link 'contact'}}
                            <a href="/{{modelSlug}}/contact{{previewParam}}" class="classic-btn-cta-secondary">
                        {{/eq}}
                        {{#eq content.cta_button_2_link 'gallery'}}
                            <a href="/{{modelSlug}}/gallery{{previewParam}}" class="classic-btn-cta-secondary">
                        {{/eq}}
                        {{#eq content.cta_button_2_link 'rates'}}
                            <a href="/{{modelSlug}}/rates{{previewParam}}" class="classic-btn-cta-secondary">
                        {{/eq}}
                        {{#eq content.cta_button_2_link 'about'}}
                            <a href="/{{modelSlug}}/about{{previewParam}}" class="classic-btn-cta-secondary">
                        {{/eq}}
                    {{else}}
                        <a href="/{{modelSlug}}/contact{{previewParam}}" class="classic-btn-cta-secondary">
                    {{/if}}
                        <i class="fas fa-envelope mr-3"></i>
                        {{#if content.cta_button_2_text}}{{content.cta_button_2_text}}{{else}}Contact Me{{/if}}
                    </a>
                </div>
                
                <div class="classic-cta-footer-ornament mt-12">
                    <div class="classic-ornament-flourish-large"></div>
                </div>
            </div>
        </div>
    </div>
</section>
{{/if}}

<!-- Classic Template Styling -->
<style>
/* Classic Color Palette & Typography */
:root {
    --classic-primary: #8b5a3c;
    --classic-secondary: #6b4e3d;
    --classic-accent: #d4af37;
    --classic-text-primary: #2c1810;
    --classic-text-secondary: #5d4037;
    --classic-cream: #faf7f2;
    --classic-ivory: #f5f3ee;
    --classic-pearl: #f8f6f0;
}

/* Typography */
.classic-elegant-text {
    color: var(--classic-text-primary);
    font-family: 'Playfair Display', 'Times New Roman', serif;
    font-weight: 400;
    letter-spacing: 0.02em;
}

.classic-elegant-heading {
    color: var(--classic-text-primary);
    font-family: 'Playfair Display', 'Times New Roman', serif;
    font-weight: 700;
    letter-spacing: 0.05em;
}

.classic-refined-text {
    color: var(--classic-text-secondary);
    font-family: 'Crimson Text', 'Georgia', serif;
    font-weight: 400;
    line-height: 1.8;
    letter-spacing: 0.01em;
}

.classic-refined-paragraph {
    color: var(--classic-text-secondary);
    font-family: 'Crimson Text', 'Georgia', serif;
    font-weight: 400;
    line-height: 1.8;
    text-align: justify;
    hyphens: auto;
}

.classic-text-shadow {
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
}

.classic-date-text {
    font-family: 'Crimson Text', 'Georgia', serif;
    font-weight: 600;
    color: var(--classic-secondary);
}

.classic-travel-notes {
    line-height: 1.6;
}

/* Classic Hero Section */
.classic-hero-sanctuary {
    background: linear-gradient(135deg, 
        var(--classic-primary) 0%, 
        var(--classic-secondary) 50%, 
        #2c1810 100%);
    position: relative;
    overflow: hidden;
}

.classic-pattern-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
        radial-gradient(circle at 25% 25%, rgba(212, 175, 55, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 75% 75%, rgba(212, 175, 55, 0.08) 0%, transparent 50%);
    opacity: 0.6;
    animation: classic-pattern-drift 30s ease-in-out infinite;
}

@keyframes classic-pattern-drift {
    0%, 100% { transform: translateY(0) scale(1); }
    50% { transform: translateY(-20px) scale(1.02); }
}

/* Classic Ornamental Elements */
.classic-ornamental-elements {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
}

.classic-ornament-corner {
    position: absolute;
    width: 80px;
    height: 80px;
    opacity: 0.6;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M10,10 Q50,30 90,10 Q70,50 90,90 Q50,70 10,90 Q30,50 10,10' fill='none' stroke='%23d4af37' stroke-width='2'/%3E%3C/svg%3E");
    background-size: contain;
    background-repeat: no-repeat;
}

.classic-ornament-top-left {
    top: 40px;
    left: 40px;
    animation: classic-ornament-glow 6s ease-in-out infinite;
}

.classic-ornament-top-right {
    top: 40px;
    right: 40px;
    transform: rotate(90deg);
    animation: classic-ornament-glow 6s ease-in-out infinite 1.5s;
}

.classic-ornament-bottom-left {
    bottom: 40px;
    left: 40px;
    transform: rotate(270deg);
    animation: classic-ornament-glow 6s ease-in-out infinite 3s;
}

.classic-ornament-bottom-right {
    bottom: 40px;
    right: 40px;
    transform: rotate(180deg);
    animation: classic-ornament-glow 6s ease-in-out infinite 4.5s;
}

.classic-decorative-line {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: 200px;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--classic-accent), transparent);
    opacity: 0.8;
}

.classic-line-top {
    top: 80px;
    animation: classic-line-shimmer 4s ease-in-out infinite;
}

.classic-line-bottom {
    bottom: 80px;
    animation: classic-line-shimmer 4s ease-in-out infinite 2s;
}

@keyframes classic-ornament-glow {
    0%, 100% { opacity: 0.6; filter: drop-shadow(0 0 5px var(--classic-accent)); }
    50% { opacity: 1; filter: drop-shadow(0 0 15px var(--classic-accent)); }
}

@keyframes classic-line-shimmer {
    0%, 100% { opacity: 0.8; transform: translateX(-50%) scaleX(1); }
    50% { opacity: 1; transform: translateX(-50%) scaleX(1.2); }
}

/* Classic Hero Content Styling */
.classic-hero-content-frame {
    position: relative;
    padding: 3rem 2rem;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 20px;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(212, 175, 55, 0.3);
}

.classic-header-ornament,
.classic-footer-ornament {
    display: flex;
    justify-content: center;
    align-items: center;
}

.classic-ornament-flourish {
    width: 120px;
    height: 40px;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 120 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M5,20 Q30,5 60,20 Q90,35 115,20' fill='none' stroke='%23d4af37' stroke-width='2'/%3E%3Ccircle cx='60' cy='20' r='3' fill='%23d4af37'/%3E%3Ccircle cx='20' cy='20' r='1.5' fill='%23d4af37'/%3E%3Ccircle cx='100' cy='20' r='1.5' fill='%23d4af37'/%3E%3C/svg%3E");
    background-repeat: no-repeat;
    background-position: center;
    opacity: 0.9;
}

.classic-ornament-flourish-large {
    width: 160px;
    height: 50px;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 160 50' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M5,25 Q40,10 80,25 Q120,40 155,25' fill='none' stroke='%23d4af37' stroke-width='2'/%3E%3Ccircle cx='80' cy='25' r='4' fill='%23d4af37'/%3E%3Ccircle cx='30' cy='25' r='2' fill='%23d4af37'/%3E%3Ccircle cx='130' cy='25' r='2' fill='%23d4af37'/%3E%3Cpath d='M65,15 L80,25 L95,15' fill='none' stroke='%23d4af37' stroke-width='1'/%3E%3Cpath d='M65,35 L80,25 L95,35' fill='none' stroke='%23d4af37' stroke-width='1'/%3E%3C/svg%3E");
    background-repeat: no-repeat;
    background-position: center;
    opacity: 0.9;
}

.classic-subtitle-frame {
    position: relative;
    padding: 1.5rem 0;
}

.classic-subtitle-border {
    width: 80px;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--classic-accent), transparent);
    margin: 0 auto 1rem;
    opacity: 0.8;
}

/* Classic Button Styles */
.classic-btn-primary {
    background: linear-gradient(135deg, var(--classic-accent) 0%, #b8941f 100%);
    color: var(--classic-text-primary);
    padding: 1.2rem 2.5rem;
    border-radius: 8px;
    font-family: 'Crimson Text', 'Georgia', serif;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: all 0.4s ease;
    box-shadow: 0 6px 20px rgba(212, 175, 55, 0.3);
    border: 2px solid transparent;
    position: relative;
    overflow: hidden;
}

.classic-btn-primary::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
}

.classic-btn-primary:hover::before {
    left: 100%;
}

.classic-btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(212, 175, 55, 0.4);
    color: var(--classic-text-primary);
    border-color: rgba(212, 175, 55, 0.5);
}

.classic-btn-secondary {
    border: 2px solid rgba(255, 255, 255, 0.4);
    color: white;
    background: rgba(212, 175, 55, 0.2);
    padding: 1.2rem 2.5rem;
    border-radius: 8px;
    font-family: 'Crimson Text', 'Georgia', serif;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: all 0.4s ease;
    backdrop-filter: blur(10px);
    position: relative;
    overflow: hidden;
}

.classic-btn-secondary::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    transition: left 0.5s;
}

.classic-btn-secondary:hover::before {
    left: 100%;
}

.classic-btn-secondary:hover {
    background: rgba(212, 175, 55, 0.3);
    border-color: rgba(255, 255, 255, 0.7);
    transform: translateY(-3px);
    color: white;
}

.classic-btn-cta-primary {
    background: linear-gradient(135deg, var(--classic-cream) 0%, var(--classic-ivory) 100%);
    color: var(--classic-text-primary);
    padding: 1.2rem 2.5rem;
    border-radius: 8px;
    font-family: 'Crimson Text', 'Georgia', serif;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: all 0.4s ease;
    box-shadow: 0 6px 20px rgba(255, 255, 255, 0.3);
    border: 2px solid var(--classic-accent);
}

.classic-btn-cta-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(255, 255, 255, 0.4);
    color: var(--classic-text-primary);
    background: linear-gradient(135deg, var(--classic-ivory) 0%, var(--classic-cream) 100%);
}

.classic-btn-cta-secondary {
    border: 2px solid rgba(255, 255, 255, 0.6);
    color: white;
    background: rgba(212, 175, 55, 0.2);
    padding: 1.2rem 2.5rem;
    border-radius: 8px;
    font-family: 'Crimson Text', 'Georgia', serif;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: all 0.4s ease;
    backdrop-filter: blur(10px);
}

.classic-btn-cta-secondary:hover {
    background: rgba(212, 175, 55, 0.4);
    border-color: rgba(255, 255, 255, 0.9);
    transform: translateY(-3px);
    color: white;
}

.classic-link-elegant {
    color: var(--classic-accent);
    font-family: 'Crimson Text', 'Georgia', serif;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    transition: all 0.3s ease;
    position: relative;
}

.classic-link-elegant:hover {
    color: var(--classic-primary);
    transform: translateX(8px);
}

.classic-link-ornament {
    margin-right: 0.5rem;
    font-size: 1.2em;
    opacity: 0.8;
}

/* Classic Scroll Indicator */
.classic-scroll-invitation {
    animation: classic-scroll-bounce 2s ease-in-out infinite;
}

.classic-scroll-ornament {
    width: 2px;
    height: 40px;
    background: linear-gradient(to bottom, var(--classic-accent), transparent);
    margin: 0 auto;
    position: relative;
}

.classic-scroll-ornament::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 0;
    border-left: 6px solid transparent;
    border-right: 6px solid transparent;
    border-top: 10px solid var(--classic-accent);
}

@keyframes classic-scroll-bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
    40% { transform: translateY(-15px); }
    60% { transform: translateY(-8px); }
}

/* Classic Section Backgrounds */
.classic-about-sanctuary {
    background: linear-gradient(135deg, var(--classic-cream) 0%, var(--classic-ivory) 50%, var(--classic-pearl) 100%);
    position: relative;
}

.classic-gallery-salon {
    background: linear-gradient(135deg, var(--classic-ivory) 0%, var(--classic-cream) 100%);
    position: relative;
}

.classic-travel-itinerary {
    background: linear-gradient(135deg, var(--classic-pearl) 0%, var(--classic-ivory) 100%);
    position: relative;
}

.classic-testimonials-salon {
    background: linear-gradient(135deg, var(--classic-cream) 0%, var(--classic-pearl) 100%);
    position: relative;
}

/* Classic Section Headers */
.classic-section-header {
    position: relative;
    margin-bottom: 3rem;
}

.classic-section-ornament {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 1rem 0;
}

.classic-ornament-divider {
    width: 100px;
    height: 3px;
    background: linear-gradient(90deg, transparent, var(--classic-accent), transparent);
    opacity: 0.8;
}

.classic-ornament-divider-small {
    width: 60px;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--classic-accent), transparent);
    opacity: 0.6;
}

.classic-ornament-divider-light {
    width: 80px;
    height: 2px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.8), transparent);
    opacity: 0.8;
}

.classic-gallery-divider {
    width: 120px;
}

/* Classic Portrait Frame */
.classic-portrait-frame {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 15px 40px rgba(139, 90, 60, 0.2);
}

.classic-portrait-ornamental-border {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 2;
    pointer-events: none;
}

.classic-portrait-corner {
    position: absolute;
    width: 40px;
    height: 40px;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M5,5 Q20,15 35,5 Q25,20 35,35 Q20,25 5,35 Q15,20 5,5' fill='none' stroke='%23d4af37' stroke-width='2'/%3E%3C/svg%3E");
    background-size: contain;
    opacity: 0.9;
}

.classic-corner-tl { top: 15px; left: 15px; }
.classic-corner-tr { top: 15px; right: 15px; transform: rotate(90deg); }
.classic-corner-bl { bottom: 15px; left: 15px; transform: rotate(270deg); }
.classic-corner-br { bottom: 15px; right: 15px; transform: rotate(180deg); }

.classic-portrait-container {
    position: relative;
    height: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--classic-ivory) 0%, var(--classic-cream) 100%);
}

.classic-portrait-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center 20%;
}

.classic-portrait-vignette {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(ellipse at center, transparent 50%, rgba(139, 90, 60, 0.1) 100%);
}

.classic-portrait-placeholder {
    text-align: center;
    color: #8d6e63;
    padding: 2rem;
}

.classic-placeholder-ornament {
    margin-bottom: 1rem;
}

/* Classic Gallery Styles */
.classic-gallery-collection {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 2rem;
}

.classic-gallery-frame {
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.4s ease;
    background: white;
    box-shadow: 0 8px 25px rgba(139, 90, 60, 0.15);
}

.classic-gallery-frame:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(139, 90, 60, 0.25);
}

.classic-gallery-ornamental-border {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 2;
    pointer-events: none;
}

.classic-gallery-corner {
    position: absolute;
    width: 25px;
    height: 25px;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 25 25' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M3,3 Q12,8 22,3 Q17,12 22,22 Q12,17 3,22 Q8,12 3,3' fill='none' stroke='%23d4af37' stroke-width='1.5'/%3E%3C/svg%3E");
    background-size: contain;
    opacity: 0.8;
}

.classic-gallery-image-container {
    position: relative;
    height: 280px;
    overflow: hidden;
}

.classic-gallery-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: all 0.4s ease;
}

.classic-gallery-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(139, 90, 60, 0.8), rgba(107, 78, 61, 0.8));
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: all 0.4s ease;
    color: white;
}

.classic-gallery-frame:hover .classic-gallery-overlay {
    opacity: 1;
}

.classic-gallery-ornament-center {
    background: rgba(212, 175, 55, 0.2);
    border: 2px solid var(--classic-accent);
    border-radius: 50%;
    padding: 1rem;
    backdrop-filter: blur(5px);
}

.classic-gallery-placeholder {
    height: 280px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--classic-cream) 0%, var(--classic-ivory) 100%);
}

.classic-gallery-placeholder-content {
    text-align: center;
}

/* Classic Travel Cards */
.classic-travel-card {
    position: relative;
    background: white;
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.4s ease;
    box-shadow: 0 10px 30px rgba(139, 90, 60, 0.15);
}

.classic-travel-card:hover {
    transform: translateY(-12px);
    box-shadow: 0 25px 50px rgba(139, 90, 60, 0.25);
}

.classic-travel-ornamental-frame {
    position: absolute;
    top: 0;
    left: 0;
