<!-- Classic Travel Schedule -->
{{#if content.travel_section_visible}}
<section class="py-20 classic-travel-itinerary">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="classic-section-header text-center mb-16" data-aos="fade-up">
            <div class="classic-travel-header-ornament">
                <div class="classic-ornament-flourish-large"></div>
            </div>
            <h2 class="text-4xl font-serif classic-elegant-heading">
                {{#if content.travel_section_title}}{{content.travel_section_title}}{{else}}Travel Itinerary{{/if}}
            </h2>
            <div class="classic-section-ornament">
                <div class="classic-ornament-divider"></div>
            </div>
        </div>
        
        {{#if upcomingEvents}}
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {{#each upcomingEvents}}
            <div class="classic-travel-card" data-aos="zoom-in" data-aos-delay="{{multiply @index 100}}">
                <div class="classic-travel-ornamental-frame">
                    <div class="classic-travel-corner classic-corner-tl"></div>
                    <div class="classic-travel-corner classic-corner-tr"></div>
                    <div class="classic-travel-corner classic-corner-bl"></div>
                    <div class="classic-travel-corner classic-corner-br"></div>
                </div>
                <div class="classic-travel-content">
                    <div class="classic-travel-location-ornament">
                        <div class="classic-location-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                    </div>
                    <h3 class="text-2xl font-serif classic-elegant-text mb-2">{{this.location}}</h3>
                    <div class="text-lg classic-date-text mb-4">
                        {{#if this.dateRange}}
                            {{this.dateRange}}
                        {{else}}
                            {{formatDate this.date}}
                        {{/if}}
                    </div>
                    <div class="classic-travel-status">
                        <span class="classic-status-badge">Available</span>
                    </div>
                    {{#if this.notes}}
                    <p class="text-sm text-gray-600 mt-3 font-serif italic classic-travel-notes">{{this.notes}}</p>
                    {{/if}}
                </div>
            </div>
            {{/each}}
        </div>
        
        <div class="text-center mt-12" data-aos="fade-up" data-aos-delay="600">
            <a href="/{{modelSlug}}/{{#if content.travel_cta_link}}{{content.travel_cta_link}}{{else}}calendar{{/if}}{{previewParam}}" class="classic-btn-primary">
                <i class="fas fa-calendar-alt mr-3"></i>
                {{#if content.travel_cta_text}}{{content.travel_cta_text}}{{else}}View Complete Schedule{{/if}}
            </a>
        </div>
        {{else}}
        <!-- Classic Empty State -->
        <div class="text-center">
            <div class="classic-empty-state" data-aos="zoom-in">
                <div class="classic-empty-ornamental-frame">
                    <div class="classic-empty-corner classic-corner-tl"></div>
                    <div class="classic-empty-corner classic-corner-tr"></div>
                    <div class="classic-empty-corner classic-corner-bl"></div>
                    <div class="classic-empty-corner classic-corner-br"></div>
                </div>
                <div class="classic-empty-content">
                    <div class="classic-empty-icon">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <h3 class="text-2xl font-serif classic-elegant-text mb-4">Scheduling Information</h3>
                    <p class="text-gray-600 mb-8 font-serif classic-refined-paragraph">Please consult my calendar to view available appointments and schedule your visit</p>
                    <a href="/{{modelSlug}}/calendar{{previewParam}}" class="classic-btn-primary">
                        <i class="fas fa-calendar-alt mr-3"></i>
                        View Calendar
                    </a>
                </div>
            </div>
        </div>
        {{/if}}
    </div>
</section>
{{/if}}

