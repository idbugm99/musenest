<!-- Phase 2.5c: Classic Template Contact Page - Elegant Communication Chamber -->

<!-- Classic Contact Hero Section -->
{{#if contact_content.contact_header_visible}}
<section class="classic-contact-hero min-h-96 flex items-center justify-center text-white pt-20 relative overflow-hidden" data-aos="fade-in">
    <!-- Classic Background Pattern -->
    <div class="classic-contact-pattern-overlay"></div>
    
    <!-- Classic Ornamental Hero Elements -->
    <div class="classic-contact-ornamental-elements">
        <div class="classic-contact-ornament-corner classic-contact-ornament-top-left"></div>
        <div class="classic-contact-ornament-corner classic-contact-ornament-top-right"></div>
        <div class="classic-contact-ornament-corner classic-contact-ornament-bottom-left"></div>
        <div class="classic-contact-ornament-corner classic-contact-ornament-bottom-right"></div>
        <div class="classic-contact-decorative-line classic-contact-line-top"></div>
        <div class="classic-contact-decorative-line classic-contact-line-bottom"></div>
        <!-- Classic Communication Icons -->
        <div class="classic-contact-floating-ornament classic-contact-float-1">❦</div>
        <div class="classic-contact-floating-ornament classic-contact-float-2">✉</div>
        <div class="classic-contact-floating-ornament classic-contact-float-3">☎</div>
        <div class="classic-contact-floating-ornament classic-contact-float-4">♔</div>
    </div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
        <div class="classic-contact-hero-content" data-aos="zoom-in" data-aos-delay="200">
            <div class="classic-contact-badge mb-6">Communication Chamber</div>
            <h1 class="text-5xl md:text-7xl font-bold mb-8 classic-contact-gradient-text classic-contact-text-glow">
                {{#if contact_content.page_title}}{{contact_content.page_title}}{{else}}Connect With Grace{{/if}}
            </h1>
            {{#if contact_content.page_subtitle}}
            <p class="text-xl md:text-2xl opacity-90 max-w-3xl mx-auto classic-contact-subtitle">
                {{contact_content.page_subtitle}}
            </p>
            {{/if}}
        </div>
    </div>
</section>
{{/if}}

<!-- Classic Contact Main Section -->
<section class="py-20 classic-contact-main-section">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-16">
            <!-- Left Column: Contact Form -->
            {{#if contact_content.contact_form_visible}}
            <div class="classic-contact-form-section" data-aos="fade-right">
                <div class="classic-form-card">
                    <!-- Form Ornamental Frame -->
                    <div class="classic-form-ornamental-frame">
                        <div class="classic-form-corner-ornament classic-form-corner-top-left"></div>
                        <div class="classic-form-corner-ornament classic-form-corner-top-right"></div>
                        <div class="classic-form-corner-ornament classic-form-corner-bottom-left"></div>
                        <div class="classic-form-corner-ornament classic-form-corner-bottom-right"></div>
                    </div>
                    
                    <div class="classic-form-gradient-overlay"></div>
                    <div class="classic-form-content">
                        <div class="classic-form-header">
                            <div class="classic-form-header-ornament">
                                <svg class="classic-form-header-ornament-svg" viewBox="0 0 120 25">
                                    <path d="M20,12.5 Q40,5 60,12.5 T100,12.5" stroke="currentColor" fill="none" stroke-width="1.5"/>
                                    <circle cx="35" cy="12.5" r="2" fill="currentColor"/>
                                    <circle cx="60" cy="12.5" r="3" fill="currentColor"/>
                                    <circle cx="85" cy="12.5" r="2" fill="currentColor"/>
                                </svg>
                            </div>
                            
                            <div class="classic-form-badge">Correspondence</div>
                            <h2 class="text-3xl font-bold mb-2 classic-gradient-text">
                                {{#if contact_content.form_title}}{{contact_content.form_title}}{{else}}Send a Message{{/if}}
                            </h2>
                            {{#if contact_content.form_description}}
                            <p class="classic-form-description mb-8">{{contact_content.form_description}}</p>
                            {{else}}
                            <p class="classic-form-description mb-8">I would be honored to hear from you. Please don't hesitate to reach out with any inquiries or to discuss how we can create an exceptional experience together.</p>
                            {{/if}}
                        </div>
                        
                        <form class="classic-contact-form space-y-6">
                            <div class="classic-form-group">
                                <label for="name" class="classic-form-label">
                                    <svg class="classic-form-label-ornament" viewBox="0 0 16 16">
                                        <circle cx="8" cy="8" r="6" stroke="currentColor" fill="none" stroke-width="1"/>
                                        <circle cx="8" cy="8" r="2" fill="currentColor"/>
                                    </svg>
                                    Your Name
                                </label>
                                <input type="text" id="name" name="name" required
                                       class="classic-form-input"
                                       placeholder="Enter your distinguished name">
                            </div>
                            
                            <div class="classic-form-group">
                                <label for="email" class="classic-form-label">
                                    <svg class="classic-form-label-ornament" viewBox="0 0 16 16">
                                        <circle cx="8" cy="8" r="6" stroke="currentColor" fill="none" stroke-width="1"/>
                                        <circle cx="8" cy="8" r="2" fill="currentColor"/>
                                    </svg>
                                    Email Address
                                </label>
                                <input type="email" id="email" name="email" required
                                       class="classic-form-input"
                                       placeholder="your.correspondence@example.com">
                            </div>
                            
                            <div class="classic-form-group">
                                <label for="phone" class="classic-form-label">
                                    <svg class="classic-form-label-ornament" viewBox="0 0 16 16">
                                        <circle cx="8" cy="8" r="6" stroke="currentColor" fill="none" stroke-width="1"/>
                                        <circle cx="8" cy="8" r="2" fill="currentColor"/>
                                    </svg>
                                    Phone Number
                                </label>
                                <input type="tel" id="phone" name="phone"
                                       class="classic-form-input"
                                       placeholder="(555) 123-4567">
                            </div>
                            
                            <div class="classic-form-group">
                                <label for="subject" class="classic-form-label">
                                    <svg class="classic-form-label-ornament" viewBox="0 0 16 16">
                                        <circle cx="8" cy="8" r="6" stroke="currentColor" fill="none" stroke-width="1"/>
                                        <circle cx="8" cy="8" r="2" fill="currentColor"/>
                                    </svg>
                                    Subject Matter
                                </label>
                                <select id="subject" name="subject" required class="classic-form-input">
                                    <option value="">Select a topic of interest...</option>
                                    <option value="booking">Engagement Inquiry</option>
                                    <option value="rates">Service Information</option>
                                    <option value="availability">Availability</option>
                                    <option value="general">General Inquiry</option>
                                    <option value="other">Other Matters</option>
                                </select>
                            </div>
                            
                            <div class="classic-form-group">
                                <label for="message" class="classic-form-label">
                                    <svg class="classic-form-label-ornament" viewBox="0 0 16 16">
                                        <circle cx="8" cy="8" r="6" stroke="currentColor" fill="none" stroke-width="1"/>
                                        <circle cx="8" cy="8" r="2" fill="currentColor"/>
                                    </svg>
                                    Your Message
                                </label>
                                <textarea id="message" name="message" rows="5" required
                                          class="classic-form-input"
                                          placeholder="Please share your thoughts and what you're seeking..."></textarea>
                            </div>
                            
                            <div class="classic-form-actions">
                                <button type="submit" class="classic-form-submit-btn">
                                    <svg class="classic-btn-send-ornament" viewBox="0 0 16 16">
                                        <path d="M15 2 8 9l-7-7" stroke="currentColor" fill="none" stroke-width="2"/>
                                        <path d="M1 1h14v14" stroke="currentColor" fill="none" stroke-width="1"/>
                                    </svg>
                                    Send Message
                                </button>
                            </div>
                        </form>
                        
                        <div class="classic-form-footer-ornament">
                            <svg class="classic-form-footer-ornament-svg" viewBox="0 0 120 25">
                                <path d="M20,12.5 Q40,20 60,12.5 T100,12.5" stroke="currentColor" fill="none" stroke-width="1.5"/>
                                <circle cx="35" cy="12.5" r="2" fill="currentColor"/>
                                <circle cx="60" cy="12.5" r="3" fill="currentColor"/>
                                <circle cx="85" cy="12.5" r="2" fill="currentColor"/>
                            </svg>
                        </div>
                    </div>
                </div>
            </div>
            {{/if}}
            
            <!-- Right Column: Contact Information & Details -->
