                                    <svg class="classic-method-ornament-svg" viewBox="0 0 20 20">
                                        <circle cx="10" cy="10" r="8" stroke="currentColor" fill="none" stroke-width="1"/>
                                        <circle cx="10" cy="10" r="3" fill="currentColor"/>
                                    </svg>
                                </div>
                                <div class="classic-contact-icon">
                                    <svg class="classic-contact-icon-svg" viewBox="0 0 16 16">
                                        <path d="M14 2H2a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1z" stroke="currentColor" fill="none" stroke-width="1.5"/>
                                        <path d="m2 3 6.5 4L15 3" stroke="currentColor" fill="none" stroke-width="1.5"/>
                                    </svg>
                                </div>
                                <div class="classic-contact-details">
                                    <div class="classic-contact-label">Electronic Mail</div>
                                    <a href="mailto:{{contact_content.email}}" class="classic-contact-value">{{contact_content.email}}</a>
                                </div>
                            </div>
                            {{/if}}
                            
                            {{#if contact_content.phone}}
                            <div class="classic-contact-method">
                                <div class="classic-contact-method-ornament">
                                    <svg class="classic-method-ornament-svg" viewBox="0 0 20 20">
                                        <circle cx="10" cy="10" r="8" stroke="currentColor" fill="none" stroke-width="1"/>
                                        <circle cx="10" cy="10" r="3" fill="currentColor"/>
                                    </svg>
                                </div>
                                <div class="classic-contact-icon">
                                    <svg class="classic-contact-icon-svg" viewBox="0 0 16 16">
                                        <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2z" stroke="currentColor" fill="none" stroke-width="1.5"/>
                                        <path d="M6 1h4" stroke="currentColor" stroke-width="1.5"/>
                                    </svg>
                                </div>
                                <div class="classic-contact-details">
                                    <div class="classic-contact-label">Telephone</div>
                                    <a href="tel:{{contact_content.phone}}" class="classic-contact-value">{{contact_content.phone}}</a>
                                </div>
                            </div>
                            {{/if}}
                            
                            {{#if contact_content.website}}
                            <div class="classic-contact-method">
                                <div class="classic-contact-method-ornament">
                                    <svg class="classic-method-ornament-svg" viewBox="0 0 20 20">
                                        <circle cx="10" cy="10" r="8" stroke="currentColor" fill="none" stroke-width="1"/>
                                        <circle cx="10" cy="10" r="3" fill="currentColor"/>
                                    </svg>
                                </div>
                                <div class="classic-contact-icon">
                                    <svg class="classic-contact-icon-svg" viewBox="0 0 16 16">
                                        <circle cx="8" cy="8" r="6" stroke="currentColor" fill="none" stroke-width="1.5"/>
                                        <path d="M2 8h12" stroke="currentColor" stroke-width="1"/>
                                        <path d="M8 2a15.3 15.3 0 0 1 4 6 15.3 15.3 0 0 1-4 6 15.3 15.3 0 0 1-4-6 15.3 15.3 0 0 1 4-6z" stroke="currentColor" fill="none" stroke-width="1"/>
                                    </svg>
                                </div>
                                <div class="classic-contact-details">
                                    <div class="classic-contact-label">Website</div>
                                    <a href="{{contact_content.website}}" class="classic-contact-value" target="_blank">{{contact_content.website}}</a>
                                </div>
                            </div>
                            {{/if}}
                            
                            {{#unless contact_content.email}}
                            <div class="classic-contact-method">
                                <div class="classic-contact-method-ornament">
                                    <svg class="classic-method-ornament-svg" viewBox="0 0 20 20">
                                        <circle cx="10" cy="10" r="8" stroke="currentColor" fill="none" stroke-width="1"/>
                                        <circle cx="10" cy="10" r="3" fill="currentColor"/>
                                    </svg>
                                </div>
                                <div class="classic-contact-icon">
                                    <svg class="classic-contact-icon-svg" viewBox="0 0 16 16">
                                        <path d="M14 2H2a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1z" stroke="currentColor" fill="none" stroke-width="1.5"/>
                                        <path d="m2 3 6.5 4L15 3" stroke="currentColor" fill="none" stroke-width="1.5"/>
                                    </svg>
                                </div>
                                <div class="classic-contact-details">
                                    <div class="classic-contact-label">Electronic Mail</div>
                                    <div class="classic-contact-value">Available upon request</div>
                                </div>
                            </div>
                            {{/unless}}
                        </div>
                    </div>
                </div>
                {{/if}}
                
                <!-- Contact Guidelines -->
                {{#if contact_content.contact_guidelines_visible}}
                <div class="classic-guidelines-section mt-8" data-aos="fade-left" data-aos-delay="200">
                    <div class="classic-info-card">
                        <div class="classic-info-ornamental-frame">
                            <div class="classic-info-corner-ornament classic-info-corner-top-left"></div>
