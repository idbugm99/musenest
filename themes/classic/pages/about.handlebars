<!-- Phase 2.5b: Classic Template About Page - Timeless Personal Portrait -->

<!-- Classic About Hero Section -->
{{#if about_content.page_title_visible}}
<section class="classic-about-hero min-h-96 flex items-center justify-center text-white pt-20 relative overflow-hidden" data-aos="fade-in">
    <!-- Classic Background Pattern -->
    <div class="classic-about-pattern-overlay"></div>
    
    <!-- Classic Ornamental Hero Elements -->
    <div class="classic-about-ornamental-elements">
        <div class="classic-about-ornament-corner classic-about-ornament-top-left"></div>
        <div class="classic-about-ornament-corner classic-about-ornament-top-right"></div>
        <div class="classic-about-ornament-corner classic-about-ornament-bottom-left"></div>
        <div class="classic-about-ornament-corner classic-about-ornament-bottom-right"></div>
        <div class="classic-about-decorative-line classic-about-line-top"></div>
        <div class="classic-about-decorative-line classic-about-line-bottom"></div>
    </div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
        <div class="classic-about-hero-content" data-aos="zoom-in" data-aos-delay="200">
            <div class="classic-about-badge mb-6">Personal Portrait</div>
            <h1 class="text-5xl md:text-7xl font-bold mb-8 classic-about-gradient-text classic-about-text-glow">
                {{#if about_content.page_title}}{{about_content.page_title}}{{else}}About {{siteName}}{{/if}}
            </h1>
            {{#if about_content.page_subtitle}}
            <p class="text-xl md:text-2xl opacity-90 max-w-3xl mx-auto classic-about-subtitle">
                {{about_content.page_subtitle}}
            </p>
            {{/if}}
        </div>
    </div>
</section>
{{/if}}

<!-- Classic Main About Content -->
<section class="py-20 classic-about-main-section">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-16 items-start">
            <!-- Left Column: Main Content & Services -->
            <div class="classic-about-content-column">
                {{#if about_content.main_content_visible}}
                <div class="classic-content-section" data-aos="fade-right">
                    <div class="classic-content-flourish-wrapper">
                        <!-- Opening Flourish -->
                        <div class="classic-content-flourish classic-content-flourish-top">
                            <svg class="classic-flourish-svg" viewBox="0 0 200 30">
                                <path d="M10,15 Q50,5 100,15 T190,15" stroke="currentColor" fill="none" stroke-width="1.5"/>
                                <circle cx="100" cy="15" r="3" fill="currentColor"/>
                            </svg>
                        </div>
                        
                        <div class="space-y-6 text-lg leading-relaxed">
                            {{#if about_content.main_paragraph_1}}
                            <p class="text-xl classic-about-paragraph classic-about-highlight">{{about_content.main_paragraph_1}}</p>
                            {{/if}}
                            
                            {{#if about_content.main_paragraph_2}}
                            <p class="classic-about-paragraph">{{about_content.main_paragraph_2}}</p>
                            {{/if}}
                            
                            {{#if about_content.main_paragraph_3}}
                            <p class="classic-about-paragraph">{{about_content.main_paragraph_3}}</p>
                            {{/if}}
                            
                            {{#if about_content.main_paragraph_4}}
                            <p class="classic-about-paragraph">{{about_content.main_paragraph_4}}</p>
                            {{/if}}
                            
                            {{#unless about_content.main_paragraph_1}}
                            <p class="text-xl classic-about-paragraph classic-about-highlight">Welcome to a realm of timeless elegance and refined sophistication. I specialize in creating memorable experiences that honor tradition while embracing the art of gracious companionship.</p>
                            <p class="classic-about-paragraph">With an appreciation for the finer things in life and a commitment to discretion, I provide companionship services that cater to those who value quality, authenticity, and genuine connection.</p>
                            {{/unless}}
                        </div>
                        
                        <!-- Closing Flourish -->
                        <div class="classic-content-flourish classic-content-flourish-bottom">
                            <svg class="classic-flourish-svg" viewBox="0 0 200 30">
                                <path d="M10,15 Q50,25 100,15 T190,15" stroke="currentColor" fill="none" stroke-width="1.5"/>
                                <circle cx="100" cy="15" r="3" fill="currentColor"/>
                            </svg>
                        </div>
                    </div>
                </div>
                {{/if}}
                
                {{#if about_content.services_visible}}
