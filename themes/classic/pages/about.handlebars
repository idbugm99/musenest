function openClassicPortraitPreview(imageUrl, altText) {
    const modal = document.getElementById('classic-portrait-preview-modal');
    const image = document.getElementById('classic-portrait-preview-image');
    const caption = document.getElementById('classic-portrait-preview-caption');
    
    if (modal && image && caption) {
        image.src = imageUrl;
        image.alt = altText;
        caption.textContent = altText;
        
        modal.classList.remove('hidden');
        modal.classList.add('flex');
        
        // Prevent body scroll
        document.body.style.overflow = 'hidden';
        
        // Close on escape key
        document.addEventListener('keydown', handleClassicEscapeKey);
        
        // Close on background click
        modal.addEventListener('click', function(e) {
            if (e.target === modal) {
                closeClassicPortraitPreview();
            }
        });
    }
}

function closeClassicPortraitPreview() {
    const modal = document.getElementById('classic-portrait-preview-modal');
    
    if (modal) {
        modal.classList.add('hidden');
        modal.classList.remove('flex');
        
        // Restore body scroll
        document.body.style.overflow = '';
        
        // Remove event listeners
        document.removeEventListener('keydown', handleClassicEscapeKey);
    }
}

function handleClassicEscapeKey(e) {
    if (e.key === 'Escape') {
        closeClassicPortraitPreview();
    }
}
