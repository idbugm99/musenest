<!-- Classic About Page Styling -->
<style>
/* Classic Color Palette */
:root {
    --classic-primary: #8b5a3c;
    --classic-secondary: #6b4e3d;
    --classic-accent: #d4af37;
    --classic-cream: #faf7f0;
    --classic-ivory: #f8f6f0;
    --classic-brown-light: #a67c5a;
    --classic-brown-dark: #5d4037;
}

/* Classic About Hero Section */
.classic-about-hero {
    background: linear-gradient(135deg, var(--classic-primary) 0%, var(--classic-secondary) 50%, var(--classic-brown-dark) 100%);
    position: relative;
    overflow: hidden;
}

.classic-about-pattern-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
        repeating-linear-gradient(45deg, transparent, transparent 20px, rgba(255,255,255,0.02) 20px, rgba(255,255,255,0.02) 40px),
        repeating-linear-gradient(-45deg, transparent, transparent 20px, rgba(0,0,0,0.03) 20px, rgba(0,0,0,0.03) 40px);
    opacity: 0.6;
}

/* Classic About Ornamental Hero Elements */
.classic-about-ornamental-elements {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
}

.classic-about-ornament-corner {
    position: absolute;
    width: 80px;
    height: 80px;
    border: 2px solid var(--classic-accent);
    opacity: 0.4;
}

.classic-about-ornament-top-left {
    top: 2rem;
    left: 2rem;
    border-right: none;
    border-bottom: none;
    border-top-left-radius: 20px;
}

.classic-about-ornament-top-right {
    top: 2rem;
    right: 2rem;
    border-left: none;
    border-bottom: none;
    border-top-right-radius: 20px;
}

.classic-about-ornament-bottom-left {
    bottom: 2rem;
    left: 2rem;
    border-right: none;
    border-top: none;
    border-bottom-left-radius: 20px;
}

.classic-about-ornament-bottom-right {
    bottom: 2rem;
    right: 2rem;
    border-left: none;
    border-top: none;
    border-bottom-right-radius: 20px;
}

.classic-about-decorative-line {
    position: absolute;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--classic-accent), transparent);
    opacity: 0.5;
}

.classic-about-line-top {
    top: 3rem;
    left: 20%;
    right: 20%;
}

.classic-about-line-bottom {
    bottom: 3rem;
    left: 25%;
    right: 25%;
}

/* Classic About Badge */
.classic-about-badge {
    display: inline-block;
    background: rgba(212, 175, 55, 0.15);
    color: var(--classic-accent);
    padding: 0.5rem 1.5rem;
    border-radius: 0;
    border: 1px solid var(--classic-accent);
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-family: 'Playfair Display', serif;
    backdrop-filter: blur(10px);
    position: relative;
}

.classic-about-badge::before,
.classic-about-badge::after {
    content: '❦';
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    color: var(--classic-accent);
    font-size: 0.8rem;
}

.classic-about-badge::before {
    left: -1rem;
}

.classic-about-badge::after {
    right: -1rem;
}

