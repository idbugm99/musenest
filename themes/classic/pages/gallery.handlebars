<!-- Classic Gallery Lightbox JavaScript -->
<script>
function openClassicGalleryLightbox(imageUrl, caption) {
    const modal = document.getElementById('classic-gallery-lightbox-modal');
    const image = document.getElementById('classic-gallery-lightbox-image');
    const captionEl = document.getElementById('classic-gallery-lightbox-caption');
    
    if (modal && image && captionEl) {
        image.src = imageUrl;
        image.alt = caption;
        captionEl.textContent = caption;
        
        modal.classList.remove('hidden');
        modal.classList.add('flex');
        
        // Prevent body scroll
        document.body.style.overflow = 'hidden';
        
        // Close on escape key
        document.addEventListener('keydown', handleClassicGalleryEscape);
        
        // Close on background click
        modal.addEventListener('click', function(e) {
            if (e.target === modal) {
                closeClassicGalleryLightbox();
            }
        });
    }
}

function closeClassicGalleryLightbox() {
    const modal = document.getElementById('classic-gallery-lightbox-modal');
    
    if (modal) {
        modal.classList.add('hidden');
        modal.classList.remove('flex');
        
        // Restore body scroll
        document.body.style.overflow = '';
        
        // Remove event listeners
        document.removeEventListener('keydown', handleClassicGalleryEscape);
    }
}

function handleClassicGalleryEscape(e) {
    if (e.key === 'Escape') {
        closeClassicGalleryLightbox();
    }
}
</script>