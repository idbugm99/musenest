<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{pageTitle}} - {{siteName}}</title>
    <meta name="description" content="{{metaDescription}}">
    <meta name="og:title" content="{{pageTitle}} - {{siteName}}">
    <meta name="og:description" content="{{metaDescription}}">
    <meta name="og:type" content="website">
    {{#if ogImage}}
    <meta name="og:image" content="{{ogImage}}">
    {{/if}}
    
    <!-- Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <!-- Universal Icon System -->
    <link rel="stylesheet" href="/templates/universal/universal-icons.css">
    
    <!-- Google Fonts - Luxury Typography -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700;800;900&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- AOS Animation Library -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    
    <!-- Universal Page System Styles -->
    <link rel="stylesheet" href="/templates/universal/universal-hero-styles.css">
    <link rel="stylesheet" href="/templates/universal/universal-page-styles.css">
    <!-- Ensure Universal Gallery styles are available on any page using renderUniversalGallery -->
    <link rel="stylesheet" href="/templates/universal/gallery-styles.css">
    <link rel="stylesheet" href="/themes/luxury/styles/luxury-theme-overrides.css">
    
    <style>
        :root {
            /* Luxury theme tokens with sensible fallbacks */
            --luxury-bg-start: {{theme.colors.bg_start}}; /* optional theme override */
            --luxury-bg-end: {{theme.colors.bg_end}};
            --luxury-surface: {{theme.colors.surface}};
            --luxury-card: {{theme.colors.card}};
            --luxury-accent: {{#if theme.colors.accent}}{{theme.colors.accent}}{{else}}var(--accent){{/if}}; /* gold */
            --luxury-text: {{#if theme.colors.text}}{{theme.colors.text}}{{else}}var(--text-light){{/if}};
            --luxury-muted: {{#if theme.colors.muted}}{{theme.colors.muted}}{{else}}var(--text-muted){{/if}};
            --luxury-background: {{#if theme.colors.background}}{{theme.colors.background}}{{else}}var(--bg-dark){{/if}};

            /* Back-compat variables (used by some existing rules) */
            --luxury-primary: var(--luxury-accent);
            --luxury-secondary: {{#if theme.colors.secondary}}{{theme.colors.secondary}}{{else}}var(--secondary){{/if}};
            
            /* Universal Theme Variables - Luxury Theme */
            --theme-bg-primary: {{theme.colors.background}};          /* Dark luxury background */
            --theme-bg-secondary: {{theme.colors.surface}};        /* Medium luxury background */
            --theme-bg-tertiary: {{theme.colors.card-bg}};         /* Card backgrounds */
            --theme-bg-light: {{theme.colors.bg-light}};            /* Lighter elements */
            --theme-bg-surface: {{theme.colors.surface}};          /* Surface elements */
            
            --theme-text-primary: {{theme.colors.text-light}};        /* Primary text (light) */
            --theme-text-secondary: {{theme.colors.text-light}};      /* Secondary text (ensure readable on dark bg) */
            --theme-text-muted: {{theme.colors.disabled-text}};       /* Muted text on dark bg */
            --theme-text-subtle: {{theme.colors.disabled-text}};      /* Subtle text */
            --theme-text-inverted: {{theme.colors.text-dark}};       /* Inverted text (on light backgrounds) */
            
            --theme-border-primary: {{theme.colors.border-dark}};      /* Primary borders */
            --theme-border-light: {{theme.colors.border-light}};        /* Light borders */
            --theme-border-subtle: {{theme.colors.divider}};       /* Subtle borders */
            
            --theme-accent: {{theme.colors.accent}};              /* Gold accent */
            --theme-secondary: {{theme.colors.secondary}};        /* Secondary brand color */
            --theme-accent-hover: {{theme.colors.btn-bg-hover}};        /* Gold hover */
            --theme-accent-light: {{theme.colors.link-hover}};        /* Light accent */
            --theme-success: {{theme.colors.success}};             /* Success green */
            --theme-warning: {{theme.colors.warning}};             /* Warning amber */
            --theme-error: {{theme.colors.danger}};               /* Error red */

            /* Alias variables expected by Universal components */
            --theme-background: {{theme.colors.background}};      /* Generic background */
            --theme-surface: {{theme.colors.surface}};            /* Section surface */
            --theme-card-bg: {{theme.colors.card-bg}};            /* Card background */
            --theme-border: {{theme.colors.border-dark}};         /* Generic border */
            --theme-text: {{theme.colors.text-light}};            /* Primary text for dark bg */
            --theme-text-muted: {{theme.colors.disabled-text}};    /* Muted text */

            /* Buttons used by Universal components */
            --theme-btn-bg: {{theme.colors.accent}};
            --theme-btn-text: {{theme.colors.text-dark}};
            --theme-btn-border: {{theme.colors.btn-border}};
            --theme-btn-bg-hover: {{theme.colors.btn-bg-hover}};
            --theme-btn-text-hover: {{theme.colors.text-dark}};
            --theme-btn-shadow: {{theme.colors.card-shadow}};

            /* Hero variables used by Universal hero (kept for safety) */
            --theme-hero-bg: {{theme.colors.hero-bg}};
            --theme-hero-text: {{theme.colors.text-light}};
            --theme-hero-overlay: {{theme.colors.hero-overlay}};
            --theme-backdrop: {{theme.colors.backdrop}};
        }
        
        /* Luxury Typography System */
        .luxury-heading {
            font-family: 'Playfair Display', serif;
            font-weight: 700;
            letter-spacing: -0.025em;
        }
        
        /* Standardized heading sizes */
        h1, .luxury-h1 {
            font-size: 3.75rem; /* 60px */
            line-height: 1.1;
            font-weight: 800;
            letter-spacing: -0.025em;
        }
        
        h2, .luxury-h2 {
            font-size: 2.5rem; /* 40px */
            line-height: 1.2;
            font-weight: 700;
            letter-spacing: -0.025em;
        }
        
        h3, .luxury-h3 {
            font-size: 1.875rem; /* 30px */
            line-height: 1.3;
            font-weight: 600;
            letter-spacing: -0.025em;
        }
        
        /* Body text consistency */
        .luxury-text-lg {
            font-size: 1.125rem; /* 18px */
            line-height: 1.6;
        }
        
        .luxury-text-base {
            font-size: 1rem; /* 16px */
            line-height: 1.6;
        }
        
        /* Text contrast helpers for gradient backgrounds */
        .luxury-text-contrast {
            text-shadow: 0 2px 8px var(--card-shadow);
        }
        
        .luxury-text-overlay::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: var(--overlay);
            border-radius: inherit;
            z-index: -1;
        }
        
        /* Responsive typography */
        @media (max-width: 768px) {
            h1, .luxury-h1 { font-size: 2.5rem; }
            h2, .luxury-h2 { font-size: 2rem; }
            h3, .luxury-h3 { font-size: 1.5rem; }
        }
        
        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--luxury-background);
            color: var(--luxury-text);
            padding-top: 80px; /* Height of luxury navigation (h-20 = 80px) */
        }

        /* Global container and vertical rhythm */
        .luxury-container { max-width: 1200px; margin-left: auto; margin-right: auto; padding-left: 1rem; padding-right: 1rem; }
        .luxury-section { padding-top: 6rem; padding-bottom: 6rem; }
        @media (max-width: 768px) { .luxury-section { padding-top: 4rem; padding-bottom: 4rem; } }
        .luxury-space-y > * + * { margin-top: 4rem; }
        
        /* Luxury Card Styling */
        .luxury-card {
            background: {{theme.colors.card-bg}};
            border-radius: 20px;
            border: 1px solid {{theme.colors.border-light}};
            box-shadow: 0 20px 40px {{theme.colors.card-shadow}}, 0 1px 3px {{theme.colors.card-shadow}};
            transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }
        
        .luxury-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--luxury-primary), var(--luxury-accent));
        }
        
        .luxury-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 32px 64px {{theme.colors.card-shadow}}, 0 1px 3px {{theme.colors.card-shadow}};
        }
        
        /* Card variant for dark surfaces */
        .luxury-card-dark {
            background: {{theme.colors.card-bg}};
            border-radius: 1rem;
            border: 1px solid {{theme.colors.border-light}};
            box-shadow: 0 10px 30px {{theme.colors.card-shadow}};
        }

        /* Luxury Button Styling */
        .luxury-btn {
            background: linear-gradient(135deg, {{theme.colors.accent}} 0%, {{theme.colors.btn-bg-hover}} 100%);
            color: {{theme.colors.text-dark}};
            padding: 16px 32px;
            border-radius: 50px;
            font-weight: 600;
            font-size: 16px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
            box-shadow: 0 8px 32px {{theme.colors.overlay}};
            border: none;
            cursor: pointer;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            position: relative;
            overflow: hidden;
        }
        
        .luxury-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, {{theme.colors.backdrop}}, transparent);
            transition: left 0.6s;
        }
        
        .luxury-btn:hover::before {
            left: 100%;
        }
        
        .luxury-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 48px {{theme.colors.card-shadow}};
        }
        
        .luxury-btn-outline {
            background: transparent;
            color: {{theme.colors.accent}};
            border: 2px solid {{theme.colors.btn-border}};
            padding: 14px 30px;
            border-radius: 50px;
            font-weight: 600;
            font-size: 16px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .luxury-btn-outline:hover {
            background: {{theme.colors.accent}};
            color: {{theme.colors.text-dark}};
            transform: translateY(-2px);
            box-shadow: 0 8px 32px {{theme.colors.overlay}};
        }

        /* Focus visibility for accessibility */
        .luxury-btn:focus-visible, .nav-link:focus-visible, a:focus-visible { outline: 2px solid {{theme.colors.focus-ring}}; outline-offset: 2px; border-radius: 8px; }
        
        /* Luxury Navigation */
        .luxury-nav {
            background: {{theme.colors.nav-bg}};
            backdrop-filter: blur(20px);
            border-bottom: 1px solid {{theme.colors.nav-border}};
            box-shadow: 0 4px 24px {{theme.colors.overlay}};
            transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
        }
        
        .luxury-nav .nav-link {
            font-weight: 500;
            color: {{theme.colors.nav-text}};
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-size: 14px;
            transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
            position: relative;
            padding: 12px 16px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 44px; /* Consistent touch target */
        }
        
        .luxury-nav .nav-link::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 50%;
            transform: translateX(-50%);
            width: 0;
            height: 2px;
            background: linear-gradient(90deg, {{theme.colors.accent}}, {{theme.colors.link-hover}});
            transition: width 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
            border-radius: 1px;
        }
        
        .luxury-nav .nav-link:hover::after,
        .luxury-nav .nav-link.active::after {
            width: 80%;
        }
        
        .luxury-nav .nav-link:hover,
        .luxury-nav .nav-link.active {
            color: {{theme.colors.accent}};
            background: {{theme.colors.btn-bg-hover}};
            transform: translateY(-1px);
        }
        
        .luxury-nav .nav-link:focus-visible {
            outline: 2px solid {{theme.colors.focus-ring}};
            outline-offset: 2px;
            border-radius: 8px;
        }
        
        /* Luxury Brand */
        .luxury-brand {
            font-family: 'Playfair Display', serif;
            font-weight: 800;
            font-size: 28px;
            color: {{theme.colors.accent}};
            text-decoration: none;
            letter-spacing: -0.5px;
        }
        
        /* Hero Section Styling */
        .luxury-hero {
            background: radial-gradient(1200px 600px at 50% -10%, var(--overlay), transparent 60%),
                        var(--hero-bg);
            position: relative;
            overflow: hidden;
        }
        
        .luxury-hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="luxury-pattern" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="1" fill="var(--text-light, rgba(255,255,255,0.1))"/></pattern></defs><rect width="100" height="100" fill="url(%23luxury-pattern)"/></svg>');
            opacity: 0.3;
        }
        
        /* Animations */
        @keyframes luxuryFloat {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            50% { transform: translateY(-20px) rotate(2deg); }
        }
        
        .luxury-float {
            animation: luxuryFloat 6s ease-in-out infinite;
        }
        
        /* Custom Hero Background Support */
        .luxury-hero-custom-bg {
            background-size: cover !important;
            background-position: center center !important;
            background-attachment: fixed !important;
            background-repeat: no-repeat !important;
        }
        
        .luxury-hero-overlay-custom {
            background: {{theme.colors.hero-overlay}} !important;
        }
        
        /* Responsive Design */
        @media (max-width: 768px) {
            .luxury-heading {
                font-size: 2.5rem;
            }
            
            .luxury-card {
                border-radius: 15px;
            }
            
            .luxury-btn {
                padding: 12px 24px;
                font-size: 14px;
            }
        }
        
        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
        }
        
        ::-webkit-scrollbar-track {
            background: {{theme.colors.surface}};
        }
        
        ::-webkit-scrollbar-thumb {
            background: linear-gradient(135deg, {{theme.colors.accent}}, {{theme.colors.btn-bg-hover}});
            border-radius: 4px;
        }
        
        ::-webkit-scrollbar-thumb:hover {
            background: linear-gradient(135deg, {{theme.colors.btn-bg-hover}}, {{theme.colors.accent}});
        }

.luxury-gallery-section { background: var(--luxury-surface); }
.luxury-gallery-grid { display: grid; grid-template-columns: repeat(5, 1fr); gap: 1rem; }
.luxury-gallery-item { overflow: hidden; border-radius: 0.75rem; }
.luxury-gallery-item img { transition: transform 0.3s ease; }
.luxury-gallery-item:hover img { transform: scale(1.05); }
.luxury-gallery-placeholder { background: var(--luxury-card); color: var(--luxury-muted); }

.luxury-travel-section { background: var(--luxury-surface); }
.luxury-travel-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 2rem; }
.luxury-travel-card { text-align: center; }
.luxury-available-badge { background: var(--luxury-accent); color: var(--btn-text); padding: 0.5rem 1rem; border-radius: 9999px; }
.luxury-travel-notes { font-style: italic; color: var(--luxury-muted); }

.luxury-testimonials-section { background: var(--luxury-background); }
.luxury-testimonials-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 2rem; }
.luxury-stars { display: flex; justify-content: center; gap: 0.25rem; }
.luxury-testimonial-text { font-style: italic; }
.luxury-testimonial-author { color: var(--luxury-accent); }

/* Responsive Media Queries */
@media (max-width: 1024px) {
  .luxury-gallery-grid { grid-template-columns: repeat(3, 1fr); }
  .luxury-travel-grid, .luxury-testimonials-grid { grid-template-columns: repeat(2, 1fr); }
}
@media (max-width: 768px) {
  .luxury-gallery-grid { grid-template-columns: repeat(2, 1fr); }
  .luxury-travel-grid, .luxury-testimonials-grid { grid-template-columns: 1fr; }
}

        /* Universal Theme Utility Classes */
        /* Background Classes */
        .theme-bg-primary { background-color: var(--theme-bg-primary) !important; }
        .theme-bg-secondary { background-color: var(--theme-bg-secondary) !important; }
        .theme-bg-tertiary { background-color: var(--theme-bg-tertiary) !important; }
        .theme-bg-light { background-color: var(--theme-bg-light) !important; }
        
        /* Text Color Classes */
        .theme-text-primary { color: var(--theme-text-primary) !important; }
        .theme-text-secondary { color: var(--theme-text-secondary) !important; }
        .theme-text-muted { color: var(--theme-text-muted) !important; }
        .theme-text-subtle { color: var(--theme-text-subtle) !important; }
        
        /* Border Classes */
        .theme-border-primary { border-color: var(--theme-border-primary) !important; }
        .theme-border-light { border-color: var(--theme-border-light) !important; }
        
        /* Accent Classes */
        .theme-accent { color: var(--theme-accent) !important; }
        .theme-accent-bg { background-color: var(--theme-accent) !important; }
        .theme-accent-border { border-color: var(--theme-accent) !important; }
        
        /* Semantic Component Classes */
        .theme-card {
            background-color: var(--theme-bg-tertiary);
            color: var(--theme-text-primary);
            border: 1px solid var(--theme-border-light);
            border-radius: 12px;
            box-shadow: 0 10px 30px var(--card-shadow);
            transition: all 0.3s ease;
        }
        
        .theme-card:hover {
            box-shadow: 0 20px 40px var(--card-shadow);
            transform: translateY(-2px);
        }
        
        .theme-section {
            background-color: var(--theme-bg-primary);
            color: var(--theme-text-primary);
        }
        
        .theme-section-alt {
            background-color: var(--theme-bg-secondary);
            color: var(--theme-text-primary);
        }
        
        .theme-header {
            color: var(--theme-text-primary);
            font-weight: bold;
        }
        
        .theme-body-text {
            color: var(--theme-text-secondary);
        }
        
        .theme-muted-text {
            color: var(--theme-text-muted);
        }
        
        .theme-subtle-text {
            color: var(--theme-text-subtle);
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    {{> navigation}}
    
    <!-- Theme Preview Banner -->
    {{#if theme.isPreview}}
    <div class="py-2 px-4 text-center text-sm font-semibold" style="background: linear-gradient(90deg, {{theme.colors.accent}}, {{theme.colors.btn-bg-hover}}); color: {{theme.colors.text-dark}};">
        <i class="fas fa-eye me-2"></i>You are previewing the <strong>{{theme.previewThemeName}}</strong> theme. This is not your active theme.
    </div>
    {{/if}}
    
    <!-- Main Content -->
    <main>
        {{{body}}}
    </main>
    
    <!-- Footer -->
    {{> footer}}
    
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    
    <script>
        // Initialize AOS
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true,
            offset: 100
        });
        
        // Luxury floating elements
        document.addEventListener('DOMContentLoaded', function() {
            const floatingElements = document.querySelectorAll('.luxury-float');
            floatingElements.forEach((el, index) => {
                el.style.animationDelay = `${index * 0.5}s`;
            });
        });
        
        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
        
        // Luxury navigation background on scroll
        window.addEventListener('scroll', function() {
            const nav = document.querySelector('.luxury-nav');
            if (window.scrollY > 50) {
                nav.style.background = '{{theme.colors.nav-bg}}';
                nav.style.boxShadow = '0 8px 32px {{theme.colors.overlay}}';
            } else {
                nav.style.background = '{{theme.colors.nav-bg}}';
                nav.style.boxShadow = '0 4px 24px {{theme.colors.card-shadow}}';
            }
        });
    </script>
    <!-- Ensure Universal Gallery initializer exists for pages using renderUniversalGallery -->
    <script src="/templates/universal/gallery-script.js"></script>
</body>
</html>