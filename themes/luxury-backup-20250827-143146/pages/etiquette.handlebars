<!-- Luxury Theme Etiquette Page - Universal System Integration -->

<!-- Page Title Hero Section -->
{{#if etiquette_content.etiquette_header_visible}}
<section class="universal-hero">
    <div class="universal-hero-content">
        <div class="max-w-5xl mx-auto text-center px-4 sm:px-6 lg:px-8">
            <div class="universal-hero-icon" data-aos="fade-down" data-aos-delay="100">
                <i class="fas fa-scroll"></i>
            </div>
            <h1 class="universal-hero-title" data-aos="fade-up" data-aos-delay="300">
                {{#if etiquette_content.page_title}}{{etiquette_content.page_title}}{{else}}Royal Court Protocols{{/if}}
            </h1>
            {{#if etiquette_content.page_subtitle}}
            <p class="universal-hero-subtitle" data-aos="fade-up" data-aos-delay="500">
                {{etiquette_content.page_subtitle}}
            </p>
            {{else}}
            <p class="universal-hero-subtitle" data-aos="fade-up" data-aos-delay="500">
                Distinguished guidelines for our royal engagements and imperial court conduct
            </p>
            {{/if}}
        </div>
    </div>
</section>
{{/if}}

<!-- Protocol Chambers Section -->
<section class="universal-content-section" data-aos="fade-in">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        
        <!-- First Row of Protocol Chambers -->
        <div class="grid lg:grid-cols-2 gap-8 mb-8">
            
            <!-- Booking & Screening Palace -->
            {{#if etiquette_content.etiquette_booking_visible}}
            <div class="universal-feature-card" data-aos="fade-right">
                <div class="universal-feature-icon">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <h2 class="universal-feature-title">
                    {{#if etiquette_content.booking_title}}{{etiquette_content.booking_title}}{{else}}Royal Booking & Screening{{/if}}
                </h2>
                <p class="universal-feature-subtitle">Imperial Planning</p>
                
                <div class="universal-feature-list">
                    <!-- Initial Contact -->
                    <div class="universal-list-item" data-aos="fade-up" data-aos-delay="100">
                        <div class="universal-list-icon">
                            <i class="fas fa-handshake"></i>
                        </div>
                        <div class="universal-list-content">
                            <h3 class="universal-list-title">
                                {{#if etiquette_content.booking_initial_contact_title}}{{etiquette_content.booking_initial_contact_title}}{{else}}Initial Royal Contact{{/if}}
                            </h3>
                            <p class="universal-list-description">
                                {{#if etiquette_content.booking_initial_contact_text}}{{etiquette_content.booking_initial_contact_text}}{{else}}Please introduce yourself with noble courtesy and include your desired date, time, and duration when requesting our royal audience.{{/if}}
                            </p>
                        </div>
                    </div>
                    
                    <!-- Screening Process -->
                    <div class="universal-list-item" data-aos="fade-up" data-aos-delay="200">
                        <div class="universal-list-icon">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <div class="universal-list-content">
                            <h3 class="universal-list-title">
                                {{#if etiquette_content.booking_screening_title}}{{etiquette_content.booking_screening_title}}{{else}}Royal Screening Process{{/if}}
                            </h3>
                            <p class="universal-list-description">
                                {{#if etiquette_content.booking_screening_text}}{{etiquette_content.booking_screening_text}}{{else}}For the security of our royal court, a distinguished screening process is required for all new courtiers. This includes noble verification and distinguished references.{{/if}}
                            </p>
                        </div>
                    </div>
                    
                    <!-- Advance Booking -->
                    <div class="universal-list-item" data-aos="fade-up" data-aos-delay="300">
                        <div class="universal-list-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div class="universal-list-content">
                            <h3 class="universal-list-title">
                                {{#if etiquette_content.booking_advance_title}}{{etiquette_content.booking_advance_title}}{{else}}Advance Royal Booking{{/if}}
                            </h3>
                            <p class="universal-list-description">
                                {{#if etiquette_content.booking_advance_text}}{{etiquette_content.booking_advance_text}}{{else}}Royal engagements are preferred with 24 hours advance notice. Same-day imperial audiences may be available with an additional court fee.{{/if}}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            {{/if}}
            
            <!-- Respect & Boundaries Palace -->
            {{#if etiquette_content.etiquette_respect_visible}}
            <div class="universal-feature-card" data-aos="fade-left">
                <div class="universal-feature-icon">
                    <i class="fas fa-balance-scale"></i>
                </div>
                <h2 class="universal-feature-title">
                    {{#if etiquette_content.respect_title}}{{etiquette_content.respect_title}}{{else}}Royal Respect & Boundaries{{/if}}
                </h2>
                <p class="universal-feature-subtitle">Imperial Understanding</p>
                
                <div class="universal-feature-list">
                    <!-- Mutual Respect -->
                    <div class="universal-list-item" data-aos="fade-up" data-aos-delay="100">
                        <div class="universal-list-icon">
                            <i class="fas fa-heart"></i>
                        </div>
                        <div class="universal-list-content">
                            <h3 class="universal-list-title">
                                {{#if etiquette_content.respect_mutual_title}}{{etiquette_content.respect_mutual_title}}{{else}}Mutual Royal Respect{{/if}}
                            </h3>
                            <p class="universal-list-description">
                                {{#if etiquette_content.respect_mutual_text}}{{etiquette_content.respect_mutual_text}}{{else}}I treat all courtiers with imperial respect and noble kindness, and I expect the same royal courtesy in return. Discourteous or disrespectful behavior will not be tolerated in our court.{{/if}}
                            </p>
                        </div>
                    </div>
                    
                    <!-- Professional Boundaries -->
                    <div class="universal-list-item" data-aos="fade-up" data-aos-delay="200">
                        <div class="universal-list-icon">
                            <i class="fas fa-crown"></i>
                        </div>
                        <div class="universal-list-content">
                            <h3 class="universal-list-title">
                                {{#if etiquette_content.respect_boundaries_title}}{{etiquette_content.respect_boundaries_title}}{{else}}Royal Professional Boundaries{{/if}}
                            </h3>
                            <p class="universal-list-description">
                                {{#if etiquette_content.respect_boundaries_text}}{{etiquette_content.respect_boundaries_text}}{{else}}Our time together is for distinguished companionship and royal social interaction. Please respect all imperial boundaries and court guidelines.{{/if}}
                            </p>
                        </div>
                    </div>
                    
                    <!-- Personal Information -->
                    <div class="universal-list-item" data-aos="fade-up" data-aos-delay="300">
                        <div class="universal-list-icon">
                            <i class="fas fa-user-secret"></i>
                        </div>
                        <div class="universal-list-content">
                            <h3 class="universal-list-title">
                                {{#if etiquette_content.respect_personal_title}}{{etiquette_content.respect_personal_title}}{{else}}Royal Personal Information{{/if}}
                            </h3>
                            <p class="universal-list-description">
                                {{#if etiquette_content.respect_personal_text}}{{etiquette_content.respect_personal_text}}{{else}}Please do not inquire about personal information beyond what is shared in our royal court. Imperial discretion works both ways.{{/if}}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            {{/if}}
        </div>
        
        <!-- Second Row of Protocol Chambers -->
        <div class="grid lg:grid-cols-2 gap-8 mb-8">
            
            <!-- Hygiene & Presentation Palace -->
            {{#if etiquette_content.etiquette_hygiene_visible}}
            <div class="luxury-hygiene-palace" data-aos="fade-right" data-aos-delay="100">
                <div class="luxury-protocol-dome"></div>
                <div class="luxury-protocol-header">
                    <div class="luxury-protocol-icon">
                        <i class="fas fa-spa"></i>
                    </div>
                    <h2 class="luxury-protocol-title">
                        {{#if etiquette_content.hygiene_title}}{{etiquette_content.hygiene_title}}{{else}}Royal Hygiene & Presentation{{/if}}
                    </h2>
                    <div class="luxury-protocol-subtitle">Imperial Standards</div>
                </div>
                
                <div class="luxury-protocol-content">
                    <!-- Personal Hygiene -->
                    <div class="luxury-protocol-item" data-aos="fade-up" data-aos-delay="100">
                        <div class="luxury-protocol-item-icon">
                            <i class="fas fa-shower"></i>
                        </div>
                        <div class="luxury-protocol-item-content">
                            <h3 class="luxury-protocol-item-title">
                                {{#if etiquette_content.hygiene_personal_title}}{{etiquette_content.hygiene_personal_title}}{{else}}Royal Personal Hygiene{{/if}}
                            </h3>
                            <p class="luxury-protocol-item-text">
                                {{#if etiquette_content.hygiene_personal_text}}{{etiquette_content.hygiene_personal_text}}{{else}}Please arrive freshly bathed and impeccably groomed. Distinguished personal hygiene is essential for a comfortable royal experience.{{/if}}
                            </p>
                        </div>
                    </div>
                    
                    <!-- Attire -->
                    <div class="luxury-protocol-item" data-aos="fade-up" data-aos-delay="200">
                        <div class="luxury-protocol-item-icon">
                            <i class="fas fa-tshirt"></i>
                        </div>
                        <div class="luxury-protocol-item-content">
                            <h3 class="luxury-protocol-item-title">
                                {{#if etiquette_content.hygiene_attire_title}}{{etiquette_content.hygiene_attire_title}}{{else}}Royal Attire{{/if}}
                            </h3>
                            <p class="luxury-protocol-item-text">
                                {{#if etiquette_content.hygiene_attire_text}}{{etiquette_content.hygiene_attire_text}}{{else}}Dress appropriately for our planned royal activities. I shall always be regally attired and expect the same distinguished consideration.{{/if}}
                            </p>
                        </div>
                    </div>
                    
                    <!-- Substances -->
                    <div class="luxury-protocol-item" data-aos="fade-up" data-aos-delay="300">
                        <div class="luxury-protocol-item-icon">
                            <i class="fas fa-wine-glass"></i>
                        </div>
                        <div class="luxury-protocol-item-content">
                            <h3 class="luxury-protocol-item-title">
                                {{#if etiquette_content.hygiene_substances_title}}{{etiquette_content.hygiene_substances_title}}{{else}}Royal Substances Policy{{/if}}
                            </h3>
                            <p class="luxury-protocol-item-text">
                                {{#if etiquette_content.hygiene_substances_text}}{{etiquette_content.hygiene_substances_text}}{{else}}Please do not arrive under the influence of spirits or other substances. Light royal libations during our time together are acceptable.{{/if}}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            {{/if}}
            
            <!-- Cancellation Policy Palace -->
            {{#if etiquette_content.etiquette_cancellation_visible}}
            <div class="luxury-cancellation-palace" data-aos="fade-left" data-aos-delay="100">
                <div class="luxury-protocol-dome"></div>
                <div class="luxury-protocol-header">
                    <div class="luxury-protocol-icon">
                        <i class="fas fa-calendar-times"></i>
                    </div>
                    <h2 class="luxury-protocol-title">
                        {{#if etiquette_content.cancellation_title}}{{etiquette_content.cancellation_title}}{{else}}Royal Cancellation Policy{{/if}}
                    </h2>
                    <div class="luxury-protocol-subtitle">Imperial Policies</div>
                </div>
                
                <div class="luxury-protocol-content">
                    <!-- Advance Notice -->
                    <div class="luxury-protocol-item" data-aos="fade-up" data-aos-delay="100">
                        <div class="luxury-protocol-item-icon">
                            <i class="fas fa-bell"></i>
                        </div>
                        <div class="luxury-protocol-item-content">
                            <h3 class="luxury-protocol-item-title">
                                {{#if etiquette_content.cancellation_advance_title}}{{etiquette_content.cancellation_advance_title}}{{else}}Royal Advance Notice{{/if}}
                            </h3>
                            <p class="luxury-protocol-item-text">
                                {{#if etiquette_content.cancellation_advance_text}}{{etiquette_content.cancellation_advance_text}}{{else}}Please provide at least 2 royal hours notice for cancellations. Last-minute cancellations may result in an imperial cancellation fee.{{/if}}
                            </p>
                        </div>
                    </div>
                    
                    <!-- No-Shows -->
                    <div class="luxury-protocol-item" data-aos="fade-up" data-aos-delay="200">
                        <div class="luxury-protocol-item-icon">
                            <i class="fas fa-ban"></i>
                        </div>
                        <div class="luxury-protocol-item-content">
                            <h3 class="luxury-protocol-item-title">
                                {{#if etiquette_content.cancellation_noshow_title}}{{etiquette_content.cancellation_noshow_title}}{{else}}Royal No-Shows{{/if}}
                            </h3>
                            <p class="luxury-protocol-item-text">
                                {{#if etiquette_content.cancellation_noshow_text}}{{etiquette_content.cancellation_noshow_text}}{{else}}No-shows without royal notice will result in being exiled from future imperial court bookings.{{/if}}
                            </p>
                        </div>
                    </div>
                    
                    <!-- My Cancellations -->
                    <div class="luxury-protocol-item" data-aos="fade-up" data-aos-delay="300">
                        <div class="luxury-protocol-item-icon">
                            <i class="fas fa-crown"></i>
                        </div>
                        <div class="luxury-protocol-item-content">
                            <h3 class="luxury-protocol-item-title">
                                {{#if etiquette_content.cancellation_my_title}}{{etiquette_content.cancellation_my_title}}{{else}}Royal Court Cancellations{{/if}}
                            </h3>
                            <p class="luxury-protocol-item-text">
                                {{#if etiquette_content.cancellation_my_text}}{{etiquette_content.cancellation_my_text}}{{else}}In the rare event the royal court needs to cancel, I'll provide as much imperial notice as possible and offer to reschedule your audience.{{/if}}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            {{/if}}
        </div>
        
        <!-- Safety & Discretion Palace -->
        {{#if etiquette_content.etiquette_safety_visible}}
        <div class="luxury-safety-palace" data-aos="fade-up" data-aos-delay="200">
            <div class="luxury-safety-dome"></div>
            <div class="luxury-safety-header">
                <div class="luxury-safety-emblem">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h2 class="luxury-safety-title">
                    {{#if etiquette_content.safety_title}}{{etiquette_content.safety_title}}{{else}}Royal Safety & Imperial Discretion{{/if}}
                </h2>
                <div class="luxury-safety-subtitle">Palace Security</div>
            </div>
            
            <div class="luxury-safety-grid">
                <!-- Confidentiality -->
                <div class="luxury-safety-item" data-aos="fade-up" data-aos-delay="100">
                    <div class="luxury-safety-item-icon">
                        <i class="fas fa-lock"></i>
                    </div>
                    <h3 class="luxury-safety-item-title">
                        {{#if etiquette_content.safety_confidentiality_title}}{{etiquette_content.safety_confidentiality_title}}{{else}}Imperial Confidentiality{{/if}}
                    </h3>
                    <p class="luxury-safety-item-text">
                        {{#if etiquette_content.safety_confidentiality_text}}{{etiquette_content.safety_confidentiality_text}}{{else}}Your royal privacy is paramount. All court interactions remain strictly confidential under imperial seal.{{/if}}
                    </p>
                </div>
                
                <!-- Safe Environment -->
                <div class="luxury-safety-item" data-aos="fade-up" data-aos-delay="200">
                    <div class="luxury-safety-item-icon">
                        <i class="fas fa-home"></i>
                    </div>
                    <h3 class="luxury-safety-item-title">
                        {{#if etiquette_content.safety_environment_title}}{{etiquette_content.safety_environment_title}}{{else}}Royal Safe Environment{{/if}}
                    </h3>
                    <p class="luxury-safety-item-text">
                        {{#if etiquette_content.safety_environment_text}}{{etiquette_content.safety_environment_text}}{{else}}I maintain a safe, pristine, and welcoming royal environment for all court meetings and audiences.{{/if}}
                    </p>
                </div>
                
                <!-- Professional Communication -->
                <div class="luxury-safety-item" data-aos="fade-up" data-aos-delay="300">
                    <div class="luxury-safety-item-icon">
                        <i class="fas fa-comments"></i>
                    </div>
                    <h3 class="luxury-safety-item-title">
                        {{#if etiquette_content.safety_communication_title}}{{etiquette_content.safety_communication_title}}{{else}}Royal Communication{{/if}}
                    </h3>
                    <p class="luxury-safety-item-text">
                        {{#if etiquette_content.safety_communication_text}}{{etiquette_content.safety_communication_text}}{{else}}All royal communications are handled with the utmost professionalism and imperial discretion.{{/if}}
                    </p>
                </div>
            </div>
        </div>
        {{/if}}
        
        <!-- Questions Palace -->
        {{#if etiquette_content.etiquette_questions_visible}}
        <div class="luxury-questions-palace" data-aos="fade-up" data-aos-delay="300">
            <div class="luxury-questions-dome"></div>
            <div class="luxury-questions-header">
                <div class="luxury-questions-emblem">
                    <i class="fas fa-question-circle"></i>
                </div>
                <h3 class="luxury-questions-title">
                    {{#if etiquette_content.questions_title}}{{etiquette_content.questions_title}}{{else}}Royal Inquiries?{{/if}}
                </h3>
                <div class="luxury-questions-subtitle">Need Assistance</div>
            </div>
            
            <div class="luxury-questions-content">
                <p class="luxury-questions-text">
                    {{#if etiquette_content.questions_text}}{{etiquette_content.questions_text}}{{else}}If you have any questions about these royal protocols or need clarification on court procedures, please don't hesitate to reach out to our imperial court.{{/if}}
                </p>
                <a href="/{{model.slug}}/{{#if etiquette_content.questions_button_link}}{{etiquette_content.questions_button_link}}{{else}}contact{{/if}}" 
                   class="luxury-questions-btn">
                    <span class="luxury-questions-btn-text">
                        {{#if etiquette_content.questions_button_text}}{{etiquette_content.questions_button_text}}{{else}}Contact Royal Court{{/if}}
                    </span>
                    <div class="luxury-questions-btn-crown">
                        <i class="fas fa-crown"></i>
                    </div>
                    <div class="luxury-questions-btn-shimmer"></div>
                </a>
            </div>
        </div>
        {{/if}}
    </div>
</section>

<style>
/* Etiquette Header Styling */
.luxury-etiquette-header {
    position: relative;
    padding: 8rem 0 6rem;
    background: linear-gradient(135deg, var(--luxury-deep-purple) 0%, var(--luxury-burgundy) 50%, var(--luxury-black) 100%);
    overflow: hidden;
    min-height: 65vh;
}

.luxury-etiquette-palace-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
        radial-gradient(ellipse at 25% 25%, var(--theme-accent) 0%, transparent 50%),
        radial-gradient(ellipse at 75% 75%, var(--theme-secondary, var(--theme-accent-hover)) 0%, transparent 50%),
        radial-gradient(ellipse at 50% 50%, var(--theme-accent) 0%, transparent 70%);
    opacity: 0.08;
    filter: blur(40px);
}

.luxury-etiquette-decorations {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
}

.luxury-floating-scepter {
    position: absolute;
    color: var(--luxury-gold);
    font-size: 2.5rem;
    animation: luxuryEtiquetteFloat 12s infinite ease-in-out;
}

.luxury-scepter-1 {
    top: 20%;
    left: 10%;
    animation-delay: 0s;
}

.luxury-floating-scroll {
    position: absolute;
    font-size: 2rem;
    color: var(--luxury-champagne);
    animation: luxuryEtiquetteFloat 10s infinite ease-in-out;
}

.luxury-scroll-1 {
    top: 30%;
    right: 15%;
    animation-delay: 3s;
}

.luxury-crown-3 {
    position: absolute;
    bottom: 30%;
    left: 70%;
    color: var(--luxury-gold);
    font-size: 2rem;
    animation: luxuryEtiquetteFloat 8s infinite ease-in-out;
    animation-delay: 6s;
}

.luxury-ornament-3 {
    position: absolute;
    bottom: 25%;
    right: 25%;
    color: var(--luxury-rose-gold);
    font-size: 1.8rem;
    animation: luxuryEtiquetteFloat 14s infinite ease-in-out;
    animation-delay: 2s;
}

@keyframes luxuryEtiquetteFloat {
    0%, 100% { transform: translateY(0px) rotate(0deg); opacity: 0.7; }
    25% { transform: translateY(-25px) rotate(90deg); opacity: 1; }
    50% { transform: translateY(-15px) rotate(180deg); opacity: 0.8; }
    75% { transform: translateY(-30px) rotate(270deg); opacity: 1; }
}

.luxury-royal-protocol-emblem {
    font-size: 4.5rem;
    color: var(--luxury-gold);
    margin-bottom: 2rem;
    filter: drop-shadow(0 0 25px var(--accent)) opacity(0.4);
    animation: luxuryEtiquettePulse 4s infinite ease-in-out;
}

@keyframes luxuryEtiquettePulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.08); }
}

.luxury-etiquette-title {
    font-size: 4.5rem;
    font-weight: 800;
    text-align: center;
    margin-bottom: 2rem;
    background: linear-gradient(45deg, var(--luxury-white) 20%, var(--luxury-gold) 50%, var(--luxury-rose-gold) 80%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: 0 0 50px var(--theme-accent);
    opacity: 0.9;
}

.luxury-etiquette-subtitle {
    font-size: 1.4rem;
    color: var(--luxury-champagne);
    text-align: center;
    font-weight: 300;
    letter-spacing: 1px;
    max-width: 900px;
    margin: 0 auto;
    line-height: 1.6;
}

/* Protocol Chambers */
.luxury-protocol-chambers {
    padding: 8rem 0;
    background: linear-gradient(180deg, var(--luxury-black) 0%, var(--luxury-deep-purple) 100%);
    color: var(--luxury-white);
}

.luxury-booking-palace,
.luxury-hygiene-palace,
.luxury-cancellation-palace {
    position: relative;
    background: linear-gradient(145deg, var(--text-light) 0%, var(--text-light) 100%);
    background-color: var(--card-bg);
    opacity: 0.03;
    border: 2px solid var(--accent);
    border-opacity: 0.2;
    border-radius: 25px;
    overflow: hidden;
    backdrop-filter: blur(10px);
}

.luxury-respect-palace {
    position: relative;
    background: linear-gradient(145deg, var(--theme-error) 0%, var(--theme-secondary, var(--theme-accent-hover)) 100%);
    background-color: var(--card-bg);
    opacity: 0.15;
    border: 2px solid var(--theme-error);
    border-opacity: 0.3;
    border-radius: 25px;
    overflow: hidden;
    backdrop-filter: blur(10px);
}

.luxury-protocol-dome {
    position: absolute;
    top: -40px;
    left: 50%;
    transform: translateX(-50%);
    width: 180px;
    height: 90px;
    background: linear-gradient(180deg, var(--luxury-gold) 0%, var(--luxury-gold-dark) 100%);
    border-radius: 50% 50% 0 0;
    box-shadow: 0 12px 25px var(--theme-accent);
    filter: opacity(0.4);
}

.luxury-protocol-header {
    text-align: center;
    padding: 4rem 2rem 2rem;
}

.luxury-protocol-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: linear-gradient(45deg, var(--luxury-gold) 0%, var(--luxury-gold-light) 100%);
    border-radius: 50%;
    color: var(--luxury-black);
    font-size: 2rem;
    margin-bottom: 1.5rem;
    box-shadow: 0 10px 25px var(--theme-accent);
    filter: opacity(0.4);
    animation: luxuryProtocolIconSpin 6s infinite ease-in-out;
