<!-- Luxury Theme Contact Page - Imperial Palace Communications -->

<!-- Royal Contact Header with Imperial Crown -->
{{#if contact_content.contact_header_visible}}
<section class="luxury-contact-header" data-aos="fade-in">
    <!-- Imperial Palace Background -->
    <div class="luxury-header-palace-bg"></div>
    
    <!-- Floating Gold Elements -->
    <div class="luxury-header-decorations" aria-hidden="true">
        <div class="luxury-floating-crown luxury-crown-1">
            <i class="fas fa-crown"></i>
        </div>
        <div class="luxury-floating-crown luxury-crown-2">
            <i class="fas fa-crown"></i>
        </div>
        <div class="luxury-floating-ornament luxury-ornament-1">❦</div>
        <div class="luxury-floating-ornament luxury-ornament-2">❧</div>
    </div>
    
    <div class="max-w-6xl mx-auto text-center px-4 sm:px-6 lg:px-8">
        <div class="luxury-royal-emblem" data-aos="zoom-in">
            <i class="fas fa-crown"></i>
        </div>
        <h1 class="luxury-contact-title" data-aos="fade-up">
            {{#if contact_content.page_title}}{{contact_content.page_title}}{{else}}Royal Communications{{/if}}
        </h1>
        {{#if contact_content.page_subtitle}}
        <p class="luxury-contact-subtitle" data-aos="fade-up" data-aos-delay="200">
            {{contact_content.page_subtitle}}
        </p>
        {{else}}
        <p class="luxury-contact-subtitle" data-aos="fade-up" data-aos-delay="200">
            Grace us with your presence through our distinguished channels
        </p>
        {{/if}}
        {{#if contact_content.page_description}}
        <p class="luxury-contact-description" data-aos="fade-up" data-aos-delay="300">
            {{contact_content.page_description}}
        </p>
        {{/if}}
        {{#if contact_content.page_subtext}}
        <p class="luxury-contact-subtext" data-aos="fade-up" data-aos-delay="400">
            {{contact_content.page_subtext}}
        </p>
        {{/if}}
    </div>
</section>
{{/if}}

<!-- Royal Contact Chambers -->
<section class="luxury-contact-chambers" data-aos="fade-in">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-16">
            
            <!-- Royal Message Chamber -->
            {{#if contact_content.contact_form_visible}}
            <div class="luxury-message-chamber" data-aos="fade-right">
                <!-- Chamber Dome -->
                <div class="luxury-chamber-dome-contact"></div>
                
                <!-- Chamber Header -->
                <div class="luxury-chamber-header-contact">
                    <div class="luxury-header-crown-contact">
                        <i class="fas fa-scroll"></i>
                    </div>
                    <h2 class="luxury-chamber-title-contact">
                        {{#if contact_content.form_title}}{{contact_content.form_title}}{{else}}Royal Correspondence{{/if}}
                    </h2>
                    {{#if contact_content.form_description}}
                    <p class="luxury-chamber-description-contact">
                        {{contact_content.form_description}}
                    </p>
                    {{/if}}
                </div>
                
                <!-- Royal Contact Form -->
                <div class="luxury-royal-form-container">
                    <form method="POST" class="luxury-royal-form" id="luxuryContactForm">
                        <!-- Name Field -->
                        <div class="luxury-form-field">
                            <label for="name" class="luxury-form-label">
                                {{#if contact_content.form_name_label}}{{contact_content.form_name_label}}{{else}}Noble Name{{/if}}
                            </label>
                            <div class="luxury-input-wrapper">
                                <input type="text" id="name" name="name" required 
                                       class="luxury-royal-input">
                                <div class="luxury-input-border"></div>
                            </div>
                        </div>
                        
                        <!-- Email Field -->
                        <div class="luxury-form-field">
                            <label for="email" class="luxury-form-label">
                                {{#if contact_content.form_email_label}}{{contact_content.form_email_label}}{{else}}Royal Email{{/if}}
                            </label>
                            <div class="luxury-input-wrapper">
                                <input type="email" id="email" name="email" required 
                                       class="luxury-royal-input">
                                <div class="luxury-input-border"></div>
                            </div>
                        </div>
                        
                        <!-- Phone Field -->
                        <div class="luxury-form-field">
                            <label for="phone" class="luxury-form-label">
                                {{#if contact_content.form_phone_label}}{{contact_content.form_phone_label}}{{else}}Distinguished Contact (Optional){{/if}}
                            </label>
                            <div class="luxury-input-wrapper">
                                <input type="tel" id="phone" name="phone" 
                                       class="luxury-royal-input">
                                <div class="luxury-input-border"></div>
                            </div>
                        </div>
                        
                        <!-- Date Field -->
                        <div class="luxury-form-field">
                            <label for="date" class="luxury-form-label">
                                {{#if contact_content.form_date_label}}{{contact_content.form_date_label}}{{else}}Preferred Royal Date{{/if}}
                            </label>
                            <div class="luxury-input-wrapper">
                                <input type="date" id="date" name="date" 
                                       class="luxury-royal-input">
                                <div class="luxury-input-border"></div>
                            </div>
                        </div>
                        
                        <!-- Duration Field -->
                        <div class="luxury-form-field">
                            <label for="duration" class="luxury-form-label">
                                {{#if contact_content.form_duration_label}}{{contact_content.form_duration_label}}{{else}}Engagement Duration{{/if}}
                            </label>
                            <div class="luxury-input-wrapper">
                                <select id="duration" name="duration" class="luxury-royal-input">
                                    <option value="">Select royal engagement</option>
                                    {{#each (split (or contact_content.form_duration_options "Royal Hour,Imperial 90 Minutes,Distinguished 2 Hours,Extended 3 Hours,Palace Overnight,Imperial Extended (specify)") ",")}}
                                        <option value="{{trim this}}">{{trim this}}</option>
                                    {{/each}}
                                </select>
                                <div class="luxury-input-border"></div>
                            </div>
                        </div>
                        
                        <!-- Message Field -->
                        <div class="luxury-form-field">
                            <label for="message" class="luxury-form-label">
                                {{#if contact_content.form_message_label}}{{contact_content.form_message_label}}{{else}}Royal Message{{/if}}
                            </label>
                            <div class="luxury-input-wrapper">
                                <textarea id="message" name="message" rows="5" required 
                                          class="luxury-royal-input"
                                          placeholder="{{#if contact_content.form_message_placeholder}}{{contact_content.form_message_placeholder}}{{else}}Share your distinguished requests and inquiries...{{/if}}"></textarea>
                                <div class="luxury-input-border"></div>
                            </div>
                        </div>
                        
                        <!-- Royal Submit Button -->
                        <button type="submit" class="luxury-royal-submit-btn">
                            <span class="luxury-btn-text">
                                {{#if contact_content.form_button_text}}{{contact_content.form_button_text}}{{else}}Send Royal Message{{/if}}
                            </span>
                            <div class="luxury-btn-crown">
                                <i class="fas fa-crown"></i>
                            </div>
                            <div class="luxury-btn-shimmer"></div>
                        </button>
                    </form>
                </div>
            </div>
            {{/if}}
            
            <!-- Royal Information Palace -->
            <div class="luxury-info-palace" data-aos="fade-left">
                
                <!-- Direct Contact Palace -->
                {{#if contact_content.contact_direct_visible}}
                <div class="luxury-direct-contact-palace">
                    <div class="luxury-palace-dome-small"></div>
                    <div class="luxury-palace-header">
                        <div class="luxury-palace-icon">
                            <i class="fas fa-gem"></i>
                        </div>
                        <h3 class="luxury-palace-title">
                            {{#if contact_content.direct_title}}{{contact_content.direct_title}}{{else}}Direct Royal Contact{{/if}}
                        </h3>
                    </div>
                    
                    <div class="luxury-contact-details">
                        <!-- Email -->
                        <div class="luxury-contact-item" data-aos="fade-up" data-aos-delay="100">
                            <div class="luxury-contact-icon">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div class="luxury-contact-info">
                                <span class="luxury-contact-label">
                                    {{#if contact_content.direct_email_label}}{{contact_content.direct_email_label}}{{else}}Royal Email{{/if}}
                                </span>
                                <a href="mailto:{{contactEmail}}" class="luxury-contact-value">{{contactEmail}}</a>
                            </div>
                        </div>
                        
                        <!-- Phone -->
                        {{#if contactPhone}}
                        <div class="luxury-contact-item" data-aos="fade-up" data-aos-delay="200">
                            <div class="luxury-contact-icon">
                                <i class="fas fa-phone"></i>
                            </div>
                            <div class="luxury-contact-info">
                                <span class="luxury-contact-label">
                                    {{#if contact_content.direct_phone_label}}{{contact_content.direct_phone_label}}{{else}}Royal Telephone{{/if}}
                                </span>
                                <a href="tel:{{contactPhone}}" class="luxury-contact-value">{{contactPhone}}</a>
                            </div>
                        </div>
                        {{/if}}
                        
                        <!-- Response Time -->
                        <div class="luxury-contact-item" data-aos="fade-up" data-aos-delay="300">
                            <div class="luxury-contact-icon">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div class="luxury-contact-info">
                                <span class="luxury-contact-label">
                                    {{#if contact_content.direct_response_label}}{{contact_content.direct_response_label}}{{else}}Royal Response{{/if}}
                                </span>
                                <span class="luxury-contact-value">
                                    {{#if contact_content.direct_response_text}}{{contact_content.direct_response_text}}{{else}}Within royal hours{{/if}}
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                {{/if}}
                
                <!-- Guidelines Palace -->
                {{#if contact_content.contact_guidelines_visible}}
                <div class="luxury-guidelines-palace">
                    <div class="luxury-palace-dome-small"></div>
                    <div class="luxury-palace-header">
                        <div class="luxury-palace-icon">
                            <i class="fas fa-scroll"></i>
                        </div>
                        <h3 class="luxury-palace-title">
                            {{#if contact_content.guidelines_title}}{{contact_content.guidelines_title}}{{else}}Royal Protocol{{/if}}
                        </h3>
                    </div>
                    
                    <div class="luxury-guidelines-content">
                        {{#if contact_content.guidelines_content}}
                        <div class="luxury-guidelines-rich-content">
                            {{{contact_content.guidelines_content}}}
                        </div>
                        {{else}}
                        {{#if contact_content.guideline_1}}
                        <div class="luxury-guideline-item" data-aos="fade-up" data-aos-delay="100">
                            <div class="luxury-guideline-crown">❦</div>
                            <span>{{contact_content.guideline_1}}</span>
                        </div>
                        {{/if}}
                        {{#if contact_content.guideline_2}}
                        <div class="luxury-guideline-item" data-aos="fade-up" data-aos-delay="200">
                            <div class="luxury-guideline-crown">❦</div>
                            <span>{{contact_content.guideline_2}}</span>
                        </div>
                        {{/if}}
                        {{#if contact_content.guideline_3}}
                        <div class="luxury-guideline-item" data-aos="fade-up" data-aos-delay="300">
                            <div class="luxury-guideline-crown">❦</div>
                            <span>{{contact_content.guideline_3}}</span>
                        </div>
                        {{/if}}
                        {{#if contact_content.guideline_4}}
                        <div class="luxury-guideline-item" data-aos="fade-up" data-aos-delay="400">
                            <div class="luxury-guideline-crown">❦</div>
                            <span>{{contact_content.guideline_4}}</span>
                        </div>
                        {{/if}}
                        {{#if contact_content.guideline_5}}
                        <div class="luxury-guideline-item" data-aos="fade-up" data-aos-delay="500">
                            <div class="luxury-guideline-crown">❦</div>
                            <span>{{contact_content.guideline_5}}</span>
                        </div>
                        {{/if}}
                        
                        <!-- Default guidelines if none provided -->
                        {{#unless contact_content.guideline_1}}
                        <div class="luxury-guideline-item" data-aos="fade-up" data-aos-delay="100">
                            <div class="luxury-guideline-crown">❦</div>
                            <span>Advance bookings are preferred for royal engagements</span>
                        </div>
                        <div class="luxury-guideline-item" data-aos="fade-up" data-aos-delay="200">
                            <div class="luxury-guideline-crown">❦</div>
                            <span>Please provide detailed information about your distinguished request</span>
                        </div>
                        <div class="luxury-guideline-item" data-aos="fade-up" data-aos-delay="300">
                            <div class="luxury-guideline-crown">❦</div>
                            <span>All communications are treated with utmost royal discretion</span>
                        </div>
                        {{/unless}}
                        {{/if}}
                    </div>
                </div>
                {{/if}}
                
                <!-- Location Palace -->
                {{#if contact_content.contact_location_visible}}
                <div class="luxury-location-palace">
                    <div class="luxury-palace-dome-small"></div>
                    <div class="luxury-palace-header">
                        <div class="luxury-palace-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <h3 class="luxury-palace-title">
                            {{#if contact_content.location_title}}{{contact_content.location_title}}{{else}}Royal Territories{{/if}}
                        </h3>
                    </div>
                    
                    <div class="luxury-location-content">
                        {{#if contact_content.location_content}}
                        <div class="luxury-location-rich-content">
                            {{{contact_content.location_content}}}
                        </div>
                        {{else}}
                        {{#if contact_content.location_area_text}}
                        <p class="luxury-location-text">{{contact_content.location_area_text}}</p>
                        {{/if}}
                        {{#if contact_content.location_services_text}}
                        <p class="luxury-location-text">{{contact_content.location_services_text}}</p>
                        {{/if}}
                        {{#if contact_content.location_travel_text}}
                        <p class="luxury-location-text">{{contact_content.location_travel_text}}</p>
                        {{/if}}
                        {{/if}}
                    </div>
                </div>
                {{/if}}
                
                <!-- Privacy Palace -->
                {{#if contact_content.contact_privacy_visible}}
                <div class="luxury-privacy-palace">
                    <div class="luxury-palace-dome-small"></div>
                    <div class="luxury-palace-header">
                        <div class="luxury-palace-icon">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <h3 class="luxury-palace-title">
                            {{#if contact_content.privacy_title}}{{contact_content.privacy_title}}{{else}}Royal Discretion{{/if}}
                        </h3>
                    </div>
                    
                    <div class="luxury-privacy-content">
                        {{#if contact_content.privacy_content}}
                        <div class="luxury-privacy-rich-content">
                            {{{contact_content.privacy_content}}}
                        </div>
                        {{else}}
                        <p class="luxury-privacy-text">
                            {{#if contact_content.privacy_text}}{{contact_content.privacy_text}}{{else}}All royal communications are maintained with the highest levels of discretion and confidentiality. Your privacy is safeguarded with imperial protection, and mutual respect is expected in all interactions.{{/if}}
                        </p>
                        {{/if}}
                    </div>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</section>

<!-- Royal CTA Palace Section -->
<section class="luxury-contact-cta-palace" data-aos="fade-in">
    <!-- Imperial CTA Background -->
    <div class="luxury-cta-imperial-bg-contact">
        <div class="luxury-imperial-columns-contact">
            <div class="luxury-column-contact luxury-column-1-contact"></div>
            <div class="luxury-column-contact luxury-column-2-contact"></div>
            <div class="luxury-column-contact luxury-column-3-contact"></div>
            <div class="luxury-column-contact luxury-column-4-contact"></div>
        </div>
        <div class="luxury-imperial-pattern-contact"></div>
    </div>
    
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
        <div class="luxury-cta-content-imperial-contact" data-aos="zoom-in" data-aos-delay="200">
            <div class="luxury-cta-crown-contact" data-aos="bounce" data-aos-delay="400">
                <i class="fas fa-crown"></i>
            </div>
            <h2 class="luxury-cta-title-imperial-contact" data-aos="fade-up" data-aos-delay="200">
                {{#if contact_content.cta_title}}{{contact_content.cta_title}}{{else}}Ready to Connect?{{/if}}
            </h2>
            
            <p class="luxury-cta-subtitle-imperial-contact" data-aos="fade-up" data-aos-delay="400">
                {{#if contact_content.cta_description}}{{contact_content.cta_description}}{{else}}Take the next step towards an exceptional experience. Your discretion and satisfaction are my highest priorities.{{/if}}
            </p>
            
            <div class="luxury-cta-buttons-imperial-contact" data-aos="fade-up" data-aos-delay="600">
                <!-- Primary CTA Button -->
                <a href="/{{model.slug}}/rates{{previewParam}}" class="luxury-cta-btn-primary-contact">
                    <span class="luxury-btn-text-contact">View Services & Rates</span>
                    <div class="luxury-btn-crown-contact">
                        <i class="fas fa-gem"></i>
                    </div>
                    <div class="luxury-btn-shimmer-contact"></div>
                </a>
                
                <!-- Secondary CTA Button -->
                <a href="/{{model.slug}}/calendar{{previewParam}}" class="luxury-cta-btn-secondary-contact">
                    <span class="luxury-btn-text-contact">Check Availability</span>
                    <div class="luxury-btn-icon-contact">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Luxury Contact Page Styles -->
<style>
/* Luxury Color Palette using canonical tokens */
:root {
    --luxury-gold: var(--theme-accent);
    --luxury-gold-light: var(--theme-accent-light);
    --luxury-gold-dark: var(--theme-accent-hover);
    --luxury-rose-gold: var(--theme-accent-light);
    --luxury-deep-purple: var(--theme-bg-tertiary);
    --luxury-burgundy: var(--theme-error);
    --luxury-champagne: var(--theme-text-primary);
    --luxury-black: var(--theme-bg-primary);
    --luxury-white: var(--theme-text-primary);
    --luxury-marble: var(--theme-bg-secondary);
}

/* Contact Header Styling */
.luxury-contact-header {
    position: relative;
    padding: 8rem 0 6rem;
    background: linear-gradient(135deg, var(--luxury-deep-purple) 0%, var(--luxury-burgundy) 50%, var(--luxury-black) 100%);
    overflow: hidden;
    min-height: 60vh;
}

.luxury-header-palace-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
        radial-gradient(ellipse at 30% 20%, var(--theme-accent) 0%, transparent 50%);
        radial-gradient(ellipse at 70% 80%, var(--theme-accent-light) 0%, transparent 50%);
    filter: blur(40px);
}

.luxury-header-decorations {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
}

.luxury-floating-crown {
    position: absolute;
    color: var(--luxury-gold);
    font-size: 2rem;
    animation: luxuryContactFloat 8s infinite ease-in-out;
}

.luxury-crown-1 {
    top: 15%;
    left: 15%;
    animation-delay: 0s;
}

.luxury-crown-2 {
    top: 20%;
    right: 20%;
    animation-delay: 4s;
}

.luxury-floating-ornament {
    position: absolute;
    color: var(--luxury-rose-gold);
    font-size: 1.5rem;
    animation: luxuryContactFloat 10s infinite ease-in-out;
}

.luxury-ornament-1 {
    bottom: 30%;
    left: 25%;
    animation-delay: 2s;
}

.luxury-ornament-2 {
    bottom: 25%;
    right: 30%;
    animation-delay: 6s;
}

@keyframes luxuryContactFloat {
    0%, 100% { transform: translateY(0px) rotate(0deg); opacity: 0.6; }
    25% { transform: translateY(-20px) rotate(90deg); opacity: 1; }
    50% { transform: translateY(-15px) rotate(180deg); opacity: 0.8; }
    75% { transform: translateY(-25px) rotate(270deg); opacity: 1; }
}

.luxury-royal-emblem {
    font-size: 4rem;
    color: var(--luxury-gold);
    margin-bottom: 2rem;
    filter: drop-shadow(0 0 20px var(--card-shadow));
}

.luxury-contact-title {
    font-size: 4.5rem;
    font-weight: 800;
    text-align: center;
    margin-bottom: 2rem;
    background: linear-gradient(45deg, var(--luxury-white) 20%, var(--luxury-gold) 50%, var(--luxury-rose-gold) 80%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: 0 0 50px var(--card-shadow);
}

.luxury-contact-subtitle {
    font-size: 1.4rem;
    color: var(--luxury-champagne);
    text-align: center;
    font-weight: 300;
    letter-spacing: 1px;
    max-width: 800px;
    margin: 0 auto;
}

.luxury-contact-description {
    font-size: 1.2rem;
    color: var(--text-light); filter: opacity(0.9);
    text-align: center;
    font-weight: 300;
    line-height: 1.6;
    max-width: 700px;
    margin: 1.5rem auto 0;
}

.luxury-contact-subtext {
    font-size: 1rem;
    color: var(--text-light); filter: opacity(0.8);
    text-align: center;
    font-style: italic;
    max-width: 600px;
    margin: 1rem auto 0;
}

/* Contact Chambers */
.luxury-contact-chambers {
    padding: 8rem 0;
    background: linear-gradient(180deg, var(--luxury-black) 0%, var(--luxury-deep-purple) 100%);
    color: var(--luxury-white);
}

/* Message Chamber */
.luxury-message-chamber {
    position: relative;
    background: linear-gradient(145deg, var(--text-light) 0%, var(--text-light) 100%); filter: opacity(0.03);
    border: 2px solid var(--theme-accent); filter: opacity(0.2);
    border-radius: 30px;
    overflow: hidden;
    backdrop-filter: blur(10px);
}

.luxury-chamber-dome-contact {
    position: absolute;
    top: -50px;
    left: 50%;
    transform: translateX(-50%);
    width: 200px;
    height: 100px;
    background: linear-gradient(180deg, var(--luxury-gold) 0%, var(--luxury-gold-dark) 100%);
    border-radius: 50% 50% 0 0;
    box-shadow: 0 10px 30px var(--card-shadow);
}

.luxury-chamber-header-contact {
    position: relative;
    text-align: center;
    padding: 4rem 2rem 2rem;
    background: linear-gradient(135deg, var(--theme-accent) 0%, transparent 100%); filter: opacity(0.05);
}

.luxury-header-crown-contact {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: linear-gradient(45deg, var(--luxury-gold) 0%, var(--luxury-gold-light) 100%);
    border-radius: 50%;
    color: var(--luxury-black);
    font-size: 2rem;
    margin-bottom: 1.5rem;
    box-shadow: 0 10px 25px var(--card-shadow);
    animation: luxuryContactPulse 3s infinite ease-in-out;
}

@keyframes luxuryContactPulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
}

.luxury-chamber-title-contact {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--luxury-white);
    margin: 0;
    background: linear-gradient(45deg, var(--luxury-gold) 0%, var(--luxury-white) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.luxury-chamber-description-contact {
