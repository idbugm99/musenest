<!-- Royal Contact Form JavaScript -->
<script>
// Luxury Contact Form Handling
document.getElementById('luxuryContactForm')?.addEventListener('submit', function(e) {
    e.preventDefault();
    
    // Get form data
    const formData = new FormData(this);
    const data = Object.fromEntries(formData);
    
    // Royal form validation
    if (!data.name || !data.email || !data.message) {
        // Create royal alert
        showRoyalAlert('Please complete all required fields for your royal correspondence.', 'warning');
        return;
    }
    
    // Email validation
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!emailRegex.test(data.email)) {
        showRoyalAlert('Please provide a valid royal email address.', 'warning');
        return;
    }
    
    // Show success message
    showRoyalAlert('Your royal message has been received! We shall respond with imperial haste.', 'success');
    
    // Reset form with royal animation
    this.reset();
    
    // Add some royal sparkle effect
    createRoyalSparkles();
});

function showRoyalAlert(message, type) {
    // Create royal alert element
    const alert = document.createElement('div');
    alert.className = `luxury-royal-alert luxury-alert-${type}`;
    alert.innerHTML = `
        <div class="luxury-alert-crown">
            <i class="fas fa-crown"></i>
        </div>
        <div class="luxury-alert-message">${message}</div>
        <div class="luxury-alert-close" onclick="this.parentElement.remove()">
            <i class="fas fa-times"></i>
        </div>
    `;
    
    // Add alert styles
    alert.style.cssText = `
        position: fixed;
        top: 2rem;
        right: 2rem;
        max-width: 400px;
        padding: 1.5rem;
        background: linear-gradient(45deg, ${type === 'success' ? 'var(--luxury-gold)' : 'var(--luxury-burgundy)'} 0%, ${type === 'success' ? 'var(--luxury-gold-light)' : 'var(--luxury-rose-gold)'} 100%);
        color: var(--luxury-black);
        border-radius: 15px;
        box-shadow: 0 10px 30px var(--accent);
        filter: opacity(0.4);
        z-index: 10000;
        display: flex;
        align-items: center;
        gap: 1rem;
        animation: luxurySlideIn 0.5s ease;
        font-weight: 600;
        backdrop-filter: blur(10px);
    `;
    
    document.body.appendChild(alert);
    
    // Auto-remove after 5 seconds
    setTimeout(() => {
        if (alert.parentElement) {
            alert.style.animation = 'luxurySlideOut 0.5s ease';
            setTimeout(() => alert.remove(), 500);
        }
    }, 5000);
}

function createRoyalSparkles() {
    for (let i = 0; i < 8; i++) {
        const sparkle = document.createElement('div');
        sparkle.innerHTML = '✨';
        sparkle.style.cssText = `
            position: fixed;
            top: 50%;
            left: 50%;
            font-size: 1.5rem;
            color: var(--luxury-gold);
            pointer-events: none;
            z-index: 9999;
            animation: luxurySparkleFloat 2s ease-out forwards;
            animation-delay: ${i * 0.1}s;
        `;
        
        document.body.appendChild(sparkle);
        
        setTimeout(() => sparkle.remove(), 2500);
    }
}

// Add required CSS animations
const style = document.createElement('style');
style.textContent = `
    @keyframes luxurySlideIn {
        from { transform: translateX(100%); opacity: 0; }
        to { transform: translateX(0); opacity: 1; }
    }
    
    @keyframes luxurySlideOut {
        from { transform: translateX(0); opacity: 1; }
        to { transform: translateX(100%); opacity: 0; }
    }
    
    @keyframes luxurySparkleFloat {
        0% { transform: translate(-50%, -50%) scale(0) rotate(0deg); opacity: 1; }
        50% { transform: translate(${Math.random() * 200 - 100}px, ${Math.random() * 200 - 100}px) scale(1) rotate(180deg); opacity: 0.8; }
        100% { transform: translate(${Math.random() * 400 - 200}px, ${Math.random() * 400 - 200}px) scale(0) rotate(360deg); opacity: 0; }
    }
`;
document.head.appendChild(style);
