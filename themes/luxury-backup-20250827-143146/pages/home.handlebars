<!-- Gallery Preview Section (theme-specific preview, not full universal gallery) -->
{{#if content.gallery_section_visible}}
<section class="universal-gallery-preview-section" data-aos="fade-in">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div class="universal-section-header text-center mb-12" data-aos="fade-up">
            <h2 class="universal-section-title">{{#if content.gallery_section_title}}{{content.gallery_section_title}}{{else}}Gallery{{/if}}</h2>
