<!-- Theme-Specific Testimonials Styling -->
<style>
/* Testimonials Section - Using Dynamic Colors */
.universal-testimonials-section {
    background: var(--theme-surface);
    color: var(--theme-text);
}

.universal-testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
}

.universal-testimonial-card {
    background: var(--theme-card-bg);
    border-radius: 16px;
    padding: 2rem;
    border: 2px solid var(--theme-border);
    box-shadow: var(--theme-card-shadow);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.universal-testimonial-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--theme-accent), var(--theme-secondary), var(--theme-accent));
}

.universal-testimonial-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--theme-card-shadow-hover, var(--card-shadow));
}

.universal-testimonial-stars {
    color: var(--theme-accent);
    font-size: 1.25rem;
    margin-bottom: 1rem;
}

.universal-testimonial-text {
    color: var(--theme-text);
    font-size: 1.125rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    font-style: italic;
}

.universal-testimonial-author {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.universal-testimonial-avatar {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    border: 2px solid var(--theme-accent);
}

.universal-testimonial-name {
    font-weight: 600;
    color: var(--theme-text);
}

.universal-testimonial-location {
    font-size: 0.875rem;
    color: var(--theme-text-muted);
}

/* Luxury Crystals - Theme Specific Decoration */
.luxury-crystals-section {
    position: relative;
    height: 200px;
    overflow: hidden;
    background: var(--theme-background);
}

.luxury-crystal-container {
    position: relative;
    width: 100%;
    height: 100%;
}

.luxury-crystal {
    position: absolute;
    width: 40px;
    height: 40px;
    background: linear-gradient(45deg, var(--theme-accent), var(--theme-secondary));
    clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);
    animation: luxury-crystal-float 8s ease-in-out infinite;
    opacity: 0.7;
    box-shadow: 0 0 20px var(--theme-accent);
}

.luxury-crystal-1 { 
    top: 20%; 
    left: 10%; 
    animation-delay: 0s; 
}

.luxury-crystal-2 { 
    top: 60%; 
    left: 80%; 
    animation-delay: 2s; 
}

.luxury-crystal-3 { 
    top: 80%; 
    left: 20%; 
    animation-delay: 4s; 
}

.luxury-crystal-4 { 
    top: 40%; 
    left: 60%; 
    animation-delay: 6s; 
}

.luxury-crystal-5 { 
    top: 10%; 
    left: 90%; 
    animation-delay: 8s; 
}

@keyframes luxury-crystal-float {
    0%, 100% { 
        transform: translateY(0) rotate(0deg) scale(1); 
    }
    25% { 
        transform: translateY(-20px) rotate(90deg) scale(1.1); 
    }
    50% { 
        transform: translateY(-10px) rotate(180deg) scale(0.9); 
    }
    75% { 
        transform: translateY(-30px) rotate(270deg) scale(1.1); 
    }
}

@media (max-width: 768px) {
    .universal-testimonials-grid {
        grid-template-columns: 1fr;
    }
}
</style>

