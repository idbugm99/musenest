    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
            
            <!-- Portrait with Regal Frame -->
            {{#if content.portrait_section_visible}}
            <div class="luxury-portrait-chamber" data-aos="fade-right">
                <div class="luxury-regal-frame">
                    {{#if content.portrait_image_url}}
                    <img src="{{content.portrait_image_url}}" 
                         alt="{{#if content.portrait_alt}}{{content.portrait_alt}}{{else}}Royal Portrait{{/if}}"
                         class="luxury-portrait-image">
                    {{else}}
                    <div class="luxury-portrait-placeholder">
                        <i class="fas fa-crown luxury-crown-placeholder"></i>
                        <p>Royal Portrait</p>
                    </div>
                    {{/if}}
                    
                    <!-- Ornate Border Effects -->
                    <div class="luxury-frame-corner luxury-frame-corner-tl"></div>
                    <div class="luxury-frame-corner luxury-frame-corner-tr"></div>
                    <div class="luxury-frame-corner luxury-frame-corner-bl"></div>
                    <div class="luxury-frame-corner luxury-frame-corner-br"></div>
                </div>
            </div>
            {{/if}}
            
            <!-- About Content with Royal Typography -->
            <div class="luxury-about-content" data-aos="fade-left">
                <div class="luxury-section-header">
                    <div class="luxury-royal-divider"></div>
                    <h2 class="universal-section-title luxury-section-title">
                        {{#if content.about_title}}{{content.about_title}}{{else}}About {{siteName}}{{/if}}
                    </h2>
                    <div class="luxury-royal-divider"></div>
                </div>
                
                {{#if content.about_paragraph_1}}
                <div class="luxury-text-content">
                    <p class="universal-section-subtitle luxury-lead-text">{{content.about_paragraph_1}}</p>
                </div>
                {{/if}}
                {{#if content.about_paragraph_2}}
                <div class="luxury-text-content">
                    <p class="universal-section-subtitle luxury-lead-text">{{content.about_paragraph_2}}</p>
                </div>
                {{/if}}
                
                {{#if content.about_link_text}}
                <div class="luxury-about-cta">
                    {{#eq content.about_link_destination 'about'}}
                        <a href="/{{modelSlug}}/about{{previewParam}}" class="universal-btn universal-btn-primary luxury-royal-link">
                    {{/eq}}
                    {{#eq content.about_link_destination 'contact'}}
                        <a href="/{{modelSlug}}/contact{{previewParam}}" class="universal-btn universal-btn-primary luxury-royal-link">
                    {{/eq}}
                    {{#eq content.about_link_destination 'gallery'}}
                        <a href="/{{modelSlug}}/gallery{{previewParam}}" class="universal-btn universal-btn-primary luxury-royal-link">
                    {{/eq}}
                    {{#eq content.about_link_destination 'rates'}}
                        <a href="/{{modelSlug}}/rates{{previewParam}}" class="universal-btn universal-btn-primary luxury-royal-link">
                    {{/eq}}
                    {{#eq content.about_link_destination 'calendar'}}
                        <a href="/{{modelSlug}}/calendar{{previewParam}}" class="universal-btn universal-btn-primary luxury-royal-link">
                    {{/eq}}
                        {{content.about_link_text}}
                        <i class="fas fa-chevron-right luxury-link-chevron"></i>
                    </a>
                </div>
                {{else}}
                <div class="luxury-about-cta">
                    <a href="/{{modelSlug}}/about{{previewParam}}" class="universal-btn universal-btn-primary luxury-royal-link">
                        Learn More
                        <i class="fas fa-chevron-right luxury-link-chevron"></i>
                    </a>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</section>
{{/if}}

