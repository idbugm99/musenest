<!-- Luxury Theme About Page - Universal System Integration -->

<!-- Page Title Hero Section -->
{{#if about_content.page_title_visible}}
<section class="universal-hero">
    <div class="universal-hero-content">
        <div class="max-w-5xl mx-auto text-center px-4 sm:px-6 lg:px-8">
            <h1 class="universal-hero-title">
                {{#if about_content.page_title}}{{about_content.page_title}}{{else}}About {{model.name}}{{/if}}
            </h1>
            {{#if about_content.page_subtitle}}
            <p class="universal-hero-subtitle">
                {{about_content.page_subtitle}}
            </p>
            {{/if}}
        </div>
    </div>
</section>
{{/if}}

<!-- Main About Content -->
{{#if about_content.main_content_visible}}
<section class="universal-about-section">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <!-- About Content Grid -->
        <div class="universal-about-grid">
            <!-- About Image/Visual -->
            {{#if about_content.portrait_visible}}
            <div class="universal-about-visual">
                {{#if about_content.portraitImageUrl}}
                <div class="universal-about-image">
                    <img src="{{about_content.portraitImageUrl}}" alt="{{model.name}}" class="universal-image">
                </div>
                {{/if}}
                
                <!-- Quick Facts -->
                {{#if about_content.quick_facts_visible}}
                <div class="universal-about-stats">
                    {{#if quickFacts}}
                    {{#each quickFacts}}
                    <div class="universal-stat-card">
                        <div class="universal-stat-number"><i class="fas fa-map-marker-alt"></i></div>
                        <div class="universal-stat-text">{{this.question}}</div>
                        <div class="universal-feature-description">{{this.answer}}</div>
                    </div>
                    {{/each}}
                    {{/if}}
                </div>
                {{/if}}
                
                <!-- Interests as Tags -->
                {{#if about_content.interests_visible}}
                <div class="universal-about-interests">
                    {{#if about_content.interests_title}}
                    <h4>{{about_content.interests_title}}</h4>
                    {{/if}}
                    <div class="interest-tags">
                        <span class="interest-tag">Fine Arts</span>
                        <span class="interest-tag">Classical Music</span>
                        <span class="interest-tag">Literature</span>
                        <span class="interest-tag">Travel</span>
                        <span class="interest-tag">Fine Dining</span>
                        <span class="interest-tag">Theater</span>
                        <span class="interest-tag">Philosophy</span>
                    </div>
                </div>
                {{/if}}
            </div>
            {{/if}}
            
            <!-- About Text Content -->
            <div class="universal-about-content">
                <div class="universal-about-description">
                    {{#if about_content.main_paragraph_1}}
                    <p>{{{about_content.main_paragraph_1}}}</p>
                    {{/if}}
                    {{#if about_content.main_paragraph_2}}
                    <p>{{{about_content.main_paragraph_2}}}</p>
                    {{/if}}
                    {{#if about_content.main_paragraph_3}}
                    <p>{{{about_content.main_paragraph_3}}}</p>
                    {{/if}}
                    {{#if about_content.main_paragraph_4}}
                    <p>{{{about_content.main_paragraph_4}}}</p>
                    {{/if}}
                </div>
            </div>
        </div>
        
        <!-- Services Section -->
        {{#if about_content.services_visible}}
        <div class="universal-services-section">
            <div class="universal-section-header">
                <h2 class="universal-section-title">My Services</h2>
            </div>
            <div class="universal-services-grid">
                {{#if about_content.service_1}}
                <div class="universal-service-card">
                    <div class="universal-service-icon">
                        <i class="fas fa-star"></i>
                    </div>
                    <h3 class="universal-service-title">Dinner Companionship</h3>
                    <p class="universal-service-description">{{about_content.service_1}}</p>
                </div>
                {{/if}}
                {{#if about_content.service_2}}
                <div class="universal-service-card">
                    <div class="universal-service-icon">
                        <i class="fas fa-calendar"></i>
                    </div>
                    <h3 class="universal-service-title">Social Events</h3>
                    <p class="universal-service-description">{{about_content.service_2}}</p>
                </div>
                {{/if}}
                {{#if about_content.service_3}}
                <div class="universal-service-card">
                    <div class="universal-service-icon">
                        <i class="fas fa-plane"></i>
                    </div>
                    <h3 class="universal-service-title">Travel Companion</h3>
                    <p class="universal-service-description">{{about_content.service_3}}</p>
                </div>
                {{/if}}
                {{#if about_content.service_4}}
                <div class="universal-service-card">
                    <div class="universal-service-icon">
                        <i class="fas fa-theater-masks"></i>
                    </div>
                    <h3 class="universal-service-title">Cultural Experiences</h3>
                    <p class="universal-service-description">{{about_content.service_4}}</p>
                </div>
                {{/if}}
                {{#if about_content.service_5}}
                <div class="universal-service-card">
                    <div class="universal-service-icon">
                        <i class="fas fa-cocktail"></i>
                    </div>
                    <h3 class="universal-service-title">Weekend Getaways</h3>
                    <p class="universal-service-description">{{about_content.service_5}}</p>
                </div>
                {{/if}}
            </div>
        </div>
        {{/if}}
    </div>
</section>
{{/if}}

<!-- Universal CTA Section -->
{{#if about_content.about_cta_visible}}
<section class="universal-cta-section">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8 py-16">
        <h2 class="universal-cta-title">
            {{#if about_content.cta_title}}{{about_content.cta_title}}{{else}}Ready to Connect?{{/if}}
        </h2>
        {{#if about_content.cta_description}}
        <p class="universal-cta-description">
            {{about_content.cta_description}}
        </p>
        {{/if}}
        <div class="universal-cta-buttons">
            <a href="/{{model.slug}}/contact{{previewParam}}" class="universal-btn universal-btn-primary">
                {{#if about_content.cta_button_text}}{{about_content.cta_button_text}}{{else}}Contact Me{{/if}}
            </a>
            {{#if about_content.cta_secondary_button_text}}
            <a href="/{{model.slug}}/gallery{{previewParam}}" class="universal-btn universal-btn-secondary">
                {{about_content.cta_secondary_button_text}}
            </a>
            {{/if}}
        </div>
    </div>
</section>
{{/if}}